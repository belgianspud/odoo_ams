<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Revenue Recognition Schedules -->
        <!-- These will be created after demo subscriptions and invoices exist -->
        
        <!-- Demo Schedule for Individual Membership -->
        <record id="demo_revenue_schedule_individual_annual" model="ams.revenue.schedule">
            <field name="display_name">Demo Individual Annual Membership - Revenue Schedule</field>
            <field name="total_amount">1200.00</field>
            <field name="recognition_method">straight_line</field>
            <field name="start_date" eval="(datetime.date.today() - datetime.timedelta(days=30))"/>
            <field name="end_date" eval="(datetime.date.today() + datetime.timedelta(days=335))"/>
            <field name="period_length">monthly</field>
            <field name="state">active</field>
        </record>
        
        <!-- Demo Schedule for Enterprise Membership -->
        <record id="demo_revenue_schedule_enterprise_annual" model="ams.revenue.schedule">
            <field name="display_name">Demo Enterprise Annual Membership - Revenue Schedule</field>
            <field name="total_amount">5000.00</field>
            <field name="recognition_method">straight_line</field>
            <field name="start_date" eval="(datetime.date.today() - datetime.timedelta(days=60))"/>
            <field name="end_date" eval="(datetime.date.today() + datetime.timedelta(days=305))"/>
            <field name="period_length">monthly</field>
            <field name="state">active</field>
        </record>
        
        <!-- Demo Schedule for Monthly Publication -->
        <record id="demo_revenue_schedule_publication_monthly" model="ams.revenue.schedule">
            <field name="display_name">Demo Monthly Publication - Revenue Schedule</field>
            <field name="total_amount">25.00</field>
            <field name="recognition_method">immediate</field>
            <field name="start_date" eval="datetime.date.today()"/>
            <field name="end_date" eval="datetime.date.today()"/>
            <field name="period_length">monthly</field>
            <field name="state">completed</field>
        </record>
        
        <!-- Demo Recognition Entries for Individual Membership -->
        <record id="demo_recognition_individual_month1" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_individual_annual"/>
            <field name="description">Month 1 Recognition - Individual Membership</field>
            <field name="recognition_date" eval="(datetime.date.today() - datetime.timedelta(days=30))"/>
            <field name="scheduled_amount">100.00</field>
            <field name="recognized_amount">100.00</field>
            <field name="state">recognized</field>
            <field name="processed_date" eval="(datetime.datetime.now() - datetime.timedelta(days=30))"/>
        </record>
        
        <record id="demo_recognition_individual_month2" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_individual_annual"/>
            <field name="description">Month 2 Recognition - Individual Membership</field>
            <field name="recognition_date" eval="datetime.date.today()"/>
            <field name="scheduled_amount">100.00</field>
            <field name="recognized_amount">0.00</field>
            <field name="state">pending</field>
        </record>
        
        <record id="demo_recognition_individual_month3" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_individual_annual"/>
            <field name="description">Month 3 Recognition - Individual Membership</field>
            <field name="recognition_date" eval="(datetime.date.today() + datetime.timedelta(days=30))"/>
            <field name="scheduled_amount">100.00</field>
            <field name="recognized_amount">0.00</field>
            <field name="state">pending</field>
        </record>
        
        <!-- Demo Recognition Entries for Enterprise Membership -->
        <record id="demo_recognition_enterprise_month1" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_enterprise_annual"/>
            <field name="description">Month 1 Recognition - Enterprise Membership</field>
            <field name="recognition_date" eval="(datetime.date.today() - datetime.timedelta(days=60))"/>
            <field name="scheduled_amount">416.67</field>
            <field name="recognized_amount">416.67</field>
            <field name="state">recognized</field>
            <field name="processed_date" eval="(datetime.datetime.now() - datetime.timedelta(days=60))"/>
        </record>
        
        <record id="demo_recognition_enterprise_month2" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_enterprise_annual"/>
            <field name="description">Month 2 Recognition - Enterprise Membership</field>
            <field name="recognition_date" eval="(datetime.date.today() - datetime.timedelta(days=30))"/>
            <field name="scheduled_amount">416.67</field>
            <field name="recognized_amount">416.67</field>
            <field name="state">recognized</field>
            <field name="processed_date" eval="(datetime.datetime.now() - datetime.timedelta(days=30))"/>
        </record>
        
        <record id="demo_recognition_enterprise_month3" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_enterprise_annual"/>
            <field name="description">Month 3 Recognition - Enterprise Membership</field>
            <field name="recognition_date" eval="datetime.date.today()"/>
            <field name="scheduled_amount">416.67</field>
            <field name="recognized_amount">0.00</field>
            <field name="state">pending</field>
        </record>
        
        <!-- Demo Recognition Entry for Publication (Immediate) -->
        <record id="demo_recognition_publication_immediate" model="ams.revenue.recognition">
            <field name="schedule_id" ref="demo_revenue_schedule_publication_monthly"/>
            <field name="description">Immediate Recognition - Monthly Publication</field>
            <field name="recognition_date" eval="datetime.date.today()"/>
            <field name="scheduled_amount">25.00</field>
            <field name="recognized_amount">25.00</field>
            <field name="state">recognized</field>
            <field name="processed_date" eval="datetime.datetime.now()"/>
        </record>
        
        <!-- Demo Configuration: Enable Revenue Recognition on Demo Products -->
        <!-- This would typically be done via post_init_hook, but including here for demo -->
        
        <!-- Note: Actual linking to invoices, subscriptions, and partners would be done -->
        <!-- in the post_init_hook since those records need to exist first -->
        
    </data>
</odoo>