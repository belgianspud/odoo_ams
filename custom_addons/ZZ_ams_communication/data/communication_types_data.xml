<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Communication Categories and Types Data -->
        
        <!-- This file defines default communication preferences for new members -->
        <!-- The data is marked with noupdate="1" to preserve customizations -->
        
        <!-- Communication Type Descriptions -->
        <!-- These records can be used for documentation or UI help text -->
        
        <record id="comm_type_email_info" model="ir.config_parameter">
            <field name="key">ams_communication.type.email.description</field>
            <field name="value">Electronic messages sent to member's primary or secondary email address. Includes newsletters, notifications, and automated messages.</field>
        </record>
        
        <record id="comm_type_sms_info" model="ir.config_parameter">
            <field name="key">ams_communication.type.sms.description</field>
            <field name="value">Text messages sent to member's mobile phone. Used for urgent notifications, reminders, and brief updates.</field>
        </record>
        
        <record id="comm_type_mail_info" model="ir.config_parameter">
            <field name="key">ams_communication.type.mail.description</field>
            <field name="value">Physical mail sent to member's address. Includes printed newsletters, invitations, and official documentation.</field>
        </record>
        
        <record id="comm_type_phone_info" model="ir.config_parameter">
            <field name="key">ams_communication.type.phone.description</field>
            <field name="value">Voice calls to member's business or mobile phone. Used for personal outreach, important updates, and emergency notifications.</field>
        </record>
        
        <!-- Communication Category Descriptions -->
        
        <record id="comm_category_marketing_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.marketing.description</field>
            <field name="value">Promotional communications including newsletters, special offers, product announcements, and general marketing materials.</field>
        </record>
        
        <record id="comm_category_membership_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.membership.description</field>
            <field name="value">Essential membership communications including renewal notices, status changes, account updates, and membership benefits information.</field>
        </record>
        
        <record id="comm_category_events_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.events.description</field>
            <field name="value">Event-related communications including announcements, registration confirmations, reminders, and post-event follow-ups.</field>
        </record>
        
        <record id="comm_category_education_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.education.description</field>
            <field name="value">Educational content and notifications including course announcements, continuing education reminders, and certification updates.</field>
        </record>
        
        <record id="comm_category_committee_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.committee.description</field>
            <field name="value">Committee and governance communications including meeting notices, committee updates, volunteer opportunities, and board communications.</field>
        </record>
        
        <record id="comm_category_fundraising_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.fundraising.description</field>
            <field name="value">Fundraising and donation communications including appeals, campaign updates, thank you messages, and donation receipts.</field>
        </record>
        
        <record id="comm_category_emergency_info" model="ir.config_parameter">
            <field name="key">ams_communication.category.emergency.description</field>
            <field name="value">Critical and emergency communications including security alerts, urgent association updates, and time-sensitive notifications.</field>
        </record>
        
        <!-- Default Communication Preference Settings -->
        
        <!-- Default opt-in status for new members by communication type and category -->
        <!-- These can be customized per organization -->
        
        <!-- Marketing Communications - Default to opt-out (requires explicit consent) -->
        <record id="default_pref_email_marketing" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.marketing</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_sms_marketing" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.marketing</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_mail_marketing" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.marketing</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_marketing" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.marketing</field>
            <field name="value">False</field>
        </record>
        
        <!-- Membership Communications - Default to opt-in (essential for membership) -->
        <record id="default_pref_email_membership" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.membership</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_membership" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.membership</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_mail_membership" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.membership</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_membership" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.membership</field>
            <field name="value">True</field>
        </record>
        
        <!-- Events Communications - Default to opt-in -->
        <record id="default_pref_email_events" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.events</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_events" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.events</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_mail_events" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.events</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_events" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.events</field>
            <field name="value">False</field>
        </record>
        
        <!-- Education Communications - Default to opt-in -->
        <record id="default_pref_email_education" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.education</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_education" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.education</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_mail_education" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.education</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_education" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.education</field>
            <field name="value">False</field>
        </record>
        
        <!-- Committee Communications - Default to opt-in for participants -->
        <record id="default_pref_email_committee" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.committee</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_committee" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.committee</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_mail_committee" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.committee</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_committee" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.committee</field>
            <field name="value">False</field>
        </record>
        
        <!-- Fundraising Communications - Default to opt-in -->
        <record id="default_pref_email_fundraising" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.fundraising</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_fundraising" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.fundraising</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_mail_fundraising" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.fundraising</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_phone_fundraising" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.fundraising</field>
            <field name="value">False</field>
        </record>
        
        <!-- Emergency Communications - Always default to opt-in -->
        <record id="default_pref_email_emergency" model="ir.config_parameter">
            <field name="key">ams_communication.default.email.emergency</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_sms_emergency" model="ir.config_parameter">
            <field name="key">ams_communication.default.sms.emergency</field>
            <field name="value">True</field>
        </record>
        
        <record id="default_pref_mail_emergency" model="ir.config_parameter">
            <field name="key">ams_communication.default.mail.emergency</field>
            <field name="value">False</field>
        </record>
        
        <record id="default_pref_phone_emergency" model="ir.config_parameter">
            <field name="key">ams_communication.default.phone.emergency</field>
            <field name="value">True</field>
        </record>
        
        <!-- GDPR and Compliance Settings -->
        
        <record id="gdpr_consent_required" model="ir.config_parameter">
            <field name="key">ams_communication.gdpr.consent_required</field>
            <field name="value">True</field>
        </record>
        
        <record id="gdpr_ip_logging_enabled" model="ir.config_parameter">
            <field name="key">ams_communication.gdpr.ip_logging_enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="communication_data_retention_months" model="ir.config_parameter">
            <field name="key">ams_communication.data_retention_months</field>
            <field name="value">84</field>
        </record>
        
        <!-- Auto-opt-out settings -->
        <record id="auto_optout_bounce_threshold" model="ir.config_parameter">
            <field name="key">ams_communication.auto_optout_bounce_threshold</field>
            <field name="value">3</field>
        </record>
        
        <!-- Communication frequency limits (to prevent spam) -->
        <record id="email_daily_limit" model="ir.config_parameter">
            <field name="key">ams_communication.email_daily_limit</field>
            <field name="value">5</field>
        </record>
        
        <record id="sms_daily_limit" model="ir.config_parameter">
            <field name="key">ams_communication.sms_daily_limit</field>
            <field name="value">3</field>
        </record>
        
        <!-- Unsubscribe page settings -->
        <record id="unsubscribe_page_enabled" model="ir.config_parameter">
            <field name="key">ams_communication.unsubscribe_page_enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="unsubscribe_confirmation_required" model="ir.config_parameter">
            <field name="key">ams_communication.unsubscribe_confirmation_required</field>
            <field name="value">True</field>
        </record>
        
        <!-- Default consent sources for automated preference creation -->
        <record id="default_consent_source_member_signup" model="ir.config_parameter">
            <field name="key">ams_communication.default_consent_source.member_signup</field>
            <field name="value">Member registration form</field>
        </record>
        
        <record id="default_consent_source_staff_creation" model="ir.config_parameter">
            <field name="key">ams_communication.default_consent_source.staff_creation</field>
            <field name="value">Staff member creation - default preferences applied</field>
        </record>
        
        <record id="default_consent_source_import" model="ir.config_parameter">
            <field name="key">ams_communication.default_consent_source.import</field>
            <field name="value">Data import - preferences migrated from legacy system</field>
        </record>
        
    </data>
</odoo>