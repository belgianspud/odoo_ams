<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Participation History Form View -->
    <record id="view_participation_history_form" model="ir.ui.view">
        <field name="name">ams.participation.history.form</field>
        <field name="model">ams.participation.history</field>
        <field name="arch" type="xml">
            <form string="Participation History" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="change_summary"/>
                        </div>
                        <h1>
                            <field name="change_summary" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Change Details">
                            <field name="participation_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="participation_type" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group string="Status Change">
                            <field name="old_status" readonly="1"/>
                            <field name="new_status" readonly="1"/>
                            <field name="status_direction" readonly="1"/>
                            <field name="is_significant_change" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Change Metadata">
                            <field name="change_date" readonly="1"/>
                            <field name="changed_by" readonly="1"/>
                            <field name="automated" readonly="1"/>
                            <field name="days_in_previous_status" readonly="1"/>
                        </group>
                        <group string="Audit Information" groups="base.group_system">
                            <field name="ip_address" readonly="1"/>
                            <field name="user_agent" readonly="1"/>
                            <field name="session_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Change Reason" name="reason">
                            <field name="reason" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Participation History List View -->
    <record id="view_participation_history_list" model="ir.ui.view">
        <field name="name">ams.participation.history.list</field>
        <field name="model">ams.participation.history</field>
        <field name="arch" type="xml">
            <list string="Participation History" sample="1" create="false" edit="false" delete="false"
                  decoration-success="status_direction == 'activation'"
                  decoration-info="status_direction == 'recovery'"
                  decoration-warning="status_direction in ['deactivation', 'lateral']"
                  decoration-danger="status_direction == 'escalation'"
                  decoration-muted="not is_significant_change">
                <field name="change_date"/>
                <field name="partner_id"/>
                <field name="participation_type"/>
                <field name="old_status"/>
                <field name="new_status"/>
                <field name="status_direction"/>
                <field name="changed_by"/>
                <field name="automated" widget="boolean"/>
                <field name="is_significant_change" widget="boolean"/>
                <field name="days_in_previous_status"/>
                <field name="reason" optional="hide"/>
                <field name="change_summary" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Participation History Kanban View -->
    <record id="view_participation_history_kanban" model="ir.ui.view">
        <field name="name">ams.participation.history.kanban</field>
        <field name="model">ams.participation.history</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="status_direction" create="false" edit="false" delete="false">
                <field name="change_summary"/>
                <field name="change_date"/>
                <field name="partner_id"/>
                <field name="old_status"/>
                <field name="new_status"/>
                <field name="status_direction"/>
                <field name="changed_by"/>
                <field name="automated"/>
                <field name="is_significant_change"/>
                <field name="days_in_previous_status"/>
                <field name="reason"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click
                                         #{record.status_direction.raw_value == 'activation' ? 'oe_kanban_color_5' : ''}
                                         #{record.status_direction.raw_value == 'recovery' ? 'oe_kanban_color_3' : ''}
                                         #{record.status_direction.raw_value == 'deactivation' ? 'oe_kanban_color_2' : ''}
                                         #{record.status_direction.raw_value == 'escalation' ? 'oe_kanban_color_1' : ''}
                                         #{!record.is_significant_change.raw_value ? 'oe_kanban_color_7' : ''}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="change_date" widget="date"/>
                                        <t t-if="record.automated.raw_value">
                                            <span class="badge badge-info">Auto</span>
                                        </t>
                                        <t t-if="record.is_significant_change.raw_value">
                                            <span class="badge badge-warning">Significant</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">View Details</a>
                                    <a role="menuitem" name="action_view_participation" type="object" class="dropdown-item">View Participation</a>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-12">
                                            <strong>
                                                <t t-if="record.old_status.raw_value">
                                                    <field name="old_status"/> â†’
                                                </t>
                                                <field name="new_status"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="text-muted small">
                                                By: <field name="changed_by"/>
                                            </div>
                                            <t t-if="record.days_in_previous_status.raw_value > 0">
                                                <div class="text-info small">
                                                    <field name="days_in_previous_status"/> days in previous status
                                                </div>
                                            </t>
                                        </div>
                                        <div class="col-4 text-right">
                                            <span t-attf-class="badge badge-pill 
                                                #{record.status_direction.raw_value == 'activation' ? 'badge-success' : ''}
                                                #{record.status_direction.raw_value == 'recovery' ? 'badge-info' : ''}
                                                #{record.status_direction.raw_value == 'deactivation' ? 'badge-warning' : ''}
                                                #{record.status_direction.raw_value == 'escalation' ? 'badge-danger' : ''}
                                                #{record.status_direction.raw_value == 'lateral' ? 'badge-secondary' : ''}">
                                                <field name="status_direction"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.reason.raw_value">
                                        <div class="col-12">
                                            <div class="text-muted small">
                                                <field name="reason"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Participation History Timeline/Calendar View -->
    <record id="view_participation_history_calendar" model="ir.ui.view">
        <field name="name">ams.participation.history.calendar</field>
        <field name="model">ams.participation.history</field>
        <field name="arch" type="xml">
            <calendar date_start="change_date" string="History Timeline">
                <field name="partner_id"/>
                <field name="old_status"/>
                <field name="new_status"/>
                <field name="changed_by"/>
                <field name="change_summary"/>
            </calendar>
        </field>
    </record>

    <!-- Participation History Search View -->
    <record id="view_participation_history_search" model="ir.ui.view">
        <field name="name">ams.participation.history.search</field>
        <field name="model">ams.participation.history</field>
        <field name="arch" type="xml">
            <search string="Search Participation History">
                <field name="partner_id" string="Member" 
                       filter_domain="[('partner_id.display_name', 'ilike', self)]"/>
                <field name="participation_id"/>
                <field name="old_status"/>
                <field name="new_status"/>
                <field name="changed_by"/>
                <field name="reason"/>
                <field name="change_summary"/>
                
                <!-- Status Direction Filters -->
                <filter string="Activations" name="activations" domain="[('status_direction', '=', 'activation')]"/>
                <filter string="Deactivations" name="deactivations" domain="[('status_direction', '=', 'deactivation')]"/>
                <filter string="Recovery" name="recovery" domain="[('status_direction', '=', 'recovery')]"/>
                <filter string="Escalations" name="escalations" domain="[('status_direction', '=', 'escalation')]"/>
                <filter string="Lateral Changes" name="lateral" domain="[('status_direction', '=', 'lateral')]"/>
                
                <separator/>
                <!-- Change Type Filters -->
                <filter string="Significant Changes" name="significant" domain="[('is_significant_change', '=', True)]"/>
                <filter string="Automated Changes" name="automated" domain="[('automated', '=', True)]"/>
                <filter string="Manual Changes" name="manual" domain="[('automated', '=', False)]"/>
                
                <separator/>
                <!-- Status Filters -->
                <filter string="To Active" name="to_active" domain="[('new_status', '=', 'active')]"/>
                <filter string="To Grace" name="to_grace" domain="[('new_status', '=', 'grace')]"/>
                <filter string="To Suspended" name="to_suspended" domain="[('new_status', '=', 'suspended')]"/>
                <filter string="To Terminated" name="to_terminated" domain="[('new_status', '=', 'terminated')]"/>
                <filter string="To Cancelled" name="to_cancelled" domain="[('new_status', '=', 'cancelled')]"/>
                
                <separator/>
                <!-- Date Filters -->
                <filter string="Today" name="today" 
                        domain="[('change_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('change_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('change_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('change_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('change_date', '&gt;=', datetime.date.today().replace(day=1)), ('change_date', '&lt;', (datetime.date.today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Member" name="group_member" context="{'group_by': 'partner_id'}"/>
                    <filter string="Participation" name="group_participation" context="{'group_by': 'participation_id'}"/>
                    <filter string="Participation Type" name="group_type" context="{'group_by': 'participation_type'}"/>
                    <filter string="Status Direction" name="group_direction" context="{'group_by': 'status_direction'}"/>
                    <filter string="Changed By" name="group_user" context="{'group_by': 'changed_by'}"/>
                    <filter string="New Status" name="group_new_status" context="{'group_by': 'new_status'}"/>
                    <filter string="Change Date" name="group_date" context="{'group_by': 'change_date:day'}"/>
                    <filter string="Automated" name="group_automated" context="{'group_by': 'automated'}"/>
                    <filter string="Significant" name="group_significant" context="{'group_by': 'is_significant_change'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Participation History Action -->
    <record id="action_participation_history" model="ir.actions.act_window">
        <field name="name">Participation History</field>
        <field name="res_model">ams.participation.history</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No participation history records found!
            </p>
            <p>
                Participation history automatically tracks all status changes and
                important events in member participation lifecycle. History records
                are created automatically and provide a complete audit trail.
            </p>
        </field>
    </record>

    <!-- Menu for Participation History -->
    <menuitem id="menu_participation_history" 
              name="History" 
              parent="ams_participation.menu_participation_root" 
              action="action_participation_history" 
              sequence="95"/>

</odoo>