<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Cancellation Reason Form View -->
    <record id="view_cancellation_reason_form" model="ir.ui.view">
        <field name="name">ams.cancellation.reason.form</field>
        <field name="model">ams.cancellation.reason</field>
        <field name="arch" type="xml">
            <form string="Cancellation Reason">
                <header>
                    <button name="action_view_participations" type="object" string="View Participations" 
                            class="oe_highlight" invisible="usage_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_participations" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="usage_count" widget="statinfo" string="Usages"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" placeholder="e.g., Financial Hardship"/>
                        </h1>
                        <div class="oe_edit_only">
                            <label for="code"/>
                        </div>
                        <h3>
                            <field name="code" placeholder="e.g., FIN_HARDSHIP"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="active"/>
                            <field name="category"/>
                            <field name="sequence"/>
                            <field name="description"/>
                        </group>
                        <group string="Summary">
                            <field name="applicable_types" readonly="1"/>
                            <field name="impact_summary" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Applicability" name="applicability">
                            <group>
                                <group string="Participation Types">
                                    <field name="applies_to_membership"/>
                                    <field name="applies_to_chapter"/>
                                    <field name="applies_to_committee"/>
                                    <field name="applies_to_event"/>
                                    <field name="applies_to_course"/>
                                </group>
                            </group>
                        </page>

                        <page string="Business Impact" name="impact">
                            <group>
                                <group string="Process Impact">
                                    <field name="immediate_termination"/>
                                    <field name="allows_refund"/>
                                    <field name="requires_approval"/>
                                    <field name="requires_documentation"/>
                                </group>
                                <group string="Future Impact">
                                    <field name="blocks_rejoining"/>
                                </group>
                            </group>
                        </page>

                        <page string="Workflow" name="workflow">
                            <group>
                                <group string="Notifications">
                                    <field name="notification_template_id"/>
                                    <field name="follow_up_days"/>
                                </group>
                                <group string="Escalation">
                                    <field name="escalation_user_id"/>
                                </group>
                            </group>
                        </page>

                        <page string="Usage Statistics" name="statistics">
                            <div class="oe_form_box_info oe_text_center" invisible="usage_count == 0">
                                <div class="oe_form_field">
                                    <strong>Usage Statistics:</strong>
                                    <p>
                                        This reason has been used <field name="usage_count" readonly="1" nolabel="1"/> times.
                                    </p>
                                </div>
                            </div>
                            <div class="oe_form_box_info oe_text_center" invisible="usage_count != 0">
                                <div class="oe_form_field">
                                    <strong>No Usage Yet:</strong>
                                    <p class="oe_grey">
                                        This cancellation reason has not been used yet.
                                    </p>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Cancellation Reason List View -->
    <record id="view_cancellation_reason_list" model="ir.ui.view">
        <field name="name">ams.cancellation.reason.list</field>
        <field name="model">ams.cancellation.reason</field>
        <field name="arch" type="xml">
            <list string="Cancellation Reasons" sample="1"
                  decoration-success="category == 'voluntary'"
                  decoration-warning="category == 'administrative'"
                  decoration-danger="category == 'involuntary'"
                  decoration-info="category == 'system'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="usage_count"/>
                <field name="applicable_types"/>
                <field name="immediate_termination" widget="boolean_toggle"/>
                <field name="allows_refund" widget="boolean_toggle"/>
                <field name="requires_approval" widget="boolean_toggle"/>
                <field name="blocks_rejoining" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Cancellation Reason Kanban View -->
    <record id="view_cancellation_reason_kanban" model="ir.ui.view">
        <field name="name">ams.cancellation.reason.kanban</field>
        <field name="model">ams.cancellation.reason</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="category">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="usage_count"/>
                <field name="applicable_types"/>
                <field name="impact_summary"/>
                <field name="immediate_termination"/>
                <field name="allows_refund"/>
                <field name="requires_approval"/>
                <field name="blocks_rejoining"/>
                <field name="active"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                                         #{record.category.raw_value == 'voluntary' ? 'oe_kanban_color_5' : ''}
                                         #{record.category.raw_value == 'administrative' ? 'oe_kanban_color_2' : ''}
                                         #{record.category.raw_value == 'involuntary' ? 'oe_kanban_color_1' : ''}
                                         #{record.category.raw_value == 'system' ? 'oe_kanban_color_3' : ''}
                                         #{!record.active.raw_value ? 'oe_kanban_color_7' : ''}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                        <t t-if="record.code.raw_value">
                                            <small class="text-muted"> [<field name="code"/>]</small>
                                        </t>
                                    </div>
                                    <div class="o_secondary">
                                        <span t-attf-class="badge badge-pill 
                                            #{record.category.raw_value == 'voluntary' ? 'badge-success' : ''}
                                            #{record.category.raw_value == 'administrative' ? 'badge-warning' : ''}
                                            #{record.category.raw_value == 'involuntary' ? 'badge-danger' : ''}
                                            #{record.category.raw_value == 'system' ? 'badge-info' : ''}">
                                            <field name="category"/>
                                        </span>
                                        <t t-if="!record.active.raw_value">
                                            <span class="badge badge-secondary">Archived</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" name="action_view_participations" type="object" class="dropdown-item">View Participations</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-6 o_kanban_primary_left">
                                            <button class="btn btn-primary" name="action_view_participations" type="object">
                                                <field name="usage_count"/> Uses
                                            </button>
                                        </div>
                                        <div class="col-6 o_kanban_primary_right">
                                            <div class="text-right">
                                                <t t-if="record.immediate_termination.raw_value">
                                                    <span class="badge badge-danger">Immediate</span><br/>
                                                </t>
                                                <t t-if="record.allows_refund.raw_value">
                                                    <span class="badge badge-success">Refund OK</span><br/>
                                                </t>
                                                <t t-if="record.requires_approval.raw_value">
                                                    <span class="badge badge-warning">Approval Req</span><br/>
                                                </t>
                                                <t t-if="record.blocks_rejoining.raw_value">
                                                    <span class="badge badge-dark">Blocks Rejoin</span><br/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.applicable_types.raw_value">
                                        <div class="col-12">
                                            <div class="text-muted small">
                                                <strong>Applies to:</strong> <field name="applicable_types"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.description.raw_value">
                                        <div class="col-12">
                                            <div class="text-muted small">
                                                <field name="description"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Cancellation Reason Search View -->
    <record id="view_cancellation_reason_search" model="ir.ui.view">
        <field name="name">ams.cancellation.reason.search</field>
        <field name="model">ams.cancellation.reason</field>
        <field name="arch" type="xml">
            <search string="Search Cancellation Reasons">
                <field name="name" string="Reason Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                <field name="description"/>
                
                <!-- Category Filters -->
                <filter string="Voluntary" name="voluntary" domain="[('category', '=', 'voluntary')]"/>
                <filter string="Involuntary" name="involuntary" domain="[('category', '=', 'involuntary')]"/>
                <filter string="Administrative" name="administrative" domain="[('category', '=', 'administrative')]"/>
                <filter string="System Generated" name="system" domain="[('category', '=', 'system')]"/>
                
                <separator/>
                <!-- Participation Type Filters -->
                <filter string="For Membership" name="membership" domain="[('applies_to_membership', '=', True)]"/>
                <filter string="For Chapters" name="chapter" domain="[('applies_to_chapter', '=', True)]"/>
                <filter string="For Committees" name="committee" domain="[('applies_to_committee', '=', True)]"/>
                <filter string="For Events" name="event" domain="[('applies_to_event', '=', True)]"/>
                <filter string="For Courses" name="course" domain="[('applies_to_course', '=', True)]"/>
                
                <separator/>
                <!-- Impact Filters -->
                <filter string="Immediate Termination" name="immediate" domain="[('immediate_termination', '=', True)]"/>
                <filter string="Allows Refund" name="refund" domain="[('allows_refund', '=', True)]"/>
                <filter string="Requires Approval" name="approval" domain="[('requires_approval', '=', True)]"/>
                <filter string="Blocks Rejoining" name="blocks_rejoin" domain="[('blocks_rejoining', '=', True)]"/>
                <filter string="Requires Documentation" name="documentation" domain="[('requires_documentation', '=', True)]"/>
                
                <separator/>
                <!-- Archive Filter -->
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Immediate Termination" name="group_immediate" context="{'group_by': 'immediate_termination'}"/>
                    <filter string="Allows Refund" name="group_refund" context="{'group_by': 'allows_refund'}"/>
                    <filter string="Requires Approval" name="group_approval" context="{'group_by': 'requires_approval'}"/>
                    <filter string="Blocks Rejoining" name="group_blocks" context="{'group_by': 'blocks_rejoining'}"/>
                    <filter string="Usage Count" name="group_usage" context="{'group_by': 'usage_count'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Cancellation Reason Action -->
    <record id="action_cancellation_reason" model="ir.actions.act_window">
        <field name="name">Cancellation Reasons</field>
        <field name="res_model">ams.cancellation.reason</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cancellation reason!
            </p>
            <p>
                Cancellation reasons standardize the documentation of why participations
                are cancelled or terminated. Set up reasons with appropriate business
                impact rules, workflow requirements, and applicability settings.
            </p>
        </field>
    </record>

    <!-- Cancellation Reason Menu -->
    <menuitem id="menu_cancellation_reason" 
              name="Cancellation Reasons" 
              parent="base.menu_administration" 
              action="action_cancellation_reason" 
              sequence="30"
              groups="base.group_system"/>

</odoo>