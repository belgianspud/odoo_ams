<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Credential List View -->
        <record id="view_membership_credential_tree" model="ir.ui.view">
            <field name="name">membership.credential.list</field>
            <field name="model">membership.credential</field>
            <field name="arch" type="xml">
                <list string="Professional Credentials">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="credential_type"/>
                    <field name="credential_level"/>
                    <field name="is_required_for_membership"/>
                    <field name="requires_verification"/>
                    <field name="partner_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Credential Form View -->
        <record id="view_membership_credential_form" model="ir.ui.view">
            <field name="name">membership.credential.form</field>
            <field name="model">membership.credential</field>
            <field name="arch" type="xml">
                <form string="Professional Credential">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_members" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="partner_count" widget="statinfo" string="Members"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="color" widget="color_picker" class="float-end"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g., Doctor of Medicine"/></h1>
                        </div>

                        <group>
                            <group name="basic">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group name="classification">
                                <field name="credential_type"/>
                                <field name="credential_level"/>
                                <field name="is_primary_credential"/>
                            </group>
                        </group>

                        <group>
                            <field name="description" placeholder="Description..."/>
                        </group>

                        <notebook>
                            <page name="requirements" string="Requirements">
                                <group>
                                    <group name="verification">
                                        <field name="requires_verification"/>
                                        <field name="verification_document_required" invisible="not requires_verification"/>
                                        <field name="is_required_for_membership"/>
                                    </group>
                                    <group name="expiration">
                                        <field name="requires_expiration_date"/>
                                        <field name="typical_validity_period" invisible="not requires_expiration_date"/>
                                    </group>
                                </group>
                                <group>
                                    <group name="ce">
                                        <field name="requires_continuing_education"/>
                                        <field name="ce_hours_required" invisible="not requires_continuing_education"/>
                                    </group>
                                </group>
                            </page>

                            <page name="issuing" string="Issuing Authority">
                                <group>
                                    <group>
                                        <field name="issuing_organization"/>
                                        <field name="issuing_country_id"/>
                                        <field name="website"/>
                                    </group>
                                </group>
                            </page>

                            <page name="categories" string="Member Categories">
                                <field name="category_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="category_type"/>
                                        <field name="member_count"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Credential Search View -->
        <record id="view_membership_credential_search" model="ir.ui.view">
            <field name="name">membership.credential.search</field>
            <field name="model">membership.credential</field>
            <field name="arch" type="xml">
                <search string="Credentials">
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Required for Membership" name="required" domain="[('is_required_for_membership', '=', True)]"/>
                    <filter string="Requires Verification" name="verification" domain="[('requires_verification', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'credential_type'}"/>
                        <filter string="Level" name="group_level" context="{'group_by': 'credential_level'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Credential Action -->
        <record id="action_membership_credential" model="ir.actions.act_window">
            <field name="name">Professional Credentials</field>
            <field name="res_model">membership.credential</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first professional credential
                </p>
                <p>Define credentials like MD, PhD, PE, CPA, etc.</p>
            </field>
        </record>

    </data>
</odoo>