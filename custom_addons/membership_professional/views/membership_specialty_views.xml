<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Similar structure to credential views, with tree for hierarchy -->
        <record id="view_membership_specialty_tree" model="ir.ui.view">
            <field name="name">membership.specialty.list</field>
            <field name="model">membership.specialty</field>
            <field name="arch" type="xml">
                <list string="Professional Specialties">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                    <field name="specialty_type"/>
                    <field name="partner_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="action_membership_specialty" model="ir.actions.act_window">
            <field name="name">Professional Specialties</field>
            <field name="res_model">membership.specialty</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
        </record>
    </data>
</odoo>