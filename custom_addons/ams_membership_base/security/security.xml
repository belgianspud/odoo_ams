<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Membership Groups -->
        <record model="res.groups" id="group_membership_user">
            <field name="name">Membership User</field>
            <field name="category_id" ref="base.module_category_association_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="res.groups" id="group_membership_manager">
            <field name="name">Membership Manager</field>
            <field name="category_id" ref="base.module_category_association_management"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record model="ir.rule" id="membership_rule_user">
            <field name="name">Membership: User Access</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

    </data>
</odoo>