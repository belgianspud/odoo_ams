<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Directory Category Views -->
    <record id="view_directory_category_tree" model="ir.ui.view">
        <field name="name">membership.directory.category.tree</field>
        <field name="model">membership.directory.category</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="member_count"/>
                <field name="public_member_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_directory_category_form" model="ir.ui.view">
        <field name="name">membership.directory.category.form</field>
        <field name="model">membership.directory.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                            <field name="parent_id"/>
                            <field name="member_count"/>
                            <field name="public_member_count"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Category description..."/>
                    <separator string="Sub-Categories" attrs="{'invisible': [('child_ids', '=', [])]}"/>
                    <field name="child_ids" attrs="{'invisible': [('child_ids', '=', [])]}">
                        <tree>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="member_count"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Directory Entry Views -->
    <record id="view_member_directory_tree" model="ir.ui.view">
        <field name="name">membership.directory.tree</field>
        <field name="model">membership.directory</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not is_public">
                <field name="partner_id"/>
                <field name="membership_level"/>
                <field name="chapter_name"/>
                <field name="skills"/>
                <field name="is_public"/>
                <field name="allow_contact"/>
                <field name="view_count"/>
                <field name="last_updated"/>
                <field name="membership_status" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_member_directory_form" model="ir.ui.view">
        <field name="name">membership.directory.form</field>
        <field name="model">membership.directory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_increment_view_count" string="Record View" type="object" class="oe_link"/>
                    <button name="action_update_from_partner" string="Update from Contact" type="object"/>
                    <button name="toggle_public_status" string="Toggle Visibility" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-eye">
                            <field string="Profile Views" name="view_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-envelope" attrs="{'invisible': [('contact_count', '=', 0)]}">
                            <field string="Times Contacted" name="contact_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Private" bg_color="bg-warning" attrs="{'invisible': [('is_public', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="partner_id" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="membership_level" readonly="1"/>
                            <span class="text-muted" attrs="{'invisible': [('chapter_name', '=', False)]}">
                                â€¢ <field name="chapter_name" readonly="1"/>
                            </span>
                        </div>
                        <div class="o_row">
                            <span t-attf-class="badge badge-pill badge-#{record.membership_status == 'active' ? 'success' : 
                                                                     record.membership_status == 'grace' ? 'warning' : 
                                                                     'secondary'}" 
                                  attrs="{'invisible': [('membership_status', '=', False)]}">
                                <field name="membership_status"/>
                            </span>
                            <span class="text-muted" attrs="{'invisible': [('member_since', '=', False)]}">
                                Member since <field name="member_since"/>
                            </span>
                        </div>
                    </div>
                    
                    <group>
                        <group name="privacy" string="Privacy Settings">
                            <field name="is_public"/>
                            <field name="allow_contact"/>
                        </group>
                        <group name="display" string="Display Options">
                            <field name="show_email"/>
                            <field name="show_phone"/>
                            <field name="show_company"/>
                            <field name="show_address"/>
                        </group>
                    </group>
                    
                    <group name="professional" string="Professional Information">
                        <field name="skills" placeholder="e.g. Project Management, Software Development, Data Analysis"/>
                        <field name="industries" placeholder="e.g. Healthcare, Technology, Manufacturing"/>
                        <field name="linkedin_url" widget="url" placeholder="https://www.linkedin.com/in/yourprofile"/>
                        <field name="website_url" widget="url" placeholder="https://www.yourwebsite.com"/>
                        <field name="twitter_handle" placeholder="yourhandle (without @)"/>
                    </group>
                    
                    <group name="categories" string="Directory Categories">
                        <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}"/>
                    </group>
                    
                    <notebook>
                        <page string="Biography">
                            <field name="bio" nolabel="1" placeholder="Professional background and biography..." 
                                   options="{'style-inline': true}"/>
                        </page>
                        <page string="Statistics">
                            <group>
                                <group>
                                    <field name="view_count"/>
                                    <field name="contact_count"/>
                                    <field name="last_updated"/>
                                </group>
                                <group>
                                    <field name="member_since"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_member_directory_search" model="ir.ui.view">
        <field name="name">membership.directory.search</field>
        <field name="model">membership.directory</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" string="Member" filter_domain="[('partner_id.name', 'ilike', self)]"/>
                <field name="skills"/>
                <field name="industries"/>
                <field name="membership_level"/>
                <field name="chapter_name"/>
                <separator/>
                <filter string="Public" name="public" domain="[('is_public', '=', True)]"/>
                <filter string="Private" name="private" domain="[('is_public', '=', False)]"/>
                <filter string="Allow Contact" name="contactable" domain="[('allow_contact', '=', True)]"/>
                <filter string="Active Members" name="active_members" domain="[('membership_status', '=', 'active')]"/>
                <separator/>
                <filter string="Recently Updated" name="recent" 
                        domain="[('last_updated', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=30)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                <filter string="Popular Profiles" name="popular" domain="[('view_count', '&gt;', 5)]"/>
                <group expand="0" string="Group By">
                    <filter string="Membership Level" name="group_level" context="{'group_by': 'membership_level'}"/>
                    <filter string="Chapter" name="group_chapter" context="{'group_by': 'chapter_name'}"/>
                    <filter string="Categories" name="group_category" context="{'group_by': 'category_ids'}"/>
                    <filter string="Membership Status" name="group_status" context="{'group_by': 'membership_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Directory Kanban View -->
    <record id="view_member_directory_kanban" model="ir.ui.view">
        <field name="name">membership.directory.kanban</field>
        <field name="model">membership.directory</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="partner_id"/>
                <field name="membership_level"/>
                <field name="chapter_name"/>
                <field name="skills"/>
                <field name="bio"/>
                <field name="show_email"/>
                <field name="show_phone"/>
                <field name="allow_contact"/>
                <field name="membership_status"/>
                <field name="view_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="partner_id"/>
                                        </strong>
                                        <small t-if="record.membership_level.value">
                                            <field name="membership_level"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-attf-class="badge badge-pill badge-#{record.membership_status.raw_value == 'active' ? 'success' : 
                                                                               record.membership_status.raw_value == 'grace' ? 'warning' : 
                                                                               'secondary'}"
                                              t-if="record.membership_status.value">
                                            <field name="membership_status"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.chapter_name.value">
                                        <i class="fa fa-map-marker"/> <field name="chapter_name"/>
                                    </div>
                                    <div t-if="record.skills.value">
                                        <i class="fa fa-cogs"/> <field name="skills"/>
                                    </div>
                                    <div t-if="record.bio.value" class="text-muted">
                                        <t t-esc="record.bio.value.substring(0, 100)"/>
                                        <span t-if="record.bio.value.length &gt; 100">...</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.allow_contact.raw_value">
                                            <span t-if="record.show_email.raw_value" class="badge badge-pill badge-info">
                                                <i class="fa fa-envelope"/>
                                            </span>
                                            <span t-if="record.show_phone.raw_value" class="badge badge-pill badge-info">
                                                <i class="fa fa-phone"/>
                                            </span>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <i class="fa fa-eye"/> <field name="view_count"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_directory_category" model="ir.actions.act_window">
        <field name="name">Directory Categories</field>
        <field name="res_model">membership.directory.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first directory category!
            </p>
            <p>
                Categories help organize members by profession, specialty, or interest area.
            </p>
        </field>
    </record>

    <record id="action_member_directory" model="ir.actions.act_window">
        <field name="name">Member Directory</field>
        <field name="res_model">membership.directory</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_member_directory_search"/>
        <field name="context">{'search_default_public': 1, 'search_default_active_members': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No directory entries found!
            </p>
            <p>
                The member directory helps members connect and network with each other.
                Create directory entries for your members to enable networking.
            </p>
        </field>
    </record>

    <!-- Partner Form Integration -->
    <record id="view_partner_form_directory" model="ir.ui.view">
        <field name="name">res.partner.form.directory</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="view_partner_form_membership"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='membership_status']" position="inside">
                <field name="in_directory"/>
                <field name="directory_public" attrs="{'invisible': [('in_directory', '=', False)]}"/>
                <field name="directory_views" attrs="{'invisible': [('in_directory', '=', False)]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_create_directory_entry" icon="fa-address-book"
                        attrs="{'invisible': [('in_directory', '=', True)]}">
                    <span>Add to Directory</span>
                </button>
                <button class="oe_stat_button" type="object" name="action_create_directory_entry" icon="fa-address-book"
                        attrs="{'invisible': [('in_directory', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="directory_views"/>
                        </span>
                        <span class="o_stat_text">Directory Views</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_member_directory_root" name="Directory" parent="menu_membership_root" sequence="60"/>
    <menuitem id="menu_member_directory" name="Member Directory" parent="menu_member_directory_root" 
              action="action_member_directory" sequence="10"/>
    <menuitem id="menu_directory_categories" name="Directory Categories" parent="menu_member_directory_root" 
              action="action_directory_category" sequence="20"/>

</odoo>