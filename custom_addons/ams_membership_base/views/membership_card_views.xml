<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Membership Card Template Views -->
    <record id="view_membership_card_template_tree" model="ir.ui.view">
        <field name="name">membership.card.template.tree</field>
        <field name="model">membership.card.template</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_default" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="usage_count"/>
                <field name="is_default"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_membership_card_template_form" model="ir.ui.view">
        <field name="name">membership.card.template.form</field>
        <field name="model">membership.card.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="increment_usage" string="Test Template" type="object" class="oe_link"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-bar-chart">
                            <field string="Usage Count" name="usage_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Default" bg_color="bg-success" attrs="{'invisible': [('is_default', '=', False)]}"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_settings">
                            <field name="sequence"/>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                        <group name="design_settings">
                            <field name="background_color" widget="color"/>
                            <field name="text_color" widget="color"/>
                            <field name="accent_color" widget="color"/>
                            <field name="logo_position"/>
                        </group>
                    </group>
                    <group name="card_features" string="Card Features">
                        <group>
                            <field name="show_qr_code"/>
                            <field name="show_member_photo"/>
                        </group>
                    </group>
                    <group name="template_file" string="Custom Template File">
                        <field name="template_file" filename="template_filename"/>
                        <field name="template_filename" invisible="1"/>
                    </group>
                    <field name="description" placeholder="Template description and usage notes..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Enhanced Membership Form with Card Features -->
    <record id="view_membership_form_card" model="ir.ui.view">
        <field name="name">membership.membership.form.card</field>
        <field name="model">membership.membership</field>
        <field name="inherit_id" ref="view_membership_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_digital_card" string="Generate Card" type="object" 
                        class="btn-primary" attrs="{'invisible': [('card_number', '=', False)]}"/>
                <button name="action_send_digital_card" string="Email Card" type="object"
                        attrs="{'invisible': [('card_number', '=', False)]}"/>
                <button name="action_issue_card" string="Issue New Card" type="object"/>
            </xpath>
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-credit-card" attrs="{'invisible': [('card_status', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="card_status"/>
                        </span>
                        <span class="o_stat_text">Card Status</span>
                    </div>
                </button>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Membership Card" name="membership_card">
                    <group>
                        <group name="card_info" string="Card Information">
                            <field name="card_number" readonly="1"/>
                            <field name="card_issued_date"/>
                            <field name="card_expiry_date" readonly="1"/>
                            <field name="card_status" readonly="1"/>
                        </group>
                        <group name="card_design" string="Card Design">
                            <field name="card_template"/>
                            <field name="digital_card_url" readonly="1" widget="url"/>
                        </group>
                    </group>
                    
                    <!-- QR Code Display -->
                    <group name="qr_code_group" string="Digital Verification">
                        <group>
                            <field name="qr_code_data" readonly="1"/>
                        </group>
                        <group>
                            <field name="qr_code" widget="image" readonly="1" 
                                   attrs="{'invisible': [('qr_code', '=', False)]}"
                                   options="{'size': [150, 150]}"/>
                        </group>
                    </group>
                    
                    <!-- Card Preview -->
                    <separator string="Digital Card Preview"/>
                    <div class="o_form_sheet_bg">
                        <div class="o_group">
                            <div style="margin: 20px auto; max-width: 400px; border: 2px solid #007bff; border-radius: 10px; padding: 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-align: center; font-family: Arial, sans-serif;">
                                <h3 style="margin: 0 0 10px 0; color: white;">Your Organization</h3>
                                <hr style="border-color: rgba(255,255,255,0.3); margin: 10px 0;"/>
                                <h2 style="margin: 10px 0; color: white;">
                                    <field name="partner_id" readonly="1" nolabel="1" 
                                           options="{'no_open': True, 'no_create': True}"/>
                                </h2>
                                <p style="margin: 5px 0; color: white;">
                                    <strong>Member</strong>
                                </p>
                                <p style="margin: 5px 0; color: white;" attrs="{'invisible': [('card_number', '=', False)]}">
                                    Card #: <field name="card_number" nolabel="1" readonly="1"/>
                                </p>
                                <p style="margin: 5px 0; color: white;" attrs="{'invisible': [('end_date', '=', False)]}">
                                    Valid Until: <field name="end_date" nolabel="1" readonly="1"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Card Template Action -->
    <record id="action_membership_card_template" model="ir.actions.act_window">
        <field name="name">Card Templates</field>
        <field name="res_model">membership.card.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first card template!
            </p>
            <p>
                Design templates for member ID cards with custom colors and layouts.
            </p>
        </field>
    </record>

    <!-- Card Verification Wizard -->
    <record id="view_card_verification_wizard" model="ir.ui.view">
        <field name="name">card.verification.wizard.form</field>
        <field name="model">membership.card.verification.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Verify Membership Card</h1>
                    </div>
                    <group>
                        <field name="card_number" placeholder="Enter card number or scan QR code"/>
                        <field name="qr_code_data" placeholder="QR code data (if scanning)"/>
                    </group>
                    <group name="verification_result" string="Verification Result" attrs="{'invisible': [('verification_result', '=', False)]}">
                        <field name="verification_result" readonly="1"/>
                        <field name="member_name" readonly="1" attrs="{'invisible': [('member_name', '=', False)]}"/>
                        <field name="membership_status" readonly="1" attrs="{'invisible': [('membership_status', '=', False)]}"/>
                        <field name="membership_level" readonly="1" attrs="{'invisible': [('membership_level', '=', False)]}"/>
                        <field name="expiry_date" readonly="1" attrs="{'invisible': [('expiry_date', '=', False)]}"/>
                        <field name="is_valid" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Verify Card" name="verify_card" type="object" class="btn-primary"/>
                    <button string="Verify QR Code" name="verify_qr_code" type="object" class="btn-secondary"/>
                    <button string="View Member" name="action_view_member" type="object" class="btn-info"
                            attrs="{'invisible': [('is_valid', '=', False)]}"/>
                    <button string="Clear Results" name="clear_results" type="object" class="btn-secondary"
                            attrs="{'invisible': [('verification_result', '=', False)]}"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Card Verification Wizard Action -->
    <record id="action_card_verification_wizard" model="ir.actions.act_window">
        <field name="name">Verify Membership Card</field>
        <field name="res_model">membership.card.verification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_membership_cards" name="Membership Cards" parent="menu_membership_main" sequence="35"/>
    <menuitem id="menu_card_templates" name="Card Templates" parent="menu_membership_cards" 
              action="action_membership_card_template" sequence="10"/>
    <menuitem id="menu_card_verification" name="Verify Card" parent="menu_membership_cards" 
              action="action_card_verification_wizard" sequence="20"/>

</odoo>