<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Membership Tree View -->
    <record id="view_membership_tree" model="ir.ui.view">
        <field name="name">membership.membership.tree</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='active'" decoration-warning="state=='grace'" decoration-danger="state=='lapsed'" decoration-muted="state=='cancelled'" decoration-info="state=='draft'">
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_until_expiry"/>
                <field name="state" decoration-success="state=='active'" decoration-warning="state=='grace'"/>
                <field name="balance_due" optional="hide"/>
                <field name="currency_id" invisible="1"/>
                <field name="is_current" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Invoice Action for Membership (defined before use) -->
    <record id="action_membership_invoices" model="ir.actions.act_window">
        <field name="name">Membership Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('membership_id', '!=', False)]</field>
        <field name="context">{'search_default_posted': 1}</field>
    </record>

    <!-- Membership Form View -->
    <record id="view_membership_form" model="ir.ui.view">
        <field name="name">membership.membership.form</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_renew" string="Renew" type="object" 
                            attrs="{'invisible': [('state', 'in', ['draft', 'cancelled'])]}"
                            class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'draft'])]}"
                            confirm="Are you sure you want to cancel this membership?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,grace,lapsed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(action_membership_invoices)d" icon="fa-pencil-square-o">
                            <field string="Invoices" name="invoice_ids" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <widget name="web_ribbon" title="Lapsed" bg_color="bg-warning" attrs="{'invisible': [('state', '!=', 'lapsed')]}"/>
                    <div class="oe_title">
                        <label for="display_name" class="oe_edit_only"/>
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="is_current" invisible="1"/>
                            <span class="badge badge-success" attrs="{'invisible': [('is_current', '=', False)]}">Current</span>
                        </div>
                    </div>
                    <group>
                        <group name="member_info">
                            <field name="partner_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group name="dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="paid_through_date"/>
                            <field name="days_until_expiry" 
                                   decoration-danger="days_until_expiry &lt; 0"
                                   decoration-warning="days_until_expiry &lt;= 30 and days_until_expiry &gt;= 0"/>
                        </group>
                    </group>
                    <group name="financial_summary" string="Financial Summary">
                        <group>
                            <field name="total_invoiced"/>
                            <field name="total_paid"/>
                            <field name="balance_due" decoration-danger="balance_due &gt; 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoices" name="invoices">
                            <field name="invoice_ids" context="{'default_partner_id': partner_id, 'default_membership_id': id}">
                                <tree decoration-info="state=='draft'" decoration-success="state=='posted'" decoration-muted="state=='cancel'">
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="invoice_date_due"/>
                                    <field name="amount_total"/>
                                    <field name="amount_residual" decoration-danger="amount_residual &gt; 0"/>
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="History &amp; Notes" name="history">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Membership Search View -->
    <record id="view_membership_search" model="ir.ui.view">
        <field name="name">membership.membership.search</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" string="Member" filter_domain="[('partner_id.name', 'ilike', self)]"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Grace Period" name="grace" domain="[('state', '=', 'grace')]"/>
                <filter string="Lapsed" name="lapsed" domain="[('state', '=', 'lapsed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Current Members" name="current" domain="[('is_current', '=', True)]"/>
                <filter string="Expiring Soon" name="expiring_soon" 
                        domain="[('days_until_expiry', '&lt;=', 30), ('days_until_expiry', '&gt;=', 0), ('state', 'in', ['active', 'grace'])]"/>
                <filter string="Overdue Payment" name="overdue" domain="[('balance_due', '&gt;', 0)]"/>
                <separator/>
                <filter string="This Year" name="this_year" 
                        domain="[('start_date', '&gt;=', datetime.date.today().replace(month=1, day=1).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="last_30_days" 
                        domain="[('start_date', '&gt;=', (datetime.date.today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_date:month'}"/>
                    <filter string="End Date" name="group_end_date" context="{'group_by': 'end_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Membership Kanban View -->
    <record id="view_membership_kanban" model="ir.ui.view">
        <field name="name">membership.membership.kanban</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="partner_id"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_until_expiry"/>
                <field name="balance_due"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                                          #{record.state.raw_value === 'active' ? 'border-success' : 
                                            record.state.raw_value === 'grace' ? 'border-warning' : 
                                            record.state.raw_value === 'lapsed' ? 'border-danger' : 
                                            'border-secondary'}">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="partner_id"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-attf-class="badge badge-pill badge-#{record.state.raw_value === 'active' ? 'success' : 
                                                                                    record.state.raw_value === 'grace' ? 'warning' : 
                                                                                    record.state.raw_value === 'lapsed' ? 'danger' : 
                                                                                    'secondary'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-calendar-o"/> 
                                        <field name="start_date"/> - <field name="end_date"/>
                                    </div>
                                    <div t-if="record.days_until_expiry.raw_value &gt;= 0">
                                        <i class="fa fa-clock-o"/>
                                        <t t-if="record.days_until_expiry.raw_value == 0">Expires today</t>
                                        <t t-elif="record.days_until_expiry.raw_value == 1">Expires tomorrow</t>
                                        <t t-else="">Expires in <field name="days_until_expiry"/> days</t>
                                    </div>
                                    <div t-if="record.days_until_expiry.raw_value &lt; 0" class="text-danger">
                                        <i class="fa fa-exclamation-triangle"/>
                                        Expired <t t-esc="Math.abs(record.days_until_expiry.raw_value)"/> days ago
                                    </div>
                                    <div t-if="record.balance_due.raw_value &gt; 0" class="text-danger">
                                        <i class="fa fa-money"/>
                                        Balance Due: <field name="balance_due"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Membership Calendar View -->
    <record id="view_membership_calendar" model="ir.ui.view">
        <field name="name">membership.membership.calendar</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <calendar string="Membership Expiry" date_start="end_date" color="state" mode="month">
                <field name="partner_id"/>
                <field name="state"/>
                <field name="days_until_expiry"/>
            </calendar>
        </field>
    </record>

    <!-- Membership Action -->
    <record id="action_membership" model="ir.actions.act_window">
        <field name="name">Memberships</field>
        <field name="res_model">membership.membership</field>
        <field name="view_mode">tree,kanban,form,calendar</field>
        <field name="search_view_id" ref="view_membership_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first membership record!
            </p>
            <p>
                Track member subscriptions, renewal dates, and payment status.<br/>
                Monitor membership lifecycle from enrollment through renewal.
            </p>
        </field>
    </record>

    <!-- Partner Action for Memberships -->
    <record id="action_membership_by_partner" model="ir.actions.act_window">
        <field name="name">Member Memberships</field>
        <field name="res_model">membership.membership</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_partner_id': active_id, 'default_partner_id': active_id}</field>
    </record>

    <!-- Partner Form View Inherit -->
    <record id="view_partner_form_membership" model="ir.ui.view">
        <field name="name">res.partner.form.membership</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add membership info to button box -->
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" 
                        name="%(action_membership_by_partner)d" icon="fa-id-card-o"
                        attrs="{'invisible': [('is_member', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Membership</span>
                        <span class="o_stat_value" field="current_membership_id"/>
                    </div>
                </button>
            </div>

            <!-- Add membership page before internal notes -->
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Membership" name="membership" attrs="{'invisible': [('is_company', '=', True), ('parent_id', '!=', False)]}">
                    <group>
                        <group name="membership_status">
                            <field name="is_member"/>
                            <field name="current_membership_id" attrs="{'invisible': [('is_member', '=', False)]}" 
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    <field name="membership_ids" attrs="{'invisible': [('membership_ids', '=', [])]}">
                        <tree decoration-success="state=='active'" decoration-warning="state=='grace'" decoration-danger="state=='lapsed'">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                            <field name="balance_due"/>
                            <field name="days_until_expiry"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_membership_root" name="Membership" sequence="50"/>
    <menuitem id="menu_membership_main" name="Memberships" parent="menu_membership_root" sequence="10"/>
    <menuitem id="menu_membership_list" name="All Memberships" parent="menu_membership_main" 
              action="action_membership" sequence="10"/>
    <menuitem id="menu_membership_invoices" name="Membership Invoices" parent="menu_membership_main" 
              action="action_membership_invoices" sequence="15"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_membership_config" name="Configuration" parent="menu_membership_root" sequence="90"/>

</odoo>