<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Membership Tree View -->
    <record id="view_membership_tree" model="ir.ui.view">
        <field name="name">membership.membership.tree</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='active'" decoration-warning="state=='grace'" decoration-danger="state=='lapsed'" decoration-muted="state=='cancelled'">
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_until_expiry"/>
                <field name="state"/>
                <field name="balance_due"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Membership Form View -->
    <record id="view_membership_form" model="ir.ui.view">
        <field name="name">membership.membership.form</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            attrs="{'invisible': [('state', '=', 'active')]}" 
                            class="oe_highlight"/>
                    <button name="action_renew" string="Renew" type="object" 
                            class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,grace,lapsed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="member_info">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="paid_through_date"/>
                            <field name="days_until_expiry"/>
                            <field name="is_current"/>
                        </group>
                    </group>
                    <group>
                        <group name="financial" string="Financial Summary">
                            <field name="total_invoiced"/>
                            <field name="total_paid"/>
                            <field name="balance_due"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoices">
                            <field name="invoice_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="amount_residual"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Membership Search View -->
    <record id="view_membership_search" model="ir.ui.view">
        <field name="name">membership.membership.search</field>
        <field name="model">membership.membership</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="state"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Grace Period" name="grace" domain="[('state', '=', 'grace')]"/>
                <filter string="Lapsed" name="lapsed" domain="[('state', '=', 'lapsed')]"/>
                <filter string="Current Members" name="current" domain="[('is_current', '=', True)]"/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('days_until_expiry', '&lt;=', 30), ('days_until_expiry', '&gt;=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Membership Action -->
    <record id="action_membership" model="ir.actions.act_window">
        <field name="name">Memberships</field>
        <field name="res_model">membership.membership</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_membership_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first membership!
            </p>
            <p>
                Track member subscriptions, renewal dates, and payment status.
            </p>
        </field>
    </record>

    <!-- Partner Form View Inherit -->
    <record id="view_partner_form_membership" model="ir.ui.view">
        <field name="name">res.partner.form.membership</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Membership" attrs="{'invisible': [('is_company', '=', False), ('parent_id', '!=', False)]}">
                    <group>
                        <group>
                            <field name="is_member"/>
                            <field name="current_membership_id"/>
                        </group>
                    </group>
                    <field name="membership_ids">
                        <tree>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                            <field name="balance_due"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_membership_root" name="Membership" sequence="50"/>
    <menuitem id="menu_membership_main" name="Memberships" parent="menu_membership_root" sequence="10"/>
    <menuitem id="menu_membership_list" name="All Memberships" parent="menu_membership_main" action="action_membership" sequence="10"/>

</odoo>