<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Membership Level Tree View -->
    <record id="view_membership_level_tree" model="ir.ui.view">
        <field name="name">membership.level.tree</field>
        <field name="model">membership.level</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="duration_months"/>
                <field name="price"/>
                <field name="member_count"/>
                <field name="is_individual"/>
                <field name="is_organization"/>
                <field name="active"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Membership Level Form View -->
    <record id="view_membership_level_form" model="ir.ui.view">
        <field name="name">membership.level.form</field>
        <field name="model">membership.level</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_members" string="View Members" type="object" class="oe_highlight"/>
                    <button name="action_create_membership" string="New Membership" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_members" icon="fa-users">
                            <field string="Members" name="member_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Level Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group name="pricing">
                            <field name="duration_months"/>
                            <field name="price"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group name="type" string="Membership Type">
                            <field name="is_individual"/>
                            <field name="is_organization"/>
                            <field name="max_members" attrs="{'invisible': [('is_organization', '=', False)]}"/>
                        </group>
                        <group name="benefits" string="Benefits">
                            <field name="event_discount_percent"/>
                            <field name="can_vote"/>
                        </group>
                    </group>
                    <group name="product_integration" string="Product Integration">
                        <field name="auto_create_product"/>
                        <field name="product_id" attrs="{'readonly': [('auto_create_product', '=', True)]}"/>
                    </group>
                    <notebook>
                        <page string="Description &amp; Benefits">
                            <group>
                                <field name="description" nolabel="1" placeholder="Description of this membership level..."/>
                            </group>
                            <separator string="Benefits"/>
                            <field name="benefits" nolabel="1" placeholder="List the benefits and features included with this membership level..."/>
                        </page>
                        <page string="Statistics">
                            <group>
                                <group>
                                    <field name="member_count"/>
                                    <field name="total_revenue"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Membership Level Search View -->
    <record id="view_membership_level_search" model="ir.ui.view">
        <field name="name">membership.level.search</field>
        <field name="model">membership.level</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <filter string="Individual" name="individual" domain="[('is_individual', '=', True)]"/>
                <filter string="Organization" name="organization" domain="[('is_organization', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'is_individual'}"/>
                    <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Membership Level Kanban View -->
    <record id="view_membership_level_kanban" model="ir.ui.view">
        <field name="name">membership.level.kanban</field>
        <field name="model">membership.level</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="price"/>
                <field name="duration_months"/>
                <field name="member_count"/>
                <field name="currency_id"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value ? '' : 'oe_kanban_color_7'}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small t-if="record.code.value">
                                            [<field name="code"/>]
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill badge-info">
                                            <field name="member_count"/> members
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-money"/> <field name="price"/> 
                                        for <field name="duration_months"/> months
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Membership Level Action -->
    <record id="action_membership_level" model="ir.actions.act_window">
        <field name="name">Membership Levels</field>
        <field name="res_model">membership.level</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_membership_level_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first membership level!
            </p>
            <p>
                Define different tiers of membership with varying prices, durations, and benefits.
            </p>
        </field>
    </record>

    <!-- Update Membership Form to include Level -->
    <record id="view_membership_form_with_level" model="ir.ui.view">
        <field name="name">membership.membership.form.level</field>
        <field name="model">membership.membership</field>
        <field name="inherit_id" ref="ams_membership_base.view_membership_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="level_id" options="{'no_create': True}"/>
            </field>
        </field>
    </record>

    <!-- Update Membership Tree to include Level -->
    <record id="view_membership_tree_with_level" model="ir.ui.view">
        <field name="name">membership.membership.tree.level</field>
        <field name="model">membership.membership</field>
        <field name="inherit_id" ref="ams_membership_base.view_membership_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="level_id"/>
            </field>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_membership_level" name="Membership Levels" 
              parent="ams_membership_base.menu_membership_main" 
              action="action_membership_level" sequence="5"/>

</odoo>