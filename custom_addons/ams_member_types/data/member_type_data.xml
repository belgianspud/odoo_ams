<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Standard Individual Member Types -->
        <record id="member_type_regular" model="ams.member.type">
            <field name="name">Regular Member</field>
            <field name="code">REGULAR</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">10</field>
            <field name="description">Standard individual membership with full benefits and voting rights.</field>
            <field name="min_age">18</field>
            <field name="max_age">0</field>
            <field name="requires_verification">False</field>
            <field name="auto_approve">True</field>
            <field name="active">True</field>
        </record>

        <record id="member_type_student" model="ams.member.type">
            <field name="name">Student Member</field>
            <field name="code">STUDENT</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">20</field>
            <field name="description">Discounted membership for full-time students. Requires verification of enrollment status.</field>
            <field name="min_age">16</field>
            <field name="max_age">35</field>
            <field name="requires_verification">True</field>
            <field name="auto_approve">False</field>
            <field name="active">True</field>
        </record>

        <record id="member_type_senior" model="ams.member.type">
            <field name="name">Senior Member</field>
            <field name="code">SENIOR</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">30</field>
            <field name="description">Discounted membership for senior citizens with special benefits and recognition.</field>
            <field name="min_age">65</field>
            <field name="max_age">0</field>
            <field name="requires_verification">False</field>
            <field name="auto_approve">True</field>
            <field name="active">True</field>
        </record>

        <record id="member_type_young_professional" model="ams.member.type">
            <field name="name">Young Professional</field>
            <field name="code">YOUNG_PROF</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">25</field>
            <field name="description">Special membership for professionals under 35 with networking and development opportunities.</field>
            <field name="min_age">22</field>
            <field name="max_age">35</field>
            <field name="requires_verification">False</field>
            <field name="auto_approve">True</field>
            <field name="active">True</field>
        </record>

