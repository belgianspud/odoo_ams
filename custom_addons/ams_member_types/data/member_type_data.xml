            <field name="is_organization">True</field>
            <field name="sequence">100</field>
            <field name="description">Full organizational membership for corporations with employee benefits and representation rights.</field>
            <field name="min_age">0</field>
            <field name="max_age">0</field>
            <field name="requires_verification">True</field>
            <field name="auto_approve">False</field>
            <field name="active">True</field>
        </record>

        <record id="member_type_nonprofit" model="ams.member.type">
            <field name="name">Non-Profit Member</field>
            <field name="code">NONPROFIT</field>
            <field name="is_individual">False</field>
            <field name="is_organization">True</field>
            <field name="sequence">110</field>
            <field name="description">Discounted organizational membership for registered non-profit organizations.</field>
            <field name="min_age">0</field>
            <field name="max_age">0</field>
            <field name="requires_verification">True</field>
            <field name="auto_approve">False</field>
