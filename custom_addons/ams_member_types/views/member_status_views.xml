<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member Status Form View -->
    <record id="view_member_status_form" model="ir.ui.view">
        <field name="name">ams.member.status.form</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <form string="Member Status">
                <header>
                    <button name="action_view_members" type="object" string="View Members" class="oe_highlight" 
                            invisible="member_count == 0"/>
                    <button name="action_process_auto_transitions" type="object" string="Process Auto-transitions" 
                            class="oe_highlight" invisible="not auto_transition_days"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_members" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" placeholder="e.g., Active Member"/>
                        </h1>
                        <div class="oe_edit_only">
                            <label for="code"/>
                        </div>
                        <h3>
                            <field name="code" placeholder="e.g., ACTIVE"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Basic Properties">
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="description"/>
                        </group>
                        <group string="Status Classification">
                            <field name="is_active"/>
                            <field name="is_pending"/>
                            <field name="is_suspended"/>
                            <field name="is_terminated"/>
                            <field name="is_final_status"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Permissions" name="permissions">
                            <group>
                                <group string="Member Capabilities">
                                    <field name="can_renew"/>
                                    <field name="can_purchase"/>
                                    <field name="allows_portal_access"/>
                                </group>
                                <group string="Administrative">
                                    <field name="requires_approval"/>
                                </group>
                            </group>
                        </page>
                        <page string="Auto-transitions" name="transitions">
                            <group>
                                <group string="Automatic Transitions">
                                    <field name="auto_transition_days"/>
                                    <field name="next_status_id" 
                                           invisible="not auto_transition_days"
                                           domain="[('id', '!=', id)]"/>
                                </group>
                                <group>
                                    <div class="alert alert-info" invisible="not auto_transition_days or not next_status_id">
                                        <strong>Auto-transition Enabled:</strong><br/>
                                        Members will automatically transition from 
                                        <strong><field name="name" readonly="1" nolabel="1"/></strong> to 
                                        <strong><field name="next_status_id" readonly="1" nolabel="1"/></strong>
                                        after <strong><field name="auto_transition_days" readonly="1" nolabel="1"/></strong> days.
                                    </div>
                                    <div class="alert alert-warning" invisible="auto_transition_days == 0">
                                        <strong>No Auto-transition:</strong><br/>
                                        Members will remain in this status until manually changed.
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Member Status Tree View -->
    <record id="view_member_status_tree" model="ir.ui.view">
        <field name="name">ams.member.status.tree</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <tree string="Member Statuses" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="member_count"/>
                <field name="can_renew" widget="boolean_toggle"/>
                <field name="can_purchase" widget="boolean_toggle"/>
                <field name="allows_portal_access" widget="boolean_toggle"/>
                <field name="requires_approval" widget="boolean_toggle"/>
                <field name="auto_transition_days"/>
                <field name="next_status_id"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Member Status Kanban View -->
    <record id="view_member_status_kanban" model="ir.ui.view">
        <field name="name">ams.member.status.kanban</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_order="sequence">
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="is_active"/>
                <field name="is_pending"/>
                <field name="is_suspended"/>
                <field name="is_terminated"/>
                <field name="member_count"/>
                <field name="can_renew"/>
                <field name="can_purchase"/>
                <field name="auto_transition_days"/>
                <field name="next_status_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_color_#{record.color.raw_value}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                        <t t-if="record.code.raw_value">
                                            <small class="text-muted"> [<field name="code"/>]</small>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-6 o_kanban_primary_left">
                                            <button class="btn btn-primary" name="action_view_members" type="object">
                                                <field name="member_count"/> Members
                                            </button>
                                        </div>
                                        <div class="col-6 o_kanban_primary_right">
                                            <div class="mb4">
                                                <t t-if="record.is_active.raw_value">
                                                    <span class="badge badge-pill badge-success">Active</span>
                                                </t>
                                                <t t-if="record.is_pending.raw_value">
                                                    <span class="badge badge-pill badge-warning">Pending</span>
                                                </t>
                                                <t t-if="record.is_suspended.raw_value">
                                                    <span class="badge badge-pill badge-info">Suspended</span>
                                                </t>
                                                <t t-if="record.is_terminated.raw_value">
                                                    <span class="badge badge-pill badge-danger">Terminated</span>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-muted small">
                                                <t t-if="record.can_renew.raw_value">✓ Can Renew</t>
                                                <t t-if="record.can_purchase.raw_value">✓ Can Purchase</t>
                                            </div>
                                            <t t-if="record.auto_transition_days.raw_value">
                                                <div class="text-info small">
                                                    Auto-transition after <field name="auto_transition_days"/> days
                                                    <t t-if="record.next_status_id.raw_value">
                                                        → <field name="next_status_id"/>
                                                    </t>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Member Status Search View -->
    <record id="view_member_status_search" model="ir.ui.view">
        <field name="name">ams.member.status.search</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <search string="Member Statuses">
                <field name="name" string="Status Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                <field name="description"/>
                
                <filter string="Active Statuses" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Pending Statuses" name="pending" domain="[('is_pending', '=', True)]"/>
                <filter string="Suspended Statuses" name="suspended" domain="[('is_suspended', '=', True)]"/>
                <filter string="Terminated Statuses" name="terminated" domain="[('is_terminated', '=', True)]"/>
                <separator/>
                <filter string="Can Renew" name="can_renew" domain="[('can_renew', '=', True)]"/>
                <filter string="Can Purchase" name="can_purchase" domain="[('can_purchase', '=', True)]"/>
                <filter string="Portal Access" name="portal_access" domain="[('allows_portal_access', '=', True)]"/>
                <separator/>
                <filter string="Requires Approval" name="requires_approval" domain="[('requires_approval', '=', True)]"/>
                <filter string="Auto-transitions" name="auto_transitions" domain="[('auto_transition_days', '>', 0)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'is_active'}"/>
                    <filter string="Status Type" name="group_type" 
                            context="{'group_by': 'is_pending'}"/>
                    <filter string="Renewal Permission" name="group_renewal" 
                            context="{'group_by': 'can_renew'}"/>
                    <filter string="Auto-transition" name="group_auto_transition" 
                            context="{'group_by': 'auto_transition_days'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Status Action -->
    <record id="action_member_status" model="ir.actions.act_window">
        <field name="name">Member Statuses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ams.member.status</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first member status!
            </p>
            <p>
                Member statuses define the lifecycle states of your association members.
                Set up statuses like Active, Pending, Suspended, and Terminated with
                specific permissions and auto-transition rules.
            </p>
        </field>
    </record>

    <!-- Member Status Menu -->
    <menuitem id="menu_member_status"
              name="Member Statuses"
              parent="base.menu_administration"
              action="action_member_status"
              sequence="11"
              groups="base.group_system"/>
</odoo>