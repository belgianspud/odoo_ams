<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- =================================================================== -->
        <!-- AMS JOURNAL CONFIGURATION - Non-conflicting setup                  -->
        <!-- Journals are created programmatically to avoid conflicts           -->
        <!-- =================================================================== -->
        
        <!-- Journal Configuration Parameters -->
        <record id="ams_journal_config_ams_sales" model="ir.config_parameter">
            <field name="key">ams.journals.ams_sales.code</field>
            <field name="value">AMS</field>
        </record>
        
        <record id="ams_journal_config_ams_sales_name" model="ir.config_parameter">
            <field name="key">ams.journals.ams_sales.name</field>
            <field name="value">AMS Sales</field>
        </record>
        
        <record id="ams_journal_config_ams_sales_type" model="ir.config_parameter">
            <field name="key">ams.journals.ams_sales.type</field>
            <field name="value">sale</field>
        </record>
        
        <record id="ams_journal_config_revenue_recognition" model="ir.config_parameter">
            <field name="key">ams.journals.revenue_recognition.code</field>
            <field name="value">REVR</field>
        </record>
        
        <record id="ams_journal_config_revenue_recognition_name" model="ir.config_parameter">
            <field name="key">ams.journals.revenue_recognition.name</field>
            <field name="value">Revenue Recognition</field>
        </record>
        
        <record id="ams_journal_config_revenue_recognition_type" model="ir.config_parameter">
            <field name="key">ams.journals.revenue_recognition.type</field>
            <field name="value">general</field>
        </record>
        
        <record id="ams_journal_config_membership_payments" model="ir.config_parameter">
            <field name="key">ams.journals.membership_payments.code</field>
            <field name="value">MBPAY</field>
        </record>
        
        <record id="ams_journal_config_membership_payments_name" model="ir.config_parameter">
            <field name="key">ams.journals.membership_payments.name</field>
            <field name="value">Membership Payments</field>
        </record>
        
        <record id="ams_journal_config_membership_payments_type" model="ir.config_parameter">
            <field name="key">ams.journals.membership_payments.type</field>
            <field name="value">cash</field>
        </record>
        
        <!-- =================================================================== -->
        <!-- PAYMENT TERMS - Safe to create as they use names, not codes       -->
        <!-- =================================================================== -->
        
        <!-- Net 30 for Enterprise Memberships -->
        <record id="payment_term_enterprise_membership" model="account.payment.term">
            <field name="name">Enterprise Membership Net 30</field>
            <field name="note">Payment due within 30 days for enterprise memberships</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="payment_term_enterprise_membership_line" model="account.payment.term.line">
            <field name="payment_id" ref="payment_term_enterprise_membership"/>
            <field name="value">balance</field>
            <field name="value_amount">0</field>
            <field name="days">30</field>
            <field name="sequence">1</field>
        </record>
        
        <!-- Immediate Payment for Individual Memberships -->
        <record id="payment_term_individual_membership" model="account.payment.term">
            <field name="name">Individual Membership Due Immediately</field>
            <field name="note">Payment due immediately for individual memberships</field>
            <field name="sequence">5</field>
        </record>
        
        <record id="payment_term_individual_membership_line" model="account.payment.term.line">
            <field name="payment_id" ref="payment_term_individual_membership"/>
            <field name="value">balance</field>
            <field name="value_amount">0</field>
            <field name="days">0</field>
            <field name="sequence">1</field>
        </record>
        
        <!-- Net 15 for Event Registration -->
        <record id="payment_term_event_registration" model="account.payment.term">
            <field name="name">Event Registration Net 15</field>
            <field name="note">Payment due within 15 days for event registration</field>
            <field name="sequence">8</field>
        </record>
        
        <record id="payment_term_event_registration_line" model="account.payment.term.line">
            <field name="payment_id" ref="payment_term_event_registration"/>
            <field name="value">balance</field>
            <field name="value_amount">0</field>
            <field name="days">15</field>
            <field name="sequence">1</field>
        </record>
        
        <!-- =================================================================== -->
        <!-- DEFAULT PAYMENT TERMS CONFIGURATION                                -->
        <!-- =================================================================== -->
        
        <record id="default_enterprise_payment_term" model="ir.config_parameter">
            <field name="key">ams.default_payment_terms.enterprise</field>
            <field name="value">Enterprise Membership Net 30</field>
        </record>
        
        <record id="default_individual_payment_term" model="ir.config_parameter">
            <field name="key">ams.default_payment_terms.individual</field>
            <field name="value">Individual Membership Due Immediately</field>
        </record>
        
        <record id="default_event_payment_term" model="ir.config_parameter">
            <field name="key">ams.default_payment_terms.events</field>
            <field name="value">Event Registration Net 15</field>
        </record>
        
        <!-- =================================================================== -->
        <!-- JOURNAL SEQUENCE CONFIGURATION                                     -->
        <!-- =================================================================== -->
        
        <record id="ams_sequence_config_prefix" model="ir.config_parameter">
            <field name="key">ams.journal_sequences.prefix</field>
            <field name="value">AMS/%(year)s/</field>
        </record>
        
        <record id="ams_sequence_config_padding" model="ir.config_parameter">
            <field name="key">ams.journal_sequences.padding</field>
            <field name="value">4</field>
        </record>
        
        <record id="ams_sequence_config_increment" model="ir.config_parameter">
            <field name="key">ams.journal_sequences.increment</field>
            <field name="value">1</field>
        </record>
        
        <!-- =================================================================== -->
        <!-- CURRENCY CONFIGURATION                                             -->
        <!-- =================================================================== -->
        
        <record id="ams_default_currency" model="ir.config_parameter">
            <field name="key">ams.default_currency</field>
            <field name="value">USD</field>
        </record>
        
        <!-- =================================================================== -->
        <!-- JOURNAL CREATION FLAGS                                             -->
        <!-- =================================================================== -->
        
        <record id="ams_journals_creation_needed" model="ir.config_parameter">
            <field name="key">ams.setup.journals_creation_needed</field>
            <field name="value">true</field>
        </record>
        
    </data>
</odoo>