<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- =================================================================== -->
        <!-- AMS ACCOUNT CONFIGURATION ONLY - NO ACCOUNT CREATION              -->
        <!-- All accounts are created programmatically to avoid conflicts       -->
        <!-- =================================================================== -->
        
        <!-- Account Code Configuration -->
        <record id="config_individual_revenue_code" model="ir.config_parameter">
            <field name="key">ams.accounts.individual_revenue.code</field>
            <field name="value">4100</field>
        </record>
        
        <record id="config_enterprise_revenue_code" model="ir.config_parameter">
            <field name="key">ams.accounts.enterprise_revenue.code</field>
            <field name="value">4110</field>
        </record>
        
        <record id="config_publication_revenue_code" model="ir.config_parameter">
            <field name="key">ams.accounts.publication_revenue.code</field>
            <field name="value">4200</field>
        </record>
        
        <record id="config_chapter_revenue_code" model="ir.config_parameter">
            <field name="key">ams.accounts.chapter_revenue.code</field>
            <field name="value">4300</field>
        </record>
        
        <record id="config_receivables_code" model="ir.config_parameter">
            <field name="key">ams.accounts.receivables.code</field>
            <field name="value">1200</field>
        </record>
        
        <record id="config_deferred_revenue_code" model="ir.config_parameter">
            <field name="key">ams.accounts.deferred_revenue.code</field>
            <field name="value">2300</field>
        </record>
        
        <record id="config_cash_membership_code" model="ir.config_parameter">
            <field name="key">ams.accounts.cash_membership.code</field>
            <field name="value">1010</field>
        </record>
        
        <!-- Setup Flags -->
        <record id="ams_setup_needed" model="ir.config_parameter">
            <field name="key">ams.setup.needed</field>
            <field name="value">true</field>
        </record>
        
        <!-- Version Information -->
        <record id="ams_data_version" model="ir.config_parameter">
            <field name="key">ams.data.version</field>
            <field name="value">1.0.0</field>
        </record>
        
    </data>
</odoo>