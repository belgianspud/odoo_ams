<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Simple Dashboard Action - Just redirect to Financial Summary for now -->
    <record id="action_ams_financial_dashboard" model="ir.actions.act_window">
        <field name="name">AMS Financial Dashboard</field>
        <field name="res_model">ams.financial.summary</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="context">{'search_default_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to AMS Financial Dashboard!
            </p>
            <p>
                This dashboard provides an overview of your association's financial performance.
                Start by creating some financial transactions to see data here.
            </p>
        </field>
    </record>

</odoo>