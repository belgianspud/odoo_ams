<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View for Revenue Categories -->
    <record id="view_ams_revenue_category_list" model="ir.ui.view">
        <field name="name">ams.revenue.category.list</field>
        <field name="model">ams.revenue.category</field>
        <field name="arch" type="xml">
            <list string="Revenue Categories" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_type"/>
                <field name="current_year_revenue" sum="Total Revenue"/>
                <field name="budget_amount" sum="Total Budget"/>
                <field name="budget_percentage"/>
                <field name="transaction_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Form View for Revenue Categories -->
    <record id="view_ams_revenue_category_form" model="ir.ui.view">
        <field name="name">ams.revenue.category.form</field>
        <field name="model">ams.revenue.category</field>
        <field name="arch" type="xml">
            <form string="Revenue Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transactions" type="object" 
                                class="oe_stat_button" icon="fa-money">
                            <field name="transaction_count" widget="statinfo" 
                                   string="Transactions"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            invisible="active == True"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="code"/>
                            <field name="category_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group name="accounting">
                            <field name="income_account_id"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    
                    <group name="budget_info" string="Budget Information">
                        <group>
                            <field name="budget_amount"/>
                            <field name="current_year_revenue"/>
                        </group>
                        <group>
                            <field name="budget_variance"/>
                            <field name="budget_percentage"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe this revenue category..."/>
                        </page>
                        <!-- REMOVED: Transactions page since transaction_ids field doesn't exist -->
                        <!-- We can access transactions via the button in the button box instead -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View for Revenue Categories -->
    <record id="view_ams_revenue_category_search" model="ir.ui.view">
        <field name="name">ams.revenue.category.search</field>
        <field name="model">ams.revenue.category</field>
        <field name="arch" type="xml">
            <search string="Revenue Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="category_type"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="Membership" name="membership" domain="[('category_type','=','membership')]"/>
                <filter string="Events" name="events" domain="[('category_type','=','event')]"/>
                <filter string="Training" name="training" domain="[('category_type','=','training')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category Type" name="group_category_type" domain="[]" context="{'group_by':'category_type'}"/>
                    <filter string="Active Status" name="group_active" domain="[]" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action for Revenue Categories -->
    <record id="action_ams_revenue_category" model="ir.actions.act_window">
        <field name="name">Revenue Categories</field>
        <field name="res_model">ams.revenue.category</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ams_revenue_category_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first revenue category!
            </p>
            <p>
                Revenue categories help you organize and track different types of income for your association.
                Common categories include membership fees, event revenue, donations, and sponsorships.
            </p>
        </field>
    </record>

</odoo>