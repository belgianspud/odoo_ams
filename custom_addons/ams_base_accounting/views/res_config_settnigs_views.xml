<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ams" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ams</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Association Management" data-key="ams_base_accounting">
                    <h2>Association Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ams_auto_configure_products"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ams_auto_configure_products"/>
                                <div class="text-muted">
                                    Automatically configure financial accounts for new membership products
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="ams_member_numbering_prefix" string="Member ID Prefix"/>
                                <field name="ams_member_numbering_prefix"/>
                                <div class="text-muted">
                                    Prefix used for automatic member ID generation
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3>Default Accounts</h3>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="ams_default_revenue_account_id"/>
                                <field name="ams_default_revenue_account_id"/>
                                <div class="text-muted">
                                    Default revenue account for membership products
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="ams_default_receivable_account_id"/>
                                <field name="ams_default_receivable_account_id"/>
                                <div class="text-muted">
                                    Default receivable account for members
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>