              web_icon="ams_accounting,static/description/icon.png"
              sequence="12"/>
    
    <!-- Dashboard -->
    <menuitem id="menu_ams_accounting_dashboard"
              name="Dashboard"
              parent="menu_ams_accounting_root"
              action="action_ams_financial_dashboard"
              sequence="5"/>
    
    <!-- Revenue Management -->
    <menuitem id="menu_ams_revenue_management"
              name="Revenue Management"
              parent="menu_ams_accounting_root"
              sequence="10"/>
    
    <menuitem id="menu_ams_revenue_categories"
              name="Revenue Categories"
              parent="menu_ams_revenue_management"
              action="action_ams_revenue_category"
              sequence="10"/>
    
    <menuitem id="menu_ams_financial_transactions"
              name="Financial Transactions"
              parent="menu_ams_revenue_management"
              action="action_ams_financial_transaction"
              sequence="20"/>
    
