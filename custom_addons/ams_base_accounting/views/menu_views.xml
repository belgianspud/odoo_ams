    <menuitem id="menu_ams_chapter_financial_analysis"
              name="Chapter Financial Analysis"
              parent="menu_ams_financial_analysis"
              action="action_chapter_financial_analysis"
              sequence="30"/>
    
    <!-- Reporting -->
    <menuitem id="menu_ams_financial_reports"
              name="Reports"
              parent="menu_ams_accounting_root"
              sequence="30"/>
    
    <menuitem id="menu_ams_board_reports"
              name="Board Reports"
              parent="menu_ams_financial_reports"
              action="action_board_financial_reports"
              sequence="10"/>
    
    <!-- Configuration -->
    <menuitem id="menu_ams_accounting_config"
              name="Configuration"
              parent="menu_ams_accounting_root"
              sequence="90"/>
    
</odoo>