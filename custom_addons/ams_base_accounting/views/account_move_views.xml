                <field name="is_ams_line" string="ğŸ¯ Association" optional="hide"
                       widget="boolean_toggle"
                       help="This line is for an association product"/>
                <field name="ams_product_type" string="ğŸ’ Product Type" optional="hide"
                       help="Type of association product"/>
            </xpath>
        </field>
    </record>

    <!-- User-Friendly Invoice Actions -->
    
