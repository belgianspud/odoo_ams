<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View for Financial Transactions -->
    <record id="view_ams_financial_transaction_tree" model="ir.ui.view">
        <field name="name">ams.financial.transaction.tree</field>
        <field name="model">ams.financial.transaction</field>
        <field name="arch" type="xml">
            <tree string="Financial Transactions" decoration-muted="state=='cancelled'" 
                  decoration-success="state=='reconciled'" decoration-info="state=='confirmed'">
                <field name="date"/>
                <field name="name"/>
                <field name="transaction_type"/>
                <field name="partner_id"/>
                <field name="revenue_category_id"/>
                <field name="chapter_id"/>
                <field name="amount" sum="Total"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View for Financial Transactions -->
    <record id="view_ams_financial_transaction_form" model="ir.ui.view">
        <field name="name">ams.financial.transaction.form</field>
        <field name="model">ams.financial.transaction</field>
        <field name="arch" type="xml">
            <form string="Financial Transaction">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_reconcile" type="object" string="Reconcile" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'reconciled'])]}"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,reconciled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Transaction Description"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="transaction_info">
                            <field name="date"/>
                            <field name="transaction_type"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </group>
                        <group name="categorization">
                            <field name="revenue_category_id" 
                                   attrs="{'invisible': [('transaction_type', '!=', 'income')], 
                                          'required': [('transaction_type', '=', 'income')]}"/>
                            <field name="partner_id"/>
                            <field name="chapter_id"/>
                        </group>
                    </group>
                    
                    <group name="related_records" string="Related Records">
                        <group>
                            <field name="invoice_id"/>
                            <field name="subscription_id"/>
                        </group>
                        <group>
                            <field name="reference"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes about this transaction..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View for Financial Transactions -->
    <record id="view_ams_financial_transaction_search" model="ir.ui.view">
        <field name="name">ams.financial.transaction.search</field>
        <field name="model">ams.financial.transaction</field>
        <field name="arch" type="xml">
            <search string="Financial Transactions">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="revenue_category_id"/>
                <field name="chapter_id"/>
                <field name="reference"/>
                <separator/>
                <filter string="Income" name="income" domain="[('transaction_type','=','income')]"/>
                <filter string="Expense" name="expense" domain="[('transaction_type','=','expense')]"/>
                <filter string="Transfer" name="transfer" domain="[('transaction_type','=','transfer')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Reconciled" name="reconciled" domain="[('state','=','reconciled')]"/>
                <separator/>
                <filter string="Current Year" name="current_year" 
                        domain="[('date','&gt;=',datetime.datetime.now().strftime('%Y-01-01')),
                                ('date','&lt;=',datetime.datetime.now().strftime('%Y-12-31'))]"/>
                <filter string="Current Month" name="current_month" 
                        domain="[('date','&gt;=',datetime.datetime.now().strftime('%Y-%m-01')),
                                ('date','&lt;=',(datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Transaction Type" name="group_type" domain="[]" context="{'group_by':'transaction_type'}"/>
                    <filter string="Revenue Category" name="group_category" domain="[]" context="{'group_by':'revenue_category_id'}"/>
                    <filter string="Chapter" name="group_chapter" domain="[]" context="{'group_by':'chapter_id'}"/>
                    <filter string="State" name="group_state" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_date" domain="[]" context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action for Financial Transactions -->
    <record id="action_ams_financial_transaction" model="ir.actions.act_window">
        <field name="name">Financial Transactions</field>
        <field name="res_model">ams.financial.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ams_financial_transaction_search"/>
        <field name="context">{'search_default_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record your first financial transaction!
            </p>
            <p>
                Financial transactions help you track all income and expenses for your association.
                They can be automatically created from invoices or manually entered.
            </p>
        </field>
    </record>

</odoo>