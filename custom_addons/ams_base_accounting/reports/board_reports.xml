<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Simple Board Financial Report Action -->
    <record id="action_board_financial_reports" model="ir.actions.act_window">
        <field name="name">Board Financial Reports</field>
        <field name="res_model">ams.financial.summary</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="context">{
            'search_default_current_year': 1,
            'group_by': ['period_quarter'],
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Board-level financial reports will appear here!
            </p>
            <p>
                These reports provide high-level financial summaries suitable for board meetings
                and executive decision making.
            </p>
        </field>
    </record>

</odoo>