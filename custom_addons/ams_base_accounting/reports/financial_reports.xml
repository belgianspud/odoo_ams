<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ==============================================
         AMS FINANCIAL REPORTS
         ============================================== -->
    
    <!-- ==============================================
         REPORT TEMPLATES
         ============================================== -->
    
    <!-- Revenue Recognition Report Template -->
    <template id="report_revenue_recognition_document" name="Revenue Recognition Report">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div class="oe_structure"/>
                
                <h2>Revenue Recognition Report</h2>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Report Period:</strong>
                        <span t-esc="period_start"/> to <span t-esc="period_end"/>
                    </div>
                    <div class="col-6">
                        <strong>Generated:</strong>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>
                </div>
                
                <!-- Summary Section -->
                <h3>Summary</h3>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Total Revenue Recognized:</strong></td>
                        <td class="text-right">
                            <span t-esc="total_recognized" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total Deferred Revenue:</strong></td>
                        <td class="text-right">
                            <span t-esc="total_deferred" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Recognition Entries:</strong></td>
                        <td class="text-right"><span t-esc="entry_count"/></td>
                    </tr>
                </table>
                
                <!-- Detailed Entries -->
                <h3>Revenue Recognition Entries</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Subscription</th>
                            <th>Customer</th>
                            <th>Period</th>
                            <th class="text-right">Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="recognition_entries" t-as="entry">
                            <tr>
                                <td><span t-esc="entry.recognition_date"/></td>
                                <td><span t-esc="entry.subscription_id.name"/></td>
                                <td><span t-esc="entry.partner_id.name"/></td>
                                <td>
                                    <span t-esc="entry.period_start"/> - <span t-esc="entry.period_end"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="entry.recognition_amount" t-options="{'widget': 'monetary', 'display_currency': entry.company_id.currency_id}"/>
                                </td>
                                <td>
                                    <span t-if="entry.state == 'posted'" class="badge badge-success">Posted</span>
                                    <span t-if="entry.state == 'confirmed'" class="badge badge-info">Confirmed</span>
                                    <span t-if="entry.state == 'draft'" class="badge badge-secondary">Draft</span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <!-- Subscription Financial Summary Template -->
    <template id="report_subscription_financial_summary_document" name="Subscription Financial Summary">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                
                <h2>Subscription Financial Summary</h2>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>Subscription:</strong> <span t-esc="doc.name"/>
                    </div>
                    <div class="col-6">
                        <strong>Customer:</strong> <span t-esc="doc.partner_id.name"/>
                    </div>
                </div>
                
                <div class="row mb32">
                    <div class="col-6">
                        <strong>Product:</strong> <span t-esc="doc.product_id.name"/>
                    </div>
                    <div class="col-6">
                        <strong>Period:</strong> <span t-esc="doc.subscription_period"/>
                    </div>
                </div>
                
                <!-- Financial Overview -->
                <h3>Financial Overview</h3>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Total Contract Value:</strong></td>
                        <td class="text-right">
                            <span t-esc="doc.total_invoiced_amount" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Revenue Recognized:</strong></td>
                        <td class="text-right">
                            <span t-esc="doc.total_recognized_revenue" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Deferred Revenue Balance:</strong></td>
                        <td class="text-right">
                            <span t-esc="doc.deferred_revenue_balance" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                        </td>
                    </tr>
                    <tr class="table-active">
                        <td><strong>Recognition Percentage:</strong></td>
                        <td class="text-right">
                            <span t-esc="doc.recognition_percentage" t-options="{'widget': 'percentage'}"/>
                        </td>
                    </tr>
                </table>
                
                <!-- Recognition Schedule -->
                <h3>Revenue Recognition Schedule</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Recognition Date</th>
                            <th>Period Start</th>
                            <th>Period End</th>
                            <th class="text-right">Amount</th>
                            <th>Status</th>
                            <th>Journal Entry</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.revenue_recognition_ids" t-as="recognition">
                            <tr>
                                <td><span t-esc="recognition.recognition_date"/></td>
                                <td><span t-esc="recognition.period_start"/></td>
                                <td><span t-esc="recognition.period_end"/></td>
                                <td class="text-right">
                                    <span t-esc="recognition.recognition_amount" t-options="{'widget': 'monetary', 'display_currency': recognition.company_id.currency_id}"/>
                                </td>
                                <td>
                                    <span t-if="recognition.state == 'posted'" class="badge badge-success">Posted</span>
                                    <span t-if="recognition.state == 'confirmed'" class="badge badge-info">Confirmed</span>
                                    <span t-if="recognition.state == 'draft'" class="badge badge-secondary">Draft</span>
                                </td>
                                <td>
                                    <span t-if="recognition.move_id" t-esc="recognition.move_id.name"/>
                                    <span t-if="not recognition.move_id" class="text-muted">-</span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Journal Entries -->
                <h3>Related Journal Entries</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Entry</th>
                            <th>Journal</th>
                            <th>Reference</th>
                            <th class="text-right">Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.journal_entry_ids" t-as="entry">
                            <tr>
                                <td><span t-esc="entry.date"/></td>
                                <td><span t-esc="entry.name"/></td>
                                <td><span t-esc="entry.journal_id.name"/></td>
                                <td><span t-esc="entry.ref or '-'"/></td>
                                <td class="text-right">
                                    <span t-esc="entry.amount_total" t-options="{'widget': 'monetary', 'display_currency': entry.company_id.currency_id}"/>
                                </td>
                                <td>
                                    <span t-if="entry.state == 'posted'" class="badge badge-success">Posted</span>
                                    <span t-if="entry.state == 'draft'" class="badge badge-secondary">Draft</span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <!-- Chart of Accounts Report Template -->
