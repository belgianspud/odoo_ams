                            <th>Account Name</th>
                            <th>Type</th>
                            <th>AMS Category</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="asset_accounts" t-as="account">
                            <tr>
                                <td><span t-esc="account.code"/></td>
                                <td><span t-esc="account.name"/></td>
                                <td><span t-esc="account.account_type"/></td>
                                <td><span t-esc="account.ams_category"/></td>
                                <td class="text-right">
                                    <span t-esc="account.balance" t-options="{'widget': 'monetary', 'display_currency': account.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Liabilities -->
                <h3>Liabilities</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Account Name</th>
                            <th>Type</th>
                            <th>AMS Category</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="liability_accounts" t-as="account">
                            <tr>
                                <td><span t-esc="account.code"/></td>
                                <td><span t-esc="account.name"/></td>
                                <td><span t-esc="account.account_type"/></td>
                                <td><span t-esc="account.ams_category"/></td>
                                <td class="text-right">
                                    <span t-esc="account.balance" t-options="{'widget': 'monetary', 'display_currency': account.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Equity -->
                <h3>Equity</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Account Name</th>
                            <th>Type</th>
                            <th>AMS Category</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="equity_accounts" t-as="account">
                            <tr>
                                <td><span t-esc="account.code"/></td>
                                <td><span t-esc="account.name"/></td>
                                <td><span t-esc="account.account_type"/></td>
                                <td><span t-esc="account.ams_category"/></td>
                                <td class="text-right">
                                    <span t-esc="account.balance" t-options="{'widget': 'monetary', 'display_currency': account.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Income -->
                <h3>Income</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Account Name</th>
                            <th>Type</th>
                            <th>AMS Category</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="income_accounts" t-as="account">
                            <tr>
                                <td><span t-esc="account.code"/></td>
                                <td><span t-esc="account.name"/></td>
                                <td><span t-esc="account.account_type"/></td>
                                <td><span t-esc="account.ams_category"/></td>
                                <td class="text-right">
                                    <span t-esc="account.balance" t-options="{'widget': 'monetary', 'display_currency': account.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Expenses -->
                <h3>Expenses</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Account Name</th>
                            <th>Type</th>
                            <th>AMS Category</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="expense_accounts" t-as="account">
                            <tr>
                                <td><span t-esc="account.code"/></td>
                                <td><span t-esc="account.name"/></td>
                                <td><span t-esc="account.account_type"/></td>
                                <td><span t-esc="account.ams_category"/></td>
                                <td class="text-right">
                                    <span t-esc="account.balance" t-options="{'widget': 'monetary', 'display_currency': account.company_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <!-- Deferred Revenue Report Template -->
    <template id="report_deferred_revenue_document" name="Deferred Revenue Report">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                
                <h2>Deferred Revenue Report</h2>
                
                <div class="row mt32 mb32">
                    <div class="col-6">
                        <strong>As of Date:</strong> <span t-esc="as_of_date"/>
                    </div>
                    <div class="col-6">
                        <strong>Total Deferred Revenue:</strong>
                        <span t-esc="total_deferred_revenue" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                    </div>
                </div>
                
                <!-- Summary by Product Type -->
                <h3>Summary by Product Type</h3>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product Type</th>
                            <th class="text-right">Number of Subscriptions</th>
                            <th class="text-right">Deferred Revenue</th>
                            <th class="text-right">Percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="deferred_summary" t-as="summary">
                            <tr>
                                <td><span t-esc="summary['product_type']"/></td>
                                <td class="text-right"><span t-esc="summary['subscription_count']"/></td>
                                <td class="text-right">
                                    <span t-esc="summary['deferred_amount']" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="summary['percentage']" t-options="{'widget': 'percentage'}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <!-- Detailed Deferred Revenue -->
                <h3>Detailed Deferred Revenue</h3>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Subscription</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th class="text-right">Total Value</th>
                            <th class="text-right">Recognized</th>
                            <th class="text-right">Deferred</th>
                            <th class="text-right">%</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="deferred_subscriptions" t-as="subscription">
                            <tr>
                                <td><span t-esc="subscription.name"/></td>
                                <td><span t-esc="subscription.partner_id.name"/></td>
                                <td><span t-esc="subscription.product_id.name"/></td>
                                <td><span t-esc="subscription.start_date"/></td>
                                <td><span t-esc="subscription.paid_through_date"/></td>
                                <td class="text-right">
                                    <span t-esc="subscription.total_invoiced_amount" t-options="{'widget': 'monetary', 'display_currency': subscription.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="subscription.total_recognized_revenue" t-options="{'widget': 'monetary', 'display_currency': subscription.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="subscription.deferred_revenue_balance" t-options="{'widget': 'monetary', 'display_currency': subscription.company_id.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="subscription.recognition_percentage" t-options="{'widget': 'percentage'}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <!-- ==============================================
         REPORT DEFINITIONS
         ============================================== -->
    
    <!-- Revenue Recognition Report -->
    <record id="report_revenue_recognition" model="ir.actions.report">
        <field name="name">Revenue Recognition Report</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ams_base_accounting.report_revenue_recognition_document</field>
        <field name="report_file">ams_base_accounting.report_revenue_recognition_document</field>
        <field name="binding_model_id" ref="model_ams_revenue_recognition"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- Subscription Financial Summary Report -->
    <record id="report_subscription_financial_summary" model="ir.actions.report">
        <field name="name">Subscription Financial Summary</field>
        <field name="model">ams.subscription</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ams_base_accounting.report_subscription_financial_summary_document</field>
        <field name="report_file">ams_base_accounting.report_subscription_financial_summary_document</field>
        <field name="binding_model_id" ref="ams_subscriptions.model_ams_subscription"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- Chart of Accounts Report -->
    <record id="report_chart_of_accounts" model="ir.actions.report">
        <field name="name">Chart of Accounts</field>
        <field name="model">ams.account.account</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ams_base_accounting.report_chart_of_accounts_document</field>
        <field name="report_file">ams_base_accounting.report_chart_of_accounts_document</field>
        <field name="binding_model_id" ref="model_ams_account_account"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- Deferred Revenue Report -->
    <record id="report_deferred_revenue" model="ir.actions.report">
        <field name="name">Deferred Revenue Report</field>
        <field name="model">ams.subscription</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ams_base_accounting.report_deferred_revenue_document</field>
        <field name="report_file">ams_base_accounting.report_deferred_revenue_document</field>
        <field name="binding_model_id" ref="ams_subscriptions.model_ams_subscription"/>
        <field name="binding_type">report</field>
    </record>
    
    <!-- ==============================================
         REPORT ACTIONS FOR MENUS
         ============================================== -->
    
    <!-- Monthly Revenue Recognition Report Action -->
    <record id="action_monthly_revenue_recognition_report" model="ir.actions.act_window">
        <field name="name">Monthly Revenue Recognition Report</field>
        <field name="res_model">ams.revenue.recognition.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_report_type': 'monthly',
            'default_period_start': context_today().strftime('%Y-%m-01'),
            'default_period_end': (context_today().replace(day=1) + relativedelta(months=1) - relativedelta(days=1)).strftime('%Y-%m-%d')
        }</field>
    </record>
    
    <!-- Annual Financial Summary Action -->
    <record id="action_annual_financial_summary" model="ir.actions.act_window">
        <field name="name">Annual Financial Summary</field>
        <field name="res_model">ams.financial.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_report_type': 'annual',
            'default_year': context_today().year
        }</field>
    </record>
    
    <!-- Subscription Aging Report Action -->
    <record id="action_subscription_aging_report" model="ir.actions.act_window">
        <field name="name">Subscription Aging Report</field>
        <field name="res_model">ams.subscription.aging.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_as_of_date': context_today()
        }</field>
    </record>
    
    <!-- ==============================================
         DASHBOARD REPORT WIDGETS
         ============================================== -->
    
    <!-- Revenue Recognition Dashboard Widget -->
    <template id="revenue_recognition_dashboard_widget" name="Revenue Recognition Widget">
        <div class="o_kanban_card o_dashboard_revenue_recognition">
            <div class="o_kanban_card_header">
                <div class="o_kanban_card_header_title">
                    <div class="o_primary">Revenue Recognition</div>
                    <div class="o_secondary">This Month</div>
                </div>
            </div>
            <div class="container o_kanban_card_content">
                <div class="row">
                    <div class="col-6 o_kanban_primary_left">
                        <button class="btn btn-primary" name="action_view_monthly_recognition" type="object">
                            <span t-esc="monthly_recognition_amount" t-options="{'widget': 'monetary'}"/>
                        </button>
                        <span class="text-muted">This Month</span>
                    </div>
                    <div class="col-6 o_kanban_primary_right">
                        <button class="btn btn-secondary" name="action_view_pending_recognition" type="object">
                            <span t-esc="pending_recognition_count"/>
                        </button>
                        <span class="text-muted">Pending</span>
                    </div>
                </div>
            </div>
        </div>
    </template>
    
    <!-- Deferred Revenue Dashboard Widget -->
    <template id="deferred_revenue_dashboard_widget" name="Deferred Revenue Widget">
        <div class="o_kanban_card o_dashboard_deferred_revenue">
            <div class="o_kanban_card_header">
                <div class="o_kanban_card_header_title">
                    <div class="o_primary">Deferred Revenue</div>
                    <div class="o_secondary">Current Balance</div>
                </div>
            </div>
            <div class="container o_kanban_card_content">
                <div class="row">
                    <div class="col-12">
                        <button class="btn btn-primary btn-block" name="action_view_deferred_revenue_detail" type="object">
                            <span t-esc="total_deferred_revenue" t-options="{'widget': 'monetary'}"/>
                        </button>
                        <div class="mt-2">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" 
                                     t-attf-style="width: #{deferred_revenue_percentage}%"
                                     t-attf-aria-valuenow="#{deferred_revenue_percentage}" 
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">vs Total Contract Value</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
    
    <!-- Subscription Health Dashboard Widget -->
    <template id="subscription_health_dashboard_widget" name="Subscription Health Widget">
        <div class="o_kanban_card o_dashboard_subscription_health">
            <div class="o_kanban_card_header">
                <div class="o_kanban_card_header_title">
                    <div class="o_primary">Subscription Health</div>
                    <div class="o_secondary">Accounting Status</div>
                </div>
            </div>
