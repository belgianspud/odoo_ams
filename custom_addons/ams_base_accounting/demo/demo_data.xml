<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Partners (Chapters) -->
        <record id="demo_chapter_north" model="res.partner">
            <field name="name">Northern Chapter</field>
            <field name="is_company" eval="True"/>
            <field name="is_chapter" eval="True"/>
            <field name="email">north@example.com</field>
        </record>
        
        <record id="demo_chapter_south" model="res.partner">
            <field name="name">Southern Chapter</field>
            <field name="is_company" eval="True"/>
            <field name="is_chapter" eval="True"/>
            <field name="email">south@example.com</field>
        </record>
        
        <!-- Demo Members -->
        <record id="demo_member_1" model="res.partner">
            <field name="name">John Doe</field>
            <field name="is_company" eval="False"/>
            <field name="email">john.doe@example.com</field>
        </record>
        
        <record id="demo_member_2" model="res.partner">
            <field name="name">Jane Smith</field>
            <field name="is_company" eval="False"/>
            <field name="email">jane.smith@example.com</field>
        </record>
        
        <!-- Demo Financial Transactions -->
        <record id="demo_transaction_1" model="ams.financial.transaction">
            <field name="name">Membership Fee - John Doe</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="amount">100.00</field>
            <field name="transaction_type">income</field>
            <field name="revenue_category_id" ref="ams_base_accounting.revenue_category_membership"/>
            <field name="partner_id" ref="demo_member_1"/>
            <field name="chapter_id" ref="demo_chapter_north"/>
            <field name="state">confirmed</field>
        </record>
        
        <record id="demo_transaction_2" model="ams.financial.transaction">
            <field name="name">Conference Registration - Jane Smith</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=15)).strftime('%Y-%m-%d')"/>
            <field name="amount">250.00</field>
            <field name="transaction_type">income</field>
            <field name="revenue_category_id" ref="ams_base_accounting.revenue_category_events"/>
            <field name="partner_id" ref="demo_member_2"/>
            <field name="chapter_id" ref="demo_chapter_south"/>
            <field name="state">confirmed</field>
        </record>
        
        <record id="demo_transaction_3" model="ams.financial.transaction">
            <field name="name">Training Course - John Doe</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=7)).strftime('%Y-%m-%d')"/>
            <field name="amount">150.00</field>
            <field name="transaction_type">income</field>
            <field name="revenue_category_id" ref="ams_base_accounting.revenue_category_training"/>
            <field name="partner_id" ref="demo_member_1"/>
            <field name="chapter_id" ref="demo_chapter_north"/>
            <field name="state">confirmed</field>
        </record>
        
        <record id="demo_transaction_4" model="ams.financial.transaction">
            <field name="name">Corporate Sponsorship</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=45)).strftime('%Y-%m-%d')"/>
            <field name="amount">500.00</field>
            <field name="transaction_type">income</field>
            <field name="revenue_category_id" ref="ams_base_accounting.revenue_category_sponsorship"/>
            <field name="chapter_id" ref="demo_chapter_north"/>
            <field name="state">confirmed</field>
        </record>
        
        <record id="demo_transaction_5" model="ams.financial.transaction">
            <field name="name">Member Donation</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=20)).strftime('%Y-%m-%d')"/>
            <field name="amount">75.00</field>
            <field name="transaction_type">income</field>
            <field name="revenue_category_id" ref="ams_base_accounting.revenue_category_donations"/>
            <field name="partner_id" ref="demo_member_2"/>
            <field name="chapter_id" ref="demo_chapter_south"/>
            <field name="state">confirmed</field>
        </record>
        
    </data>
</odoo>