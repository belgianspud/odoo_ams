<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- AMS Financial Management Security Groups -->
    <record id="category_ams_financial" model="ir.module.category">
        <field name="name">Association Financial Management</field>
        <field name="description">Manage access to association financial features and data</field>
        <field name="sequence">15</field>
    </record>

    <!-- AMS Financial User Group -->
    <record id="group_ams_financial_user" model="res.groups">
        <field name="name">AMS Financial User</field>
        <field name="category_id" ref="category_ams_financial"/>
        <field name="comment">Association financial staff who process member invoices, payments, and basic financial operations</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- AMS Financial Manager Group -->
    <record id="group_ams_financial_manager" model="res.groups">
        <field name="name">AMS Financial Manager</field>
        <field name="category_id" ref="category_ams_financial"/>
        <field name="comment">Association financial managers who configure accounts, run setup wizards, and manage financial settings</field>
        <field name="implied_ids" eval="[(4, ref('group_ams_financial_user')), (4, ref('account.group_account_user'))]"/>
    </record>

    <!-- AMS Financial Administrator Group -->
    <record id="group_ams_financial_admin" model="res.groups">
        <field name="name">AMS Financial Administrator</field>
        <field name="category_id" ref="category_ams_financial"/>
        <field name="comment">Full access to all association financial features, system configuration, and security settings</field>
        <field name="implied_ids" eval="[(4, ref('group_ams_financial_manager')), (4, ref('account.group_account_manager'))]"/>
    </record>

    <!-- Record Rules for Data Security -->
    
    <!-- Member Invoice Access Rule -->
    <record id="rule_account_move_ams_member_invoices" model="ir.rule">
        <field name="name">AMS Member Invoices Access</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ['out_invoice', 'out_refund'])]</field>
        <field name="groups" eval="[(4, ref('group_ams_financial_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Member Payment Access Rule -->
    <record id="rule_account_payment_ams_member_payments" model="ir.rule">
        <field name="name">AMS Member Payments Access</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('partner_type', '=', 'customer')]</field>
        <field name="groups" eval="[(4, ref('group_ams_financial_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- AMS Account Configuration Access -->
    <record id="rule_account_account_ams_configuration" model="ir.rule">
        <field name="name">AMS Account Configuration Access</field>
        <field name="model_id" ref="account.model_account_account"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ams_financial_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Setup Wizard Access Rule -->
    <record id="rule_ams_setup_wizard_access" model="ir.rule">
        <field name="name">AMS Setup Wizard Manager Access</field>
        <field name="model_id" ref="model_ams_accounting_setup_wizard"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ams_financial_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>