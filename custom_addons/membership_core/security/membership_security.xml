<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- User Groups -->
        <record id="group_membership_user" model="res.groups">
            <field name="name">Membership User</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Can view and manage individual memberships, cannot configure membership types</field>
        </record>
        
        <record id="group_membership_manager" model="res.groups">
            <field name="name">Membership Manager</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_user'))]"/>
            <field name="comment">Full membership access including configuration, types, and reporting</field>
        </record>
        
        <!-- Record Access Rules for Membership Types -->
        <record id="membership_type_user_rule" model="ir.rule">
            <field name="name">Membership Type: User Access</field>
            <field name="model_id" ref="model_membership_type"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="membership_type_manager_rule" model="ir.rule">
            <field name="name">Membership Type: Manager Access</field>
            <field name="model_id" ref="model_membership_type"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Record Access Rules for Membership Records -->
        <record id="membership_membership_user_rule" model="ir.rule">
            <field name="name">Membership: User Access</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="membership_membership_manager_rule" model="ir.rule">
            <field name="name">Membership: Manager Full Access</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Portal User Access Rules (for future portal module) -->
        <record id="membership_membership_portal_rule" model="ir.rule">
            <field name="name">Membership: Portal User Own Records</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Public Access Rules for Membership Types (read-only for portal/website) -->
        <record id="membership_type_public_rule" model="ir.rule">
            <field name="name">Membership Type: Public Read Access</field>
            <field name="model_id" ref="model_membership_type"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Multi-company rules -->
        <record id="membership_type_company_rule" model="ir.rule">
            <field name="name">Membership Type: Multi-company Rule</field>
            <field name="model_id" ref="model_membership_type"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="membership_membership_company_rule" model="ir.rule">
            <field name="name">Membership: Multi-company Rule</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
    </data>
</odoo>