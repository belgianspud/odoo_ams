<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Membership Number Sequence -->
        <record id="seq_membership_membership" model="ir.sequence">
            <field name="name">Membership Number</field>
            <field name="code">membership.membership</field>
            <field name="prefix">MEM</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="use_date_range" eval="False"/>
        </record>
        
        <!-- Membership Type Code Sequence (Optional - for auto-generating type codes) -->
        <record id="seq_membership_type_code" model="ir.sequence">
            <field name="name">Membership Type Code</field>
            <field name="code">membership.type.code</field>
            <field name="prefix">MT</field>
            <field name="suffix"></field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="use_date_range" eval="False"/>
        </record>
        
        <!-- Annual Membership Number Sequence (with year prefix) -->
        <record id="seq_membership_membership_yearly" model="ir.sequence">
            <field name="name">Annual Membership Number</field>
            <field name="code">membership.membership.yearly</field>
            <field name="prefix">%(year)s-MEM</field>
            <field name="suffix"></field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="use_date_range" eval="True"/>
        </record>
        
        <!-- Date ranges for yearly sequence -->
        <record id="seq_membership_yearly_2024" model="ir.sequence.date_range">
            <field name="sequence_id" ref="seq_membership_membership_yearly"/>
            <field name="date_from">2024-01-01</field>
            <field name="date_to">2024-12-31</field>
            <field name="number_next">1</field>
        </record>
        
        <record id="seq_membership_yearly_2025" model="ir.sequence.date_range">
            <field name="sequence_id" ref="seq_membership_membership_yearly"/>
            <field name="date_from">2025-01-01</field>
            <field name="date_to">2025-12-31</field>
            <field name="number_next">1</field>
        </record>
        
        <!-- Organization Membership Sequence -->
        <record id="seq_membership_organization" model="ir.sequence">
            <field name="name">Organization Membership Number</field>
            <field name="code">membership.membership.organization</field>
            <field name="prefix">ORG</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="use_date_range" eval="False"/>
        </record>
        
        <!-- Chapter Membership Sequence -->
        <record id="seq_membership_chapter" model="ir.sequence">
            <field name="name">Chapter Membership Number</field>
            <field name="code">membership.membership.chapter</field>
            <field name="prefix">CHT</field>
            <field name="suffix"></field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            <field name="use_date_range" eval="False"/>
        </record>
        
    </data>
</odoo>