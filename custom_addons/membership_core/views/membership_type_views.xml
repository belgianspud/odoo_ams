<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Membership Type Form View -->
    <record id="membership_type_form_view" model="ir.ui.view">
        <field name="name">membership.type.form</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <form string="Membership Type">
                <header>
                    <button name="action_view_memberships" 
                            type="object" 
                            string="View Memberships" 
                            class="oe_highlight"
                            attrs="{'invisible': [('membership_count', '=', 0)]}"/>
                    <button name="create_default_email_templates"
                            type="object"
                            string="Create Email Templates"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_memberships"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="membership_count" widget="statinfo" string="Active Memberships"/>
                        </button>
                        <button name="%(action_membership_revenue_report)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-money"
                                attrs="{'invisible': [('total_revenue', '=', 0)]}">
                            <field name="total_revenue" widget="statinfo" string="Total Revenue"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Membership Type Name"/></h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="code"/>
                            <field name="membership_category"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="creates_membership"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="pricing" string="Pricing">
                            <field name="price"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="duration" string="Duration Settings">
                            <field name="duration" attrs="{'readonly': [('is_lifetime', '=', True)]}"/>
                            <field name="is_lifetime" readonly="1"/>
                            <field name="auto_renewal"/>
                        </group>
                        <group name="lifecycle" string="Lifecycle Management">
                            <field name="grace_period"/>
                            <field name="suspend_period"/>
                            <field name="terminate_period"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1"/>
                        </page>
                        
                        <page string="Email Templates" name="email_templates">
                            <group>
                                <group>
                                    <field name="welcome_template_id"/>
                                    <field name="renewal_template_id"/>
                                </group>
                                <group>
                                    <field name="expiry_template_id"/>
                                    <field name="cancellation_template_id"/>
                                </group>
                            </group>
                            <div class="oe_clear"/>
                            <div class="alert alert-info" role="alert">
                                <strong>Note:</strong> Email templates are automatically sent during membership lifecycle events. 
                                You can customize these templates or create new ones using the email template configuration.
                            </div>
                        </page>
                        
                        <page string="Statistics" name="statistics">
                            <group>
                                <group string="Membership Statistics">
                                    <field name="membership_count" readonly="1"/>
                                    <field name="total_revenue" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Membership Type Tree View -->
    <record id="membership_type_tree_view" model="ir.ui.view">
        <field name="name">membership.type.tree</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <tree string="Membership Types" decoration-muted="not active" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="membership_category"/>
                <field name="price" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="duration"/>
                <field name="is_lifetime"/>
                <field name="membership_count"/>
                <field name="total_revenue" widget="monetary" optional="hide"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Membership Type Kanban View -->
    <record id="membership_type_kanban_view" model="ir.ui.view">
        <field name="name">membership.type.kanban</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="membership_category"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="duration"/>
                <field name="is_lifetime"/>
                <field name="membership_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{!record.active.raw_value ? 'o_kanban_muted' : ''}">
                            <div class="o_kanban_image">
                                <i class="fa fa-id-card-o fa-2x" t-att-style="'color: ' + (record.membership_category.raw_value == 'individual' ? '#1f77b4' : record.membership_category.raw_value == 'organization' ? '#ff7f0e' : '#2ca02c')"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="code"/> - <field name="membership_category"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Price:</strong> 
                                            <field name="price" widget="monetary"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Duration:</strong> 
                                            <t t-if="record.is_lifetime.raw_value">
                                                Lifetime
                                            </t>
                                            <t t-else="">
                                                <field name="duration"/> months
                                            </t>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <strong>Active Members:</strong> 
                                            <field name="membership_count"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section o_kanban_manage_view">
                                    <a type="object" name="action_view_memberships" class="btn btn-primary btn-sm">View Members</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Membership Type Search View -->
    <record id="membership_type_search_view" model="ir.ui.view">
        <field name="name">membership.type.search</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <search string="Membership Types">
                <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="code" string="Code"/>
                <field name="membership_category" string="Category"/>
                <separator/>
                <filter string="Individual" name="individual" 
                        domain="[('membership_category', '=', 'individual')]"/>
                <filter string="Organization" name="organization" 
                        domain="[('membership_category', '=', 'organization')]"/>
                <filter string="Chapter" name="chapter" 
                        domain="[('membership_category', '=', 'chapter')]"/>
                <filter string="Publication" name="publication" 
                        domain="[('membership_category', '=', 'publication')]"/>
                <separator/>
                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                <filter string="Lifetime" name="lifetime"
                        domain="[('is_lifetime', '=', True)]"/>
                <filter string="Auto-Renewal" name="auto_renewal"
                        domain="[('auto_renewal', '=', True)]"/>
                <separator/>
                <filter string="With Members" name="has_members"
                        domain="[('membership_count', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" 
                            context="{'group_by': 'membership_category'}"/>
                    <filter string="Duration" name="group_duration" 
                            context="{'group_by': 'duration'}"/>
                    <filter string="Auto-Renewal" name="group_auto_renewal"
                            context="{'group_by': 'auto_renewal'}"/>
                    <filter string="Company" name="group_company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Membership Type Pivot View -->
    <record id="membership_type_pivot_view" model="ir.ui.view">
        <field name="name">membership.type.pivot</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <pivot string="Membership Types Analysis" sample="1">
                <field name="membership_category" type="row"/>
                <field name="membership_count" type="measure"/>
                <field name="total_revenue" type="measure"/>
                <field name="price" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Membership Type Graph View -->
    <record id="membership_type_graph_view" model="ir.ui.view">
        <field name="name">membership.type.graph</field>
        <field name="model">membership.type</field>
        <field name="arch" type="xml">
            <graph string="Membership Types Analysis" sample="1">
                <field name="membership_category"/>
                <field name="membership_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_membership_type" model="ir.actions.act_window">
        <field name="name">Membership Types</field>
        <field name="res_model">membership.type</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="search_view_id" ref="membership_type_search_view"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first membership type!
            </p>
            <p>
                Membership types define the categories of memberships your organization offers,
                including pricing, duration, and benefits. Start by creating membership types
                that match your organization's structure.
            </p>
            <p>
                <strong>Examples:</strong> Individual Basic, Individual Premium, Organization Small, 
                Local Chapter, Student, Honorary Member
            </p>
        </field>
    </record>

    <!-- Action for viewing membership revenue report -->
    <record id="action_membership_revenue_report" model="ir.actions.act_window">
        <field name="name">Membership Revenue Report</field>
        <field name="res_model">membership.membership</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="domain">[('membership_type_id', '=', active_id)]</field>
        <field name="context">{
            'search_default_group_by_state': 1,
            'search_default_group_by_start_date': 1,
        }</field>
    </record>

</odoo>