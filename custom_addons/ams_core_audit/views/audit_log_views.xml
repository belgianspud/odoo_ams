              sequence="10"/>

    <menuitem id="menu_audit_all_logs"
              name="All Audit Logs"
              parent="menu_audit_logs"
              action="action_audit_log"
              sequence="10"/>

    <menuitem id="menu_audit_recent"
              name="Recent Activity"
              parent="menu_audit_logs"
              action="action_recent_audit"
              sequence="15"/>

    <menuitem id="menu_audit_high_risk"
              name="High Risk Operations"
              parent="menu_audit_logs"
              action="action_high_risk_audit"
              sequence="20"/>

    <menuitem id="menu_audit_pending_review"
              name="Pending Review"
              parent="menu_audit_logs"
              action="action_pending_review_audit"
              sequence="25"
              groups="ams_core_audit.group_audit_manager"/>

    <!-- Compliance Submenu -->
    <menuitem id="menu_audit_compliance"
              name="Compliance"
              parent="menu_audit_root"
              sequence="20"
              groups="ams_core_audit.group_audit_manager"/>

    <menuitem id="menu_audit_sensitive"
              name="Sensitive Data"
              parent="menu_audit_compliance"
              action="action_sensitive_audit"
              sequence="10"/>

    <menuitem id="menu_audit_privacy"
              name="Privacy Impact"
              parent="menu_audit_compliance"
              action="action_privacy_audit"
              sequence="15"/>

    <menuitem id="menu_audit_financial"
              name="Financial Operations"
              parent="menu_audit_compliance"
