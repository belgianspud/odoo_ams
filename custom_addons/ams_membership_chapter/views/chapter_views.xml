<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Chapter Tree View -->
    <record id="view_membership_chapter_tree" model="ir.ui.view">
        <field name="name">membership.chapter.tree</field>
        <field name="model">membership.chapter</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="chapter_type"/>
                <field name="manager_id"/>
                <field name="active_member_count"/>
                <field name="total_member_count"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Chapter Form View -->
    <record id="view_membership_chapter_form" model="ir.ui.view">
        <field name="name">membership.chapter.form</field>
        <field name="model">membership.chapter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_members" string="View Members" type="object" class="oe_highlight"/>
                    <button name="action_view_memberships" string="View Memberships" type="object"/>
                    <button name="action_view_sub_chapters" string="Sub-Chapters" type="object" 
                            attrs="{'invisible': [('child_ids', '=', [])]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_members" icon="fa-users">
                            <field string="Active Members" name="active_member_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_members" icon="fa-group">
                            <field string="Total Members" name="member_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_sub_chapters" icon="fa-sitemap"
                                attrs="{'invisible': [('child_ids', '=', [])]}">
                            <field string="Sub-Chapters" name="child_ids" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Chapter Name"/>
                        </h1>
                        <div class="o_row" name="chapter_hierarchy">
                            <span class="text-muted" attrs="{'invisible': [('parent_id', '=', False)]}">
                                Part of: <field name="parent_id" class="oe_inline"/>
                            </span>
                        </div>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="code"/>
                            <field name="chapter_type"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="level" readonly="1"/>
                        </group>
                        <group name="hierarchy">
                            <field name="parent_id"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group name="management" string="Management">
                        <field name="manager_id"/>
                        <field name="officer_ids" widget="many2many_tags"/>
                    </group>
                    <group name="contact_info" string="Contact Information">
                        <group>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_quick_create': True}"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" placeholder="Description of this chapter..."/>
                        </page>
                        <page string="Sub-Chapters" attrs="{'invisible': [('child_ids', '=', [])]}">
                            <field name="child_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="chapter_type"/>
                                    <field name="manager_id"/>
                                    <field name="active_member_count"/>
                                    <field name="city"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Members">
                            <field name="member_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="chapter_role"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Memberships">
                            <field name="membership_ids">
                                <tree>
                                    <field name="partner_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Chapter Search View -->
    <record id="view_membership_chapter_search" model="ir.ui.view">
        <field name="name">membership.chapter.search</field>
        <field name="model">membership.chapter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <filter string="Regional" name="regional" domain="[('chapter_type', '=', 'regional')]"/>
                <filter string="Special Interest" name="special_interest" domain="[('chapter_type', '=', 'special_interest')]"/>
                <filter string="Top Level" name="top_level" domain="[('parent_id', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'chapter_type'}"/>
                    <filter string="Parent Chapter" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Chapter Kanban View -->
    <record id="view_membership_chapter_kanban" model="ir.ui.view">
        <field name="name">membership.chapter.kanban</field>
        <field name="model">membership.chapter</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="chapter_type"/>
                <field name="manager_id"/>
                <field name="active_member_count"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value ? '' : 'oe_kanban_color_7'}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small t-if="record.code.value">
                                            [<field name="code"/>]
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-attf-class="badge badge-pill badge-#{record.chapter_type.raw_value == 'regional' and 'primary' or record.chapter_type.raw_value == 'special_interest' and 'info' or 'secondary'}">
                                            <field name="chapter_type"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.manager_id.value">
                                        <i class="fa fa-user"/> <field name="manager_id"/>
                                    </div>
                                    <div t-if="record.city.value or record.state_id.value">
                                        <i class="fa fa-map-marker"/> 
                                        <t t-if="record.city.value"><field name="city"/></t>
                                        <t t-if="record.city.value and record.state_id.value">, </t>
                                        <t t-if="record.state_id.value"><field name="state_id"/></t>
                                    </div>
                                    <div class="mt8">
                                        <span class="badge badge-pill badge-success">
                                            <field name="active_member_count"/> active members
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Chapter Action -->
    <record id="action_membership_chapter" model="ir.actions.act_window">
        <field name="name">Chapters</field>
        <field name="res_model">membership.chapter</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_membership_chapter_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chapter!
            </p>
            <p>
                Organize members into regional or special interest chapters.
            </p>
        </field>
    </record>

    <!-- Partner Form View Inherit -->
    <record id="view_partner_form_chapter" model="ir.ui.view">
        <field name="name">res.partner.form.chapter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="ams_membership_base.view_partner_form_membership"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='membership_status']" position="inside">
                <field name="chapter_id"/>
                <field name="chapter_role"/>
            </xpath>
        </field>
    </record>

    <!-- Membership Form View Inherit -->
    <record id="view_membership_form_chapter" model="ir.ui.view">
        <field name="name">membership.membership.form.chapter</field>
        <field name="model">membership.membership</field>
        <field name="inherit_id" ref="ams_membership_base.view_membership_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="chapter_id"/>
            </field>
        </field>
    </record>

    <!-- Membership Tree View Inherit -->
    <record id="view_membership_tree_chapter" model="ir.ui.view">
        <field name="name">membership.membership.tree.chapter</field>
        <field name="model">membership.membership</field>
        <field name="inherit_id" ref="ams_membership_base.view_membership_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="chapter_id"/>
            </field>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_membership_chapters" name="Chapters" 
              parent="ams_membership_base.menu_membership_main" 
              action="action_membership_chapter" sequence="25"/>

</odoo>