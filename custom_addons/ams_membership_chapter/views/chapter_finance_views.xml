<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Budget Views -->
    <record id="view_chapter_budget_tree" model="ir.ui.view">
        <field name="name">membership.chapter.budget.tree</field>
        <field name="model">membership.chapter.budget</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='active'" decoration-info="state=='approved'" decoration-muted="state=='closed'">
                <field name="name"/>
                <field name="chapter_id"/>
                <field name="fiscal_year"/>
                <field name="budgeted_income"/>
                <field name="budgeted_expenses"/>
                <field name="actual_income"/>
                <field name="actual_expenses"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_chapter_budget_form" model="ir.ui.view">
        <field name="name">membership.chapter.budget.form</field>
        <field name="model">membership.chapter.budget</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" string="Approve" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_activate" string="Activate" type="object" 
                            attrs="{'invisible': [('state', '!=', 'approved')]}" 
                            class="oe_highlight"/>
                    <button name="action_close" string="Close Budget" type="object" 
                            attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_view_transactions" string="View Transactions" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,active,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="chapter_id"/>
                            <field name="fiscal_year"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group name="budget_summary" string="Budget Summary">
                        <group name="budgeted">
                            <label for="budgeted_income" string="Budgeted"/>
                            <div class="o_row">
                                <field name="budgeted_income" class="oe_inline"/>
                                <span class="oe_inline"> - </span>
                                <field name="budgeted_expenses" class="oe_inline"/>
                                <span class="oe_inline"> = </span>
                                <field name="budgeted_net" class="oe_inline"/>
                            </div>
                        </group>
                        <group name="actual">
                            <label for="actual_income" string="Actual"/>
                            <div class="o_row">
                                <field name="actual_income" class="oe_inline"/>
                                <span class="oe_inline"> - </span>
                                <field name="actual_expenses" class="oe_inline"/>
                                <span class="oe_inline"> = </span>
                                <field name="actual_net" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <group name="variance" string="Variance Analysis">
                        <group>
                            <field name="income_variance"/>
                            <field name="expense_variance"/>
                            <field name="net_variance"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Income Budget">
                            <field name="income_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="budgeted_amount"/>
                                    <field name="actual_amount"/>
                                    <field name="variance"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Expense Budget">
                            <field name="expense_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="budgeted_amount"/>
                                    <field name="actual_amount"/>
                                    <field name="variance"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Transactions">
                            <field name="transaction_ids" readonly="1">
                                <tree>
                                    <field name="transaction_date"/>
                                    <field name="name"/>
                                    <field name="transaction_type"/>
                                    <field name="category"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Transaction Views -->
    <record id="view_chapter_transaction_tree" model="ir.ui.view">
        <field name="name">membership.chapter.transaction.tree</field>
        <field name="model">membership.chapter.transaction</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='approved'" decoration-info="transaction_type=='income'" decoration-warning="state=='submitted'">
                <field name="transaction_date"/>
                <field name="chapter_id"/>
                <field name="name"/>
                <field name="transaction_type"/>
                <field name="category"/>
                <field name="amount"/>
                <field name="payment_method"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_chapter_transaction_form" model="ir.ui.view">
        <field name="name">membership.chapter.transaction.form</field>
        <field name="model">membership.chapter.transaction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" 
                            attrs="{'invisible': [('state', '!=', 'submitted')]}" 
                            class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" 
                            attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Transaction Description"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="chapter_id"/>
                            <field name="budget_id" domain="[('chapter_id', '=', chapter_id)]"/>
                            <field name="transaction_date"/>
                            <field name="transaction_type"/>
                            <field name="category"/>
                        </group>
                        <group name="amount_info">
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_method"/>
                            <field name="reference"/>
                        </group>
                    </group>
                    <group name="related_records" string="Related Records">
                        <field name="partner_id"/>
                        <field name="meeting_id" domain="[('chapter_id', '=', chapter_id)]"/>
                        <field name="event_id"/>
                    </group>
                    <group name="approval" string="Approval Information" attrs="{'invisible': [('state', 'in', ['draft'])]}">
                        <field name="approved_by" readonly="1"/>
                        <field name="approval_date" readonly="1"/>
                    </group>
                    <group name="documents" string="Supporting Documents">
                        <field name="receipt" filename="receipt_filename"/>
                        <field name="receipt_filename" invisible="1"/>
                    </group>
                    <field name="notes" placeholder="Additional notes about this transaction..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Enhanced Chapter Form with Financial Features -->
    <record id="view_membership_chapter_form_finance" model="ir.ui.view">
        <field name="name">membership.chapter.form.finance</field>
        <field name="model">membership.chapter</field>
        <field name="inherit_id" ref="ams_membership_chapter.view_membership_chapter_form_meetings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_budget" icon="fa-calculator">
                    <field string="Budget" name="current_year_net" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_transactions" icon="fa-exchange">
                    <field string="Transactions" name="transaction_ids" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_budget" string="Create Budget" type="object"/>
            </xpath>
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="current_year_income"/>
                <field name="current_year_expenses"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Financial Settings">
                    <group>
                        <group>
                            <field name="requires_budget_approval"/>
                            <field name="expense_approval_limit"/>
                        </group>
                        <group>
                            <field name="current_budget_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_chapter_budget" model="ir.actions.act_window">
        <field name="name">Chapter Budgets</field>
        <field name="res_model">membership.chapter.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chapter budget!
            </p>
            <p>
                Track income and expenses for your chapter activities.
            </p>
        </field>
    </record>

    <record id="action_chapter_transaction" model="ir.actions.act_window">
        <field name="name">Chapter Transactions</field>
        <field name="res_model">membership.chapter.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

    <record id="action_chapter_expense" model="ir.actions.act_window">
        <field name="name">Chapter Expenses</field>
        <field name="res_model">membership.chapter.expense</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_chapter_meetings" name="Chapter Meetings" 
              parent="ams_membership_base.menu_membership_main" 
              action="action_chapter_meeting" sequence="26"/>
    <menuitem id="menu_chapter_finance_root" name="Chapter Finance" 
              parent="ams_membership_base.menu_membership_main" sequence="27"/>
    <menuitem id="menu_chapter_budgets" name="Budgets" 
              parent="menu_chapter_finance_root" 
              action="action_chapter_budget" sequence="10"/>
    <menuitem id="menu_chapter_transactions" name="Transactions" 
              parent="menu_chapter_finance_root" 
              action="action_chapter_transaction" sequence="20"/>

</odoo>