<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job for Meeting Reminders -->
        <record id="ir_cron_meeting_reminders" model="ir.cron">
            <field name="name">Send Meeting Reminders</field>
            <field name="model_id" ref="model_membership_chapter_meeting"/>
            <field name="state">code</field>
            <field name="code">model.send_meeting_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>