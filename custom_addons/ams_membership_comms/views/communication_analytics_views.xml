<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Communication Analytics Views -->
    <record id="view_communication_analytics_pivot" model="ir.ui.view">
        <field name="name">communication.analytics.pivot</field>
        <field name="model">communication.analytics</field>
        <field name="arch" type="xml">
            <pivot string="Communication Analytics">
                <field name="campaign_type" type="col"/>
                <field name="send_date" interval="month" type="row"/>
                <field name="sent_count" type="measure"/>
                <field name="delivered_count" type="measure"/>
                <field name="opened_count" type="measure"/>
                <field name="clicked_count" type="measure"/>
                <field name="delivery_rate" type="measure"/>
                <field name="open_rate" type="measure"/>
                <field name="click_rate" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_communication_analytics_graph" model="ir.ui.view">
        <field name="name">communication.analytics.graph</field>
        <field name="model">communication.analytics</field>
        <field name="arch" type="xml">
            <graph string="Communication Performance" type="line">
                <field name="send_date" interval="month"/>
                <field name="open_rate"/>
                <field name="click_rate"/>
            </graph>
        </field>
    </record>

    <record id="view_communication_analytics_tree" model="ir.ui.view">
        <field name="name">communication.analytics.tree</field>
        <field name="model">communication.analytics</field>
        <field name="arch" type="xml">
            <tree>
                <field name="campaign_name"/>
                <field name="campaign_type"/>
                <field name="send_date"/>
                <field name="partner_id"/>
                <field name="membership_level_id"/>
                <field name="sent_count"/>
                <field name="delivered_count"/>
                <field name="opened_count"/>
                <field name="clicked_count"/>
                <field name="delivery_rate" widget="percentage"/>
                <field name="open_rate" widget="percentage"/>
                <field name="click_rate" widget="percentage"/>
            </tree>
        </field>
    </record>

    <!-- Communication Performance Views -->
    <record id="view_communication_performance_graph" model="ir.ui.view">
        <field name="name">communication.performance.graph</field>
        <field name="model">communication.performance</field>
        <field name="arch" type="xml">
            <graph string="Communication Performance Trends" type="line">
                <field name="period_date"/>
                <field name="avg_open_rate"/>
                <field name="avg_click_rate"/>
                <field name="engagement_score"/>
            </graph>
        </field>
    </record>

    <record id="view_communication_performance_pivot" model="ir.ui.view">
        <field name="name">communication.performance.pivot</field>
        <field name="model">communication.performance</field>
        <field name="arch" type="xml">
            <pivot string="Performance Analysis">
                <field name="campaign_type" type="col"/>
                <field name="period_date" interval="month" type="row"/>
                <field name="campaigns_sent" type="measure"/>
                <field name="total_messages" type="measure"/>
                <field name="avg_delivery_rate" type="measure"/>
                <field name="avg_open_rate" type="measure"/>
                <field name="avg_click_rate" type="measure"/>
                <field name="engagement_score" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Segment Performance Views -->
    <record id="view_segment_performance_tree" model="ir.ui.view">
        <field name="name">communication.segment.performance.tree</field>
        <field name="model">communication.segment.performance</field>
        <field name="arch" type="xml">
            <tree decoration-success="engagement_score &gt; 50" decoration-warning="engagement_score &gt; 25" decoration-danger="engagement_score &lt;= 25">
                <field name="membership_level_id"/>
                <field name="chapter_id"/>
                <field name="is_member"/>
                <field name="member_age_group"/>
                <field name="total_messages"/>
                <field name="avg_open_rate" widget="percentage"/>
                <field name="avg_click_rate" widget="percentage"/>
                <field name="engagement_score"/>
            </tree>
        </field>
    </record>

    <record id="view_segment_performance_graph" model="ir.ui.view">
        <field name="name">communication.segment.performance.graph</field>
        <field name="model">communication.segment.performance</field>
        <field name="arch" type="xml">
            <graph string="Segment Performance" type="bar">
                <field name="membership_level_id"/>
                <field name="avg_open_rate"/>
                <field name="avg_click_rate"/>
            </graph>
        </field>
    </record>

    <!-- Communication Report Wizard -->
    <record id="view_communication_report_wizard" model="ir.ui.view">
        <field name="name">communication.report.wizard.form</field>
        <field name="model">communication.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Generate Communication Report</h1>
                    </div>
                    <group>
                        <group name="report_config">
                            <field name="report_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group name="output_options">
                            <field name="export_format"/>
                            <field name="include_charts"/>
                        </group>
                    </group>
                    
                    <group name="filters" string="Filters">
                        <field name="campaign_ids" widget="many2many_tags"/>
                        <field name="campaign_types"/>
                        <field name="membership_level_ids" widget="many2many_tags"/>
                        <field name="chapter_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate Report" name="action_generate_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Dashboard Views -->
    <record id="view_communication_dashboard" model="ir.ui.view">
        <field name="name">communication.dashboard</field>
        <field name="model">communication.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Communication Dashboard</h1>
                    </div>
                    <!-- Dashboard content would be implemented with JavaScript widgets -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="alert alert-info">
                                <h4>Dashboard Features:</h4>
                                <ul>
                                    <li>Real-time campaign performance metrics</li>
                                    <li>Channel comparison charts</li>
                                    <li>Engagement trend analysis</li>
                                    <li>Segment performance insights</li>
                                    <li>ROI tracking and forecasting</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enhanced Campaign Form with Analytics -->
    <record id="view_communication_campaign_form_analytics" model="ir.ui.view">
        <field name="name">membership.communication.campaign.form.analytics</field>
        <field name="model">membership.communication.campaign</field>
        <field name="inherit_id" ref="ams_membership_comms.view_membership_communication_campaign_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_analytics" icon="fa-bar-chart">
                    <field string="Engagement Score" name="engagement_score" widget="statinfo"/>
                </button>
            </xpath>
            
            <xpath expr="//header" position="inside">
                <button name="get_campaign_insights" string="Get Insights" type="object"/>
            </xpath>
            
            <xpath expr="//group[@name='statistics']" position="inside">
                <field name="engagement_score"/>
                <field name="performance_rating"/>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_communication_analytics" model="ir.actions.act_window">
        <field name="name">Communication Analytics</field>
        <field name="res_model">communication.analytics</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No communication data to analyze!
            </p>
            <p>
                Analytics will appear here once you start sending campaigns.
            </p>
        </field>
    </record>

    <record id="action_communication_performance" model="ir.actions.act_window">
        <field name="name">Performance Trends</field>
        <field name="res_model">communication.performance</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No performance data available!
            </p>
            <p>
                Performance trends will appear as you build campaign history.
            </p>
        </field>
    </record>

    <record id="action_segment_performance" model="ir.actions.act_window">
        <field name="name">Segment Performance</field>
        <field name="res_model">communication.segment.performance</field>
        <field name="view_mode">tree,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No segment data available!
            </p>
            <p>
                Analyze how different member segments respond to your communications.
            </p>
        </field>
    </record>

    <record id="action_communication_report" model="ir.actions.act_window">
        <field name="name">Generate Report</field>
        <field name="res_model">communication.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_communication_dashboard" model="ir.actions.act_window">
        <field name="name">Communication Dashboard</field>
        <field name="res_model">communication.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_communication_analytics" name="Analytics" 
              parent="ams_membership_comms.menu_membership_comms_root" sequence="30"/>
    <menuitem id="menu_communication_dashboard" name="Dashboard" 
              parent="menu_communication_analytics" 
              action="action_communication_dashboard" sequence="10"/>
    <menuitem id="menu_analytics_data" name="Analytics Data" 
              parent="menu_communication_analytics" 
              action="action_communication_analytics" sequence="20"/>
    <menuitem id="menu_performance_trends" name="Performance Trends" 
              parent="menu_communication_analytics" 
              action="action_communication_performance" sequence="30"/>
    <menuitem id="menu_segment_performance" name="Segment Performance" 
              parent="menu_communication_analytics" 
              action="action_segment_performance" sequence="40"/>
    <menuitem id="menu_communication_reports" name="Reports" 
              parent="menu_communication_analytics" 
              action="action_communication_report" sequence="50"/>

</odoo>