<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job for Sending Scheduled Communications -->
        <record id="ir_cron_send_scheduled_comms" model="ir.cron">
            <field name="name">Send Scheduled Communications</field>
            <field name="model_id" ref="model_membership_comms"/>
            <field name="state">code</field>
            <field name="code">model.send_scheduled_communications()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job for Generating Renewal Reminders -->
        <record id="ir_cron_generate_renewal_reminders" model="ir.cron">
            <field name="name">Generate Renewal Reminders</field>
            <field name="model_id" ref="model_membership_comms"/>
            <field name="state">code</field>
            <field name="code">model.generate_renewal_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job for Generating Lapsed Notices -->
        <record id="ir_cron_generate_lapsed_notices" model="ir.cron">
            <field name="name">Generate Lapsed Notices</field>
            <field name="model_id" ref="model_membership_comms"/>
            <field name="state">code</field>
            <field name="code">model.generate_lapsed_notices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job for Generating Welcome Messages -->
        <record id="ir_cron_generate_welcome_messages" model="ir.cron">
            <field name="name">Generate Welcome Messages</field>
            <field name="model_id" ref="model_membership_comms"/>
            <field name="state">code</field>
            <field name="code">model.generate_welcome_messages()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>