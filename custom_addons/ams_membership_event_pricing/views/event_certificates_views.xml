<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Certificate Views -->
    <record id="view_event_certificate_tree" model="ir.ui.view">
        <field name="name">event.certificate.tree</field>
        <field name="model">event.certificate</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='issued'" decoration-muted="state=='revoked'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="event_id"/>
                <field name="issue_date"/>
                <field name="ceu_credits"/>
                <field name="cpe_credits"/>
                <field name="state"/>
                <field name="verification_code"/>
            </tree>
        </field>
    </record>

    <record id="view_event_certificate_form" model="ir.ui.view">
        <field name="name">event.certificate.form</field>
        <field name="model">event.certificate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_certificate" string="Generate Certificate" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_download_certificate" string="Download" type="object" 
                            attrs="{'invisible': [('certificate_file', '=', False)]}"/>
                    <button name="action_revoke_certificate" string="Revoke" type="object" 
                            attrs="{'invisible': [('state', '!=', 'issued')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="event_id"/>
                            <field name="registration_id"/>
                            <field name="partner_id"/>
                            <field name="template_id"/>
                        </group>
                        <group name="certificate_info">
                            <field name="issue_date"/>
                            <field name="completion_date"/>
                            <field name="valid_until"/>
                            <field name="verification_code"/>
                        </group>
                    </group>
                    
                    <group name="certificate_content" string="Certificate Content">
                        <field name="certificate_title"/>
                        <field name="instructor_name"/>
                        <field name="description"/>
                    </group>
                    
                    <group name="credits" string="Continuing Education Credits">
                        <group>
                            <field name="ceu_credits"/>
                            <field name="cpe_credits"/>
                            <field name="credit_category"/>
                        </group>
                        <group>
                            <field name="compliance_year"/>
                            <field name="accreditation_body"/>
                            <field name="program_number"/>
                        </group>
                    </group>
                    
                    <group name="file_info" string="Certificate File">
                        <field name="certificate_file" filename="certificate_filename"/>
                        <field name="certificate_filename" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Certificate Template Views -->
    <record id="view_certificate_template_tree" model="ir.ui.view">
        <field name="name">event.certificate.template.tree</field>
        <field name="model">event.certificate.template</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="name"/>
                <field name="template_type"/>
                <field name="default_ceu_credits"/>
                <field name="default_cpe_credits"/>
                <field name="certificate_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_certificate_template_form" model="ir.ui.view">
        <field name="name">event.certificate.template.form</field>
        <field name="model">event.certificate.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" icon="fa-certificate">
                            <field string="Certificates" name="certificate_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="template_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="default_ceu_credits"/>
                            <field name="default_cpe_credits"/>
                        </group>
                    </group>
                    
                    <group name="template_file" string="Template File" attrs="{'invisible': [('template_type', '!=', 'custom')]}">
                        <field name="template_file" filename="template_filename"/>
                        <field name="template_filename" invisible="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" placeholder="Description of when to use this template..."/>
                        </page>
                        <page string="HTML Template" attrs="{'invisible': [('template_type', '!=', 'html')]}">
                            <field name="html_template" widget="html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enhanced Event Form with Certificate Features -->
    <record id="view_event_form_certificates" model="ir.ui.view">
        <field name="name">event.event.form.certificates</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="ams_membership_event_pricing.view_event_form_waitlist"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_certificates" icon="fa-certificate">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="certificate_count"/>/<field name="certificates_pending"/>
                        </span>
                        <span class="o_stat_text">Certificates</span>
                    </div>
                </button>
            </xpath>
            
            <xpath expr="//header" position="inside">
                <button name="action_generate_all_certificates" string="Generate All Certificates" type="object" 
                        attrs="{'invisible': [('issue_certificates', '=', False)]}"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Certificates &amp; CEU">
                    <group name="certificate_settings" string="Certificate Settings">
                        <group>
                            <field name="issue_certificates"/>
                            <field name="auto_issue_certificates"/>
                            <field name="default_certificate_template_id" attrs="{'invisible': [('issue_certificates', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="certificate_count"/>
                            <field name="certificates_pending"/>
                        </group>
                    </group>
                    
                    <group name="ceu_settings" string="Continuing Education Credits">
                        <group>
                            <field name="ceu_credits"/>
                            <field name="cpe_credits"/>
                            <field name="credit_category"/>
                        </group>
                        <group>
                            <field name="accreditation_body"/>
                            <field name="program_number"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Registration Form with Certificate Features -->
    <record id="view_event_registration_form_certificate" model="ir.ui.view">
        <field name="name">event.registration.form.certificate</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_certificate" icon="fa-certificate"
                        attrs="{'invisible': [('has_certificate', '=', False)]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Certificate</span>
                    </div>
                </button>
            </xpath>
            
            <xpath expr="//header" position="inside">
                <button name="action_issue_certificate" string="Issue Certificate" type="object" 
                        attrs="{'invisible': ['|', ('has_certificate', '=', True), ('state', '!=', 'done')]}"/>
            </xpath>
            
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="has_certificate"/>
                <field name="certificate_id" attrs="{'invisible': [('has_certificate', '=', False)]}"/>
                <field name="waitlist_entry_id" attrs="{'invisible': [('registered_from_waitlist', '=', False)]}"/>
                <field name="registered_from_waitlist" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Partner Form with Certificate Features -->
    <record id="view_partner_form_certificates" model="ir.ui.view">
        <field name="name">res.partner.form.certificates</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="ams_membership_base.view_partner_form_membership"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_certificates" icon="fa-certificate">
                    <field string="Certificates" name="total_certificates" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="current_year_ceu"/>
                <field name="current_year_cpe"/>
                <field name="total_ceu_credits"/>
                <field name="total_cpe_credits"/>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_event_waitlist" model="ir.actions.act_window">
        <field name="name">Event Waitlists</field>
        <field name="res_model">event.waitlist</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_event_waitlist_search"/>
        <field name="context">{'search_default_waiting': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No waitlist entries found!
            </p>
            <p>
                Waitlists are created automatically when events reach capacity.
            </p>
        </field>
    </record>

    <record id="action_event_certificate" model="ir.actions.act_window">
        <field name="name">Event Certificates</field>
        <field name="res_model">event.certificate</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No certificates issued yet!
            </p>
            <p>
                Certificates are issued to attendees upon event completion.
            </p>
        </field>
    </record>

    <record id="action_certificate_template" model="ir.actions.act_window">
        <field name="name">Certificate Templates</field>
        <field name="res_model">event.certificate.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first certificate template!
            </p>
            <p>
                Templates define the layout and content for event certificates.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_event_waitlist" name="Event Waitlists" 
              parent="event.event_main_menu" 
              action="action_event_waitlist" sequence="15"/>
    <menuitem id="menu_event_certificates_root" name="Certificates" 
              parent="event.event_main_menu" sequence="16"/>
    <menuitem id="menu_event_certificates" name="Certificates" 
              parent="menu_event_certificates_root" 
              action="action_event_certificate" sequence="10"/>
    <menuitem id="menu_certificate_templates" name="Templates" 
              parent="menu_event_certificates_root" 
              action="action_certificate_template" sequence="20"/>

</odoo>