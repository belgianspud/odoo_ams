<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Record Rules -->
        <record model="ir.rule" id="event_pricing_rule_user">
            <field name="name">Event Pricing: User Access</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('membership_base.group_membership_user'))]"/>
        </record>

        <record model="ir.rule" id="event_registration_pricing_rule_user">
            <field name="name">Event Registration Pricing: User Access</field>
            <field name="model_id" ref="event.model_event_registration"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('membership_base.group_membership_user'))]"/>
        </record>

    </data>
</odoo>