<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job for Processing Expired Waitlist Notifications -->
        <record id="ir_cron_process_expired_waitlist" model="ir.cron">
            <field name="name">Process Expired Waitlist Notifications</field>
            <field name="model_id" ref="model_event_waitlist"/>
            <field name="state">code</field>
            <field name="code">model.process_expired_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job for Auto-issuing Certificates -->
        <record id="ir_cron_auto_issue_certificates" model="ir.cron">
            <field name="name">Auto-issue Event Certificates</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="state">code</field>
            <field name="code">model.auto_issue_certificates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>