<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Subscription Plan Form View -->
    <record id="view_subscription_plan_form" model="ir.ui.view">
        <field name="name">ams.subscription.plan.form</field>
        <field name="model">ams.subscription.plan</field>
        <field name="arch" type="xml">
            <form string="Subscription Plan">
                <header>
                    <button name="action_view_subscriptions" type="object" 
                            string="View Subscriptions" class="oe_highlight"
                            invisible="subscription_count == 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_subscriptions" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="subscription_count" widget="statinfo" 
                                   string="Subscriptions"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Plan Name"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="plan_type"/>
                            <field name="product_id" domain="[('type', '=', 'service')]"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="billing_period"/>
                            <field name="billing_interval"/>
                            <field name="website_published"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Configuration" name="configuration">
                            <group>
                                <group string="Membership Settings" invisible="plan_type != 'membership'">
                                    <field name="membership_grade"/>
                                </group>
                                <group string="Chapter Settings" invisible="plan_type != 'chapter'">
                                    <field name="chapter_id"/>
                                </group>
                                <group string="Publication Settings" invisible="plan_type != 'publication'">
                                    <field name="publication_type"/>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Subscription Rules">
                                    <field name="auto_renew"/>
                                    <field name="grace_period_days"/>
                                    <field name="trial_period_days"/>
                                    <field name="max_subscriptions"/>
                                </group>
                                <group string="Renewal Settings">
                                    <field name="renewal_reminder_days"/>
                                    <field name="allow_partial_periods"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Description" name="description">
                            <field name="description" placeholder="Internal description of the plan"/>
                        </page>
                        
                        <page string="Website" name="website">
                            <group>
                                <field name="website_published"/>
                            </group>
                            <field name="website_description" placeholder="Description shown on website"/>
                            <separator string="Benefits"/>
                            <field name="benefits" placeholder="List of benefits for this plan"/>
                        </page>
                        
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="create_date"/>
                                    <!--<field name="partner_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                    <field name="active"/>
                                    <field name="price" widget="monetary"/>-->
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Subscription Plan list View -->
    <record id="view_subscription_plan_tree" model="ir.ui.view">
        <field name="name">ams.subscription.plan.list</field>
        <field name="model">ams.subscription.plan</field>
        <field name="arch" type="xml">
            <list string="Subscription Plans">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="plan_type"/>
                <field name="billing_period"/>
                <field name="price" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="subscription_count"/>
                <field name="website_published" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Subscription Plan Search View -->
    <record id="view_subscription_plan_search" model="ir.ui.view">
        <field name="name">ams.subscription.plan.search</field>
        <field name="model">ams.subscription.plan</field>
        <field name="arch" type="xml">
            <search string="Subscription Plans">
                <field name="name"/>
                <field name="code"/>
                <field name="plan_type"/>
                <field name="product_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Website Published" name="website_published" 
                        domain="[('website_published', '=', True)]"/>
                <separator/>
                <filter string="Membership" name="membership" domain="[('plan_type', '=', 'membership')]"/>
                <filter string="Chapter" name="chapter" domain="[('plan_type', '=', 'chapter')]"/>
                <filter string="Publication" name="publication" domain="[('plan_type', '=', 'publication')]"/>
                <separator/>
                <filter string="Monthly" name="monthly" domain="[('billing_period', '=', 'monthly')]"/>
                <filter string="Annual" name="annual" domain="[('billing_period', '=', 'annual')]"/>
                <group expand="1" string="Group By">
                    <filter string="Plan Type" name="group_plan_type" context="{'group_by': 'plan_type'}"/>
                    <filter string="Billing Period" name="group_billing_period" 
                            context="{'group_by': 'billing_period'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Subscription Plan Kanban View -->
    <record id="view_subscription_plan_kanban" model="ir.ui.view">
        <field name="name">ams.subscription.plan.kanban</field>
        <field name="model">ams.subscription.plan</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="plan_type"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="billing_period"/>
                <field name="subscription_count"/>
                <field name="website_published"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="plan_type"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_header_right">
                                    <span class="badge badge-pill badge-info" t-if="record.website_published.raw_value">
                                        Website
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Price:</strong>
                                        <field name="price" widget="monetary"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Billing:</strong>
                                        <field name="billing_period"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <strong>Subscriptions:</strong>
                                        <field name="subscription_count"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Subscription Plan Action -->
    <record id="action_subscription_plan" model="ir.actions.act_window">
        <field name="name">Subscription Plans</field>
        <field name="res_model">ams.subscription.plan</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription plan!
            </p>
            <p>
                Subscription plans define the terms and pricing for recurring services
                like memberships, chapter subscriptions, and publications.
            </p>
        </field>
    </record>
    
    
     <!-- Parent Menu for Subscriptions Configuration -->
    <menuitem id="menu_subscriptions_config" 
              name="Subscriptions"
              parent="base.menu_administration"
              sequence="50"/>
    <!-- Menu Items -->
    <menuitem id="menu_subscription_plans" 
              name="Subscription Plans"
              parent="menu_subscriptions_config"
              action="action_subscription_plan"
              sequence="10"/>
              
</odoo>