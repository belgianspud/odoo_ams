<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add Subscriptions to Portal Menu -->
        <template id="portal_my_home_subscriptions" inherit_id="portal.portal_my_home" name="Portal: My Subscriptions">
            <xpath expr="//div[hasclass('o_portal_my_home')]" position="inside">
                <div class="col-lg-6">
                    <a href="/my/subscriptions" class="list-group-item list-group-item-action d-flex align-items-center">
                        <div class="o_portal_list_icon">
                            <i class="fa fa-id-card fa-2x" role="img" aria-label="Subscriptions" title="Subscriptions"/>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="o_portal_list_title">
                                <strong>My Subscriptions</strong>
                            </div>
                            <small class="text-muted">View your active memberships and subscriptions</small>
                        </div>
                    </a>
                </div>
            </xpath>
        </template>
    </data>
</odoo>