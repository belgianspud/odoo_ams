<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (was Tree View in older versions) -->
    <record id="view_ams_subscription_list" model="ir.ui.view">
        <field name="name">ams.subscription.list</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <list string="Subscriptions">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ams_subscription_form" model="ir.ui.view">
        <field name="name">ams.subscription.form</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ('draft', 'active')"/>
                    <button name="action_renew" string="Renew" type="object" 
                            invisible="state not in ('active', 'expired')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="subscription_type"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">ams.subscription</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription!
            </p>
        </field>
    </record>
</odoo>
