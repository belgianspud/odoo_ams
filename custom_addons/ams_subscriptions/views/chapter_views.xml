<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Chapter List View -->
    <record id="view_ams_chapter_list" model="ir.ui.view">
        <field name="name">ams.chapter.list</field>
        <field name="model">ams.chapter</field>
        <field name="arch" type="xml">
            <list string="Chapters" default_order="name" multi_edit="1">
                <field name="name"/>
                <field name="code"/>
                <field name="region"/>
                <field name="state_province"/>
                <field name="country_id"/>
                <field name="contact_person"/>
                <field name="email" widget="email"/>
                <field name="phone" widget="phone"/>
                <field name="active_member_count" sum="Total Active Members"/>
                <field name="member_count" sum="Total Members" optional="hide"/>
                <field name="chapter_fee" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Fees"/>
                <field name="currency_id" invisible="1"/>
                <field name="founding_date" optional="hide"/>
                <field name="active"/>
                <button name="action_view_active_members" string="View Members" type="object" 
                        icon="fa-users" invisible="active_member_count == 0"/>
            </list>
        </field>
    </record>

    <!-- Enhanced Chapter Form View -->
    <record id="view_ams_chapter_form" model="ir.ui.view">
        <field name="name">ams.chapter.form</field>
        <field name="model">ams.chapter</field>
        <field name="arch" type="xml">
            <form string="Chapter">
                <header>
                    <button name="action_view_active_members" string="View Active Members" type="object" 
                            class="btn-primary" invisible="active_member_count == 0"/>
                    <button name="action_view_members" string="View All Members" type="object" 
                            class="btn-secondary" invisible="member_count == 0"/>
                    <button name="action_create_chapter_product" string="Create Product" type="object" 
                            class="btn-info" invisible="product_template_id or chapter_fee == 0"/>
                    <button name="action_send_chapter_newsletter" string="Send Newsletter" type="object" 
                            class="btn-success" invisible="active_member_count == 0"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_active_members" 
                                icon="fa-users" invisible="active_member_count == 0">
                            <field string="Active Members" name="active_member_count" widget="statbutton"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_members" 
                                icon="fa-list" invisible="member_count == 0">
                            <field string="Total Members" name="member_count" widget="statbutton"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_chapter_events" 
                                icon="fa-calendar">
                            <field string="Events" name="event_count" widget="statbutton"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_chapter_revenue" 
                                icon="fa-line-chart" invisible="chapter_fee == 0">
                            <field string="Revenue YTD" name="revenue_ytd" widget="statbutton"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Chapter Information">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="founding_date"/>
                            <field name="active"/>
                            <field name="chapter_status"/>
                        </group>
                        <group string="Location">
                            <field name="region"/>
                            <field name="state_province"/>
                            <field name="country_id"/>
                            <field name="city"/>
                            <field name="timezone"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Contact Information">
                            <field name="contact_person"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="website" widget="url"/>
                            <field name="social_media_links"/>
                        </group>
                        <group string="Financial">
                            <field name="chapter_fee"/>
                            <field name="currency_id"/>
                            <field name="product_template_id" readonly="1" 
                                   options="{'no_create': True}"/>
                            <field name="payment_terms"/>
                        </group>
                    </group>
                    
                    <group string="Chapter Leadership">
                        <group>
                            <field name="president_id" options="{'no_create': True}"/>
                            <field name="vice_president_id" options="{'no_create': True}"/>
                            <field name="secretary_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="treasurer_id" options="{'no_create': True}"/>
                            <field name="board_members_ids" widget="many2many_tags" 
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group string="Address">
                        <field name="address" nolabel="1"/>
                        <field name="meeting_location"/>
                        <field name="mailing_address"/>
                    </group>
                    
                    <notebook>
                        <page string="Description & About" name="description">
                            <group>
                                <group string="Quick Info">
                                    <field name="short_description"/>
                                    <field name="mission_statement"/>
                                    <field name="meeting_schedule"/>
                                </group>
                                <group string="Chapter Focus">
                                    <field name="focus_areas" widget="many2many_tags"/>
                                    <field name="industry_specializations" widget="many2many_tags"/>
                                </group>
                            </group>
                            
                            <separator string="Full Description"/>
                            <field name="description" nolabel="1"/>
                            
                            <separator string="Member Benefits"/>
                            <field name="member_benefits" nolabel="1"/>
                        </page>
                        
                        <page string="Members" name="members" invisible="member_count == 0">
                            <group>
                                <group string="Membership Statistics">
                                    <field name="member_count" readonly="1"/>
                                    <field name="active_member_count" readonly="1"/>
                                    <field name="new_members_this_month" readonly="1"/>
                                    <field name="member_retention_rate" readonly="1"/>
                                </group>
                                <group string="Quick Actions">
                                    <button name="action_export_member_list" string="Export Member List" 
                                            type="object" class="btn-info"/>
                                    <button name="action_send_welcome_emails" string="Send Welcome Emails" 
                                            type="object" class="btn-success"/>
                                </group>
                            </group>
                            
                            <separator string="Current Members"/>
                            <field name="subscription_ids" nolabel="1" readonly="1" 
                                   domain="[('state', '=', 'active')]">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="next_renewal_date"/>
                                    <field name="amount"/>
                                    <field name="state" decoration-success="state == 'active'" 
                                           decoration-info="state == 'draft'" 
                                           decoration-muted="state in ('expired','cancelled')"
                                           decoration-warning="state == 'pending_renewal'"/>
                                    <field name="auto_renewal"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Events & Activities" name="events">
                            <group>
                                <group string="Event Statistics">
                                    <field name="event_count" readonly="1"/>
                                    <field name="upcoming_events_count" readonly="1"/>
                                    <field name="last_event_date" readonly="1"/>
                                </group>
                                <group string="Event Management">
                                    <button name="action_create_chapter_event" string="Create Event" 
                                            type="object" class="btn-primary"/>
                                    <button name="action_view_event_calendar" string="View Calendar" 
                                            type="object" class="btn-info"/>
                                </group>
                            </group>
                            
                            <separator string="Recent Events"/>
                            <field name="recent_events_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="date_begin"/>
                                    <field name="date_end"/>
                                    <field name="seats_max"/>
                                    <field name="seats_reserved"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Financial Overview" name="financial" invisible="chapter_fee == 0">
                            <group>
                                <group string="Revenue">
                                    <field name="revenue_ytd" readonly="1"/>
                                    <field name="revenue_last_year" readonly="1"/>
                                    <field name="average_member_value" readonly="1"/>
                                </group>
                                <group string="Projections">
                                    <field name="projected_annual_revenue" readonly="1"/>
                                    <field name="growth_rate_percentage" readonly="1"/>
                                </group>
                            </group>
                            
                            <separator string="Monthly Revenue Breakdown"/>
                            <field name="monthly_revenue_chart" widget="chart" nolabel="1"/>
                            
                            <separator string="Recent Transactions"/>
                            <field name="recent_transactions_ids" nolabel="1">
                                <list>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="amount"/>
                                    <field name="transaction_type"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Communications" name="communications">
                            <group>
                                <group string="Newsletter Settings">
                                    <field name="newsletter_enabled"/>
                                    <field name="newsletter_frequency" invisible="not newsletter_enabled"/>
                                    <field name="last_newsletter_date" readonly="1" invisible="not newsletter_enabled"/>
                                </group>
                                <group string="Communication Preferences">
                                    <field name="auto_welcome_email"/>
                                    <field name="renewal_reminder_enabled"/>
                                    <field name="event_notification_enabled"/>
                                </group>
                            </group>
                            
                            <separator string="Email Templates"/>
                            <field name="email_template_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="model_id"/>
                                    <field name="subject"/>
                                    <field name="lang"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Settings & Configuration" name="settings">
                            <group>
                                <group string="Chapter Settings">
                                    <field name="auto_approve_members"/>
                                    <field name="require_membership_validation"/>
                                    <field name="allow_public_events"/>
                                    <field name="enable_member_directory"/>
                                </group>
                                <group string="Integration">
                                    <field name="website_integration"/>
                                    <field name="calendar_integration"/>
                                    <field name="social_media_integration"/>
                                </group>
                            </group>
                            
                            <group string="Advanced Settings">
                                <group>
                                    <field name="max_members"/>
                                    <field name="waiting_list_enabled" invisible="not max_members"/>
                                    <field name="member_approval_required"/>
                                </group>
                                <group>
                                    <field name="chapter_tags" widget="many2many_tags"/>
                                    <field name="parent_organization_id" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Chapter Kanban View -->
    <record id="view_ams_chapter_kanban" model="ir.ui.view">
        <field name="name">ams.chapter.kanban</field>
        <field name="model">ams.chapter</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="region"/>
                <field name="state_province"/>
                <field name="country_id"/>
                <field name="active_member_count"/>
                <field name="chapter_fee"/>
                <field name="currency_id"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="active"/>
                <field name="chapter_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="code"/> - <field name="region"/>
                                        <span t-if="record.state_province.raw_value">
                                            , <field name="state_province"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage"/>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span t-if="record.country_id.raw_value">
                                            <i class="fa fa-globe"/> <field name="country_id"/>
                                        </span>
                                        <br t-if="record.country_id.raw_value"/>
                                        <span t-if="record.contact_person.raw_value">
                                            <i class="fa fa-user"/> <field name="contact_person"/>
                                        </span>
                                        <br t-if="record.contact_person.raw_value"/>
                                        <span t-if="record.email.raw_value">
                                            <i class="fa fa-envelope"/> <field name="email"/>
                                        </span>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-if="record.active_member_count.raw_value > 0" 
                                              class="badge badge-pill badge-info">
                                            <field name="active_member_count"/> Members
                                        </span>
                                        <br t-if="record.active_member_count.raw_value > 0"/>
                                        <span t-if="record.chapter_fee.raw_value > 0" 
                                              class="badge badge-success">
                                            <field name="chapter_fee" widget="monetary" 
                                                   options="{'currency_field': 'currency_id'}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.phone.raw_value">
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.chapter_status.raw_value == 'active'" 
                                          class="badge badge-success">Active</span>
                                    <span t-if="record.chapter_status.raw_value == 'forming'" 
                                          class="badge badge-warning">Forming</span>
                                    <span t-if="record.chapter_status.raw_value == 'inactive'" 
                                          class="badge badge-secondary">Inactive</span>
                                    <span t-if="!record.active.raw_value" 
                                          class="badge badge-danger">Archived</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Enhanced Chapter Search View -->
    <record id="view_ams_chapter_search" model="ir.ui.view">
        <field name="name">ams.chapter.search</field>
        <field name="model">ams.chapter</field>
        <field name="arch" type="xml">
            <search string="Chapters">
                <field name="name"/>
                <field name="code"/>
                <field name="region"/>
                <field name="state_province"/>
                <field name="country_id"/>
                <field name="contact_person"/>
                <field name="city"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Active Status" name="status_active" domain="[('chapter_status', '=', 'active')]"/>
                <filter string="Forming" name="status_forming" domain="[('chapter_status', '=', 'forming')]"/>
                <filter string="Inactive Status" name="status_inactive" domain="[('chapter_status', '=', 'inactive')]"/>
                <separator/>
                <filter string="With Members" name="with_members" domain="[('active_member_count', '>', 0)]"/>
                <filter string="No Members" name="no_members" domain="[('active_member_count', '=', 0)]"/>
                <filter string="Large Chapters" name="large_chapters" domain="[('active_member_count', '>=', 50)]"/>
                <separator/>
                <filter string="With Fees" name="with_fees" domain="[('chapter_fee', '>', 0)]"/>
                <filter string="Free Chapters" name="free_chapters" domain="[('chapter_fee', '=', 0)]"/>
                <separator/>
                <filter string="Newsletter Enabled" name="newsletter_enabled" domain="[('newsletter_enabled', '=', True)]"/>
                <filter string="Auto Approve Members" name="auto_approve" domain="[('auto_approve_members', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Region" name="group_region" context="{'group_by': 'region'}"/>
                    <filter string="State/Province" name="group_state" context="{'group_by': 'state_province'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                    <filter string="Chapter Status" name="group_status" context="{'group_by': 'chapter_status'}"/>
                    <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                    <filter string="Fee Range" name="group_fee_range" context="{'group_by': 'fee_range'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Main Chapter Action -->
    <record id="action_ams_chapter" model="ir.actions.act_window">
        <field name="name">Chapters</field>
        <field name="res_model">ams.chapter</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chapter!
            </p>
            <p>
                Manage regional chapters for your association. Each chapter can have its own 
                contact information, fees, member tracking, events, and communications.
            </p>
        </field>
    </record>

    <!-- Regional Chapter Actions -->
    <record id="action_ams_chapter_by_region" model="ir.actions.act_window">
        <field name="name">Chapters by Region</field>
        <field name="res_model">ams.chapter</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_group_region': 1}</field>
    </record>

    <record id="action_ams_chapter_active" model="ir.actions.act_window">
        <field name="name">Active Chapters</field>
        <field name="res_model">ams.chapter</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('chapter_status', '=', 'active'), ('active', '=', True)]</field>
        <field name="context">{'search_default_status_active': 1}</field>
    </record>

    <record id="action_ams_chapter_forming" model="ir.actions.act_window">
        <field name="name">Forming Chapters</field>
        <field name="res_model">ams.chapter</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('chapter_status', '=', 'forming'), ('active', '=', True)]</field>
        <field name="context">{'search_default_status_forming': 1}</field>
    </record>

</odoo>