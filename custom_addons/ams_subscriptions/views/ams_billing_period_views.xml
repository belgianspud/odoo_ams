<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree (List) View for Billing Periods -->
    <record id="view_ams_billing_period_tree" model="ir.ui.view">
        <field name="name">ams.billing.period.tree</field>
        <field name="model">ams.billing.period</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Billing Periods">
                <field name="name"/>
                <field name="period_value"/>
                <field name="period_unit"/>
                <field name="grace_days"/>
                <field name="auto_renew"/>
            </list>
        </field>
    </record>

    <!-- Form View for Billing Periods -->
    <record id="view_ams_billing_period_form" model="ir.ui.view">
        <field name="name">ams.billing.period.form</field>
        <field name="model">ams.billing.period</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Billing Period">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="period_value"/>
                        <field name="period_unit"/>
                    </group>
                    <group>
                        <field name="grace_days"/>
                        <field name="auto_renew"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Billing Period Action -->
    <record id="action_ams_billing_period" model="ir.actions.act_window">
        <field name="name">Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>