<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form to Add AMS Fields -->
    <record id="view_product_template_form_ams" model="ir.ui.view">
        <field name="name">product.template.form.ams</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add smart button for quick publishing -->
            <div name="button_box" position="inside">
                <button name="action_publish_ams_product" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-globe"
                        invisible="ams_product_type == 'none' or website_published">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Publish on</span>
                        <span class="o_stat_text">Website</span>
                    </div>
                </button>
            </div>
            
            <xpath expr="//notebook" position="after">
                <group string="AMS Subscription Settings" invisible="ams_product_type == 'none'">
                    <field name="ams_product_type"/>
                    <field name="subscription_period"/>
                    <field name="is_digital" invisible="ams_product_type != 'publication'"/>
                    <field name="grace_days"/>
                    <field name="suspend_days"/>
                    <field name="terminate_days"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add AMS Fields to Product Tree View (optional) -->
    <record id="view_product_template_tree_ams" model="ir.ui.view">
        <field name="name">product.template.tree.ams</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="ams_product_type"/>
                <field name="subscription_period"/>
            </xpath>
        </field>
    </record>
</odoo>