<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Subscription Renewal Wizard Form -->
    <record id="view_subscription_renewal_wizard_form" model="ir.ui.view">
        <field name="name">ams.subscription.renewal.wizard.form</field>
        <field name="model">ams.subscription.renewal.wizard</field>
        <field name="arch" type="xml">
            <form string="Renew Subscription">
                <group>
                    <group string="Current Subscription">
                        <field name="subscription_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="plan_id" readonly="1"/>
                        <field name="current_start_date" readonly="1"/>
                        <field name="current_end_date" readonly="1"/>
                        <field name="current_price" widget="monetary" readonly="1"/>
                    </group>
                </group>
                
                <group>
                    <group string="Renewal Configuration">
                        <field name="renewal_type"/>
                        <field name="new_start_date"/>
                        <field name="new_end_date" readonly="1"/>
                        <field name="use_proration" invisible="renewal_type != 'early'"/>
                    </group>
                </group>
                
                <group>
                    <group string="Pricing">
                        <field name="new_price" widget="monetary"/>
                        <field name="discount_percent"/>
                        <field name="discount_amount" widget="monetary"/>
                        <field name="final_price" widget="monetary" readonly="1"/>
                    </group>
                    <group string="Invoice Options">
                        <field name="create_invoice"/>
                        <field name="auto_confirm_invoice" invisible="not create_invoice"/>
                    </group>
                </group>
                
                <group string="Notes">
                    <field name="notes" nolabel="1" placeholder="Additional notes about this renewal..."/>
                </group>
                
                <footer>
                    <button name="action_preview_renewal" type="object" 
                            string="Preview" class="btn-secondary"/>
                    <button name="action_renew_subscription" type="object" 
                            string="Renew Subscription" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Wizard Action -->
    <record id="action_subscription_renewal_wizard" model="ir.actions.act_window">
        <field name="name">Renew Subscription</field>
        <field name="res_model">ams.subscription.renewal.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_ams_subscription"/>
        <field name="binding_view_types">form</field>
    </record>
    
</odoo>