<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================================================================ -->
        <!-- SUBSCRIPTION BILLING VIEWS -->
        <!-- ================================================================ -->

        <!-- Subscription Billing Tree View -->
        <record id="view_ams_subscription_billing_tree" model="ir.ui.view">
            <field name="name">ams.subscription.billing.tree</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <tree string="Subscription Billings" default_order="billing_date desc,id desc" 
                      decoration-success="state=='paid'" 
                      decoration-info="state=='billed'" 
                      decoration-warning="state=='scheduled'" 
                      decoration-danger="state=='failed'"
                      decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="billing_date"/>
                    <field name="billing_type"/>
                    <field name="total_amount" sum="Total Amount"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" widget="badge" 
                           decoration-success="state in ('billed', 'paid')"
                           decoration-warning="state in ('scheduled', 'processing')"
                           decoration-danger="state=='failed'"
                           decoration-muted="state=='cancelled'"/>
                    <field name="is_member_billing" widget="boolean_toggle"/>
                    <field name="is_prorated" widget="boolean_toggle"/>
                    <field name="billing_period_id" optional="hide"/>
                    <field name="subscription_id" optional="hide"/>
                    <button name="process_billing" 
                            string="Process" 
                            type="object" 
                            icon="fa-play" 
                            class="btn-link"
                            attrs="{'invisible': [('state', 'not in', ['scheduled'])]}"
                            groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                    <button name="retry_billing" 
                            string="Retry" 
                            type="object" 
                            icon="fa-refresh" 
                            class="btn-link"
                            attrs="{'invisible': [('state', '!=', 'failed')]}"
                            groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                </tree>
            </field>
        </record>

        <!-- Subscription Billing Form View -->
        <record id="view_ams_subscription_billing_form" model="ir.ui.view">
            <field name="name">ams.subscription.billing.form</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <form string="Subscription Billing">
                    <header>
                        <button name="process_billing" 
                                string="Process Billing" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('state', 'not in', ['scheduled'])]}"
                                groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                        <button name="retry_billing" 
                                string="Retry Billing" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('state', '!=', 'failed')]}"
                                groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                        <button name="cancel_billing" 
                                string="Cancel Billing" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('state', 'in', ['billed', 'paid', 'cancelled'])]}"
                                groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                        <button name="calculate_billing_amounts" 
                                string="Recalculate Amounts" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('state', 'in', ['billed', 'paid'])]}"
                                groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,processing,billed,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text-o"
                                    attrs="{'invisible': [('invoice_id', '=', False)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                            <button name="action_view_payment" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-money"
                                    attrs="{'invisible': [('payment_id', '=', False)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Payment</span>
                                </div>
                            </button>
                            <button name="action_view_subscription" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-refresh">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Subscription</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                            <div class="o_row" name="billing_info_row">
                                <field name="billing_type" readonly="1" widget="badge"/>
                                <field name="is_prorated" readonly="1" widget="boolean_toggle" string="Prorated"/>
                                <field name="is_member_billing" readonly="1" widget="boolean_toggle" string="Member"/>
                            </div>
                        </div>

                        <group>
                            <group name="billing_info" string="Billing Information">
                                <field name="subscription_id" options="{'no_create': True}"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="billing_period_id" readonly="1"/>
                                <field name="billing_date"/>
                                <field name="currency_id" readonly="1" groups="base.group_multi_currency"/>
                            </group>
                            <group name="period_info" string="Billing Period">
                                <field name="period_start_date"/>
                                <field name="period_end_date"/>
                                <field name="days_in_period" readonly="1"/>
                                <field name="next_billing_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Amounts" name="amounts">
                                <group>
                                    <group name="base_amounts" string="Base Amounts">
                                        <field name="base_amount"/>
                                        <field name="member_discount_amount"/>
                                        <field name="additional_discount_amount"/>
                                        <field name="setup_fee_amount"/>
                                    </group>
                                    <group name="adjustments" string="Adjustments &amp; Tax">
                                        <field name="proration_adjustment"/>
                                        <field name="proration_factor" 
                                               attrs="{'invisible': [('is_prorated', '=', False)]}"
                                               widget="percentage"/>
                                        <field name="tax_amount"/>
                                        <field name="total_amount" class="oe_subtotal_footer_separator"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Customer &amp; Member Info" name="customer_info">
                                <group>
                                    <group name="customer_details" string="Customer Details">
                                        <field name="partner_id" readonly="1"/>
                                        <field name="billing_address_id" options="{'no_create': True}"/>
                                        <field name="member_status" readonly="1"/>
                                        <field name="is_member_billing" readonly="1"/>
                                    </group>
                                    <group name="billing_preferences" string="Billing Preferences">
                                        <field name="auto_billing_enabled"/>
                                        <field name="billing_reminder_sent" readonly="1"/>
                                        <field name="billing_notification_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Revenue Recognition" name="revenue" 
                                  groups="ams_subscriptions_products.group_ams_subscription_manager">
                                <group>
                                    <group name="revenue_method" string="Recognition Method">
                                        <field name="revenue_recognition_method"/>
                                        <field name="deferred_revenue_amount"/>
                                        <field name="recognized_revenue_amount"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Processing &amp; Automation" name="processing">
                                <group>
                                    <group name="processing_info" string="Processing Information">
                                        <field name="auto_billing_enabled"/>
                                        <field name="retry_count" readonly="1"/>
                                        <field name="last_retry_date" readonly="1"/>
                                    </group>
                                    <group name="linked_records" string="Linked Records">
                                        <field name="invoice_id" readonly="1"/>
                                        <field name="payment_id" readonly="1"/>
                                    </group>
                                </group>

                                <separator string="Processing Notes &amp; Errors" 
                                           attrs="{'invisible': [('billing_error_message', '=', False), ('notes', '=', False)]}"/>
                                <field name="billing_error_message" readonly="1" 
                                       attrs="{'invisible': [('billing_error_message', '=', False)]}"
                                       groups="ams_subscriptions_products.group_ams_subscription_manager"/>
                                <field name="notes" placeholder="Additional notes about this billing..."/>
                            </page>

                            <page string="History &amp; Tracking" name="history">
                                <group>
                                    <group name="dates" string="Important Dates">
                                        <field name="billing_date" readonly="1"/>
                                        <field name="billing_notification_date" readonly="1"/>
                                        <field name="last_retry_date" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group name="summary" string="Billing Summary">
                                        <button name="get_billing_summary" 
                                                string="Get Summary" 
                                                type="object" 
                                                class="btn-secondary"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Subscription Billing Kanban View -->
        <record id="view_ams_subscription_billing_kanban" model="ir.ui.view">
            <field name="name">ams.subscription.billing.kanban</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_order="billing_date desc">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="billing_date"/>
                    <field name="total_amount"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="billing_type"/>
                    <field name="is_member_billing"/>
                    <field name="is_prorated"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {
                                                   'draft': 'secondary', 
                                                   'scheduled': 'warning', 
                                                   'processing': 'info',
                                                   'billed': 'primary', 
                                                   'paid': 'success', 
                                                   'failed': 'danger',
                                                   'cancelled': 'secondary'
                                               }}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-8">
                                            <div><field name="product_id"/></div>
                                            <div><field name="billing_type" widget="badge"/></div>
                                        </div>
                                        <div class="col-4 text-right">
                                            <div class="h4 mb0">
                                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                            </div>
                                            <div class="text-muted">
                                                <field name="billing_date"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.is_member_billing.raw_value" class="badge badge-info">Member</span>
                                        <span t-if="record.is_prorated.raw_value" class="badge badge-warning">Prorated</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button t-if="record.state.raw_value == 'scheduled'" 
                                                name="process_billing" 
                                                type="object" 
                                                class="btn btn-sm btn-primary">Process</button>
                                        <button t-if="record.state.raw_value == 'failed'" 
                                                name="retry_billing" 
                                                type="object" 
                                                class="btn btn-sm btn-secondary">Retry</button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Subscription Billing Search View -->
        <record id="view_ams_subscription_billing_search" model="ir.ui.view">
            <field name="name">ams.subscription.billing.search</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <search string="Search Subscription Billings">
                    <field name="name" string="Billing Reference"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="product_id" string="Product"/>
                    <field name="subscription_id" string="Subscription"/>
                    <field name="billing_period_id"/>

                    <separator/>
                    <filter name="today" string="Today" 
                            domain="[('billing_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="this_week" string="This Week" 
                            domain="[('billing_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('billing_date', '&lt;=', (context_today() + datetime.timedelta(days=(6-context_today().weekday()))).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_month" string="This Month" 
                            domain="[('billing_date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('billing_date', '&lt;', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1).strftime('%Y-%m-%d'))]"/>

                    <separator/>
                    <filter name="scheduled" string="Scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter name="processing" string="Processing" domain="[('state', '=', 'processing')]"/>
                    <filter name="billed" string="Billed" domain="[('state', '=', 'billed')]"/>
                    <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                    <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>

                    <separator/>
                    <filter name="member_billing" string="Member Billing" domain="[('is_member_billing', '=', True)]"/>
                    <filter name="prorated" string="Prorated" domain="[('is_prorated', '=', True)]"/>
                    <filter name="auto_billing" string="Auto Billing" domain="[('auto_billing_enabled', '=', True)]"/>

                    <separator/>
                    <filter name="initial" string="Initial Billing" domain="[('billing_type', '=', 'initial')]"/>
                    <filter name="recurring" string="Recurring Billing" domain="[('billing_type', '=', 'recurring')]"/>
                    <filter name="adjustment" string="Adjustments" domain="[('billing_type', '=', 'adjustment')]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_by_billing_type" string="Billing Type" context="{'group_by': 'billing_type'}"/>
                        <filter name="group_by_partner" string="Customer" context="{'group_by': 'partner_id'}"/>
                        <filter name="group_by_product" string="Product" context="{'group_by': 'product_id'}"/>
                        <filter name="group_by_billing_period" string="Billing Period" context="{'group_by': 'billing_period_id'}"/>
                        <filter name="group_by_billing_date" string="Billing Date" context="{'group_by': 'billing_date:month'}"/>
                        <filter name="group_by_member_status" string="Member Status" context="{'group_by': 'is_member_billing'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- PIVOT AND GRAPH VIEWS FOR ANALYTICS -->
        <!-- ================================================================ -->

        <!-- Subscription Billing Pivot View -->
        <record id="view_ams_subscription_billing_pivot" model="ir.ui.view">
            <field name="name">ams.subscription.billing.pivot</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <pivot string="Billing Analysis">
                    <field name="billing_date" type="row" interval="month"/>
                    <field name="billing_type" type="row"/>
                    <field name="state" type="col"/>
                    <field name="total_amount" type="measure"/>
                    <field name="base_amount" type="measure"/>
                    <field name="member_discount_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Subscription Billing Graph View -->
        <record id="view_ams_subscription_billing_graph" model="ir.ui.view">
            <field name="name">ams.subscription.billing.graph</field>
            <field name="model">ams.subscription.billing</field>
            <field name="arch" type="xml">
                <graph string="Billing Trends" type="line">
                    <field name="billing_date" type="row" interval="month"/>
                    <field name="total_amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- ================================================================ -->
        <!-- ACTIONS -->
        <!-- ================================================================ -->

        <!-- Main Subscription Billing Action -->
        <record id="action_subscription_billing_view_all" model="ir.actions.act_window">
            <field name="name">All Subscription Billings</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">tree,kanban,form,pivot,graph</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No subscription billings found!
                </p>
                <p>
                    Subscription billings are automatically created when subscriptions are processed.
                    Create subscriptions to start generating billing records.
                </p>
            </field>
        </record>

        <!-- Scheduled Billings Action -->
        <record id="action_subscription_billing_view_scheduled" model="ir.actions.act_window">
            <field name="name">Scheduled Billings</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('state', '=', 'scheduled')]</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No scheduled billings!
                </p>
                <p>
                    Scheduled billings will appear here when subscription billing cycles are due.
                    Use the automated billing processes to create scheduled billings.
                </p>
            </field>
        </record>

        <!-- Failed Billings Action -->
        <record id="action_subscription_billing_view_failed" model="ir.actions.act_window">
            <field name="name">Failed Billings</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('state', '=', 'failed')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No failed billings - great job!
                </p>
                <p>
                    Failed billings appear here when automatic processing encounters errors.
                    Review and retry failed billings to ensure continuous service for customers.
                </p>
            </field>
        </record>

        <!-- Today's Billings Action -->
        <record id="action_subscription_billing_view_today" model="ir.actions.act_window">
            <field name="name">Today's Billings</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('billing_date', '=', context_today())]</field>
            <field name="context">{'search_default_scheduled': 1}</field>
        </record>

        <!-- Member Billings Action -->
        <record id="action_subscription_billing_view_member" model="ir.actions.act_window">
            <field name="name">Member Billings</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('is_member_billing', '=', True)]</field>
            <field name="context">{'search_default_this_month': 1}</field>
        </record>

        <!-- Revenue Analytics Action -->
        <record id="action_subscription_billing_revenue_analytics" model="ir.actions.act_window">
            <field name="name">Subscription Revenue Analytics</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">pivot,graph</field>
            <field name="domain">[('state', 'in', ['billed', 'paid'])]</field>
            <field name="context">{
                'search_default_group_by_billing_date': 1,
                'search_default_this_month': 1
            }</field>
        </record>

        <!-- ================================================================ -->
        <!-- SERVER ACTIONS -->
        <!-- ================================================================ -->

        <!-- Process Scheduled Billings Server Action -->
        <record id="action_process_scheduled_billings" model="ir.actions.server">
            <field name="name">Process Scheduled Billings</field>
            <field name="model_id" ref="model_ams_subscription_billing"/>
            <field name="binding_model_id" ref="model_ams_subscription_billing"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    scheduled_billings = records.filtered(lambda r: r.state == 'scheduled')
                    results = env['ams.subscription.billing'].process_scheduled_billings()
                    
                    message = f"Processing completed: {results.get('success_count', 0)} successful, {results.get('error_count', 0)} failed"
                    
                    return {
                        'type': 'ir.actions.client',
                        'tag': 'display_notification',
                        'params': {
                            'message': message,
                            'type': 'success' if results.get('error_count', 0) == 0 else 'warning',
                            'sticky': False,
                        }
                    }
            </field>
            <field name="groups_id" eval="[(4, ref('group_ams_subscription_manager'))]"/>
        </record>

        <!-- Bulk Process Billings Action -->
        <record id="action_bulk_process_billings" model="ir.actions.server">
            <field name="name">Bulk Process Selected Billings</field>
            <field name="model_id" ref="model_ams_subscription_billing"/>
            <field name="binding_model_id" ref="model_ams_subscription_billing"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    processable = records.filtered(lambda r: r.state == 'scheduled')
                    success_count = 0
                    error_count = 0
                    
                    for billing in processable:
                        try:
                            if billing.process_billing():
                                success_count += 1
                            else:
                                error_count += 1
                        except Exception as e:
                            error_count += 1
                    
                    message = f"Bulk processing completed: {success_count} successful, {error_count} failed"
                    
                    return {
                        'type': 'ir.actions.client',
                        'tag': 'display_notification',
                        'params': {
                            'message': message,
                            'type': 'success' if error_count == 0 else 'warning',
                            'sticky': True,
                        }
                    }
            </field>
            <field name="groups_id" eval="[(4, ref('group_ams_subscription_manager'))]"/>
        </record>

        <!-- Retry Failed Billings Action -->
        <record id="action_retry_failed_billings" model="ir.actions.server">
            <field name="name">Retry Failed Billings</field>
            <field name="model_id" ref="model_ams_subscription_billing"/>
            <field name="binding_model_id" ref="model_ams_subscription_billing"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                    failed_billings = records.filtered(lambda r: r.state == 'failed' and r.retry_count < 3)
                    success_count = 0
                    
                    for billing in failed_billings:
                        try:
                            if billing.retry_billing():
                                success_count += 1
                        except Exception as e:
                            pass
                    
                    message = f"Retry completed: {success_count} of {len(failed_billings)} billings processed successfully"
                    
                    return {
                        'type': 'ir.actions.client',
                        'tag': 'display_notification',
                        'params': {
                            'message': message,
                            'type': 'success' if success_count > 0 else 'warning',
                            'sticky': True,
                        }
                    }
            </field>
            <field name="groups_id" eval="[(4, ref('group_ams_subscription_manager'))]"/>
        </record>

        <!-- ================================================================ -->
        <!-- AUTOMATED ACTIONS / CRON JOBS -->
        <!-- ================================================================ -->

        <!-- Process Scheduled Billings Cron -->
        <record id="ir_cron_process_scheduled_billings" model="ir.cron">
            <field name="name">Process Scheduled Subscription Billings</field>
            <field name="model_id" ref="model_ams_subscription_billing"/>
            <field name="state">code</field>
            <field name="code">
                # Process all scheduled billings for today
                model.process_scheduled_billings()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Retry Failed Billings Cron -->
        <record id="ir_cron_retry_failed_billings" model="ir.cron">
            <field name="name">Retry Failed Subscription Billings</field>
            <field name="model_id" ref="model_ams_subscription_billing"/>
            <field name="state">code</field>
            <field name="code">
                # Retry failed billings that haven't exceeded retry limit
                failed_billings = model.get_failed_billings()
                for billing in failed_billings:
                    try:
                        billing.retry_billing()
                    except Exception as e:
                        # Log error but continue with other billings
                        import logging
                        _logger = logging.getLogger(__name__)
                        _logger.error(f"Failed to retry billing {billing.name}: {e}")
            </field>
            <field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- ================================================================ -->
        <!-- SUBSCRIPTION BILLING DASHBOARD -->
        <!-- ================================================================ -->

        <!-- Billing Dashboard Action -->
        <record id="action_subscription_billing_dashboard" model="ir.actions.act_window">
            <field name="name">Billing Dashboard</field>
            <field name="res_model">ams.subscription.billing</field>
            <field name="view_mode">kanban,graph,pivot</field>
            <field name="domain">[]</field>
            <field name="context">{
                'search_default_this_month': 1,
                'kanban_dashboard': True
            }</field>
        </record>

    </data>
</odoo>