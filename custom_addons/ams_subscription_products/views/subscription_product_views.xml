<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================================================== -->
    <!-- AMS SUBSCRIPTION PRODUCT FORM VIEW -->
    <!-- ========================================================================== -->
    <record id="ams_subscription_product_form_view" model="ir.ui.view">
        <field name="name">ams.subscription.product.form</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <form string="Subscription Product">
                <header>
                    <button name="action_test_availability" type="object" 
                            string="Test Availability" class="btn-secondary"
                            icon="fa-users"/>
                    <field name="active" widget="boolean_button" 
                           options="{'terminology': {'string_true': 'Active', 'string_false': 'Inactive'}}"/>
                </header>
                
                <sheet>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Members Only" bg_color="bg-info" invisible="not member_only"/>
                    <widget name="web_ribbon" title="Approval Required" bg_color="bg-warning" invisible="not requires_approval"/>
                    
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" placeholder="e.g., Individual Annual Membership"/>
                        </h1>
                        <div class="oe_edit_only">
                            <label for="code"/>
                        </div>
                        <h3>
                            <field name="code" placeholder="e.g., INDIV_ANNUAL"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="subscription_type" required="1"/>
                            <field name="subscription_category"/>
                            <field name="sequence"/>
                            <field name="subscription_summary" readonly="1" 
                                   string="Configuration Summary"/>
                        </group>
                        <group string="Pricing">
                            <field name="base_price" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                            <div class="text-muted">
                                <small>Base price before any discounts or add-ons</small>
                            </div>
                        </group>
                    </group>

                    <notebook>
                        <!-- ========================================================================== -->
                        <!-- SUBSCRIPTION CONFIGURATION TAB -->
                        <!-- ========================================================================== -->
                        <page string="Subscription Configuration" name="subscription_config">
                            
                            <!-- Duration Configuration -->
                            <group string="Duration Configuration" name="duration_config">
                                <group>
                                    <field name="default_duration" required="1"/>
                                    <field name="duration_unit" required="1"/>
                                    <field name="duration_display" readonly="1" 
                                           string="Duration Summary"/>
                                </group>
                                <group>
                                    <div class="alert alert-info" role="alert">
                                        <strong><i class="fa fa-info-circle"></i> Duration Settings</strong><br/>
                                        This defines the default length of subscriptions for this product.
                                        <br/>Duration: <field name="duration_display" readonly="1" nolabel="1"/>
                                    </div>
                                </group>
                            </group>

                            <!-- Product Template Integration -->
                            <group string="Product Integration" name="product_integration">
                                <group>
                                    <field name="product_template_id" 
                                           domain="[('is_subscription', '=', True)]"
                                           context="{'default_is_subscription': True}"
                                           required="1"/>
                                    <button name="action_view_product_template" type="object" 
                                            string="View Product Template" class="btn-link btn-sm"
                                            icon="fa-external-link"
                                            invisible="not product_template_id"/>
                                </group>
                                <group>
                                    <field name="template_behavior" readonly="1" 
                                           string="Product Behavior"/>
                                    <field name="template_grants_portal_access" readonly="1" 
                                           widget="boolean" string="Grants Portal Access"/>
                                </group>
                            </group>

                            <!-- Billing Period Configuration -->
                            <group string="Billing Configuration" name="billing_config">
                                <group>
                                    <field name="default_billing_period_id" 
                                           options="{'no_create': True}"
                                           string="Default Billing Period"/>
                                    <field name="billing_options_count" readonly="1" 
                                           string="Available Billing Options"/>
                                </group>
                                <group>
                                    <field name="billing_period_ids" widget="many2many_tags"
                                           string="Supported Billing Periods"/>
                                    <div class="text-muted">
                                        <small>Customers can choose from these billing periods when subscribing</small>
                                    </div>
                                </group>
                            </group>

                        </page>

                        <!-- ========================================================================== -->
                        <!-- ACCESS CONTROL & RESTRICTIONS TAB -->
                        <!-- ========================================================================== -->
                        <page string="Access Control" name="access_control">
                            
                            <group string="Access Restrictions" name="access_restrictions">
                                <group>
                                    <field name="member_only" widget="boolean_toggle"
                                           string="Members Only"/>
                                    <field name="requires_approval" widget="boolean_toggle"
                                           string="Requires Staff Approval"/>
                                    <field name="auto_assign" widget="boolean_toggle"
                                           string="Auto-assign to Qualifying Members"/>
                                </group>
                                <group>
                                    <div class="alert alert-warning" role="alert" 
                                         invisible="not member_only">
                                        <strong><i class="fa fa-users"></i> Members Only</strong><br/>
                                        This subscription is restricted to active association members.
                                    </div>
                                    <div class="alert alert-info" role="alert" 
                                         invisible="not requires_approval">
                                        <strong><i class="fa fa-user-check"></i> Approval Required</strong><br/>
                                        New subscriptions require staff approval before activation.
                                    </div>
                                    <div class="alert alert-success" role="alert" 
                                         invisible="member_only or requires_approval or auto_assign">
                                        <strong><i class="fa fa-check-circle"></i> Open Access</strong><br/>
                                        This subscription is available to all customers without restrictions.
                                    </div>
                                </group>
                            </group>

                        </page>

                        <!-- ========================================================================== -->
                        <!-- DESCRIPTION & BENEFITS TAB -->
                        <!-- ========================================================================== -->
                        <page string="Description &amp; Benefits" name="description_benefits">
                            
                            <group string="Product Description" name="product_description">
                                <field name="short_description" 
                                       placeholder="Brief summary for listings and selection..."
                                       string="Short Description" colspan="2"/>
                                <field name="description" 
                                       placeholder="Detailed description of subscription benefits and features..."
                                       string="Full Description" colspan="2"/>
                            </group>

                            <group string="Benefits &amp; Inclusions" name="benefits_inclusions">
                                <field name="benefits_included" 
                                       placeholder="• Benefit 1&#10;• Benefit 2&#10;• Benefit 3..."
                                       string="Benefits Included" colspan="2"/>
                                
                                <div class="alert alert-info" role="alert" colspan="2">
                                    <strong><i class="fa fa-lightbulb-o"></i> Benefits Tips</strong><br/>
                                    <ul class="mb-1">
                                        <li>Use bullet points (•) to list benefits clearly</li>
                                        <li>Focus on value proposition for members</li>
                                        <li>Include both tangible and intangible benefits</li>
                                        <li>Mention any exclusive access or discounts</li>
                                    </ul>
                                </div>
                            </group>

                            <group string="Terms &amp; Conditions" name="terms_conditions">
                                <field name="terms_conditions" 
                                       placeholder="Specific terms and conditions for this subscription..."
                                       string="Terms &amp; Conditions" colspan="2"/>
                            </group>

                        </page>

                        <!-- ========================================================================== -->
                        <!-- ANALYTICS & REPORTING TAB -->
                        <!-- ========================================================================== -->
                        <page string="Analytics &amp; Insights" name="analytics" groups="base.group_system">
                            
                            <group string="Subscription Metrics" name="subscription_metrics">
                                <div class="alert alert-info" role="alert" colspan="2">
                                    <strong><i class="fa fa-chart-bar"></i> Subscription Analytics</strong><br/>
                                    Advanced subscription analytics and reporting features will be available
                                    in the AMS Subscription Reporting module.
                                    <ul class="mt-2 mb-1">
                                        <li>Subscription conversion rates</li>
                                        <li>Revenue per subscription</li>
                                        <li>Renewal and churn rates</li>
                                        <li>Member vs non-member adoption</li>
                                    </ul>
                                </div>
                            </group>

                        </page>

                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========================================================================== -->
    <!-- AMS SUBSCRIPTION PRODUCT TREE VIEW -->
    <!-- ========================================================================== -->
    <record id="ams_subscription_product_tree_view" model="ir.ui.view">
        <field name="name">ams.subscription.product.tree</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <tree string="Subscription Products" sample="1" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="subscription_type"/>
                <field name="subscription_category" optional="hide"/>
                <field name="duration_display" string="Duration"/>
                <field name="base_price" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="default_billing_period_id" string="Default Billing" optional="show"/>
                <field name="billing_options_count" string="Billing Options" optional="hide"/>
                <field name="member_only" widget="boolean_toggle" optional="show"/>
                <field name="requires_approval" widget="boolean_toggle" optional="hide"/>
                <field name="auto_assign" widget="boolean_toggle" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- ========================================================================== -->
    <!-- AMS SUBSCRIPTION PRODUCT KANBAN VIEW -->
    <!-- ========================================================================== -->
    <record id="ams_subscription_product_kanban_view" model="ir.ui.view">
        <field name="name">ams.subscription.product.kanban</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_order="sequence">
                <field name="name"/>
                <field name="code"/>
                <field name="subscription_type"/>
                <field name="subscription_category"/>
                <field name="base_price"/>
                <field name="currency_id"/>
                <field name="duration_display"/>
                <field name="member_only"/>
                <field name="requires_approval"/>
                <field name="active"/>
                <field name="subscription_summary"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{!record.active.raw_value ? 'o_kanban_color_10' : ''}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                        <t t-if="record.code.raw_value">
                                            <small class="text-muted"> [<field name="code"/>]</small>
                                        </t>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="subscription_type"/>
                                        <t t-if="record.subscription_category.raw_value != 'core'">
                                            • <field name="subscription_category"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" name="action_view_product_template" type="object" class="dropdown-item">View Product Template</a>
                                    <a role="menuitem" name="action_test_availability" type="object" class="dropdown-item">Test Availability</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                                
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-8 o_kanban_primary_left">
                                            <div class="mb2">
                                                <i class="fa fa-clock-o text-muted mr-1"></i>
                                                <strong><field name="duration_display"/></strong>
                                            </div>
                                            <div class="mb2">
                                                <i class="fa fa-dollar text-muted mr-1"></i>
                                                <strong><field name="base_price" widget="monetary" options="{'currency_field': 'currency_id'}"/></strong>
                                            </div>
                                        </div>
                                        <div class="col-4 o_kanban_primary_right text-right">
                                            <t t-if="record.member_only.raw_value">
                                                <span class="badge badge-info mb-1">Members Only</span><br/>
                                            </t>
                                            <t t-if="record.requires_approval.raw_value">
                                                <span class="badge badge-warning mb-1">Approval Required</span><br/>
                                            </t>
                                            <t t-if="!record.active.raw_value">
                                                <span class="badge badge-secondary">Inactive</span>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <div class="row mt-2" t-if="record.subscription_summary.raw_value">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <t t-esc="record.subscription_summary.value"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================================================================== -->
    <!-- AMS SUBSCRIPTION PRODUCT SEARCH VIEW -->
    <!-- ========================================================================== -->
    <record id="ams_subscription_product_search_view" model="ir.ui.view">
        <field name="name">ams.subscription.product.search</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <search string="Subscription Products">
                <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                <field name="subscription_type" string="Type"/>
                <field name="subscription_category" string="Category"/>
                <field name="product_template_id" string="Product Template"/>
                <field name="default_billing_period_id" string="Billing Period"/>
                
                <!-- BASIC STATUS FILTERS -->
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <!-- SUBSCRIPTION TYPE FILTERS -->
                <filter string="Membership" name="type_membership" 
                        domain="[('subscription_type', '=', 'membership')]"/>
                <filter string="Chapter" name="type_chapter" 
                        domain="[('subscription_type', '=', 'chapter')]"/>
                <filter string="Committee" name="type_committee" 
                        domain="[('subscription_type', '=', 'committee')]"/>
                <filter string="Publication" name="type_publication" 
                        domain="[('subscription_type', '=', 'publication')]"/>
                <filter string="Service" name="type_service" 
                        domain="[('subscription_type', '=', 'service')]"/>
                <filter string="Certification" name="type_certification" 
                        domain="[('subscription_type', '=', 'certification')]"/>
                <filter string="Training" name="type_training" 
                        domain="[('subscription_type', '=', 'training')]"/>
                <filter string="Premium" name="type_premium" 
                        domain="[('subscription_type', '=', 'premium')]"/>
                
                <separator/>
                <!-- SUBSCRIPTION CATEGORY FILTERS -->
                <filter string="Core Products" name="category_core" 
                        domain="[('subscription_category', '=', 'core')]"/>
                <filter string="Add-on Services" name="category_addon" 
                        domain="[('subscription_category', '=', 'add_on')]"/>
                <filter string="Premium Upgrades" name="category_premium" 
                        domain="[('subscription_category', '=', 'premium')]"/>
                <filter string="Specialty Access" name="category_specialty" 
                        domain="[('subscription_category', '=', 'specialty')]"/>
                
                <separator/>
                <!-- ACCESS CONTROL FILTERS -->
                <filter string="Members Only" name="members_only" 
                        domain="[('member_only', '=', True)]"/>
                <filter string="Public Access" name="public_access" 
                        domain="[('member_only', '=', False)]"/>
                <filter string="Requires Approval" name="requires_approval" 
                        domain="[('requires_approval', '=', True)]"/>
                <filter string="Auto-assign" name="auto_assign" 
                        domain="[('auto_assign', '=', True)]"/>
                
                <separator/>
                <!-- DURATION FILTERS -->
                <filter string="Short Term (≤6 months)" name="short_term" 
                        domain="['|', '&amp;', ('duration_unit', '=', 'months'), ('default_duration', '&lt;=', 6), 
                                 '&amp;', ('duration_unit', '=', 'days'), ('default_duration', '&lt;=', 180)]"/>
                <filter string="Medium Term (6-24 months)" name="medium_term" 
                        domain="['&amp;', ('duration_unit', '=', 'months'), ('default_duration', '&gt;', 6), ('default_duration', '&lt;=', 24)]"/>
                <filter string="Long Term (&gt;24 months)" name="long_term" 
                        domain="['|', '&amp;', ('duration_unit', '=', 'months'), ('default_duration', '&gt;', 24),
                                 '&amp;', ('duration_unit', '=', 'years'), ('default_duration', '&gt;=', 2)]"/>
                
                <separator/>
                <!-- PRICING FILTERS -->
                <filter string="Low Price (≤$100)" name="low_price" 
                        domain="[('base_price', '&lt;=', 100)]"/>
                <filter string="Medium Price ($100-$500)" name="medium_price" 
                        domain="[('base_price', '&gt;', 100), ('base_price', '&lt;=', 500)]"/>
                <filter string="High Price (&gt;$500)" name="high_price" 
                        domain="[('base_price', '&gt;', 500)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Subscription Type" name="group_type" 
                            context="{'group_by': 'subscription_type'}"/>
                    <filter string="Subscription Category" name="group_category" 
                            context="{'group_by': 'subscription_category'}"/>
                    <filter string="Duration Unit" name="group_duration_unit" 
                            context="{'group_by': 'duration_unit'}"/>
                    <filter string="Billing Period" name="group_billing_period" 
                            context="{'group_by': 'default_billing_period_id'}"/>
                    <filter string="Active Status" name="group_active" 
                            context="{'group_by': 'active'}"/>
                    <filter string="Member Only" name="group_member_only" 
                            context="{'group_by': 'member_only'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ========================================================================== -->
    <!-- MAIN SUBSCRIPTION PRODUCT ACTION -->
    <!-- ========================================================================== -->
    <record id="action_ams_subscription_products" model="ir.actions.act_window">
        <field name="name">Subscription Products</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription product!
            </p>
            <p>
                Subscription products define the catalog of recurring products and services
                your association offers to members and customers.
            </p>
            <p>
                <strong>Key Features:</strong>
            </p>
            <ul>
                <li><strong>Flexible Types:</strong> Memberships, publications, services, and more</li>
                <li><strong>Billing Integration:</strong> Works with AMS billing periods</li>
                <li><strong>Access Control:</strong> Member-only and approval-required options</li>
                <li><strong>Rich Descriptions:</strong> Detailed benefits and terms</li>
            </ul>
        </field>
    </record>

    <!-- ========================================================================== -->
    <!-- TYPE-SPECIFIC ACTIONS -->
    <!-- ========================================================================== -->
    
    <!-- Membership Subscriptions -->
    <record id="action_membership_subscriptions" model="ir.actions.act_window">
        <field name="name">Membership Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_type', '=', 'membership')]</field>
        <field name="context">{'search_default_type_membership': 1, 'default_subscription_type': 'membership'}</field>
    </record>

    <!-- Publication Subscriptions -->
    <record id="action_publication_subscriptions" model="ir.actions.act_window">
        <field name="name">Publication Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_type', '=', 'publication')]</field>
        <field name="context">{'search_default_type_publication': 1, 'default_subscription_type': 'publication'}</field>
    </record>

    <!-- Service Subscriptions -->
    <record id="action_service_subscriptions" model="ir.actions.act_window">
        <field name="name">Service Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_type', '=', 'service')]</field>
        <field name="context">{'search_default_type_service': 1, 'default_subscription_type': 'service'}</field>
    </record>

    <!-- Chapter & Committee Access -->
    <record id="action_chapter_committee_subscriptions" model="ir.actions.act_window">
        <field name="name">Chapter &amp; Committee Access</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_type', 'in', ['chapter', 'committee'])]</field>
        <field name="context">{'search_default_type_chapter': 1}</field>
    </record>

    <!-- ========================================================================== -->
    <!-- CATEGORY-SPECIFIC ACTIONS -->
    <!-- ========================================================================== -->
    
    <!-- Core Products -->
    <record id="action_core_subscription_products" model="ir.actions.act_window">
        <field name="name">Core Subscription Products</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_category', '=', 'core')]</field>
        <field name="context">{'search_default_category_core': 1}</field>
    </record>

    <!-- Premium Products -->
    <record id="action_premium_subscription_products" model="ir.actions.act_window">
        <field name="name">Premium Subscription Products</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('subscription_category', '=', 'premium')]</field>
        <field name="context">{'search_default_category_premium': 1}</field>
    </record>

    <!-- ========================================================================== -->
    <!-- ACCESS CONTROL ACTIONS -->
    <!-- ========================================================================== -->
    
    <!-- Members Only Subscriptions -->
    <record id="action_members_only_subscriptions" model="ir.actions.act_window">
        <field name="name">Members Only Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('member_only', '=', True)]</field>
        <field name="context">{'search_default_members_only': 1}</field>
    </record>

    <!-- Approval Required Subscriptions -->
    <record id="action_approval_required_subscriptions" model="ir.actions.act_window">
        <field name="name">Approval Required Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('requires_approval', '=', True)]</field>
        <field name="context">{'search_default_requires_approval': 1}</field>
    </record>

    <!-- ========================================================================== -->
    <!-- QUICK CREATE ACTIONS -->
    <!-- ========================================================================== -->
    
    <!-- Create Membership Subscription -->
    <record id="action_create_membership_subscription" model="ir.actions.act_window">
        <field name="name">Create Membership Subscription</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{
            'default_subscription_type': 'membership',
            'default_subscription_category': 'core',
            'default_default_duration': 12,
            'default_duration_unit': 'months'
        }</field>
    </record>

    <!-- Create Publication Subscription -->
    <record id="action_create_publication_subscription" model="ir.actions.act_window">
        <field name="name">Create Publication Subscription</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{
            'default_subscription_type': 'publication',
            'default_subscription_category': 'add_on',
            'default_default_duration': 12,
            'default_duration_unit': 'months'
        }</field>
    </record>

    <!-- Create Service Subscription -->
    <record id="action_create_service_subscription" model="ir.actions.act_window">
        <field name="name">Create Service Subscription</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
