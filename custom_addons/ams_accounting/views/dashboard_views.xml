<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Simple Welcome Dashboard -->
        <record id="action_ams_accounting_dashboard" model="ir.actions.act_window">
            <field name="name">AMS Accounting Dashboard</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to AMS Accounting!
                </p>
                <p>
                    Your accounting dashboard is ready. Navigate through the menu to access:
                </p>
                <ul>
                    <li>Member Financial Management</li>
                    <li>Subscription Accounting</li>
                    <li>Payment Plans</li>
                    <li>Chapter Financials</li>
                    <li>Credit Management</li>
                </ul>
            </field>
        </record>

        <!-- Basic Member Financial Summary (uses existing partner model) -->
        <record id="action_ams_member_summary" model="ir.actions.act_window">
            <field name="name">Member Summary</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree</field>
            <field name="domain">[('is_company', '=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No members found
                </p>
                <p>
                    Create some contacts to see member financial data here.
                </p>
            </field>
        </record>

    </data>
</odoo>