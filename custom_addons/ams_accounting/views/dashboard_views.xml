<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Main Dashboard Action -->
        <record id="action_account_invoice_report_all" model="ir.actions.client">
            <field name="name">AMS Accounting Dashboard</field>
            <field name="tag">ams_invoice_dashboard</field>
            <field name="context">{
                'search_default_group_state': 1,
                'search_default_current_year': 1
            }</field>
        </record>

        <!-- Dashboard Menu Item -->
        <menuitem name="Dashboard" 
                  id="menu_accounting_dashboard" 
                  parent="account.menu_finance"
                  sequence="0"
                  groups="group_account_dashboard"
                  action="action_account_invoice_report_all"/>

        <!-- Overview Menu (rename existing) -->
        <record model="ir.ui.menu" id="account.menu_board_journal_1">
            <field name="name">Overview</field>
        </record>

        <!-- AMS Subscription Revenue Action -->
        <record id="action_ams_subscription_revenue" model="ir.actions.act_window">
            <field name="name">AMS Subscription Revenue</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">kanban,tree,form,graph,pivot</field>
            <field name="domain">[('is_ams_subscription_invoice', '=', True)]</field>
            <field name="context">{
                'search_default_posted': 1,
                'search_default_current_year': 1,
                'group_by': ['ams_subscription_id']
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No subscription revenue data found!
                </p>
                <p>
                    Subscription revenue from AMS subscriptions will appear here.
                </p>
            </field>
        </record>

        <!-- AMS Member Financials Action -->
        <record id="action_ams_member_financials" model="ir.actions.act_window">
            <field name="name">AMS Member Financials</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('total_subscription_count', '>', 0)]</field>
            <field name="context">{
                'search_default_active_subscription': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No member financial data found!
                </p>
                <p>
                    Financial information for AMS members will appear here.
                </p>
            </field>
        </record>

        <!-- AMS Chapter Financials Action -->
        <record id="action_ams_chapter_financials" model="ir.actions.act_window">
            <field name="name">AMS Chapter Financials</field>
            <field name="res_model">ams.chapter</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('active', '=', True)]</field>
            <field name="context">{
                'search_default_with_members': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No chapter financial data found!
                </p>
                <p>
                    Financial information for AMS chapters will appear here.
                </p>
            </field>
        </record>

        <!-- AMS Renewal Pipeline Action -->
        <record id="action_ams_renewal_pipeline" model="ir.actions.act_window">
            <field name="name">AMS Renewal Pipeline</field>
            <field name="res_model">ams.subscription</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="domain">[('state', '=', 'active'), ('is_recurring', '=', True)]</field>
            <field name="context">{
                'search_default_due_soon': 1,
                'group_by': ['next_renewal_date']
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No renewals in pipeline!
                </p>
                <p>
                    Upcoming subscription renewals will appear here.
                </p>
            </field>
        </record>

        <!-- Asset Management Actions -->
        <record id="action_account_asset_asset" model="ir.actions.act_window">
            <field name="name">Assets</field>
            <field name="res_model">account.asset.asset</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_open': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first asset!
                </p>
                <p>
                    Track and manage your organization's assets with automated depreciation.
                </p>
            </field>
        </record>

        <record id="action_account_asset_category" model="ir.actions.act_window">
            <field name="name">Asset Categories</field>
            <field name="res_model">account.asset.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first asset category!
                </p>
                <p>
                    Define categories for different types of assets with specific depreciation rules.
                </p>
            </field>
        </record>

        <record id="action_account_asset_depreciation_line" model="ir.actions.act_window">
            <field name="name">Depreciation Schedule</field>
            <field name="res_model">account.asset.depreciation.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_not_posted': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No depreciation lines found!
                </p>
                <p>
                    Depreciation schedules for your assets will appear here.
                </p>
            </field>
        </record>

        <!-- Follow-up Actions -->
        <record id="action_account_followup" model="ir.actions.act_window">
            <field name="name">Follow-up Configuration</field>
            <field name="res_model">account.followup</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first follow-up configuration!
                </p>
                <p>
                    Set up automated follow-up procedures for overdue payments.
                </p>
            </field>
        </record>

        <record id="action_followup_report" model="ir.actions.act_window">
            <field name="name">Follow-up Reports</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('total_due', '>', 0)]</field>
            <field name="context">{'search_default_overdue': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No overdue customers found!
                </p>
                <p>
                    Customers with overdue payments will appear here.
                </p>
            </field>
        </record>

        <!-- Recurring Payments Actions -->
        <record id="action_recurring_payments" model="ir.actions.act_window">
            <field name="name">Recurring Payments</field>
            <field name="res_model">recurring.payments</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first recurring payment!
                </p>
                <p>
                    Set up automated recurring billing for memberships and services.
                </p>
            </field>
        </record>

        <record id="action_recurring_payment_templates" model="ir.actions.act_window">
            <field name="name">Recurring Payment Templates</field>
            <field name="res_model">recurring.payments</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_template', '=', True)]</field>
            <field name="context">{'default_is_template': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first payment template!
                </p>
                <p>
                    Create templates for commonly used recurring payments.
                </p>
            </field>
        </record>

        <!-- Multiple Invoice Actions -->
        <record id="action_multiple_invoice" model="ir.actions.act_window">
            <field name="name">Create Multiple Invoices</field>
            <field name="res_model">multiple.invoice</field>
            <field name="view_mode">form,tree</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create multiple invoices at once!
                </p>
                <p>
                    Efficiently create invoices for multiple customers simultaneously.
                </p>
            </field>
        </record>

        <record id="action_multiple_invoice_layout" model="ir.actions.act_window">
            <field name="name">Invoice Layouts</field>
            <field name="res_model">multiple.invoice.layout</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first invoice layout!
                </p>
                <p>
                    Define layouts for different types of invoices.
                </p>
            </field>
        </record>

        <!-- Configuration Action -->
        <record id="action_ams_accounting_config" model="ir.actions.act_window">
            <field name="name">AMS Accounting Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'ams_accounting'}</field>
        </record>

        <!-- Financial Report Actions (placeholders for future implementation) -->
        <record id="action_financial_report_generic" model="ir.actions.act_window">
            <field name="name">Generic Financial Reports</field>
            <field name="res_model">account.financial.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No financial reports configured!
                </p>
                <p>
                    Configure your financial reporting structure here.
                </p>
            </field>
        </record>

        <!-- Enhanced Account Move Views with AMS Integration -->
        <record id="view_account_move_ams_tree" model="ir.ui.view">
            <field name="name">account.move.ams.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="is_ams_subscription_invoice" optional="hide"/>
                    <field name="is_ams_renewal_invoice" optional="hide"/>
                    <field name="ams_subscription_id" optional="hide"/>
                    <field name="ams_chapter_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_ams_form" model="ir.ui.view">
            <field name="name">account.move.ams.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_ams_subscription_invoice" readonly="1"/>
                    <field name="is_ams_renewal_invoice" readonly="1"/>
                    <field name="ams_subscription_id" readonly="1" invisible="not is_ams_subscription_invoice"/>
                    <field name="ams_chapter_id" readonly="1" invisible="not ams_subscription_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>