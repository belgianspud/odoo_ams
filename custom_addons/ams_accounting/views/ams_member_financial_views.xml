<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Member Financial Management Views -->
    
    <!-- Tree View -->
    <record id="view_ams_member_financial_tree" model="ir.ui.view">
        <field name="name">res.partner.ams.financial.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Member Financial Records">
                <field name="name"/>
                <field name="total_ams_revenue"/>
                <field name="current_year_revenue"/>
                <field name="outstanding_ams_balance"/>
                <field name="ams_credit_limit"/>
                <field name="payment_reliability_score"/>
                <field name="payment_risk_level" widget="badge" decoration-danger="payment_risk_level=='critical'" decoration-warning="payment_risk_level=='high'" decoration-success="payment_risk_level=='low'"/>
                <field name="is_financial_member" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ams_member_financial_form" model="ir.ui.view">
        <field name="name">res.partner.ams.financial.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Member Financial Details">
                <header>
                    <button name="action_create_payment_plan" type="object" string="Create Payment Plan" class="btn-primary" attrs="{'invisible': [('has_payment_plan', '=', True)]}"/>
                    <button name="action_send_financial_statement" type="object" string="Send Statement" class="btn-secondary"/>
                    <button name="action_generate_financial_report" type="object" string="Financial Report" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="financial_summary">
                            <field name="total_ams_revenue" widget="monetary"/>
                            <field name="current_year_revenue" widget="monetary"/>
                            <field name="last_year_revenue" widget="monetary"/>
                            <field name="outstanding_ams_balance" widget="monetary"/>
                            <field name="is_financial_member" widget="boolean_toggle"/>
                        </group>
                        <group name="value_metrics">
                            <field name="customer_lifetime_value" widget="monetary"/>
                            <field name="monthly_recurring_revenue" widget="monetary"/>
                            <field name="annual_recurring_revenue" widget="monetary"/>
                            <field name="years_as_member"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="credit_management">
                            <field name="ams_credit_limit" widget="monetary"/>
                            <field name="ams_credit_used" widget="monetary"/>
                            <field name="ams_credit_available" widget="monetary"/>
                        </group>
                        <group name="payment_behavior">
                            <field name="payment_reliability_score"/>
                            <field name="payment_risk_level" widget="badge"/>
                            <field name="average_payment_delay"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Payment Plan" name="payment_plan" attrs="{'invisible': [('has_payment_plan', '=', False)]}">
                            <group>
                                <field name="has_payment_plan"/>
                                <field name="payment_plan_id" attrs="{'invisible': [('has_payment_plan', '=', False)]}"/>
                            </group>
                        </page>
                        
                        <page string="Invoices" name="invoices">
                            <group>
                                <group name="invoice_stats">
                                    <field name="total_ams_invoices"/>
                                    <field name="paid_invoices_count"/>
                                    <field name="overdue_invoices_count"/>
                                </group>
                            </group>
                            <field name="invoice_ids" domain="[('subscription_id', '!=', False)]">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="payment_state"/>
                                    <field name="state"/>
                                    <field name="subscription_id"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="subscription_type_id"/>
                                    <field name="state"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_invoiced"/>
                                    <field name="outstanding_balance"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Membership History" name="history">
                            <group>
                                <group name="membership_info">
                                    <field name="membership_start_year"/>
                                    <field name="years_as_member"/>
                                    <field name="membership_gap_years"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Communication" name="communication">
                            <group>
                                <field name="financial_communication_method"/>
                                <field name="suppress_financial_emails"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ams_member_financial_search" model="ir.ui.view">
        <field name="name">res.partner.ams.financial.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="total_ams_revenue"/>
                <field name="outstanding_ams_balance"/>
                
                <filter name="financial_members" string="Financial Members" domain="[('is_financial_member', '=', True)]"/>
                <filter name="non_financial" string="Non-Financial" domain="[('is_financial_member', '=', False)]"/>
                <filter name="has_overdue" string="Has Overdue" domain="[('overdue_invoices_count', '>', 0)]"/>
                <filter name="has_payment_plan" string="Has Payment Plan" domain="[('has_payment_plan', '=', True)]"/>
                <filter name="high_risk" string="High Risk" domain="[('payment_risk_level', 'in', ['high', 'critical'])]"/>
                <filter name="over_credit_limit" string="Over Credit Limit" domain="[('ams_credit_used', '>', 'ams_credit_limit')]"/>
                
                <separator/>
                <filter name="group_by_risk" string="Risk Level" context="{'group_by': 'payment_risk_level'}"/>
                <filter name="group_by_financial_status" string="Financial Status" context="{'group_by': 'is_financial_member'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_member_financial" model="ir.actions.act_window">
        <field name="name">Member Financial Management</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ams_member_financial_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_ams_member_financial_form')})]"/>
        <field name="search_view_id" ref="view_ams_member_financial_search"/>
        <field name="domain">[('total_subscription_count', '>', 0)]</field>
        <field name="context">{'search_default_financial_members': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No members with AMS financial data found
            </p>
            <p>
                Members will appear here once they have subscriptions or invoices.
            </p>
        </field>
    </record>

</odoo>