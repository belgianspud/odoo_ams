<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Credit Management Views -->
    
    <!-- Tree View -->
    <record id="view_ams_credit_hold_tree" model="ir.ui.view">
        <field name="name">ams.credit.hold.tree</field>
        <field name="model">ams.credit.hold</field>
        <field name="arch" type="xml">
            <tree string="Credit Holds" decoration-success="state=='released'" decoration-warning="state=='partial_release'" decoration-danger="state in ['expired', 'cancelled']" decoration-info="state=='active'">
                <field name="hold_number"/>
                <field name="partner_id"/>
                <field name="hold_type"/>
                <field name="hold_amount" widget="monetary"/>
                <field name="remaining_hold_amount" widget="monetary"/>
                <field name="used_amount" widget="monetary"/>
                <field name="hold_date"/>
                <field name="expiry_date"/>
                <field name="authorized_by"/>
                <field name="state" widget="badge" decoration-success="state=='released'" decoration-warning="state=='partial_release'" decoration-danger="state in ['expired', 'cancelled']" decoration-info="state=='active'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ams_credit_hold_form" model="ir.ui.view">
        <field name="name">ams.credit.hold.form</field>
        <field name="model">ams.credit.hold</field>
        <field name="arch" type="xml">
            <form string="Credit Hold">
                <header>
                    <button name="action_activate" type="object" string="Activate" class="btn-primary" attrs="{'invisible': [('state', 'not in', ['draft', 'pending_approval'])]}"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" attrs="{'invisible': [('state', '!=', 'pending_approval')]}"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" attrs="{'invisible': [('state', '!=', 'pending_approval')]}"/>
                    <button name="action_release" type="object" string="Release" class="btn-warning" attrs="{'invisible': [('state', 'not in', ['active', 'partial_release'])]}"/>
                    <button name="action_partial_release" type="object" string="Partial Release" class="btn-secondary" attrs="{'invisible': [('state', 'not in', ['active', 'partial_release'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['released', 'expired', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending_approval,active,partial_release,released,expired,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="hold_number" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="partner_id"/>
                            <field name="credit_limit_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="amounts">
                            <field name="hold_amount" widget="monetary"/>
                            <field name="original_hold_amount" widget="monetary" readonly="1"/>
                            <field name="used_amount" widget="monetary" readonly="1"/>
                            <field name="remaining_hold_amount" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="hold_details">
                            <field name="hold_type"/>
                            <field name="reason_category"/>
                            <field name="hold_duration_type"/>
                            <field name="hold_duration_days" attrs="{'invisible': [('hold_duration_type', '=', 'indefinite')], 'required': [('hold_duration_type', '!=', 'indefinite')]}"/>
                        </group>
                        <group name="usage_tracking">
                            <field name="usage_count" readonly="1"/>
                            <field name="requires_manager_approval" readonly="1"/>
                            <field name="escalation_required"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="dates">
                            <field name="hold_date"/>
                            <field name="expiry_date"/>
                            <field name="release_date" readonly="1"/>
                        </group>
                        <group name="alerts">
                            <field name="alert_before_expiry_days"/>
                            <field name="alert_sent" readonly="1"/>
                            <field name="alert_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description &amp; Reason" name="description">
                            <group>
                                <field name="description" nolabel="1" placeholder="Enter detailed description of the credit hold reason..."/>
                            </group>
                            
                            <group string="Internal Notes">
                                <field name="internal_notes" nolabel="1" placeholder="Internal notes not visible to member..."/>
                            </group>
                        </page>
                        
                        <page string="Authorization" name="authorization">
                            <group>
                                <group name="initial_auth">
                                    <field name="authorized_by"/>
                                    <field name="authorization_date"/>
                                    <field name="approved_by" attrs="{'invisible': [('requires_manager_approval', '=', False)]}"/>
                                    <field name="approval_date" attrs="{'invisible': [('requires_manager_approval', '=', False)]}"/>
                                </group>
                                <group name="release_auth">
                                    <field name="release_authorized_by" readonly="1"/>
                                    <field name="release_authorization_date" readonly="1"/>
                                </group>
                            </group>
                            
                            <group string="Authorization Notes">
                                <field name="authorization_notes" nolabel="1" placeholder="Authorization notes and justification..."/>
                            </group>
                            
                            <group string="Release Notes" attrs="{'invisible': [('release_authorized_by', '=', False)]}">
                                <field name="release_notes" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Usage History" name="usage">
                            <field name="usage_ids">
                                <tree>
                                    <field name="usage_type"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="description"/>
                                    <field name="usage_date"/>
                                    <field name="user_id"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_reverse" type="object" string="Reverse" icon="fa-undo" attrs="{'invisible': [('state', '!=', 'applied')]}"/>
                                </tree>
                            </field>
                            
                            <div class="mt16">
                                <button name="action_view_usage_history" type="object" string="View Full Usage History" class="btn-primary"/>
                            </div>
                        </page>
                        
                        <page string="Related Documents" name="related">
                            <group>
                                <group name="source_docs">
                                    <field name="source_document"/>
                                    <field name="external_reference"/>
                                </group>
                                <group name="related_records">
                                    <field name="invoice_id"/>
                                    <field name="payment_id"/>
                                    <field name="subscription_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Escalation" name="escalation" attrs="{'invisible': [('escalation_required', '=', False)]}">
                            <group>
                                <group name="escalation_info">
                                    <field name="escalated_to"/>
                                    <field name="escalation_date"/>
                                </group>
                            </group>
                            
                            <group string="Escalation Reason">
                                <field name="escalation_reason" nolabel="1" placeholder="Reason for escalation..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ams_credit_hold_search" model="ir.ui.view">
        <field name="name">ams.credit.hold.search</field>
        <field name="model">ams.credit.hold</field>
        <field name="arch" type="xml">
            <search>
                <field name="hold_number"/>
                <field name="partner_id"/>
                <field name="authorized_by"/>
                
                <filter name="active_holds" string="Active Holds" domain="[('state', '=', 'active')]"/>
                <filter name="pending_approval" string="Pending Approval" domain="[('state', '=', 'pending_approval')]"/>
                <filter name="partial_release" string="Partially Released" domain="[('state', '=', 'partial_release')]"/>
                <filter name="released_holds" string="Released" domain="[('state', '=', 'released')]"/>
                <filter name="expired_holds" string="Expired" domain="[('state', '=', 'expired')]"/>
                <filter name="expiring_soon" string="Expiring Soon" domain="[('expiry_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('state', 'in', ['active', 'partial_release'])]"/>
                <filter name="high_value" string="High Value (&gt;$1000)" domain="[('hold_amount', '&gt;', 1000)]"/>
                <filter name="requires_approval" string="Requires Manager Approval" domain="[('requires_manager_approval', '=', True)]"/>
                <filter name="escalated" string="Escalated" domain="[('escalation_required', '=', True)]"/>
                
                <separator/>
                <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_by_type" string="Hold Type" context="{'group_by': 'hold_type'}"/>
                <filter name="group_by_partner" string="Member" context="{'group_by': 'partner_id'}"/>
                <filter name="group_by_authorized_by" string="Authorized By" context="{'group_by': 'authorized_by'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ams_credit_hold_kanban" model="ir.ui.view">
        <field name="name">ams.credit.hold.kanban</field>
        <field name="model">ams.credit.hold</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="hold_number"/>
                <field name="partner_id"/>
                <field name="hold_amount"/>
                <field name="remaining_hold_amount"/>
                <field name="state"/>
                <field name="hold_type"/>
                <field name="expiry_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="hold_number"/></strong>
                                <div><field name="partner_id"/></div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <div><small>Hold Amount:</small> <field name="hold_amount" widget="monetary"/></div>
                                        <div><small>Remaining:</small> <field name="remaining_hold_amount" widget="monetary"/></div>
                                    </div>
                                    <div class="col-6">
                                        <div><small>Type:</small> <field name="hold_type"/></div>
                                        <div><small>Expires:</small> <field name="expiry_date"/></div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_credit_hold" model="ir.actions.act_window">
        <field name="name">Credit Holds</field>
        <field name="res_model">ams.credit.hold</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_ams_credit_hold_kanban')}), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ams_credit_hold_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_ams_credit_hold_form')})]"/>
        <field name="search_view_id" ref="view_ams_credit_hold_search"/>
        <field name="context">{'search_default_active_holds': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first credit hold
            </p>
            <p>
                Manage credit holds, authorizations, and reservations for member accounts.
            </p>
        </field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_pending_approval_holds" model="ir.actions.act_window">
        <field name="name">Pending Approval Holds</field>
        <field name="res_model">ams.credit.hold</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'pending_approval')]</field>
        <field name="context">{'search_default_pending_approval': 1}</field>
    </record>

    <record id="action_expiring_holds" model="ir.actions.act_window">
        <field name="name">Expiring Holds</field>
        <field name="res_model">ams.credit.hold</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('expiry_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('state', 'in', ['active', 'partial_release'])]</field>
        <field name="context">{'search_default_expiring_soon': 1}</field>
    </record>

    <!-- Credit Hold Usage Views -->
    <record id="view_ams_credit_hold_usage_tree" model="ir.ui.view">
        <field name="name">ams.credit.hold.usage.tree</field>
        <field name="model">ams.credit.hold.usage</field>
        <field name="arch" type="xml">
            <tree string="Credit Hold Usage" decoration-muted="state=='reversed'">
                <field name="hold_id"/>
                <field name="partner_id"/>
                <field name="usage_type"/>
                <field name="amount" widget="monetary"/>
                <field name="description"/>
                <field name="usage_date"/>
                <field name="user_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ams_credit_hold_usage_form" model="ir.ui.view">
        <field name="name">ams.credit.hold.usage.form</field>
        <field name="model">ams.credit.hold.usage</field>
        <field name="arch" type="xml">
            <form string="Credit Hold Usage">
                <header>
                    <button name="action_reverse" type="object" string="Reverse" class="btn-warning" attrs="{'invisible': [('state', '!=', 'applied')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group name="basic_info">
                            <field name="hold_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="usage_type"/>
                            <field name="amount" widget="monetary"/>
                        </group>
                        <group name="timing">
                            <field name="usage_date"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    
                    <group string="Source Document" attrs="{'invisible': [('source_document', '=', False)]}">
                        <field name="source_document" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ams_credit_hold_usage" model="ir.actions.act_window">
        <field name="name">Credit Hold Usage</field>
        <field name="res_model">ams.credit.hold.usage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No credit hold usage records found
            </p>
        </field>
    </record>

</odoo>