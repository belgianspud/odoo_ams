<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Subscription Accounting Views -->
    
    <!-- Tree View -->
    <record id="view_ams_subscription_accounting_tree" model="ir.ui.view">
        <field name="name">ams.subscription.accounting.tree</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <tree string="Subscription Accounting">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_type_id"/>
                <field name="state"/>
                <field name="total_invoiced" widget="monetary"/>
                <field name="total_paid" widget="monetary"/>
                <field name="outstanding_balance" widget="monetary"/>
                <field name="monthly_recurring_revenue" widget="monetary"/>
                <field name="annual_recurring_revenue" widget="monetary"/>
                <field name="credit_hold" widget="boolean_toggle"/>
                <field name="has_modifications" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ams_subscription_accounting_form" model="ir.ui.view">
        <field name="name">ams.subscription.accounting.form</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <form string="Subscription Accounting">
                <header>
                    <button name="action_view_financial_analysis" type="object" string="Financial Analysis" class="btn-primary"/>
                    <button name="action_create_credit_note" type="object" string="Create Credit Note" class="btn-secondary" attrs="{'invisible': [('invoice_ids', '=', [])]}"/>
                    <button name="action_put_on_credit_hold" type="object" string="Credit Hold" class="btn-warning" attrs="{'invisible': [('credit_hold', '=', True)]}"/>
                    <button name="action_remove_credit_hold" type="object" string="Remove Hold" class="btn-success" attrs="{'invisible': [('credit_hold', '=', False)]}"/>
                    <button name="create_deferred_revenue_entries" type="object" string="Process Deferred Revenue" class="btn-secondary" attrs="{'invisible': [('revenue_recognition_method', '!=', 'deferred')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="partner_id" readonly="1"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="subscription_info">
                            <field name="subscription_type_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="amount" widget="monetary"/>
                        </group>
                        <group name="financial_totals">
                            <field name="total_invoiced" widget="monetary"/>
                            <field name="total_paid" widget="monetary"/>
                            <field name="outstanding_balance" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="revenue_metrics">
                            <field name="monthly_recurring_revenue" widget="monetary"/>
                            <field name="annual_recurring_revenue" widget="monetary"/>
                            <field name="lifetime_value" widget="monetary"/>
                        </group>
                        <group name="credit_management">
                            <field name="credit_hold"/>
                            <field name="credit_limit" widget="monetary"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Accounting Setup" name="accounting">
                            <group>
                                <group name="revenue_recognition">
                                    <field name="revenue_recognition_method"/>
                                    <field name="deferred_revenue_account_id" attrs="{'invisible': [('revenue_recognition_method', '!=', 'deferred')], 'required': [('revenue_recognition_method', '=', 'deferred')]}"/>
                                </group>
                                <group name="analytics">
                                    <field name="account_analytic_id"/>
                                    <field name="payment_term_id"/>
                                </group>
                            </group>
                            
                            <group>
                                <field name="tax_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        
                        <page string="Invoices" name="invoices">
                            <field name="invoice_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="amount_residual"/>
                                    <field name="payment_state"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Modifications" name="modifications" attrs="{'invisible': [('has_modifications', '=', False)]}">
                            <field name="modification_ids">
                                <tree>
                                    <field name="modification_type"/>
                                    <field name="original_amount"/>
                                    <field name="new_amount"/>
                                    <field name="amount_change"/>
                                    <field name="effective_date"/>
                                    <field name="processed"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Financial Analysis" name="analysis">
                            <group>
                                <button name="action_view_financial_analysis" type="object" string="Detailed Financial Analysis" class="btn-link"/>
                            </group>
                            
                            <!-- Quick financial metrics display -->
                            <group string="Quick Metrics">
                                <group name="revenue_breakdown">
                                    <label for="total_invoiced" string="Revenue Breakdown"/>
                                    <div>
                                        <field name="total_invoiced" widget="monetary" readonly="1"/> (Total Invoiced)
                                    </div>
                                    <div>
                                        <field name="total_paid" widget="monetary" readonly="1"/> (Total Paid) 
                                    </div>
                                    <div>
                                        <field name="outstanding_balance" widget="monetary" readonly="1"/> (Outstanding)
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ams_subscription_accounting_search" model="ir.ui.view">
        <field name="name">ams.subscription.accounting.search</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_type_id"/>
                
                <filter name="active_subscriptions" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="credit_hold" string="Credit Hold" domain="[('credit_hold', '=', True)]"/>
                <filter name="has_outstanding" string="Outstanding Balance" domain="[('outstanding_balance', '>', 0)]"/>
                <filter name="has_modifications" string="Has Modifications" domain="[('has_modifications', '=', True)]"/>
                <filter name="deferred_revenue" string="Deferred Revenue" domain="[('revenue_recognition_method', '=', 'deferred')]"/>
                
                <separator/>
                <filter name="group_by_type" string="Subscription Type" context="{'group_by': 'subscription_type_id'}"/>
                <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_by_recognition" string="Revenue Recognition" context="{'group_by': 'revenue_recognition_method'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View for Dashboard -->
    <record id="view_ams_subscription_accounting_kanban" model="ir.ui.view">
        <field name="name">ams.subscription.accounting.kanban</field>
        <field name="model">ams.subscription</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="total_invoiced"/>
                <field name="outstanding_balance"/>
                <field name="monthly_recurring_revenue"/>
                <field name="credit_hold"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="partner_id"/></div>
                                <div class="row">
                                    <div class="col-6">
                                        <div>Invoiced: <field name="total_invoiced" widget="monetary"/></div>
                                        <div>Outstanding: <field name="outstanding_balance" widget="monetary"/></div>
                                    </div>
                                    <div class="col-6">
                                        <div>MRR: <field name="monthly_recurring_revenue" widget="monetary"/></div>
                                        <div>Status: <field name="state" widget="badge"/></div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <t t-if="record.credit_hold.raw_value">
                                        <span class="badge badge-danger">Credit Hold</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_subscription_accounting" model="ir.actions.act_window">
        <field name="name">Subscription Accounting</field>
        <field name="res_model">ams.subscription</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_ams_subscription_accounting_kanban')}), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ams_subscription_accounting_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_ams_subscription_accounting_form')})]"/>
        <field name="search_view_id" ref="view_ams_subscription_accounting_search"/>
        <field name="context">{'search_default_active_subscriptions': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription with accounting integration
            </p>
            <p>
                Manage subscription billing, revenue recognition, and financial tracking.
            </p>
        </field>
    </record>

</odoo>