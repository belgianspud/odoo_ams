<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Payment Plan Views -->
    
    <!-- Tree View -->
    <record id="view_ams_payment_plan_tree" model="ir.ui.view">
        <field name="name">ams.payment.plan.tree</field>
        <field name="model">ams.payment.plan</field>
        <field name="arch" type="xml">
            <tree string="Payment Plans" decoration-success="state=='completed'" decoration-warning="state=='suspended'" decoration-danger="state=='defaulted'" decoration-muted="state=='cancelled'">
                <field name="plan_number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="total_amount" widget="monetary"/>
                <field name="amount_paid" widget="monetary"/>
                <field name="amount_remaining" widget="monetary"/>
                <field name="completion_percentage" widget="progressbar"/>
                <field name="payments_made"/>
                <field name="number_of_payments"/>
                <field name="next_payment_date"/>
                <field name="state" widget="badge" decoration-success="state=='completed'" decoration-warning="state=='suspended'" decoration-danger="state=='defaulted'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ams_payment_plan_form" model="ir.ui.view">
        <field name="name">ams.payment.plan.form</field>
        <field name="model">ams.payment.plan</field>
        <field name="arch" type="xml">
            <form string="Payment Plan">
                <header>
                    <button name="action_activate" type="object" string="Activate" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_suspend" type="object" string="Suspend" class="btn-warning" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_resume" type="object" string="Resume" class="btn-success" attrs="{'invisible': [('state', '!=', 'suspended')]}"/>
                    <button name="action_complete" type="object" string="Mark Complete" class="btn-primary" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <button name="action_default" type="object" string="Mark Default" class="btn-danger" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled', 'defaulted'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,suspended,completed,defaulted,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="plan_number" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="member_info">
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="progress_info">
                            <field name="completion_percentage" widget="progressbar"/>
                            <field name="payments_made"/>
                            <field name="amount_paid" widget="monetary"/>
                            <field name="amount_remaining" widget="monetary"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="amounts">
                            <field name="total_amount" widget="monetary"/>
                            <field name="down_payment" widget="monetary"/>
                            <field name="remaining_amount" widget="monetary"/>
                        </group>
                        <group name="schedule">
                            <field name="number_of_payments"/>
                            <field name="payment_frequency"/>
                            <field name="custom_frequency_days" attrs="{'invisible': [('payment_frequency', '!=', 'custom')], 'required': [('payment_frequency', '=', 'custom')]}"/>
                            <field name="payment_amount_type"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="dates">
                            <field name="start_date"/>
                            <field name="first_payment_date"/>
                            <field name="end_date"/>
                            <field name="next_payment_date"/>
                            <field name="last_payment_date"/>
                        </group>
                        <group name="fees">
                            <field name="interest_rate"/>
                            <field name="setup_fee" widget="monetary"/>
                            <field name="late_fee_amount" widget="monetary"/>
                            <field name="grace_period_days"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Payment Schedule" name="schedule">
                            <field name="payment_line_ids">
                                <tree decoration-success="state=='paid'" decoration-warning="state=='overdue'" decoration-info="state=='pending'" editable="bottom">
                                    <field name="sequence"/>
                                    <field name="due_date"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="principal_amount" widget="monetary"/>
                                    <field name="interest_amount" widget="monetary"/>
                                    <field name="late_fee_amount" widget="monetary"/>
                                    <field name="total_amount_due" widget="monetary"/>
                                    <field name="amount_paid" widget="monetary"/>
                                    <field name="payment_date"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_record_payment" type="object" string="Record Payment" icon="fa-money" attrs="{'invisible': [('state', 'in', ['paid', 'cancelled'])]}"/>
                                    <button name="action_send_reminder" type="object" string="Send Reminder" icon="fa-envelope" attrs="{'invisible': [('state', 'in', ['paid', 'cancelled'])]}"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Payments" name="payments">
                            <field name="payment_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="payment_method_line_id"/>
                                    <!--<field name="ref"/>-->
                                    <field name="state"/>
                                </tree>
                            </field>
                            <div class="mt16">
                                <button name="action_view_payments" type="object" string="View All Payments" class="btn-primary"/>
                            </div>
                        </page>
                        
                        <page string="Related Invoices" name="invoices">
                            <field name="invoice_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total" widget="monetary"/>
                                    <field name="amount_residual" widget="monetary"/>
                                    <field name="payment_state"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Auto Payment" name="auto_payment">
                            <group>
                                <group name="auto_payment_setup">
                                    <field name="auto_payment_enabled"/>
                                    <field name="payment_method_id" attrs="{'invisible': [('auto_payment_enabled', '=', False)]}"/>
                                </group>
                                <group name="reminders">
                                    <field name="contact_preference"/>
                                    <field name="reminder_days_before"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Tracking" name="tracking">
                            <group>
                                <group name="default_tracking">
                                    <field name="missed_payments"/>
                                    <field name="consecutive_missed"/>
                                </group>
                                <group name="approval">
                                    <field name="approved_by"/>
                                    <field name="approval_date"/>
                                </group>
                            </group>
                            
                            <group string="Approval Notes">
                                <field name="approval_notes" nolabel="1" placeholder="Enter approval notes..."/>
                            </group>
                        </page>
                        
                        <page string="Terms &amp; Agreement" name="terms">
                            <group>
                                <group name="agreement_info">
                                    <field name="member_agreed"/>
                                    <field name="agreement_date"/>
                                    <field name="agreement_ip_address"/>
                                </group>
                            </group>
                            
                            <group string="Terms and Conditions">
                                <field name="terms_and_conditions" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ams_payment_plan_search" model="ir.ui.view">
        <field name="name">ams.payment.plan.search</field>
        <field name="model">ams.payment.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="plan_number"/>
                <field name="name"/>
                <field name="partner_id"/>
                
                <filter name="active_plans" string="Active Plans" domain="[('state', '=', 'active')]"/>
                <filter name="draft_plans" string="Draft Plans" domain="[('state', '=', 'draft')]"/>
                <filter name="completed_plans" string="Completed" domain="[('state', '=', 'completed')]"/>
                <filter name="suspended_plans" string="Suspended" domain="[('state', '=', 'suspended')]"/>
                <filter name="defaulted_plans" string="Defaulted" domain="[('state', '=', 'defaulted')]"/>
                <filter name="overdue_payments" string="Overdue Payments" domain="[('next_payment_date', '&lt;', context_today()), ('state', '=', 'active')]"/>
                <filter name="auto_payment_enabled" string="Auto Payment" domain="[('auto_payment_enabled', '=', True)]"/>
                <filter name="has_missed_payments" string="Has Missed Payments" domain="[('missed_payments', '>', 0)]"/>
                
                <separator/>
                <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_by_frequency" string="Payment Frequency" context="{'group_by': 'payment_frequency'}"/>
                <filter name="group_by_partner" string="Member" context="{'group_by': 'partner_id'}"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ams_payment_plan_kanban" model="ir.ui.view">
        <field name="name">ams.payment.plan.kanban</field>
        <field name="model">ams.payment.plan</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="plan_number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="total_amount"/>
                <field name="amount_paid"/>
                <field name="amount_remaining"/>
                <field name="completion_percentage"/>
                <field name="state"/>
                <field name="next_payment_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="plan_number"/></strong>
                                <div><field name="name"/></div>
                                <div><field name="partner_id"/></div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <div>Total: <field name="total_amount" widget="monetary"/></div>
                                        <div>Paid: <field name="amount_paid" widget="monetary"/></div>
                                    </div>
                                    <div class="col-6">
                                        <div>Remaining: <field name="amount_remaining" widget="monetary"/></div>
                                        <div>Next Payment: <field name="next_payment_date"/></div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <field name="completion_percentage" widget="progressbar"/>
                                </div>
                                <div class="mt-2">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_payment_plan" model="ir.actions.act_window">
        <field name="name">Payment Plans</field>
        <field name="res_model">ams.payment.plan</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_ams_payment_plan_kanban')}), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ams_payment_plan_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_ams_payment_plan_form')})]"/>
        <field name="search_view_id" ref="view_ams_payment_plan_search"/>
        <field name="context">{'search_default_active_plans': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first payment plan
            </p>
            <p>
                Set up installment payment plans for members with outstanding balances.
            </p>
        </field>
    </record>

</odoo>