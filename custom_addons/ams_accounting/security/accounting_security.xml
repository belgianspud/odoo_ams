            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ams_credit_limit_manager_rule" model="ir.rule">
            <field name="name">AMS Credit Limit: Manager Access</field>
            <field name="model_id" ref="model_ams_credit_limit"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_ams_accounting_manager')), (4, ref('group_ams_credit_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Payment Plans -->
