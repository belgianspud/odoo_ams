<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Financial Report -->
    
    <!-- Report Action -->
    <record id="action_partner_financial_report" model="ir.actions.report">
        <field name="name">AMS Customer Financial Statement</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ams_accounting.partner_financial_report_template</field>
        <field name="report_file">ams_accounting.partner_financial_report_template</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="paperformat_id" ref="base.paperformat_us"/>
    </record>

    <!-- Report Template -->
    <template id="partner_financial_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="partner">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <!-- Report Header -->
                        <div class="row">
                            <div class="col-8">
                                <h2 class="text-primary">Customer Financial Statement</h2>
                                <h4 t-field="partner.name"/>
                                <div t-if="partner.parent_id">
                                    <p class="text-muted">Part of: <span t-field="partner.parent_id.name"/></p>
                                </div>
                            </div>
                            <div class="col-4 text-right">
                                <p><strong>Statement Date:</strong><br/>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %d, %Y')"/></p>
                                <p><strong>Customer ID:</strong><br/>
                                <span t-field="partner.id"/></p>
                            </div>
                        </div>
                        
                        <!-- Customer Information -->
                        <div class="row mt-3">
                            <div class="col-6">
                                <h5 class="text-secondary">Contact Information</h5>
                                <address>
                                    <div t-field="partner.contact_address" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                </address>
                                <div t-if="partner.phone">
                                    <strong>Phone:</strong> <span t-field="partner.phone"/>
                                </div>
                                <div t-if="partner.email">
                                    <strong>Email:</strong> <span t-field="partner.email"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <h5 class="text-secondary">Account Information</h5>
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td><strong>Payment Status:</strong></td>
                                        <td>
                                            <span t-field="partner.ams_payment_status"
                                                  t-attf-class="badge badge-#{partner.ams_payment_status == 'current' and 'success' or partner.ams_payment_status == 'overdue' and 'warning' or 'danger'}"/>
                                        </td>
                                    </tr>
                                    <tr t-if="partner.days_overdue > 0">
                                        <td><strong>Days Overdue:</strong></td>
                                        <td class="text-danger"><span t-field="partner.days_overdue"/> days</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Credit Limit:</strong></td>
                                        <td>
                                            <span t-field="partner.ams_credit_limit" 
                                                  t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Credit Hold:</strong></td>
                                        <td>
                                            <span t-if="partner.credit_hold" class="text-danger">Active</span>
                                            <span t-if="not partner.credit_hold" class="text-success">None</span>
                                        </td>
                                    </tr>
                                    <tr t-if="partner.preferred_payment_method">
                                        <td><strong>Payment Method:</strong></td>
                                        <td t-field="partner.preferred_payment_method"/>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Financial Summary -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="text-secondary">Financial Summary</h4>
                                <div class="row">
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center border-primary">
                                            <div class="card-body">
                                                <h6 class="card-title text-primary">Total Revenue</h6>
                                                <h4 class="text-success">
                                                    <span t-field="partner.ams_total_revenue" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h4>
                                                <small class="text-muted">All Time</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center border-info">
                                            <div class="card-body">
                                                <h6 class="card-title text-info">YTD Revenue</h6>
                                                <h4 class="text-primary">
                                                    <span t-field="partner.ams_ytd_revenue" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h4>
                                                <small class="text-muted">Year to Date</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center border-warning">
                                            <div class="card-body">
                                                <h6 class="card-title text-warning">Outstanding</h6>
                                                <h4 t-attf-class="#{partner.ams_total_receivable > 0 and 'text-danger' or 'text-muted'}">
                                                    <span t-field="partner.ams_total_receivable" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h4>
                                                <small class="text-muted">Amount Due</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center border-secondary">
                                            <div class="card-body">
                                                <h6 class="card-title text-secondary">Deferred Revenue</h6>
                                                <h4 class="text-info">
                                                    <span t-field="partner.ams_deferred_revenue" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h4>
                                                <small class="text-muted">To Recognize</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Revenue Breakdown -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="text-secondary">Revenue Breakdown (YTD)</h5>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6 class="text-primary">Membership Revenue</h6>
                                                <h5>
                                                    <span t-field="partner.membership_revenue_ytd" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6 class="text-info">Chapter Revenue</h6>
                                                <h5>
                                                    <span t-field="partner.chapter_revenue_ytd" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6 class="text-warning">Publication Revenue</h6>
                                                <h5>
                                                    <span t-field="partner.publication_revenue_ytd" 
                                                          t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Active Subscriptions -->
                        <div class="row mt-4" t-if="partner.subscription_ids.filtered(lambda s: s.state == 'active')">
                            <div class="col-12">
                                <h4 class="text-secondary">Active Subscriptions</h4>
                                <table class="table table-striped">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Subscription</th>
                                            <th>Type</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Amount</th>
                                            <th>Renewal</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="partner.subscription_ids.filtered(lambda s: s.state == 'active')" t-as="subscription">
                                            <tr>
                                                <td t-field="subscription.name"/>
                                                <td t-field="subscription.subscription_type_id.name"/>
                                                <td t-field="subscription.start_date"/>
                                                <td t-field="subscription.end_date"/>
                                                <td>
                                                    <span t-field="subscription.amount" 
                                                          t-options="{'widget': 'monetary', 'display_currency': subscription.currency_id}"/>
                                                </td>
                                                <td>
                                                    <span t-if="subscription.auto_renewal" class="text-success">Auto</span>
                                                    <span t-if="not subscription.auto_renewal" class="text-muted">Manual</span>
                                                </td>
                                                <td>
                                                    <span t-field="subscription.accounting_status"
                                                          t-attf-class="badge badge-#{subscription.accounting_status == 'active' and 'success' or subscription.accounting_status == 'pending' and 'warning' or 'secondary'}"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr class="font-weight-bold">
                                            <td colspan="4">Total Active Subscriptions</td>
                                            <td>
                                                <span t-esc="sum(partner.subscription_ids.filtered(lambda s: s.state == 'active').mapped('amount'))" 
                                                      t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                            </td>
                                            <td colspan="2"></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Outstanding Invoices -->
                        <div class="row mt-4" t-if="partner.subscription_ids.mapped('invoice_ids').filtered(lambda i: i.amount_residual > 0)">
                            <div class="col-12">
                                <h4 class="text-secondary">Outstanding Invoices</h4>
                                <table class="table table-striped">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Invoice Number</th>
                                            <th>Date</th>
                                            <th>Due Date</th>
                                            <th>Subscription</th>
                                            <th>Original Amount</th>
                                            <th>Amount Due</th>
                                            <th>Days Overdue</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="outstanding_invoices" t-value="partner.subscription_ids.mapped('invoice_ids').filtered(lambda i: i.amount_residual > 0).sorted('invoice_date_due')"/>
                                        <t t-foreach="outstanding_invoices" t-as="invoice">
                                            <t t-set="days_overdue" t-value="(datetime.date.today() - invoice.invoice_date_due).days if invoice.invoice_date_due and invoice.invoice_date_due &lt; datetime.date.today() else 0"/>
                                            <tr t-attf-class="#{days_overdue > 30 and 'table-danger' or days_overdue > 0 and 'table-warning' or ''}">
                                                <td t-field="invoice.name"/>
                                                <td t-field="invoice.invoice_date"/>
                                                <td t-field="invoice.invoice_date_due"/>
                                                <td t-field="invoice.ams_subscription_id.name"/>
                                                <td>
                                                    <span t-field="invoice.amount_total" 
                                                          t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}"/>
                                                </td>
                                                <td class="font-weight-bold">
                                                    <span t-field="invoice.amount_residual" 
                                                          t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}"/>
                                                </td>
                                                <td>
                                                    <span t-if="days_overdue > 0" t-esc="days_overdue" class="text-danger"/>
                                                    <span t-if="days_overdue &lt;= 0" class="text-success">Current</span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr class="font-weight-bold table-info">
                                            <td colspan="4">Total Outstanding</td>
                                            <td>
                                                <span t-esc="sum(outstanding_invoices.mapped('amount_total'))" 
                                                      t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                            </td>
                                            <td class="text-danger">
                                                <span t-esc="sum(outstanding_invoices.mapped('amount_residual'))" 
                                                      t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Payment History (Last 12 months) -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="text-secondary">Recent Payment History</h4>
                                <t t-set="cutoff_date" t-value="(datetime.date.today() - datetime.timedelta(days=365))"/>
                                <t t-set="recent_invoices" t-value="partner.subscription_ids.mapped('invoice_ids').filtered(lambda i: i.payment_state == 'paid' and i.invoice_date and i.invoice_date >= cutoff_date).sorted('invoice_date', reverse=True)[:10]"/>
                                <table class="table table-striped">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Invoice Number</th>
                                            <th>Date</th>
                                            <th>Subscription</th>
                                            <th>Amount Paid</th>
                                            <th>Payment Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="recent_invoices">
                                            <t t-foreach="recent_invoices" t-as="invoice">
                                                <tr>
                                                    <td t-field="invoice.name"/>
                                                    <td t-field="invoice.invoice_date"/>
                                                    <td t-field="invoice.ams_subscription_id.name"/>
                                                    <td>
                                                        <span t-field="invoice.amount_total" 
                                                              t-options="{'widget': 'monetary', 'display_currency': invoice.currency_id}"/>
                                                    </td>
                                                    <td>
                                                        <t t-set="last_payment" t-value="invoice.payment_ids.sorted('date', reverse=True)[:1]"/>
                                                        <span t-if="last_payment" t-field="last_payment.date"/>
                                                        <span t-if="not last_payment" class="text-muted">Unknown</span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-if="not recent_invoices">
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">No recent payments found</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot t-if="recent_invoices">
                                        <tr class="font-weight-bold">
                                            <td colspan="3">Total Recent Payments</td>
                                            <td>
                                                <span t-esc="sum(recent_invoices.mapped('amount_total'))" 
                                                      t-options="{'widget': 'monetary', 'display_currency': partner.currency_id}"/>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Subscription History Summary -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="text-secondary">Subscription Summary</h4>
                                <div class="row">
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6>Total Subscriptions</h6>
                                                <h4 class="text-primary"><span t-field="partner.total_subscription_count"/></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6>Active Subscriptions</h6>
                                                <h4 class="text-success"><span t-field="partner.active_subscription_count"/></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6>Expired Subscriptions</h6>
                                                <h4 class="text-warning"><span t-field="partner.expired_subscription_count"/></h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <h6>Cancelled Subscriptions</h6>
                                                <h4 class="text-danger"><span t-field="partner.cancelled_subscription_count"/></h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Collection Notes -->
                        <div class="row mt-4" t-if="partner.collection_notes">
                            <div class="col-12">
                                <h5 class="text-secondary">Collection Notes</h5>
                                <div class="alert alert-info">
                                    <p t-field="partner.collection_notes"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Footer -->
                        <div class="row mt-5">
                            <div class="col-12 text-center text-muted">
                                <hr/>
                                <p><strong>Important:</strong> This statement reflects your account status as of the statement date above.</p>
                                <p>For questions about your account, please contact our billing department.</p>
                                <p>Payment should reference your customer ID: <strong t-field="partner.id"/></p>
                            </div>
                        </div>
                        
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Add menu item for partner financial reports -->
    <record id="action_partner_financial_report_menu" model="ir.actions.act_window">
        <field name="name">Generate Customer Statements</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('total_subscription_count', '>', 0)]</field>
        <field name="context">{'search_default_ams_customers': 1}</field>
    </record>
    
    <!-- Batch Customer Statement Generation Action -->
    <record id="action_batch_customer_statements" model="ir.actions.server">
        <field name="name">Generate Customer Statements</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
# Filter to only AMS customers
ams_customers = records.filtered(lambda p: p.total_subscription_count > 0)

if ams_customers:
    return {
        'type': 'ir.actions.report',
        'report_name': 'ams_accounting.partner_financial_report_template',
        'report_type': 'qweb-pdf',
        'data': {},
        'context': env.context,
    }
else:
    raise UserError("Please select customers with AMS subscriptions.")
        </field>
    </record>
</odoo>