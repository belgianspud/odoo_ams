<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Product Categories for Subscription Products -->
        <record id="categ_membership_products" model="product.category">
            <field name="name">Membership Products</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="categ_subscription_products" model="product.category">
            <field name="name">Subscription Products</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="categ_publication_subscriptions" model="product.category">
            <field name="name">Publication Subscriptions</field>
            <field name="parent_id" ref="categ_subscription_products"/>
        </record>

        <record id="categ_chapter_memberships" model="product.category">
            <field name="name">Chapter Memberships</field>
            <field name="parent_id" ref="categ_subscription_products"/>
        </record>

        <!-- Default Member Benefits -->
        
        <!-- Portal Access Benefit -->
        <record id="benefit_portal_access" model="ams.benefit">
            <field name="name">Member Portal Access</field>
            <field name="code">PORTAL</field>
            <field name="description">Access to member portal with exclusive content and resources</field>
            <field name="benefit_type">access</field>
            <field name="applies_to">all</field>
            <field name="auto_apply">True</field>
            <field name="sequence">10</field>
        </record>

        <!-- Member Directory Access -->
        <record id="benefit_directory_access" model="ams.benefit">
            <field name="name">Member Directory Access</field>
            <field name="code">DIRECTORY</field>
            <field name="description">Access to searchable member directory for networking</field>
            <field name="benefit_type">networking</field>
            <field name="applies_to">membership</field>
            <field name="auto_apply">True</field>
            <field name="sequence">20</field>
        </record>

        <!-- Event Discounts -->
        <record id="benefit_event_discount" model="ams.benefit">
            <field name="name">Member Event Pricing</field>
            <field name="code">EVENT_DISC</field>
            <field name="description">Discounted pricing on association events and conferences</field>
            <field name="benefit_type">discount</field>
            <field name="applies_to">membership_and_chapter</field>
            <field name="discount_type">percentage</field>
            <field name="discount_percentage">15.0</field>
            <field name="applies_to_products">True</field>
            <field name="auto_apply">True</field>
            <field name="sequence">30</field>
        </record>

        <!-- Publication Access -->
        <record id="benefit_publication_access" model="ams.benefit">
            <field name="name">Digital Publication Access</field>
            <field name="code">PUB_DIGITAL</field>
            <field name="description">Online access to association publications and archives</field>
            <field name="benefit_type">digital</field>
            <field name="applies_to">all</field>
            <field name="auto_apply">True</field>
            <field name="sequence">40</field>
        </record>

        <!-- Resource Library -->
        <record id="benefit_resource_library" model="ams.benefit">
            <field name="name">Resource Library Access</field>
            <field name="code">RESOURCES</field>
            <field name="description">Access to exclusive member resources, templates, and guides</field>
            <field name="benefit_type">content</field>
            <field name="applies_to">membership</field>
            <field name="auto_apply">True</field>
            <field name="sequence">50</field>
        </record>

        <!-- CE Credits -->
        <record id="benefit_ce_credits" model="ams.benefit">
            <field name="name">Continuing Education Credits</field>
            <field name="code">CE_CREDITS</field>
            <field name="description">Access to continuing education programs and credit tracking</field>
            <field name="benefit_type">service</field>
            <field name="applies_to">membership</field>
            <field name="auto_apply">True</field>
            <field name="sequence">60</field>
        </record>

        <!-- Early Bird Registration -->
        <record id="benefit_early_registration" model="ams.benefit">
            <field name="name">Early Bird Event Registration</field>
            <field name="code">EARLY_REG</field>
            <field name="description">Priority registration access for events and conferences</field>
            <field name="benefit_type">event</field>
            <field name="applies_to">membership_and_chapter</field>
            <field name="early_bird_access">True</field>
            <field name="auto_apply">True</field>
            <field name="sequence">70</field>
        </record>

        <!-- Default Membership Products -->
        
        <!-- Regular Membership Product -->
        <record id="product_membership_regular" model="product.template">
            <field name="name">Regular Annual Membership</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_membership_products"/>
            <field name="list_price">250.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">membership</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">True</field>
            <field name="renewal_reminder_days">30</field>
            <field name="grant_portal_access">True</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">True</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_portal_access'),
                ref('benefit_directory_access'),
                ref('benefit_event_discount'),
                ref('benefit_publication_access'),
                ref('benefit_resource_library'),
                ref('benefit_ce_credits'),
                ref('benefit_early_registration')
            ])]"/>
        </record>

        <!-- Student Membership Product -->
        <record id="product_membership_student" model="product.template">
            <field name="name">Student Annual Membership</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_membership_products"/>
            <field name="list_price">50.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">membership</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">False</field>
            <field name="renewal_reminder_days">45</field>
            <field name="grant_portal_access">True</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">False</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_portal_access'),
                ref('benefit_directory_access'),
                ref('benefit_event_discount'),
                ref('benefit_publication_access')
            ])]"/>
        </record>

        <!-- Corporate Membership Product -->
        <record id="product_membership_corporate" model="product.template">
            <field name="name">Corporate Annual Membership</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_membership_products"/>
            <field name="list_price">1500.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">membership</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">True</field>
            <field name="renewal_reminder_days">60</field>
            <field name="grant_portal_access">True</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">True</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_portal_access'),
                ref('benefit_directory_access'),
                ref('benefit_event_discount'),
                ref('benefit_publication_access'),
                ref('benefit_resource_library'),
                ref('benefit_ce_credits'),
                ref('benefit_early_registration')
            ])]"/>
        </record>

        <!-- Sample Publication Subscription -->
        <record id="product_publication_journal" model="product.template">
            <field name="name">Professional Journal Subscription</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_publication_subscriptions"/>
            <field name="list_price">120.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">publication</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">True</field>
            <field name="renewal_reminder_days">30</field>
            <field name="publication_digital_access">True</field>
            <field name="publication_print_delivery">False</field>
            <field name="publication_frequency">monthly</field>
            <field name="grant_portal_access">False</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">True</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [ref('benefit_publication_access')])]"/>
        </record>

        <!-- Digital + Print Publication -->
        <record id="product_publication_journal_print" model="product.template">
            <field name="name">Professional Journal - Digital + Print</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_publication_subscriptions"/>
            <field name="list_price">180.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">publication</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">True</field>
            <field name="renewal_reminder_days">30</field>
            <field name="publication_digital_access">True</field>
            <field name="publication_print_delivery">True</field>
            <field name="publication_frequency">monthly</field>
            <field name="grant_portal_access">False</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">True</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [ref('benefit_publication_access')])]"/>
        </record>

        <!-- Sample Chapter Membership -->
        <record id="product_chapter_local" model="product.template">
            <field name="name">Local Chapter Membership</field>
            <field name="type">service</field>
            <field name="categ_id" ref="categ_chapter_memberships"/>
            <field name="list_price">75.00</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="is_subscription_product">True</field>
            <field name="subscription_product_type">chapter</field>
            <field name="subscription_period">annual</field>
            <field name="auto_renew_default">True</field>
            <field name="renewal_reminder_days">30</field>
            <field name="chapter_access_level">basic</field>
            <field name="grant_portal_access">False</field>
            <field name="supports_proration">True</field>
            <field name="allows_upgrades">True</field>
            <field name="allows_downgrades">True</field>
            <field name="revenue_recognition_method">deferred</field>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_event_discount'),
                ref('benefit_early_registration')
            ])]"/>
        </record>

        <!-- Membership Tags -->
        <record id="tag_new_member" model="ams.membership.tag">
            <field name="name">New Member</field>
            <field name="color">3</field>
        </record>

        <record id="tag_renewing" model="ams.membership.tag">
            <field name="name">Renewing</field>
            <field name="color">4</field>
        </record>

        <record id="tag_vip" model="ams.membership.tag">
            <field name="name">VIP</field>
            <field name="color">2</field>
        </record>

        <record id="tag_early_renewer" model="ams.membership.tag">
            <field name="name">Early Renewer</field>
            <field name="color">10</field>
        </record>

        <!-- Subscription Tags -->
        <record id="sub_tag_digital_only" model="ams.subscription.tag">
            <field name="name">Digital Only</field>
            <field name="color">1</field>
        </record>

        <record id="sub_tag_print_subscriber" model="ams.subscription.tag">
            <field name="name">Print Subscriber</field>
            <field name="color">5</field>
        </record>

        <record id="sub_tag_chapter_officer" model="ams.subscription.tag">
            <field name="name">Chapter Officer</field>
            <field name="color">8</field>
        </record>

    </data>
</odoo>