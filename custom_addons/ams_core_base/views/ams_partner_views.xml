<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- AMS Lookup Tree View -->
        <record id="view_ams_lookup_tree" model="ir.ui.view">
            <field name="name">ams.lookup.tree</field>
            <field name="model">ams.lookup</field>
            <field name="arch" type="xml">
                <tree string="Lookup Values" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="category"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="industry_types"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="is_default" widget="boolean_toggle"/>
                    <field name="is_system" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- AMS Lookup Form View -->
        <record id="view_ams_lookup_form" model="ir.ui.view">
            <field name="name">ams.lookup.form</field>
            <field name="model">ams.lookup</field>
            <field name="arch" type="xml">
                <form string="Lookup Value">
                    <header>
                        <button name="toggle_active" type="object" string="Archive" 
                                attrs="{'invisible': [('active', '=', False)]}" class="btn-secondary"/>
                        <button name="toggle_active" type="object" string="Unarchive" 
                                attrs="{'invisible': [('active', '=', True)]}" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="System Value" bg_color="bg-info" 
                                attrs="{'invisible': [('is_system', '=', False)]}"/>
                        <widget name="web_ribbon" title="Default" bg_color="bg-success" 
                                attrs="{'invisible': [('is_default', '=', False)]}"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Lookup Value Name"/></h1>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="category"/>
                                <field name="code"/>
                                <field name="active"/>
                                <field name="sequence"/>
                            </group>
                            <group name="settings" string="Settings">
                                <field name="industry_types"/>
                                <field name="is_default"/>
                                <field name="is_system" readonly="1"/>
                                <field name="usage_count" readonly="1"/>
                            </group>
                        </group>

                        <group name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AMS Lookup Search View -->
        <record id="view_ams_lookup_search" model="ir.ui.view">
            <field name="name">ams.lookup.search</field>
            <field name="model">ams.lookup</field>
            <field name="arch" type="xml">
                <search string="Search Lookup Values">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
                    <field name="category"/>
                    <field name="industry_types"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Default Values" name="default" domain="[('is_default', '=', True)]"/>
                    <filter string="System Values" name="system" domain="[('is_system', '=', True)]"/>
                    
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Industry Type" name="group_industry" context="{'group_by': 'industry_types'}"/>
                        <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AMS Lookup Action -->
        <record id="action_ams_lookup" model="ir.actions.act_window">
            <field name="name">Lookup Values</field>
            <field name="res_model">ams.lookup</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ams_lookup_tree"/>
            <field name="search_view_id" ref="view_ams_lookup_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first lookup value
                </p>
                <p>
                    Lookup values are used throughout the AMS for consistent dropdown options.
                    Configure values for member types, professional categories, and more.
                </p>
            </field>
        </record>

        <!-- AMS Lookup Category Tree View -->
        <record id="view_ams_lookup_category_tree" model="ir.ui.view">
            <field name="name">ams.lookup.category.tree</field>
            <field name="model">ams.lookup.category</field>
            <field name="arch" type="xml">
                <tree string="Lookup Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="applicable_industries"/>
                    <field name="industry_specific" widget="boolean_toggle"/>
                    <field name="lookup_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- AMS Lookup Category Form View -->
        <record id="view_ams_lookup_category_form" model="ir.ui.view">
            <field name="name">ams.lookup.category.form</field>
            <field name="model">ams.lookup.category</field>
            <field name="arch" type="xml">
                <form string="Lookup Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_lookup_values" icon="fa-list">
                                <field name="lookup_count" widget="statinfo" string="Values"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Category Name"/></h1>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group name="industry_info" string="Industry Configuration">
                                <field name="industry_specific"/>
                                <field name="applicable_industries" 
                                       attrs="{'invisible': [('industry_specific', '=', False)]}"/>
                            </group>
                        </group>

                        <group name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AMS Lookup Category Action -->
        <record id="action_ams_lookup_category" model="ir.actions.act_window">
            <field name="name">Lookup Categories</field>
            <field name="res_model">ams.lookup.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ams_lookup_category_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first lookup category
                </p>
                <p>
                    Categories organize lookup values into logical groups.
                    Each category can be configured for specific industries.
                </p>
            </field>
        </record>

        <!-- AMS User Role Tree View -->
        <record id="view_ams_user_role_tree" model="ir.ui.view">
            <field name="name">ams.user.role.tree</field>
            <field name="model">ams.user.role</field>
            <field name="arch" type="xml">
                <tree string="User Roles">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="can_access_portal" widget="boolean_toggle"/>
                    <field name="can_access_admin" widget="boolean_toggle"/>
                    <field name="user_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- AMS User Role Form View -->
        <record id="view_ams_user_role_form" model="ir.ui.view">
            <field name="name">ams.user.role.form</field>
            <field name="model">ams.user.role</field>
            <field name="arch" type="xml">
                <form string="User Role">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_users" icon="fa-users">
                                <field name="user_count" widget="statinfo" string="Users"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Role Name"/></h1>
                        </div>

                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Permissions" name="permissions">
                                <group>
                                    <group name="portal_permissions" string="Portal Permissions">
                                        <field name="can_access_portal"/>
                                        <field name="can_manage_own_profile"/>
                                        <field name="can_view_other_members"/>
                                    </group>
                                    <group name="management_permissions" string="Management Permissions">
                                        <field name="can_manage_employees"/>
                                        <field name="can_access_admin"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Odoo Groups" name="odoo_groups">
                                <field name="odoo_group_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="category_id"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Description" name="description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AMS User Role Action -->
        <record id="action_ams_user_role" model="ir.actions.act_window">
            <field name="name">User Roles</field>
            <field name="res_model">ams.user.role</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ams_user_role_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define user roles for your AMS
                </p>
                <p>
                    User roles control access levels and permissions throughout the system.
                    Configure roles for guests, members, staff, and administrators.
                </p>
            </field>
        </record>

    </data>
</odoo>