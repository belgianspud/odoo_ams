<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ===== PROFESSIONAL DESIGNATION FORM VIEW ===== -->
    <record id="view_professional_designation_form" model="ir.ui.view">
        <field name="name">ams.professional.designation.form</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <form string="Professional Designation">
                <header>
                    <button name="action_duplicate" string="Duplicate" 
                            type="object" class="btn-secondary"/>
                    <button name="toggle_active" string="Archive" 
                            type="object" class="btn-secondary"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                    <button name="toggle_active" string="Unarchive" 
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_members" type="object" 
                                class="oe_stat_button" icon="fa-users">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Doctor of Medicine"/>
                        </h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2>
                            <field name="code" placeholder="e.g., MD"/>
                        </h2>
                    </div>
                    
                    <notebook>
                        
                        <!-- Basic Information Tab -->
                        <page string="Basic Information" name="basic_info">
                            <group>
                                <group string="Classification">
                                    <field name="designation_type"/>
                                    <field name="category"/>
                                    <field name="sequence"/>
                                </group>
                                <group string="Issuing Organization">
                                    <field name="issuing_organization"/>
                                    <field name="issuing_country"/>
                                    <field name="website_url" widget="url"/>
                                </group>
                            </group>
                            
                            <group>
                                <field name="description" colspan="2" nolabel="1" 
                                       placeholder="Detailed description of this designation..."/>
                            </group>
                        </page>
                        
                        <!-- Requirements Tab -->
                        <page string="Requirements" name="requirements">
                            <group>
                                <group string="Professional Requirements">
                                    <field name="requires_license"/>
                                    <field name="requires_continuing_education"/>
                                    <field name="ce_hours_required_annual" 
                                           attrs="{'invisible': [('requires_continuing_education', '=', False)]}"/>
                                </group>
                                <group string="Validity">
                                    <field name="has_expiry"/>
                                    <field name="validity_period_years" 
                                           attrs="{'invisible': [('has_expiry', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Relationships Tab -->
                        <page string="Relationships" name="relationships">
                            <group>
                                <group string="Prerequisites">
                                    <field name="prerequisite_ids" nolabel="1" 
                                           widget="many2many_tags"/>
                                </group>
                                <group string="Leads To">
                                    <field name="successor_ids" nolabel="1" 
                                           widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Members Tab -->
                        <page string="Members" name="members">
                            <field name="member_ids" nolabel="1">
                                <tree editable="false">
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="member_status"/>
                                    <field name="profession_discipline"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Notes Tab -->
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" nolabel="1" colspan="2" 
                                       placeholder="Additional notes about this designation..."/>
                            </group>
                            
                            <group>
                                <group string="Metadata">
                                    <field name="created_by" readonly="1"/>
                                    <field name="last_updated" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ===== PROFESSIONAL DESIGNATION TREE VIEW ===== -->
    <record id="view_professional_designation_tree" model="ir.ui.view">
        <field name="name">ams.professional.designation.tree</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <tree string="Professional Designations" default_order="category, sequence, name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="designation_type"/>
                <field name="category"/>
                <field name="requires_license" optional="hide"/>
                <field name="requires_continuing_education" optional="hide"/>
                <field name="ce_hours_required_annual" optional="hide"/>
                <field name="has_expiry" optional="hide"/>
                <field name="validity_period_years" optional="hide"/>
                <field name="member_count" optional="show"/>
                <field name="issuing_organization" optional="hide"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- ===== PROFESSIONAL DESIGNATION KANBAN VIEW ===== -->
    <record id="view_professional_designation_kanban" model="ir.ui.view">
        <field name="name">ams.professional.designation.kanban</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="category">
                <field name="name"/>
                <field name="code"/>
                <field name="designation_type"/>
                <field name="category"/>
                <field name="member_count"/>
                <field name="requires_license"/>
                <field name="requires_continuing_education"/>
                <field name="ce_hours_required_annual"/>
                <field name="has_expiry"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            [<field name="code"/>]
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill badge-primary">
                                            <t t-esc="record.designation_type.value"/>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="oe_kanban_designation_info">
                                        <div t-if="record.requires_license.raw_value">
                                            <i class="fa fa-certificate text-warning"/> License Required
                                        </div>
                                        <div t-if="record.requires_continuing_education.raw_value">
                                            <i class="fa fa-graduation-cap text-info"/> 
                                            CE Required: <t t-esc="record.ce_hours_required_annual.value"/> hrs/year
                                        </div>
                                        <div t-if="record.has_expiry.raw_value">
                                            <i class="fa fa-calendar text-danger"/> Expires
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-secondary">
                                            <i class="fa fa-users"/> 
                                            <t t-esc="record.member_count.value"/> members
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ===== PROFESSIONAL DESIGNATION SEARCH VIEW ===== -->
    <record id="view_professional_designation_search" model="ir.ui.view">
        <field name="name">ams.professional.designation.search</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <search string="Search Professional Designations">
                
                <field name="name"/>
                <field name="code"/>
                <field name="issuing_organization"/>
                <field name="description"/>
                
                <separator/>
                <filter string="Requires License" name="requires_license"
                        domain="[('requires_license', '=', True)]"/>
                <filter string="Requires CE" name="requires_ce"
                        domain="[('requires_continuing_education', '=', True)]"/>
                <filter string="Has Expiry" name="has_expiry"
                        domain="[('has_expiry', '=', True)]"/>
                
                <separator/>
                <filter string="Degrees" name="degrees"
                        domain="[('designation_type', '=', 'degree')]"/>
                <filter string="Certifications" name="certifications"
                        domain="[('designation_type', '=', 'certification')]"/>
                <filter string="Licenses" name="licenses"
                        domain="[('designation_type', '=', 'license')]"/>
                <filter string="Professional Titles" name="titles"
                        domain="[('designation_type', '=', 'title')]"/>
                
                <separator/>
                <filter string="Healthcare" name="healthcare"
                        domain="[('category', '=', 'healthcare')]"/>
                <filter string="Engineering" name="engineering"
                        domain="[('category', '=', 'engineering')]"/>
                <filter string="Legal" name="legal"
                        domain="[('category', '=', 'legal')]"/>
                <filter string="Aviation" name="aviation"
                        domain="[('category', '=', 'aviation')]"/>
                <filter string="Business" name="business"
                        domain="[('category', '=', 'business')]"/>
                
                <separator/>
                <filter string="Popular" name="popular"
                        domain="[('member_count', '>', 0)]"/>
                <filter string="Unused" name="unused"
                        domain="[('member_count', '=', 0)]"/>
                
                <separator/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category"
                            domain="[]" context="{'group_by': 'category'}"/>
                    <filter string="Designation Type" name="group_type"
                            domain="[]" context="{'group_by': 'designation_type'}"/>
                    <filter string="Issuing Organization" name="group_issuer"
                            domain="[]" context="{'group_by': 'issuing_organization'}"/>
                    <filter string="Requires License" name="group_license"
                            domain="[]" context="{'group_by': 'requires_license'}"/>
                    <filter string="Requires CE" name="group_ce"
                            domain="[]" context="{'group_by': 'requires_continuing_education'}"/>
                </group>
                
            </search>
        </field>
    </record>
    
    <!-- ===== PROFESSIONAL DESIGNATIONS ACTION ===== -->
    <record id="action_professional_designations" model="ir.actions.act_window">
        <field name="name">Professional Designations</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_professional_designation_search"/>
        <field name="context">{'search_default_group_category': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first professional designation!
            </p>
            <p>
                Add professional designations like degrees, certifications, licenses, and titles.
                These can be assigned to members and help track professional requirements.
            </p>
        </field>
    </record>
    
    <!-- ===== DEGREES ACTION ===== -->
    <record id="action_degrees" model="ir.actions.act_window">
        <field name="name">Degrees</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('designation_type', '=', 'degree')]</field>
        <field name="context">{'default_designation_type': 'degree'}</field>
        <field name="search_view_id" ref="view_professional_designation_search"/>
    </record>
    
    <!-- ===== CERTIFICATIONS ACTION ===== -->
    <record id="action_certifications" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('designation_type', '=', 'certification')]</field>
        <field name="context">{'default_designation_type': 'certification'}</field>
        <field name="search_view_id" ref="view_professional_designation_search"/>
    </record>
    
    <!-- ===== LICENSES ACTION ===== -->
    <record id="action_licenses" model="ir.actions.act_window">
        <field name="name">Professional Licenses</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('designation_type', '=', 'license')]</field>
        <field name="context">{'default_designation_type': 'license'}</field>
        <field name="search_view_id" ref="view_professional_designation_search"/>
    </record>
    
    <!-- ===== POPULAR DESIGNATIONS ACTION ===== -->
    <record id="action_popular_designations" model="ir.actions.act_window">
        <field name="name">Popular Designations</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('member_count', '>', 0)]</field>
        <field name="context">{'search_default_popular': 1}</field>
        <field name="search_view_id" ref="view_professional_designation_search"/>
    </record>
    
</odoo>