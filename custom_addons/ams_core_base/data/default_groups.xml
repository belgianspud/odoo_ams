<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ===== DEFAULT USER ASSIGNMENTS ===== -->
        
        <!-- Assign Administrator to AMS Admin Group -->
        <record id="admin_user_ams_admin" model="res.groups">
            <field name="id" ref="group_ams_admin"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- ===== DEFAULT COMPANY SETTINGS ===== -->
        
        <!-- Default AMS Settings for Main Company -->
        <record id="default_company_ams_settings" model="ir.config_parameter">
            <field name="key">ams.default_member_status</field>
            <field name="value">prospect</field>
        </record>

        <record id="default_auto_assign_member_id" model="ir.config_parameter">
            <field name="key">ams.auto_assign_member_id</field>
            <field name="value">True</field>
        </record>

        <record id="default_require_member_agreement" model="ir.config_parameter">
            <field name="key">ams.require_member_agreement</field>
            <field name="value">True</field>
        </record>

        <!-- ===== SAMPLE ADMIN USER SETUP ===== -->
        
        <!-- Create sample AMS Staff User -->
        <record id="user_ams_staff_demo" model="res.users">
            <field name="name">AMS Staff Demo</field>
            <field name="login">ams_staff</field>
            <field name="email">staff@example.com</field>
            <field name="groups_id" eval="[(4, ref('group_ams_staff'))]"/>
            <field name="active">True</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Create sample AMS Manager User -->
        <record id="user_ams_manager_demo" model="res.users">
            <field name="name">AMS Manager Demo</field>
            <field name="login">ams_manager</field>
            <field name="email">manager@example.com</field>
            <field name="groups_id" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="active">True</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Create sample Privacy Officer User -->
        <record id="user_ams_privacy_demo" model="res.users">
            <field name="name">Privacy Officer Demo</field>
            <field name="login">privacy_officer</field>
            <field name="email">privacy@example.com</field>
            <field name="groups_id" eval="[(4, ref('group_ams_privacy_officer'))]"/>
            <field name="active">True</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- Create sample Data Quality Officer User -->
        <record id="user_ams_data_demo" model="res.users">
            <field name="name">Data Officer Demo</field>
            <field name="login">data_officer</field>
            <field name="email">data@example.com</field>
            <field name="groups_id" eval="[(4, ref('group_ams_data_officer'))]"/>
            <field name="active">True</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        </record>

        <!-- ===== DEFAULT ACCESS RULES ===== -->
        
        <!-- Allow all internal users to read basic AMS data -->
        <record id="group_internal_ams_read" model="res.groups">
            <field name="id" ref="base.group_user"/>
            <field name="implied_ids" eval="[(4, ref('group_ams_member'))]"/>
        </record>

        <!-- ===== DEFAULT NOTIFICATION SETTINGS ===== -->
        
        <!-- Email template defaults -->
        <record id="default_welcome_email_enabled" model="ir.config_parameter">
            <field name="key">ams.send_welcome_email</field>
            <field name="value">True</field>
        </record>

        <record id="default_member_id_notification" model="ir.config_parameter">
            <field name="key">ams.notify_member_id_assigned</field>
            <field name="value">True</field>
        </record>

        <record id="default_profile_completion_reminder" model="ir.config_parameter">
            <field name="key">ams.send_profile_completion_reminder</field>
            <field name="value">True</field>
        </record>

        <!-- ===== PRIVACY DEFAULT SETTINGS ===== -->
        
        <!-- Default privacy consent settings -->
        <record id="default_marketing_consent" model="ir.config_parameter">
            <field name="key">ams.default_marketing_consent</field>
            <field name="value">True</field>
        </record>

        <record id="default_directory_consent" model="ir.config_parameter">
            <field name="key">ams.default_directory_consent</field>
            <field name="value">True</field>
        </record>

        <record id="default_photo_consent" model="ir.config_parameter">
            <field name="key">ams.default_photo_consent</field>
            <field name="value">False</field>
        </record>

        <record id="default_data_sharing_consent" model="ir.config_parameter">
            <field name="key">ams.default_data_sharing_consent</field>
            <field name="value">False</field>
        </record>

        <!-- Data retention defaults -->
        <record id="default_data_retention_years" model="ir.config_parameter">
            <field name="key">ams.default_data_retention_years</field>
            <field name="value">7</field>
        </record>

        <record id="default_inactive_member_retention" model="ir.config_parameter">
            <field name="key">ams.inactive_member_retention_years</field>
            <field name="value">5</field>
        </record>

        <!-- ===== AUDIT LOG DEFAULT SETTINGS ===== -->
        
        <!-- Audit logging configuration -->
        <record id="default_audit_enabled" model="ir.config_parameter">
            <field name="key">ams.audit_logging_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="default_audit_sensitive_only" model="ir.config_parameter">
            <field name="key">ams.audit_sensitive_operations_only</field>
            <field name="value">False</field>
        </record>

        <record id="default_audit_retention_days" model="ir.config_parameter">
            <field name="key">ams.audit_log_retention_days</field>
            <field name="value">2555</field> <!-- 7 years -->
        </record>

        <record id="default_audit_ip_tracking" model="ir.config_parameter">
            <field name="key">ams.audit_track_ip_addresses</field>
            <field name="value">True</field>
        </record>

        <!-- ===== DATA QUALITY DEFAULT SETTINGS ===== -->
        
        <!-- Duplicate detection settings -->
        <record id="default_duplicate_detection_enabled" model="ir.config_parameter">
            <field name="key">ams.duplicate_detection_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="default_duplicate_threshold" model="ir.config_parameter">
            <field name="key">ams.duplicate_detection_threshold</field>
            <field name="value">0.8</field>
        </record>

        <record id="default_auto_merge_duplicates" model="ir.config_parameter">
            <field name="key">ams.auto_merge_duplicates</field>
            <field name="value">False</field>
        </record>

        <!-- Profile completeness settings -->
        <record id="default_min_profile_completeness" model="ir.config_parameter">
            <field name="key">ams.minimum_profile_completeness</field>
            <field name="value">60</field>
        </record>

        <record id="default_profile_reminder_days" model="ir.config_parameter">
            <field name="key">ams.profile_completion_reminder_days</field>
            <field name="value">30</field>
        </record>

        <!-- ===== MEMBER ENGAGEMENT DEFAULT SETTINGS ===== -->
        
        <!-- Engagement scoring -->
        <record id="default_engagement_scoring_enabled" model="ir.config_parameter">
            <field name="key">ams.engagement_scoring_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="default_low_engagement_threshold" model="ir.config_parameter">
            <field name="key">ams.low_engagement_threshold</field>
            <field name="value">25</field>
        </record>

        <record id="default_at_risk_threshold" model="ir.config_parameter">
            <field name="key">ams.at_risk_engagement_threshold</field>
            <field name="value">10</field>
        </record>

        <!-- ===== SYSTEM MAINTENANCE SETTINGS ===== -->
        
        <!-- Automatic cleanup settings -->
        <record id="default_auto_cleanup_enabled" model="ir.config_parameter">
            <field name="key">ams.auto_cleanup_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="default_cleanup_schedule" model="ir.config_parameter">
            <field name="key">ams.cleanup_schedule_cron</field>
            <field name="value">0 2 * * 0</field> <!-- Weekly at 2 AM Sunday -->
        </record>

        <!-- Performance settings -->
        <record id="default_batch_size" model="ir.config_parameter">
            <field name="key">ams.batch_processing_size</field>
            <field name="value">100</field>
        </record>

        <record id="default_search_limit" model="ir.config_parameter">
            <field name="key">ams.default_search_limit</field>
            <field name="value">80</field>
        </record>

        <!-- ===== ASSOCIATION CUSTOMIZATION DEFAULTS ===== -->
        
        <!-- Association type default -->
        <record id="default_association_type" model="ir.config_parameter">
            <field name="key">ams.association_type</field>
            <field name="value">professional</field>
        </record>

        <!-- Member terminology -->
        <record id="default_member_term" model="ir.config_parameter">
            <field name="key">ams.member_terminology</field>
            <field name="value">Member</field>
        </record>

        <record id="default_organization_term" model="ir.config_parameter">
            <field name="key">ams.organization_terminology</field>
            <field name="value">Organization</field>
        </record>

        <!-- Feature flags -->
        <record id="default_enable_chapters" model="ir.config_parameter">
            <field name="key">ams.enable_chapters</field>
            <field name="value">True</field>
        </record>

        <record id="default_enable_committees" model="ir.config_parameter">
            <field name="key">ams.enable_committees</field>
            <field name="value">True</field>
        </record>

        <record id="default_enable_continuing_education" model="ir.config_parameter">
            <field name="key">ams.enable_continuing_education</field>
            <field name="value">True</field>
        </record>

        <record id="default_enable_fundraising" model="ir.config_parameter">
            <field name="key">ams.enable_fundraising</field>
            <field name="value">False</field>
        </record>

        <!-- ===== SAMPLE DEFAULT MEMBER ===== -->
        
        <!-- Create a sample member for demonstration -->
        <record id="demo_member_partner" model="res.partner">
            <field name="name">Demo Member</field>
            <field name="email">demo.member@example.com</field>
            <field name="phone">+1-555-0123</field>
            <field name="is_member">True</field>
            <field name="member_status">active</field>
            <field name="member_since">2024-01-01</field>
            <field name="is_company">False</field>
            <field name="category_id" eval="[(4, ref('category_active_member'))]"/>
        </record>

        <!-- Create member profile for demo member -->
        <record id="demo_member_profile" model="ams.member.profile">
            <field name="partner_id" ref="demo_member_partner"/>
            <field name="graduation_year">2015</field>
            <field name="graduation_institution">Demo University</field>
            <field name="volunteer_status">available</field>
            <field name="marketing_consent">True</field>
            <field name="directory_listing_consent">True</field>
            <field name="photo_permission">False</field>
            <field name="data_sharing_consent">False</field>
        </record>

    </data>
</odoo>