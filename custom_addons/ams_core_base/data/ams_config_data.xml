<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default AMS Configuration -->
        <record id="default_ams_config" model="ams.config">
            <field name="name">Default AMS Configuration</field>
            <field name="active" eval="True"/>
            <field name="industry_type">healthcare</field>
            <field name="member_id_prefix">M-</field>
            <field name="member_id_sequence_length">6</field>
            <field name="enable_multiple_addresses" eval="True"/>
            <field name="max_addresses_per_contact">3</field>
            <field name="enable_partner_relationships" eval="True"/>
            <field name="default_portal_access" eval="False"/>
            <field name="require_primary_email" eval="True"/>
            <field name="require_primary_phone" eval="False"/>
        </record>

        <!-- Default AMS User Roles -->
        <record id="role_guest" model="ams.user.role">
            <field name="name">Guest</field>
            <field name="code">guest</field>
            <field name="description">Basic access for non-members and guests. Can view public information only.</field>
            <field name="sequence">10</field>
            <field name="can_access_portal" eval="False"/>
            <field name="can_manage_own_profile" eval="False"/>
            <field name="can_view_other_members" eval="False"/>
            <field name="can_manage_employees" eval="False"/>
            <field name="can_access_admin" eval="False"/>
            <field name="odoo_group_ids" eval="[(4, ref('group_ams_guest'))]"/>
        </record>

        <record id="role_member" model="ams.user.role">
            <field name="name">Standard Member</field>
            <field name="code">member</field>
            <field name="description">Standard members can access member portal, manage their own profile, and view member directory.</field>
            <field name="sequence">20</field>
            <field name="can_access_portal" eval="True"/>
            <field name="can_manage_own_profile" eval="True"/>
            <field name="can_view_other_members" eval="True"/>
            <field name="can_manage_employees" eval="False"/>
            <field name="can_access_admin" eval="False"/>
            <field name="odoo_group_ids" eval="[(4, ref('group_ams_member')), (4, ref('group_ams_portal_member'))]"/>
        </record>

        <record id="role_company_poc" model="ams.user.role">
            <field name="name">Company Point of Contact</field>
            <field name="code">company_poc</field>
            <field name="description">Company representatives can manage employee records and training assignments for their organization.</field>
            <field name="sequence">30</field>
            <field name="can_access_portal" eval="True"/>
            <field name="can_manage_own_profile" eval="True"/>
            <field name="can_view_other_members" eval="True"/>
            <field name="can_manage_employees" eval="True"/>
            <field name="can_access_admin" eval="False"/>
            <field name="odoo_group_ids" eval="[(4, ref('group_ams_company_poc')), (4, ref('group_ams_portal_company_poc'))]"/>
        </record>

        <record id="role_staff" model="ams.user.role">
            <field name="name">Staff</field>
            <field name="code">staff</field>
            <field name="description">Internal association staff with access to member management and basic administrative functions.</field>
            <field name="sequence">40</field>
            <field name="can_access_portal" eval="True"/>
            <field name="can_manage_own_profile" eval="True"/>
            <field name="can_view_other_members" eval="True"/>
            <field name="can_manage_employees" eval="True"/>
            <field name="can_access_admin" eval="False"/>
            <field name="odoo_group_ids" eval="[(4, ref('group_ams_staff'))]"/>
        </record>

        <record id="role_admin" model="ams.user.role">
            <field name="name">Administrator</field>
            <field name="code">admin</field>
            <field name="description">Full administrative access to all AMS functions including system configuration and user management.</field>
            <field name="sequence">50</field>
            <field name="can_access_portal" eval="True"/>
            <field name="can_manage_own_profile" eval="True"/>
            <field name="can_view_other_members" eval="True"/>
            <field name="can_manage_employees" eval="True"/>
            <field name="can_access_admin" eval="True"/>
            <field name="odoo_group_ids" eval="[(4, ref('group_ams_admin'))]"/>
        </record>

        <!-- Create default member ID sequence -->
        <record id="seq_member_id" model="ir.sequence">
            <field name="name">AMS Member ID</field>
            <field name="code">ams.member.id.1</field>
            <field name="padding">6</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
            <field name="prefix">M-</field>
            <field name="suffix"></field>
        </record>

    </data>
</odoo>