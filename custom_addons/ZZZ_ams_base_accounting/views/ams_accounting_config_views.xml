<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Accounting Configuration Form -->
    <record id="view_ams_accounting_config_form" model="ir.ui.view">
        <field name="name">ams.accounting.config.form</field>
        <field name="model">ams.accounting.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>AMS Accounting Configuration</h1>
                        <p>Configure default GL accounts and settings for AMS products.</p>
                    </div>
                    
                    <group string="Statistics" col="4">
                        <field name="total_ams_products" readonly="1"/>
                        <field name="unconfigured_products" readonly="1"/>
                    </group>
                    
                    <div class="alert alert-warning" role="alert" invisible="unconfigured_products == 0">
                        <h6><i class="fa fa-exclamation-triangle"/> Products Need Configuration</h6>
                        <p>There are <field name="unconfigured_products" readonly="1"/> AMS products that need account configuration.</p>
                        <button name="action_view_unconfigured_products" type="object" class="btn btn-warning btn-sm">
                            <i class="fa fa-list"/> View Unconfigured Products
                        </button>
                        <button name="action_configure_all_products" type="object" class="btn btn-primary btn-sm">
                            <i class="fa fa-magic"/> Auto-Configure All
                        </button>
                    </div>
                    
                    <group string="Default Revenue Accounts">
                        <field name="default_membership_revenue_account_id"/>
                        <field name="default_publication_revenue_account_id"/>
                        <field name="default_chapter_revenue_account_id"/>
                    </group>
                    
                    <group string="Default Asset &amp; Liability Accounts">
                        <field name="default_subscription_ar_account_id"/>
                        <field name="default_deferred_revenue_account_id"/>
                        <field name="default_cash_account_id"/>
                    </group>
                    
                    <group string="AMS Integration Settings">
                        <field name="auto_create_journal_entries"/>
                        <field name="use_product_specific_accounts"/>
                        <field name="ams_journal_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_setup_ams_accounts" string="Setup Chart of Accounts" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AMS Accounting Configuration Action -->
    <record id="action_ams_accounting_config" model="ir.actions.act_window">
        <field name="name">AMS Accounting Configuration</field>
        <field name="res_model">ams.accounting.config</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>