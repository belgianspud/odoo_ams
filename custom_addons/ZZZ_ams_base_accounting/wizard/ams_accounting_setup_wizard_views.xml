<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Accounting Setup Wizard -->
    <record id="view_ams_accounting_setup_wizard_form" model="ir.ui.view">
        <field name="name">ams.accounting.setup.wizard.form</field>
        <field name="model">ams.accounting.setup.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>AMS Accounting Setup</h1>
                        <p>Set up your association's chart of accounts and configure default GL accounts for AMS products.</p>
                    </div>
                    
                    <!-- FIXED: Current status display first -->
                    <group string="Current Status" col="4">
                        <field name="existing_ams_accounts" readonly="1"/>
                        <field name="accounts_need_categories" readonly="1"/>
                        <field name="unconfigured_product_count" readonly="1"/>
                    </group>
                    
                    <!-- FIXED: Status overview -->
                    <group string="Setup Status">
                        <field name="setup_status" nolabel="1"/>
                    </group>
                    
                    <!-- FIXED: Corrected field names to match the model -->
                    <group string="Setup Options">
                        <field name="configure_ams_accounts"/>
                        <field name="configure_existing_products"/>
                        <field name="setup_default_journals"/>
                        <field name="validate_account_setup"/>
                    </group>
                    
                    <!-- FIXED: Account configuration information -->
                    <group string="Account Configuration" invisible="not configure_ams_accounts">
                        <div class="alert alert-info">
                            <p>The following operations will be performed:</p>
                            <ul>
                                <li>Review existing accounts for AMS categories</li>
                                <li>Configure accounts with proper AMS classifications</li>
                                <li>Ensure required accounts exist for AMS operations</li>
                            </ul>
                        </div>
                    </group>
                    
                    <!-- FIXED: Product configuration information -->
                    <group string="Product Configuration" invisible="not configure_existing_products">
                        <div class="alert alert-warning" invisible="unconfigured_product_count == 0">
                            <p>There are <field name="unconfigured_product_count" readonly="1"/> AMS products that need account configuration.</p>
                        </div>
                        <div class="alert alert-success" invisible="unconfigured_product_count != 0">
                            <p>All AMS products are already configured.</p>
                        </div>
                    </group>
                    
                    <!-- FIXED: Journal setup information -->
                    <group string="Journal Setup" invisible="not setup_default_journals">
                        <div class="alert alert-info">
                            <p>AMS-specific journals will be verified and created if needed:</p>
                            <ul>
                                <li>AMS Sales Journal (AMS)</li>
                                <li>Revenue Recognition Journal (REVR)</li>
                                <li>Membership Payments Journal (MBPAY)</li>
                            </ul>
                        </div>
                    </group>
                    
                    <!-- FIXED: Validation information -->
                    <group string="Validation" invisible="not validate_account_setup">
                        <div class="alert alert-info">
                            <p>The setup will validate:</p>
                            <ul>
                                <li>Required AMS account categories exist</li>
                                <li>Account types are properly configured</li>
                                <li>No missing dependencies or conflicts</li>
                            </ul>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button name="action_run_setup" string="Run Setup" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Setup Wizard Action -->
    <record id="action_ams_accounting_setup_wizard" model="ir.actions.act_window">
        <field name="name">AMS Accounting Setup</field>
        <field name="res_model">ams.accounting.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>