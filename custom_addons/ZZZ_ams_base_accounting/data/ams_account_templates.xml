<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- =================================================================== -->
        <!-- AMS ACCOUNT TEMPLATES - CONFIGURATION ONLY                        -->
        <!-- No account creation - only configuration parameters                -->
        <!-- =================================================================== -->
        
        <!-- Account Name Templates -->
        <record id="template_individual_revenue_name" model="ir.config_parameter">
            <field name="key">ams.templates.individual_revenue.name</field>
            <field name="value">Membership Revenue - Individual</field>
        </record>
        
        <record id="template_enterprise_revenue_name" model="ir.config_parameter">
            <field name="key">ams.templates.enterprise_revenue.name</field>
            <field name="value">Membership Revenue - Enterprise</field>
        </record>
        
        <record id="template_publication_revenue_name" model="ir.config_parameter">
            <field name="key">ams.templates.publication_revenue.name</field>
            <field name="value">Publication Revenue</field>
        </record>
        
        <record id="template_chapter_revenue_name" model="ir.config_parameter">
            <field name="key">ams.templates.chapter_revenue.name</field>
            <field name="value">Chapter Revenue</field>
        </record>
        
        <record id="template_receivables_name" model="ir.config_parameter">
            <field name="key">ams.templates.receivables.name</field>
            <field name="value">Accounts Receivable - Memberships</field>
        </record>
        
        <record id="template_deferred_revenue_name" model="ir.config_parameter">
            <field name="key">ams.templates.deferred_revenue.name</field>
            <field name="value">Deferred Membership Revenue</field>
        </record>
        
        <!-- Account Type Templates -->
        <record id="template_revenue_account_type" model="ir.config_parameter">
            <field name="key">ams.templates.revenue.account_type</field>
            <field name="value">income_other</field>
        </record>
        
        <record id="template_receivable_account_type" model="ir.config_parameter">
            <field name="key">ams.templates.receivable.account_type</field>
            <field name="value">asset_receivable</field>
        </record>
        
        <record id="template_deferred_account_type" model="ir.config_parameter">
            <field name="key">ams.templates.deferred.account_type</field>
            <field name="value">liability_current</field>
        </record>
        
        <record id="template_cash_account_type" model="ir.config_parameter">
            <field name="key">ams.templates.cash.account_type</field>
            <field name="value">asset_cash</field>
        </record>
        
        <!-- Category Mapping Templates -->
        <record id="template_individual_category" model="ir.config_parameter">
            <field name="key">ams.templates.individual.category</field>
            <field name="value">membership_revenue</field>
        </record>
        
        <record id="template_enterprise_category" model="ir.config_parameter">
            <field name="key">ams.templates.enterprise.category</field>
            <field name="value">membership_revenue</field>
        </record>
        
        <record id="template_publication_category" model="ir.config_parameter">
            <field name="key">ams.templates.publication.category</field>
            <field name="value">publication_revenue</field>
        </record>
        
        <record id="template_chapter_category" model="ir.config_parameter">
            <field name="key">ams.templates.chapter.category</field>
            <field name="value">chapter_revenue</field>
        </record>
        
        <record id="template_receivables_category" model="ir.config_parameter">
            <field name="key">ams.templates.receivables.category</field>
            <field name="value">subscription_ar</field>
        </record>
        
        <record id="template_deferred_category" model="ir.config_parameter">
            <field name="key">ams.templates.deferred.category</field>
            <field name="value">deferred_revenue</field>
        </record>
        
        <record id="template_cash_category" model="ir.config_parameter">
            <field name="key">ams.templates.cash.category</field>
            <field name="value">cash_membership</field>
        </record>
        
    </data>
</odoo>