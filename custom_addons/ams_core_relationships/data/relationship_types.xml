            <field name="icon">fa-user</field>
            <field name="color">2</field>
            <field name="requires_same_organization">True</field>
        </record>

        <record id="rel_type_supervises" model="ams.relationship.type">
            <field name="inverse_type_id" ref="rel_type_supervised_by"/>
        </record>

        <!-- Manages / Managed by -->
