<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ===== EMPLOYMENT RELATIONSHIP TYPES ===== -->
        
        <!-- Employs / Employed by -->
        <record id="rel_type_employs" model="ams.relationship.type">
            <field name="name">Employs</field>
            <field name="code">EMP</field>
            <field name="description">Employer relationship</field>
            <field name="category">employment</field>
            <field name="relationship_nature">hierarchical</field>
            <field name="is_bidirectional">True</field>
            <field name="sequence">10</field>
            <field name="icon">fa-building</field>
            <field name="color">1</field>
            <field name="allows_individual_to_organization">True</field>
            <field name="allows_organization_to_organization">True</field>
            <field name="allows_individual_to_individual">False</field>
        </record>

        <record id="rel_type_employed_by" model="ams.relationship.type">
            <field name="name">Employed by</field>
            <field name="code">EMPBY</field>
            <field name="description">Employee relationship</field>
            <field name="category">employment</field>
            <field name="relationship_nature">hierarchical</field>
            <field name="is_bidirectional">True</field>
            <field name="inverse_type_id" ref="rel_type_employs"/>
            <field name="sequence">11</field>
            <field name="icon">fa-user-tie</field>
            <field name="color">1</field>
            <field name="allows_individual_to_organization">True</field>
            <field name="allows_organization_to_organization">True</field>
            <field name="allows_individual_to_individual">False</field>
        </record>

        <!-- Set inverse relationship -->
        <record id="rel_type_employs" model="ams.relationship.type">
            <field name="inverse_type_id" ref="rel_type_employed_by"/>
        </record>

        <!-- Supervises / Supervised by -->
