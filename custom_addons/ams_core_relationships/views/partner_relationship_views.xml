<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ===== PARTNER RELATIONSHIP FORM VIEW ===== -->
    <record id="view_partner_relationship_form" model="ir.ui.view">
        <field name="name">ams.partner.relationship.form</field>
        <field name="model">ams.partner.relationship</field>
        <field name="arch" type="xml">
            <form string="Partner Relationship">
                <header>
                    <button name="action_end_relationship" string="End Relationship" 
                            type="object" class="btn-warning"
                            attrs="{'invisible': [('end_date', '!=', False)]}"/>
                    <button name="action_reactivate_relationship" string="Reactivate" 
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('end_date', '=', False)]}"/>
                    <button name="action_view_inverse" string="View Inverse" 
                            type="object" class="btn-secondary"
                            attrs="{'invisible': [('inverse_relationship_id', '=', False)]}"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_partner_relationships" type="object" 
                                class="oe_stat_button" icon="fa-sitemap">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">All Relationships</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="relationship_strength" widget="badge" 
                                   decoration-success="relationship_strength == 'very_strong'"
                                   decoration-info="relationship_strength == 'strong'"
                                   decoration-warning="relationship_strength == 'moderate'"
                                   decoration-muted="relationship_strength == 'weak'"/>
                        </div>
                    </div>
                    
                    <notebook>
                        
                        <!-- Basic Information Tab -->
                        <page string="Relationship Details" name="basic_info">
                            <group>
                                <group string="Partners">
                                    <field name="partner_a_id" string="From"/>
                                    <field name="partner_b_id" string="To"/>
                                    <field name="relationship_type_id"/>
                                </group>
                                <group string="Timeline">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="duration_days" readonly="1"/>
                                    <field name="is_inverse" readonly="1"/>
                                </group>
                            </group>
                            
                            <group>
                                <field name="description" colspan="2" 
                                       placeholder="Additional details about this relationship..."/>
                            </group>
                        </page>
                        
                        <!-- Contact & Interaction Tab -->
                        <page string="Contact &amp; Interaction" name="contact">
                            <group>
                                <group string="Contact Information">
                                    <field name="contact_frequency"/>
                                    <field name="primary_contact"/>
                                    <field name="emergency_contact"/>
                                </group>
                                <group string="Relationship Quality">
                                    <field name="relationship_strength" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Permissions Tab -->
                        <page string="Permissions" name="permissions" 
                              groups="ams_core_relationships.group_relationship_manager">
                            <group>
                                <group string="Access Rights">
                                    <field name="can_access_info"/>
                                    <field name="can_make_decisions"/>
                                    <field name="financial_responsibility"/>
                                </group>
                                <group string="Special Designations">
                                    <field name="emergency_contact"/>
                                    <field name="primary_contact"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Notes Tab -->
                        <page string="Notes" name="notes" 
                              groups="ams_core_relationships.group_relationship_manager">
                            <group>
                                <field name="notes" nolabel="1" 
                                       placeholder="Internal notes about this relationship..."/>
                            </group>
                            
                            <group>
                                <group string="Metadata">
                                    <field name="created_by" readonly="1"/>
                                    <field name="last_updated" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- ===== PARTNER RELATIONSHIP TREE VIEW ===== -->
    <record id="view_partner_relationship_tree" model="ir.ui.view">
        <field name="name">ams.partner.relationship.tree</field>
        <field name="model">ams.partner.relationship</field>
        <field name="arch" type="xml">
            <tree string="Partner Relationships" default_order="start_date desc, partner_a_id">
                <field name="partner_a_id"/>
                <field name="relationship_type_id"/>
                <field name="partner_b_id"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="is_active" optional="show"/>
                <field name="contact_frequency" optional="hide"/>
                <field name="relationship_strength" widget="badge" optional="show"
                       decoration-success="relationship_strength == 'very_strong'"
                       decoration-info="relationship_strength == 'strong'"
                       decoration-warning="relationship_strength == 'moderate'"
                       decoration-muted="relationship_strength == 'weak'"/>
                <field name="primary_contact" optional="hide"/>
                <field name="emergency_contact" optional="hide"/>
                <field name="duration_days" optional="hide"/>
                <field name="is_inverse" optional="hide"/>
            </tree>
        </field>
    </record>
    
    <!-- ===== PARTNER RELATIONSHIP KANBAN VIEW ===== -->
    <record id="view_partner_relationship_kanban" model="ir.ui.view">
        <field name="name">ams.partner.relationship.kanban</field>
        <field name="model">ams.partner.relationship</field>
        <field name="arch" type="xml">
            <kanban default_group_by="relationship_type_id">
                <field name="partner_a_id"/>
                <field name="partner_b_id"/>
                <field name="relationship_type_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_active"/>
                <field name="contact_frequency"/>
                <field name="relationship_strength"/>
                <field name="primary_contact"/>
                <field name="emergency_contact"/>
                <field name="duration_days"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="partner_a_id"/> â†’ <field name="partner_b_id"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="relationship_type_id"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill badge-success" 
                                              t-if="record.is_active.raw_value">
                                            Active
                                        </span>
                                        <span class="badge badge-pill badge-secondary" 
                                              t-if="!record.is_active.raw_value">
                                            Ended
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="oe_kanban_relationship_info">
                                        <div t-if="record.start_date.raw_value">
                                            <i class="fa fa-calendar"/> Started: <t t-esc="record.start_date.value"/>
                                        </div>
                                        <div t-if="record.contact_frequency.raw_value">
                                            <i class="fa fa-clock"/> Contact: <t t-esc="record.contact_frequency.value"/>
                                        </div>
                                        <div t-if="record.duration_days.raw_value > 0">
                                            <i class="fa fa-hourglass"/> Duration: <t t-esc="record.duration_days.value"/> days
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.primary_contact.raw_value"
                                              class="badge badge-primary">
                                            <i class="fa fa-star"/> Primary
                                        </span>
                                        <span t-if="record.emergency_contact.raw_value"
                                              class="badge badge-danger">
                                            <i class="fa fa-exclamation-triangle"/> Emergency
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge" 
                                              t-att-class="'badge-success' if record.relationship_strength.raw_value == 'very_strong' else 
                                                          'badge-info' if record.relationship_strength.raw_value == 'strong' else 
                                                          'badge-warning' if record.relationship_strength.raw_value == 'moderate' else 
                                                          'badge-secondary'">
                                            <t t-esc="record.relationship_strength.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ===== PARTNER RELATIONSHIP SEARCH VIEW ===== -->
    <record id="view_partner_relationship_search" model="ir.ui.view">
        <field name="name">ams.partner.relationship.search</field>
        <field name="model">ams.partner.relationship</field>
        <field name="arch" type="xml">
            <search string="Search Relationships">
                
                <field name="partner_a_id"/>
                <field name="partner_b_id"/>
                <field name="relationship_type_id"/>
                <field name="description"/>
                
                <separator/>
                <filter string="Active Relationships" name="active_relationships"
                        domain="[('is_active', '=', True)]"/>
                <filter string="Ended Relationships" name="ended_relationships"
                        domain="[('is_active', '=', False)]"/>
                
                <separator/>
                <filter string="Primary Contacts" name="primary_contacts"
                        domain="[('primary_contact', '=', True)]"/>
                <filter string="Emergency Contacts" name="emergency_contacts"
                        domain="[('emergency_contact', '=', True)]"/>
                
                <separator/>
                <filter string="Very Strong" name="very_strong"
                        domain="[('relationship_strength', '=', 'very_strong')]"/>
                <filter string="Strong" name="strong"
                        domain="[('relationship_strength', '=', 'strong')]"/>
                <filter string="Moderate" name="moderate"
                        domain="[('relationship_strength', '=', 'moderate')]"/>
                <filter string="Weak" name="weak"
                        domain="[('relationship_strength', '=', 'weak')]"/>
                
                <separator/>
                <filter string="Employment" name="employment"
                        domain="[('relationship_type_id.category', '=', 'employment')]"/>
                <filter string="Family" name="family"
                        domain="[('relationship_type_id.category', '=', 'family')]"/>
                <filter string="Household" name="household"
                        domain="[('relationship_type_id.category', '=', 'household')]"/>
                <filter string="Emergency" name="emergency"
                        domain="[('relationship_type_id.category', '=', 'emergency')]"/>
                <filter string="Professional" name="professional"
                        domain="[('relationship_type_id.category', '=', 'professional')]"/>
                <filter string="Business" name="business"
                        domain="[('relationship_type_id.category', '=', 'business')]"/>
                
                <separator/>
                <filter string="Daily Contact" name="daily_contact"
                        domain="[('contact_frequency', '=', 'daily')]"/>
                <filter string="Weekly Contact" name="weekly_contact"
                        domain="[('contact_frequency', '=', 'weekly')]"/>
                <filter string="Monthly Contact" name="monthly_contact"
                        domain="[('contact_frequency', '=', 'monthly')]"/>
                
                <separator/>
                <filter string="This Year" name="this_year"
                        domain="[('start_date', '&gt;=', datetime.datetime.now().strftime('%Y-01-01'))]"/>
                <filter string="This Month" name="this_month"
                        domain="[('start_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter string="Long Term (1+ years)" name="long_term"
                        domain="[('duration_days', '&gt;=', 365)]"/>
                <filter string="Medium Term (3+ months)" name="medium_term"
                        domain="[('duration_days', '&gt;=', 90)]"/>
                <filter string="Short Term (&lt;3 months)" name="short_term"
                        domain="[('duration_days', '&lt;', 90)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Relationship Type" name="group_type"
                            domain="[]" context="{'group_by': 'relationship_type_id'}"/>
                    <filter string="Category" name="group_category"
                            domain="[]" context="{'group_by': 'relationship_type_id.category'}"/>
                    <filter string="Partner A" name="group_partner_a"
                            domain="[]" context="{'group_by': 'partner_a_id'}"/>
                    <filter string="Partner B" name="group_partner_b"
                            domain="[]" context="{'group_by': 'partner_b_id'}"/>
                    <filter string="Relationship Strength" name="group_strength"
                            domain="[]" context="{'group_by': 'relationship_strength'}"/>
                    <filter string="Contact Frequency" name="group_frequency"
                            domain="[]" context="{'group_by': 'contact_frequency'}"/>
                    <filter string="Start Date" name="group_start_date"
                            domain="[]" context="{'group_by': 'start_date:month'}"/>
                    <filter string="Active Status" name="group_active"
                            domain="[]" context="{'group_by': 'is_active'}"/>
                </group>
                
            </search>
        </field>
    </record>
    
    <!-- ===== PARTNER RELATIONSHIPS ACTION ===== -->
    <record id="action_partner_relationships" model="ir.actions.act_window">
        <field name="name">Partner Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_active_relationships': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first relationship!
            </p>
            <p>
                Track relationships between members, organizations, and contacts.
                Relationships help you understand member networks and provide better services.
            </p>
        </field>
    </record>
    
    <!-- ===== ACTIVE RELATIONSHIPS ACTION ===== -->
    <record id="action_active_relationships" model="ir.actions.act_window">
        <field name="name">Active Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_active', '=', True)]</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
    </record>
    
    <!-- ===== EMPLOYMENT RELATIONSHIPS ACTION ===== -->
    <record id="action_employment_relationships" model="ir.actions.act_window">
        <field name="name">Employment Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('relationship_type_id.category', '=', 'employment')]</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_active_relationships': 1}</field>
    </record>
    
    <!-- ===== FAMILY RELATIONSHIPS ACTION ===== -->
    <record id="action_family_relationships" model="ir.actions.act_window">
        <field name="name">Family Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('relationship_type_id.category', '=', 'family')]</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_active_relationships': 1}</field>
    </record>
    
    <!-- ===== EMERGENCY CONTACTS ACTION ===== -->
    <record id="action_emergency_contacts" model="ir.actions.act_window">
        <field name="name">Emergency Contacts</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('emergency_contact', '=', True)]</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_active_relationships': 1}</field>
    </record>
    
    <!-- ===== STRONG RELATIONSHIPS ACTION ===== -->
    <record id="action_strong_relationships" model="ir.actions.act_window">
        <field name="name">Strong Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('relationship_strength', 'in', ['strong', 'very_strong'])]</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_active_relationships': 1}</field>
    </record>
    
    <!-- ===== RECENT RELATIONSHIPS ACTION ===== -->
    <record id="action_recent_relationships" model="ir.actions.act_window">
        <field name="name">Recent Relationships</field>
        <field name="res_model">ams.partner.relationship</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_partner_relationship_search"/>
        <field name="context">{'search_default_this_month': 1, 'search_default_active_relationships': 1}</field>
    </record>
    
</odoo>