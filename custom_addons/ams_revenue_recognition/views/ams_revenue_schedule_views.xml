<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Revenue Schedule Form View -->
    <record id="view_ams_revenue_schedule_form" model="ir.ui.view">
        <field name="name">ams.revenue.schedule.form</field>
        <field name="model">ams.revenue.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" type="object" string="Activate" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            confirm="Are you sure you want to cancel this schedule?"
                            invisible="state in ['cancelled', 'completed']"/>
                    <button name="process_due_recognitions" type="object" string="Process Due Recognition" 
                            class="oe_highlight" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_recognition_entries" type="object" 
                                class="oe_stat_button" icon="fa-list-alt">
                            <field name="recognition_count" widget="statinfo" string="Recognitions"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="subscription_id"/>
                            <field name="invoice_id" readonly="1"/>
                            <field name="invoice_line_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group string="Recognition Configuration">
                            <field name="recognition_method"/>
                            <field name="total_amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="period_length"/>
                            <field name="total_periods" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="next_recognition_date" readonly="1"/>
                            <field name="last_processed_date" readonly="1"/>
                        </group>
                        <group string="Amounts">
                            <field name="recognized_amount" readonly="1"/>
                            <field name="deferred_amount" readonly="1"/>
                            <field name="revenue_account_id" readonly="1"/>
                            <field name="deferred_account_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Recognition Lines">
                            <field name="recognition_line_ids">
                                <tree decoration-success="state == 'recognized'" 
                                      decoration-warning="state == 'pending'">
                                    <field name="recognition_date"/>
                                    <field name="description"/>
                                    <field name="scheduled_amount" sum="Total Scheduled"/>
                                    <field name="recognized_amount" sum="Total Recognized"/>
                                    <field name="state"/>
                                    <button name="action_recognize_revenue" type="object" 
                                            string="Recognize" class="btn-primary btn-sm"
                                            invisible="state != 'pending'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details" groups="ams_revenue_recognition.group_ams_revenue_recognition_manager">
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Revenue Schedule Tree View -->
    <record id="view_ams_revenue_schedule_tree" model="ir.ui.view">
        <field name="name">ams.revenue.schedule.tree</field>
        <field name="model">ams.revenue.schedule</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" 
                  decoration-success="state == 'completed'" 
                  decoration-warning="state == 'active'">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="recognition_method"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_amount" sum="Total Amount"/>
                <field name="recognized_amount" sum="Recognized"/>
                <field name="deferred_amount" sum="Deferred"/>
                <field name="next_recognition_date"/>
                <field name="state"/>
                <button name="action_activate" type="object" string="Activate" 
                        class="btn-primary btn-sm" invisible="state != 'draft'"/>
                <button name="process_due_recognitions" type="object" string="Process" 
                        class="btn-success btn-sm" invisible="state != 'active'"/>
            </tree>
        </field>
    </record>
    
    <!-- Revenue Schedule Kanban View -->
    <record id="view_ams_revenue_schedule_kanban" model="ir.ui.view">
        <field name="name">ams.revenue.schedule.kanban</field>
        <field name="model">ams.revenue.schedule</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_dashboard">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="total_amount"/>
                <field name="recognized_amount"/>
                <field name="deferred_amount"/>
                <field name="state"/>
                <field name="next_recognition_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="display_name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="partner_id"/> - <field name="product_id"/>
                                </div>
                                <div class="oe_kanban_bottom_left">
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-pill">
                                            <field name="currency_id" invisible="1"/>
                                            <field name="total_amount" widget="monetary"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="row">
                                        <div class="col-6">
                                            <span title="Recognized">
                                                üí∞ <field name="recognized_amount" widget="monetary"/>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span title="Deferred" class="float-right">
                                                ‚è≥ <field name="deferred_amount" widget="monetary"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div t-if="record.next_recognition_date.raw_value" class="text-muted">
                                        Next: <field name="next_recognition_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Revenue Schedule Calendar View -->
    <record id="view_ams_revenue_schedule_calendar" model="ir.ui.view">
        <field name="name">ams.revenue.schedule.calendar</field>
        <field name="model">ams.revenue.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Revenue Recognition Schedules" 
                      date_start="start_date" 
                      date_stop="end_date"
                      color="state">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="total_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
    <!-- Revenue Schedule Search View -->
    <record id="view_ams_revenue_schedule_search" model="ir.ui.view">
        <field name="name">ams.revenue.schedule.search</field>
        <field name="model">ams.revenue.schedule</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" string="Schedule"/>
                <field name="partner_id" string="Customer"/>
                <field name="product_id" string="Product"/>
                <field name="invoice_id" string="Invoice"/>
                <field name="subscription_id" string="Subscription"/>
                
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="filter_completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter name="filter_due_recognition" string="Recognition Due" 
                        domain="[('next_recognition_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month" 
                        domain="[('start_date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')),
                                ('start_date', '&lt;', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter name="filter_deferred_method" string="Deferred Recognition" 
                        domain="[('recognition_method', '=', 'straight_line')]"/>
                <filter name="filter_immediate_method" string="Immediate Recognition" 
                        domain="[('recognition_method', '=', 'immediate')]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_by_partner" string="Customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_product" string="Product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_method" string="Recognition Method" domain="[]" context="{'group_by': 'recognition_method'}"/>
                    <filter name="group_by_start_month" string="Start Month" domain="[]" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Revenue Schedule Action -->
    <record id="action_ams_revenue_schedule" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Schedules</field>
        <field name="res_model">ams.revenue.schedule</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first revenue recognition schedule!
            </p>
            <p>
                Revenue recognition schedules automatically manage the recognition of subscription revenue over time.
                Schedules are typically created automatically when invoices containing subscription products are posted.
            </p>
        </field>
    </record>
    
</odoo>