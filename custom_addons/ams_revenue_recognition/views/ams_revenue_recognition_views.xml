<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Revenue Recognition Form View -->
    <record id="view_ams_revenue_recognition_form" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.form</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_recognize_revenue" type="object" string="Recognize Revenue" 
                            class="oe_highlight" invisible="state != 'pending'"/>
                    <button name="action_reverse_recognition" type="object" string="Reverse Recognition" 
                            confirm="Are you sure you want to reverse this recognition?"
                            invisible="state != 'recognized'"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,recognized"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_journal_entry" type="object" 
                                class="oe_stat_button" icon="fa-book"
                                invisible="not journal_entry_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Journal</span>
                                <span class="o_stat_text">Entry</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="description"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Recognition Details">
                            <field name="recognition_date"/>
                            <field name="scheduled_amount"/>
                            <field name="recognized_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Related Records">
                            <field name="schedule_id"/>
                            <field name="subscription_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Accounting">
                            <field name="revenue_account_id" readonly="1"/>
                            <field name="deferred_account_id" readonly="1"/>
                            <field name="journal_entry_id" readonly="1"/>
                        </group>
                        <group string="Processing">
                            <field name="processed_date" readonly="1"/>
                            <field name="processed_by" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Revenue Recognition Tree View -->
    <record id="view_ams_revenue_recognition_tree" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.tree</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'recognized'" 
                  decoration-warning="state == 'pending'" 
                  decoration-muted="state == 'cancelled'"
                  decoration-danger="state == 'reversed'">
                <field name="recognition_date"/>
                <field name="description"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="scheduled_amount" sum="Total Scheduled"/>
                <field name="recognized_amount" sum="Total Recognized"/>
                <field name="state"/>
                <field name="processed_date"/>
                <button name="action_recognize_revenue" type="object" 
                        string="Recognize" class="btn-primary btn-sm"
                        invisible="state != 'pending'"/>
            </tree>
        </field>
    </record>
    
    <!-- Revenue Recognition Calendar View -->
    <record id="view_ams_revenue_recognition_calendar" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.calendar</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <calendar string="Revenue Recognition Entries" 
                      date_start="recognition_date"
                      color="state">
                <field name="description"/>
                <field name="partner_id"/>
                <field name="scheduled_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
    <!-- Revenue Recognition Pivot View -->
    <record id="view_ams_revenue_recognition_pivot" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.pivot</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <pivot string="Revenue Recognition Analysis">
                <field name="recognition_date" type="row" interval="month"/>
                <field name="partner_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="scheduled_amount" type="measure"/>
                <field name="recognized_amount" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Revenue Recognition Graph View -->
    <record id="view_ams_revenue_recognition_graph" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.graph</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <graph string="Revenue Recognition Analysis" type="line">
                <field name="recognition_date" interval="month"/>
                <field name="recognized_amount" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Revenue Recognition Search View -->
    <record id="view_ams_revenue_recognition_search" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.search</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <search>
                <field name="description" string="Description"/>
                <field name="partner_id" string="Customer"/>
                <field name="product_id" string="Product"/>
                <field name="schedule_id" string="Schedule"/>
                <field name="subscription_id" string="Subscription"/>
                <field name="invoice_id" string="Invoice"/>
                
                <filter name="filter_pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                <filter name="filter_recognized" string="Recognized" domain="[('state', '=', 'recognized')]"/>
                <filter name="filter_reversed" string="Reversed" domain="[('state', '=', 'reversed')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter name="filter_due_today" string="Due Today" 
                        domain="[('recognition_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_due_this_week" string="Due This Week" 
                        domain="[('recognition_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('recognition_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_due_this_month" string="Due This Month" 
                        domain="[('recognition_date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')),
                                ('recognition_date', '&lt;', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter name="filter_with_journal_entry" string="With Journal Entry" 
                        domain="[('journal_entry_id', '!=', False)]"/>
                <filter name="filter_without_journal_entry" string="Without Journal Entry" 
                        domain="[('journal_entry_id', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_by_partner" string="Customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_product" string="Product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_schedule" string="Schedule" domain="[]" context="{'group_by': 'schedule_id'}"/>
                    <filter name="group_by_recognition_date" string="Recognition Date" domain="[]" context="{'group_by': 'recognition_date'}"/>
                    <filter name="group_by_recognition_month" string="Recognition Month" domain="[]" context="{'group_by': 'recognition_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Revenue Recognition Action -->
    <record id="action_ams_revenue_recognition" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Entries</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No revenue recognition entries yet!
            </p>
            <p>
                Revenue recognition entries are automatically created from revenue recognition schedules.
                They represent individual periods of revenue that should be recognized.
            </p>
        </field>
    </record>
    
    <!-- Due Revenue Recognition Action -->
    <record id="action_ams_revenue_recognition_due" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Due</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="domain">[('state', '=', 'pending'), ('recognition_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No revenue recognition entries are due!
            </p>
            <p>
                This view shows revenue recognition entries that are due for processing today or earlier.
            </p>
        </field>
    </record>
    
    <!-- Revenue Recognition Dashboard Action -->
    <record id="action_ams_revenue_recognition_dashboard" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Dashboard</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="context">{
            'search_default_filter_recognized': 1,
            'search_default_group_by_recognition_month': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Revenue Recognition Dashboard
            </p>
            <p>
                Analyze revenue recognition patterns and trends over time.
            </p>
        </field>
    </record>
    
</odoo>