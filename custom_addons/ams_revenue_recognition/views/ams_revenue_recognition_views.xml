<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Revenue Recognition Form View -->
    <record id="view_ams_revenue_recognition_form" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.form</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_recognize" string="Recognize Revenue" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ['draft', 'error']" class="btn-secondary"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'error'" class="btn-warning" 
                            groups="ams_revenue_recognition.group_ams_revenue_recognition_manager"/>
                    <button name="action_create_reversal" string="Create Reversal" type="object" 
                            invisible="state != 'posted'" class="btn-danger" 
                            groups="ams_revenue_recognition.group_ams_revenue_recognition_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancelled,error"/>
                </header>
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_journal_entry" type="object" class="oe_stat_button" 
                                icon="fa-book" invisible="not journal_entry_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Journal Entry</span>
                            </div>
                        </button>
                        <button name="action_view_schedule" type="object" class="oe_stat_button" icon="fa-calendar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Schedule</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" class="o_text_overflow" style="width: 70%"/>
                        </h1>
                    </div>

                    <!-- Error Alert -->
                    <div class="alert alert-danger" role="alert" invisible="state != 'error' or not error_message">
                        <strong>Recognition Error:</strong>
                        <field name="error_message" nolabel="1"/>
                    </div>

                    <!-- Adjustment Alert -->
                    <div class="alert alert-warning" role="alert" invisible="not is_adjustment">
                        <strong>Adjustment Entry:</strong> This is an adjustment to correct previous recognition.
                        <br/><strong>Reason:</strong> <field name="adjustment_reason" nolabel="1"/>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="schedule_id" options="{'no_create': True}"/>
                            <field name="subscription_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group string="Recognition Details">
                            <field name="recognition_date"/>
                            <field name="period_number" readonly="1"/>
                            <field name="is_final_period" readonly="1"/>
                            <field name="recognition_method" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Amounts">
                            <field name="planned_amount"/>
                            <field name="recognized_amount"/>
                            <field name="adjustment_amount" readonly="1" 
                                   invisible="adjustment_amount == 0"/>
                        </group>
                        <group string="Proration Details" invisible="not is_prorated">
                            <field name="is_prorated"/>
                            <field name="proration_factor"/>
                            <field name="days_in_period"/>
                        </group>
                    </group>

                    <group>
                        <group string="Processing Information">
                            <field name="processed_date" readonly="1"/>
                            <field name="processed_by" readonly="1"/>
                        </group>
                        <group string="Accounting References">
                            <field name="deferred_account_id" readonly="1"/>
                            <field name="revenue_account_id" readonly="1"/>
                            <field name="journal_entry_id" readonly="1"/>
                        </group>
                    </group>

                    <group string="Adjustment Information" invisible="not is_adjustment">
                        <group>
                            <field name="is_adjustment"/>
                            <field name="original_recognition_id" readonly="1"/>
                            <field name="modification_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="adjustment_reason"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Revenue Recognition Tree View -->
    <record id="view_ams_revenue_recognition_tree" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.tree</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'posted'" decoration-muted="state == 'cancelled'" 
                  decoration-danger="state == 'error'" decoration-info="is_adjustment">
                <field name="recognition_date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="planned_amount"/>
                <field name="recognized_amount"/>
                <field name="adjustment_amount" sum="Total Adjustments" 
                       invisible="context.get('hide_adjustments', False)"/>
                <field name="state"/>
                <field name="is_adjustment"/>
                <field name="period_number"/>
                <field name="processed_date"/>
                <button name="action_recognize" string="Recognize" type="object" 
                        icon="fa-play" invisible="state != 'draft'" class="btn-sm btn-primary"/>
                <button name="action_cancel" string="Cancel" type="object" 
                        icon="fa-times" invisible="state != 'draft'" class="btn-sm btn-secondary"/>
            </tree>
        </field>
    </record>

    <!-- Revenue Recognition Calendar View -->
    <record id="view_ams_revenue_recognition_calendar" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.calendar</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <calendar string="Revenue Recognition Calendar" 
                     date_start="recognition_date"
                     color="state"
                     quick_add="False">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="recognized_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Revenue Recognition Search View -->
    <record id="view_ams_revenue_recognition_search" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.search</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="product_id"/>
                <field name="schedule_id"/>
                
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_posted" string="Posted" domain="[('state', '=', 'posted')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter name="filter_error" string="Error" domain="[('state', '=', 'error')]"/>
                
                <separator/>
                <filter name="filter_adjustments" string="Adjustments" domain="[('is_adjustment', '=', True)]"/>
                <filter name="filter_regular" string="Regular Recognition" domain="[('is_adjustment', '=', False)]"/>
                <filter name="filter_prorated" string="Prorated" domain="[('is_prorated', '=', True)]"/>
                <filter name="filter_final_periods" string="Final Periods" domain="[('is_final_period', '=', True)]"/>
                
                <separator/>
                <filter name="filter_today" string="Today" 
                        domain="[('recognition_date', '=', context_today())]"/>
                <filter name="filter_this_week" string="This Week" 
                        domain="[('recognition_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('recognition_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month" 
                        domain="[('recognition_date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                ('recognition_date', '&lt;=', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1)).strftime('%Y-%m-%d')]"/>
                
                <separator/>
                <filter name="filter_overdue" string="Overdue" 
                        domain="[('recognition_date', '&lt;', context_today()), ('state', '=', 'draft')]"/>
                <filter name="filter_high_amount" string="High Amount (&gt;$1K)" 
                        domain="[('recognized_amount', '&gt;=', 1000)]"/>
                
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_by_partner" string="Customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_product" string="Product" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_schedule" string="Schedule" domain="[]" context="{'group_by': 'schedule_id'}"/>
                    <filter name="group_by_method" string="Recognition Method" domain="[]" context="{'group_by': 'recognition_method'}"/>
                    <filter name="group_by_date" string="Recognition Date" domain="[]" context="{'group_by': 'recognition_date'}"/>
                    <filter name="group_by_month" string="Recognition Month" domain="[]" context="{'group_by': 'recognition_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Revenue Recognition Pivot View -->
    <record id="view_ams_revenue_recognition_pivot" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.pivot</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <pivot string="Revenue Recognition Analysis">
                <field name="recognition_date" type="row" interval="month"/>
                <field name="partner_id" type="col"/>
                <field name="recognized_amount" type="measure"/>
                <field name="planned_amount" type="measure"/>
                <field name="adjustment_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Revenue Recognition Graph View -->
    <record id="view_ams_revenue_recognition_graph" model="ir.ui.view">
        <field name="name">ams.revenue.recognition.graph</field>
        <field name="model">ams.revenue.recognition</field>
        <field name="arch" type="xml">
            <graph string="Revenue Recognition Trends" type="line">
                <field name="recognition_date" interval="month"/>
                <field name="recognized_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Revenue Recognition Actions -->
    <record id="action_ams_revenue_recognition" model="ir.actions.act_window">
        <field name="name">Revenue Recognition</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_posted': 1}</field>
    </record>

    <!-- Draft Revenue Recognition Action -->
    <record id="action_ams_revenue_recognition_draft" model="ir.actions.act_window">
        <field name="name">Draft Revenue Recognition</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- Revenue Recognition Due Today Action -->
    <record id="action_ams_revenue_recognition_due" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Due</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('recognition_date', '&lt;=', context_today()), ('state', '=', 'draft')]</field>
        <field name="context">{'search_default_filter_overdue': 1}</field>
    </record>

    <!-- Revenue Recognition Errors Action -->
    <record id="action_ams_revenue_recognition_errors" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Errors</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'error')]</field>
        <field name="context">{'default_state': 'error'}</field>
    </record>

    <!-- Revenue Recognition Analysis Action -->
    <record id="action_ams_revenue_recognition_analysis" model="ir.actions.act_window">
        <field name="name">Revenue Recognition Analysis</field>
        <field name="res_model">ams.revenue.recognition</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="context">{'search_default_filter_posted': 1, 'search_default_group_by_month': 1}</field>
    </record>
</odoo>