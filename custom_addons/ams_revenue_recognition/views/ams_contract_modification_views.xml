<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract Modification Form View -->
    <record id="view_ams_contract_modification_form" model="ir.ui.view">
        <field name="name">ams.contract.modification.form</field>
        <field name="model">ams.contract.modification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validate" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_process" string="Process" type="object" 
                            invisible="state != 'validated'" class="btn-success"/>
                    <button name="action_approve" string="Approve" type="object" 
                            invisible="state not in ['draft', 'validated']" class="btn-info"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state == 'processed'" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,processed"/>
                </header>
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_adjustment_entry" type="object" class="oe_stat_button" 
                                icon="fa-book" invisible="not adjustment_move_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Adjustment</span>
                            </div>
                        </button>
                        <button name="action_view_new_schedule" type="object" class="oe_stat_button" 
                                icon="fa-calendar" invisible="not new_schedule_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">New Schedule</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" class="o_text_overflow" style="width: 70%"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="schedule_id" options="{'no_create': True}"/>
                            <field name="subscription_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="modification_type"/>
                            <field name="modification_date"/>
                            <field name="effective_date"/>
                        </group>
                        <group string="Processing Method">
                            <field name="processing_method"/>
                            <field name="is_contract_modification"/>
                            <field name="modification_accounting"/>
                        </group>
                    </group>

                    <group string="Original Contract Values">
                        <group>
                            <field name="original_contract_value" readonly="1"/>
                            <field name="original_start_date" readonly="1"/>
                            <field name="original_end_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="recognized_to_date" readonly="1"/>
                            <field name="unrecognized_amount" readonly="1"/>
                        </group>
                    </group>

                    <group string="New Contract Values">
                        <group>
                            <field name="new_contract_value"/>
                            <field name="new_start_date"/>
                            <field name="new_end_date"/>
                        </group>
                        <group string="Financial Impact">
                            <field name="value_change" readonly="1"/>
                            <field name="adjustment_amount" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Approval & Processing">
                            <field name="approved_by" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="processed_by" readonly="1"/>
                            <field name="processed_date" readonly="1"/>
                        </group>
                        <group string="Supporting Documentation">
                            <field name="supporting_document" filename="supporting_document_name"/>
                            <field name="supporting_document_name"/>
                        </group>
                    </group>

                    <group string="ASC 606 Compliance">
                        <field name="performance_obligation_impact" colspan="2"/>
                    </group>

                    <group string="Modification Details">
                        <field name="reason" colspan="2"/>
                    </group>

                    <group string="Results" invisible="state != 'processed'">
                        <group>
                            <field name="adjustment_move_id" readonly="1"/>
                            <field name="new_schedule_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Contract Modification Tree View -->
    <record id="view_ams_contract_modification_tree" model="ir.ui.view">
        <field name="name">ams.contract.modification.tree</field>
        <field name="model">ams.contract.modification</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-warning="state == 'validated'" 
                  decoration-success="state == 'processed'" decoration-muted="state == 'cancelled'">
                <field name="modification_date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="modification_type"/>
                <field name="original_contract_value"/>
                <field name="new_contract_value"/>
                <field name="value_change"/>
                <field name="adjustment_amount"/>
                <field name="state"/>
                <field name="processed_by"/>
                <button name="action_validate" string="Validate" type="object" 
                        icon="fa-check" invisible="state != 'draft'" class="btn-sm btn-primary"/>
                <button name="action_process" string="Process" type="object" 
                        icon="fa-cog" invisible="state != 'validated'" class="btn-sm btn-success"/>
            </tree>
        </field>
    </record>

    <!-- Contract Modification Search View -->
    <record id="view_ams_contract_modification_search" model="ir.ui.view">
        <field name="name">ams.contract.modification.search</field>
        <field name="model">ams.contract.modification</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="schedule_id"/>
                
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                <filter name="filter_processed" string="Processed" domain="[('state', '=', 'processed')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter name="filter_upgrades" string="Upgrades" domain="[('modification_type', '=', 'upgrade')]"/>
                <filter name="filter_downgrades" string="Downgrades" domain="[('modification_type', '=', 'downgrade')]"/>
                <filter name="filter_cancellations" string="Cancellations" domain="[('modification_type', '=', 'cancellation')]"/>
                <filter name="filter_extensions" string="Extensions" domain="[('modification_type', '=', 'extension')]"/>
                <filter name="filter_terminations" string="Terminations" domain="[('modification_type', '=', 'termination')]"/>
                
                <separator/>
                <filter name="filter_this_month" string="This Month" 
                        domain="[('modification_date', '&gt;=', context_today().strftime('%Y-%m-01')),
                                ('modification_date', '&lt;=', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1)).strftime('%Y-%m-%d')]"/>
                <filter name="filter_pending_approval" string="Pending Approval" 
                        domain="[('state', 'in', ['draft', 'validated']), ('approved_by', '=', False)]"/>
                <filter name="filter_high_impact" string="High Impact (&gt;$5K)" 
                        domain="[('adjustment_amount', '&gt;=', 5000)]"/>
                
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_by_type" string="Modification Type" domain="[]" context="{'group_by': 'modification_type'}"/>
                    <filter name="group_by_partner" string="Customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_processing_method" string="Processing Method" domain="[]" context="{'group_by': 'processing_method'}"/>
                    <filter name="group_by_date" string="Modification Date" domain="[]" context="{'group_by': 'modification_date'}"/>
                    <filter name="group_by_month" string="Modification Month" domain="[]" context="{'group_by': 'modification_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Contract Modification Kanban View -->
    <record id="view_ams_contract_modification_kanban" model="ir.ui.view">
        <field name="name">ams.contract.modification.kanban</field>
        <field name="model">ams.contract.modification</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="modification_type"/>
                <field name="modification_date"/>
                <field name="value_change"/>
                <field name="adjustment_amount"/>
                <field name="state"/>
                <field name="processed_by"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="partner_id"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge" 
                                          t-attf-class="badge-#{record.modification_type.raw_value == 'upgrade' ? 'success' : record.modification_type.raw_value == 'downgrade' ? 'warning' : 'info'}">
                                        <field name="modification_type"/>
                                    </span>
                                    <br/>
                                    <small>
                                        Date: <field name="modification_date"/>
                                    </small>
                                    <br/>
                                    <small>
                                        Value Change: $<t t-esc="record.value_change.value.toFixed(2)"/>
                                    </small>
                                    <t t-if="record.adjustment_amount.value != 0">
                                        <br/>
                                        <small>
                                            Adjustment: $<t t-esc="record.adjustment_amount.value.toFixed(2)"/>
                                        </small>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.processed_by.value">
                                            <small>By: <t t-esc="record.processed_by.value"/></small>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Contract Modification Pivot View -->
    <record id="view_ams_contract_modification_pivot" model="ir.ui.view">
        <field name="name">ams.contract.modification.pivot</field>
        <field name="model">ams.contract.modification</field>
        <field name="arch" type="xml">
            <pivot string="Contract Modification Analysis">
                <field name="modification_date" type="row" interval="month"/>
                <field name="modification_type" type="col"/>
                <field name="value_change" type="measure"/>
                <field name="adjustment_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Contract Modification Actions -->
    <record id="action_ams_contract_modification" model="ir.actions.act_window">
        <field name="name">Contract Modifications</field>
        <field name="res_model">ams.contract.modification</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="context">{'search_default_filter_processed': 1}</field>
    </record>

    <!-- Pending Contract Modifications Action -->
    <record id="action_ams_contract_modification_pending" model="ir.actions.act_window">
        <field name="name">Pending Contract Modifications</field>
        <field name="res_model">ams.contract.modification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', 'in', ['draft', 'validated'])]</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- Contract Modification Analysis Action -->
    <record id="action_ams_contract_modification_analysis" model="ir.actions.act_window">
        <field name="name">Contract Modification Analysis</field>
        <field name="res_model">ams.contract.modification</field>
        <field name="view_mode">pivot,tree</field>
        <field name="context">{'search_default_group_by_month': 1, 'search_default_group_by_type': 1}</field>
    </record>
</odoo>