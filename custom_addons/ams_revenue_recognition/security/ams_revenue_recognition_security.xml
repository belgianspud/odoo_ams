<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Create AMS Category if it doesn't exist -->
        <record id="module_category_association_management" model="ir.module.category">
            <field name="name">Association Management</field>
            <field name="description">Association Management System modules</field>
            <field name="sequence">50</field>
        </record>
        
        <!-- Revenue Recognition Security Groups -->
        <record id="group_ams_revenue_recognition_user" model="res.groups">
            <field name="name">AMS Revenue Recognition / User</field>
            <field name="category_id" ref="module_category_association_management"/>
            <field name="comment">Users can view revenue recognition schedules and process recognition entries.</field>
        </record>
        
        <record id="group_ams_revenue_recognition_manager" model="res.groups">
            <field name="name">AMS Revenue Recognition / Manager</field>
            <field name="category_id" ref="module_category_association_management"/>
            <field name="implied_ids" eval="[(4, ref('group_ams_revenue_recognition_user'))]"/>
            <field name="comment">Managers can create, modify, and delete revenue recognition schedules and settings.</field>
        </record>
        
        <!-- Record Rules for Revenue Schedules -->
        <record id="rule_ams_revenue_schedule_user" model="ir.rule">
            <field name="name">AMS Revenue Schedule: User Access</field>
            <field name="model_id" ref="model_ams_revenue_schedule"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_revenue_recognition_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="rule_ams_revenue_schedule_manager" model="ir.rule">
            <field name="name">AMS Revenue Schedule: Manager Access</field>
            <field name="model_id" ref="model_ams_revenue_schedule"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_revenue_recognition_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Record Rules for Revenue Recognition Entries -->
        <record id="rule_ams_revenue_recognition_user" model="ir.rule">
            <field name="name">AMS Revenue Recognition: User Access</field>
            <field name="model_id" ref="model_ams_revenue_recognition"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_revenue_recognition_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="rule_ams_revenue_recognition_manager" model="ir.rule">
            <field name="name">AMS Revenue Recognition: Manager Access</field>
            <field name="model_id" ref="model_ams_revenue_recognition"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_revenue_recognition_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Accounting Integration - Revenue Recognition Users need some accounting access -->
        <record id="group_ams_revenue_accounting_access" model="res.groups">
            <field name="name">AMS Revenue Recognition / Accounting Access</field>
            <field name="category_id" ref="module_category_association_management"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="comment">Access to accounting features needed for revenue recognition processing.</field>
        </record>
        
        <!-- Multi-company support -->
        <record id="rule_ams_revenue_schedule_company" model="ir.rule">
            <field name="name">AMS Revenue Schedule: Multi-company</field>
            <field name="model_id" ref="model_ams_revenue_schedule"/>
            <field name="domain_force">['|', ('invoice_id.company_id', '=', False), ('invoice_id.company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>
        
        <record id="rule_ams_revenue_recognition_company" model="ir.rule">
            <field name="name">AMS Revenue Recognition: Multi-company</field>
            <field name="model_id" ref="model_ams_revenue_recognition"/>
            <field name="domain_force">['|', ('schedule_id.invoice_id.company_id', '=', False), ('schedule_id.invoice_id.company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>
        
    </data>
</odoo>