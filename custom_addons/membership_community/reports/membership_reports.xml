<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action -->
        <record id="action_report_membership_card" model="ir.actions.report">
            <field name="name">Membership Card</field>
            <field name="model">membership.membership</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">membership_community.report_membership_card</field>
            <field name="report_file">membership_community.report_membership_card</field>
            <field name="binding_model_id" ref="model_membership_membership"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Template -->
        <template id="report_membership_card">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="membership">
                    <div class="page">
                        <div class="row">
                            <div class="col-12">
                                <div style="border: 2px solid #333; padding: 20px; margin: 20px;">
                                    <div class="text-center">
                                        <h2>MEMBERSHIP CARD</h2>
                                        <hr/>
                                    </div>
                                    <div class="row">
                                        <div class="col-8">
                                            <h4><t t-esc="membership.partner_id.name"/></h4>
                                            <p><strong>Membership #:</strong> <t t-esc="membership.name"/></p>
                                            <p><strong>Type:</strong> <t t-esc="membership.membership_type_id.name"/></p>
                                            <p><strong>Valid From:</strong> <t t-esc="membership.start_date"/></p>
                                            <p><strong>Valid Until:</strong> <t t-esc="membership.end_date"/></p>
                                            <p><strong>Status:</strong> <t t-esc="membership.state.title()"/></p>
                                        </div>
                                        <div class="col-4 text-center">
                                            <div style="border: 1px solid #ccc; height: 100px; width: 80px; margin: auto;">
                                                <p style="margin-top: 40px; font-size: 12px;">Photo</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>