<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_membership_invoice_wizard" model="ir.ui.view">
            <field name="name">membership.invoice.wizard.form</field>
            <field name="model">membership.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Membership Invoices">
                    <group>
                        <field name="membership_ids" widget="many2many_tags"/>
                        <field name="journal_id"/>
                        <field name="invoice_date"/>
                    </group>
                    <footer>
                        <button name="action_create_invoices" type="object" string="Create Invoices" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_membership_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Create Membership Invoices</field>
            <field name="res_model">membership.invoice.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>