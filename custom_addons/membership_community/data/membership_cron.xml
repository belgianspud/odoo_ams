<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Process Grace Periods -->
    <record id="cron_process_grace_periods" model="ir.cron">
        <field name="name">Membership: Process Grace Periods</field>
        <field name="model_id" ref="subscription_management.model_subscription_subscription"/>
        <field name="state">code</field>
        <field name="code">model._cron_process_grace_periods()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="priority">10</field>
    </record>

    <!-- Process Suspensions -->
    <record id="cron_process_suspensions" model="ir.cron">
        <field name="name">Membership: Process Suspensions</field>
        <field name="model_id" ref="subscription_management.model_subscription_subscription"/>
        <field name="state">code</field>
        <field name="code">model._cron_process_suspensions()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="priority">10</field>
    </record>

    <!-- Process Terminations -->
    <record id="cron_process_terminations" model="ir.cron">
        <field name="name">Membership: Process Terminations</field>
        <field name="model_id" ref="subscription_management.model_subscription_subscription"/>
        <field name="state">code</field>
        <field name="code">model._cron_process_terminations()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="priority">10</field>
    </record>

</odoo>