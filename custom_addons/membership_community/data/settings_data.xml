<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default AMS Settings -->
        <record id="default_ams_settings" model="ams.settings">
            <field name="name">Default AMS Settings</field>
            <field name="member_number_prefix">M</field>
            <field name="member_number_padding">6</field>
            <field name="grace_period_days">30</field>
            <field name="suspend_period_days">60</field>
            <field name="terminate_period_days">90</field>
            <field name="auto_create_portal_users">True</field>
            <field name="auto_status_transitions">True</field>
            <field name="engagement_scoring_enabled">False</field>
            <field name="default_engagement_score">0.0</field>
            <field name="active">True</field>
        </record>

        <!-- Default Communication Preferences -->
        <record id="default_communication_settings" model="ams.settings">
            <field name="name">Communication Settings</field>
            <field name="default_communication_preference">email</field>
            <field name="default_newsletter_subscription">True</field>
            <field name="default_directory_listing">True</field>
            <field name="welcome_email_enabled">True</field>
            <field name="renewal_reminder_enabled">True</field>
            <field name="renewal_reminder_days">30</field>
            <field name="active">False</field>
        </record>

    </data>
</odoo>