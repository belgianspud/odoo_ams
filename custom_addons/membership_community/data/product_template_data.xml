<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ========================================== -->
        <!-- DEFAULT MEMBERSHIP PRODUCTS (ENHANCED) -->
        <!-- Template products with seat configurations -->
        <!-- ========================================== -->

        <!-- Individual Membership Product -->
        <record id="product_membership_individual" model="product.template">
            <field name="name">Individual Membership - Annual</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">100.00</field>
            <field name="is_membership_product" eval="True"/>
            <field name="subscription_product_type">membership</field>
            <field name="default_member_category_id" ref="membership_category_individual_default"/>
            <field name="portal_access_level">standard</field>
            <field name="feature_ids" eval="[(6, 0, [
                ref('feature_portal_access'),
                ref('feature_directory'),
                ref('feature_event_registration'),
                ref('feature_publications'),
                ref('feature_networking')
            ])]"/>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_event_discount'),
                ref('benefit_publication_access'),
                ref('benefit_directory_listing'),
                ref('benefit_networking_events'),
                ref('benefit_member_support')
            ])]"/>
            <field name="description">Annual individual membership with full access to all member benefits and services.</field>
        </record>

        <!-- Organizational Membership Product (ENHANCED) -->
        <record id="product_membership_organizational" model="product.template">
            <field name="name">Organizational Membership - Annual</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">500.00</field>
            <field name="is_membership_product" eval="True"/>
            <field name="subscription_product_type">organizational_membership</field>
            <field name="default_member_category_id" ref="membership_category_organizational_default"/>
            <field name="portal_access_level">premium</field>
            <field name="feature_ids" eval="[(6, 0, [
                ref('feature_portal_access'),
                ref('feature_directory'),
                ref('feature_event_registration'),
                ref('feature_publications'),
                ref('feature_networking')
            ])]"/>
            <field name="benefit_ids" eval="[(6, 0, [
                ref('benefit_event_discount'),
                ref('benefit_publication_access'),
                ref('benefit_directory_listing'),
                ref('benefit_networking_events'),
                ref('benefit_member_support')
            ])]"/>
            <!-- NEW: Organizational settings -->
            <field name="requires_organization_info" eval="True"/>
            <field name="requires_primary_contact" eval="True"/>
            <field name="allow_multiple_admins" eval="True"/>
            <field name="seat_allocation_type">admin_managed</field>
            <field name="seat_approval_required" eval="False"/>
            <field name="require_org_tax_id" eval="False"/>
            <field name="require_org_address" eval="True"/>
            <field name="max_org_size">0</field>
            <field name="description">Annual organizational membership with enhanced benefits and multiple user access. Includes 5 seats with admin-managed allocation.</field>
        </record>

        <!-- Organizational Membership - 5 Seat Pack (NEW) -->
        <record id="product_membership_org_5seat_pack" model="product.template">
            <field name="name">Organizational Membership - 5 Seat Pack</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_all"/>
