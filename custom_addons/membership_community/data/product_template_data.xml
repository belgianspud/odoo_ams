            <!-- NEW: Seat product fields -->
            <field name="provides_seats" eval="True"/>
            <field name="seat_quantity">5</field>
            <field name="parent_membership_product_id" ref="product_membership_organizational"/>
            <field name="feature_ids" eval="[(6, 0, [
