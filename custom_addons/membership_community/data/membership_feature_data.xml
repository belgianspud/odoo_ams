<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ========================================== -->
        <!-- MEMBERSHIP FEATURES -->
        <!-- Default features for professional associations -->
        <!-- ========================================== -->

        <!-- PORTAL FEATURES -->
        
        <record id="feature_portal_access" model="membership.feature">
            <field name="name">Member Portal Access</field>
            <field name="code">PORTAL_ACCESS</field>
            <field name="sequence">10</field>
            <field name="category">portal</field>
            <field name="feature_type">boolean</field>
            <field name="description">Access to member portal with profile management</field>
            <field name="grants_portal_access">True</field>
            <field name="portal_access_level">standard</field>
        </record>

        <record id="feature_portal_premium" model="membership.feature">
            <field name="name">Premium Portal Access</field>
            <field name="code">PORTAL_PREMIUM</field>
            <field name="sequence">11</field>
            <field name="category">portal</field>
            <field name="feature_type">boolean</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Enhanced portal with advanced features and customization</field>
            <field name="grants_portal_access">True</field>
            <field name="portal_access_level">premium</field>
        </record>

        <!-- DIRECTORY FEATURES -->

        <record id="feature_directory_listing" model="membership.feature">
            <field name="name">Member Directory Listing</field>
            <field name="code">DIR_LISTING</field>
            <field name="sequence">20</field>
            <field name="category">directory</field>
            <field name="feature_type">boolean</field>
            <field name="description">Profile listed in public member directory</field>
            <field name="grants_directory_listing">True</field>
            <field name="directory_visibility">standard</field>
        </record>

        <record id="feature_directory_search" model="membership.feature">
            <field name="name">Directory Search Access</field>
            <field name="code">DIR_SEARCH</field>
            <field name="sequence">21</field>
            <field name="category">directory</field>
            <field name="feature_type">boolean</field>
            <field name="description">Search and browse member directory</field>
            <field name="enables_member_directory">True</field>
        </record>

        <!-- EVENT FEATURES -->

        <record id="feature_event_discount" model="membership.feature">
            <field name="name">Event Registration Discount</field>
            <field name="code">EVENT_DISC_20</field>
            <field name="sequence">30</field>
            <field name="category">event</field>
            <field name="feature_type">percentage</field>
            <field name="description">20% discount on all event registrations</field>
            <field name="discount_type">percentage</field>
            <field name="applies_to">events</field>
            <field name="discount_percentage">20.0</field>
            <field name="event_registration_benefit">discount</field>
            <field name="event_discount_percentage">20.0</field>
        </record>

        <record id="feature_event_priority" model="membership.feature">
            <field name="name">Priority Event Registration</field>
            <field name="code">EVENT_PRIORITY</field>
            <field name="sequence">31</field>
            <field name="category">event</field>
            <field name="feature_type">boolean</field>
            <field name="description">Early registration access 7 days before public</field>
            <field name="event_registration_benefit">priority</field>
            <field name="early_registration_days">7</field>
        </record>

        <record id="feature_free_events" model="membership.feature">
            <field name="name">Complimentary Event Access</field>
            <field name="code">EVENT_FREE</field>
            <field name="sequence">32</field>
            <field name="category">event</field>
            <field name="feature_type">quantity</field>
            <field name="is_premium_feature">True</field>
            <field name="description">2 complimentary event registrations per year</field>
            <field name="event_registration_benefit">free</field>
            <field name="free_event_count">2</field>
            <field name="has_usage_limit">True</field>
            <field name="usage_limit">2</field>
            <field name="usage_period">calendar_year</field>
        </record>

        <!-- PUBLICATION FEATURES -->

        <record id="feature_journal_digital" model="membership.feature">
            <field name="name">Digital Journal Access</field>
            <field name="code">JOURNAL_DIGITAL</field>
            <field name="sequence">40</field>
            <field name="category">publication</field>
            <field name="feature_type">boolean</field>
            <field name="description">Unlimited digital access to association journal</field>
            <field name="publication_access_type">digital</field>
            <field name="download_limit">0</field>
            <field name="archive_access_years">5</field>
        </record>

        <record id="feature_journal_print" model="membership.feature">
            <field name="name">Print Journal Subscription</field>
            <field name="code">JOURNAL_PRINT</field>
            <field name="sequence">41</field>
            <field name="category">publication</field>
            <field name="feature_type">boolean</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Printed journal delivered to mailing address</field>
            <field name="publication_access_type">print</field>
        </record>

        <record id="feature_newsletter" model="membership.feature">
            <field name="name">Member Newsletter</field>
            <field name="code">NEWSLETTER</field>
            <field name="sequence">42</field>
            <field name="category">publication</field>
            <field name="feature_type">boolean</field>
            <field name="description">Monthly newsletter with industry updates</field>
        </record>

        <!-- PROFESSIONAL DEVELOPMENT -->

        <record id="feature_ce_tracking" model="membership.feature">
            <field name="name">CE/CME Tracking</field>
            <field name="code">CE_TRACKING</field>
            <field name="sequence">50</field>
            <field name="category">professional</field>
            <field name="feature_type">boolean</field>
            <field name="description">Track continuing education credits in member portal</field>
            <field name="enables_ce_tracking">True</field>
            <field name="requires_module">membership_professional</field>
        </record>

        <record id="feature_credential_tracking" model="membership.feature">
            <field name="name">Credential Management</field>
            <field name="code">CREDENTIAL_MGMT</field>
            <field name="sequence">51</field>
            <field name="category">professional</field>
            <field name="feature_type">boolean</field>
            <field name="description">Manage professional licenses and certifications</field>
            <field name="enables_credential_tracking">True</field>
            <field name="requires_module">membership_professional</field>
        </record>

        <record id="feature_ce_reporting" model="membership.feature">
            <field name="name">CE Credit Reporting</field>
            <field name="code">CE_REPORTING</field>
            <field name="sequence">52</field>
            <field name="category">professional</field>
            <field name="feature_type">boolean</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Automated CE reporting to licensing boards</field>
            <field name="ce_credit_reporting">True</field>
            <field name="requires_module">membership_professional</field>
        </record>

        <record id="feature_designation_apply" model="membership.feature">
            <field name="name">Professional Designation Eligibility</field>
            <field name="code">DESIGNATION_APPLY</field>
            <field name="sequence">53</field>
            <field name="category">professional</field>
            <field name="feature_type">boolean</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Eligible to apply for Fellow and other designations</field>
            <field name="enables_designation_application">True</field>
            <field name="requires_module">membership_professional</field>
        </record>

        <!-- CERTIFICATION -->

        <record id="feature_cert_discount" model="membership.feature">
            <field name="name">Certification Exam Discount</field>
            <field name="code">CERT_DISC_25</field>
            <field name="sequence">60</field>
            <field name="category">certification</field>
            <field name="feature_type">percentage</field>
            <field name="description">25% discount on certification exams</field>
            <field name="certification_discount">25.0</field>
            <field name="discount_type">percentage</field>
            <field name="applies_to">certifications</field>
            <field name="discount_percentage">25.0</field>
        </record>

        <!-- NETWORKING FEATURES -->

        <record id="feature_member_messaging" model="membership.feature">
            <field name="name">Member-to-Member Messaging</field>
            <field name="code">MEMBER_MSG</field>
            <field name="sequence">70</field>
            <field name="category">networking</field>
            <field name="feature_type">boolean</field>
            <field name="description">Send messages to other members through portal</field>
            <field name="enables_messaging">True</field>
        </record>

        <record id="feature_mentorship" model="membership.feature">
            <field name="name">Mentorship Program Access</field>
            <field name="code">MENTORSHIP</field>
            <field name="sequence">71</field>
            <field name="category">networking</field>
            <field name="feature_type">boolean</field>
            <field name="description">Participate in mentorship program as mentor or mentee</field>
            <field name="enables_mentorship">True</field>
        </record>

        <record id="feature_job_board" model="membership.feature">
            <field name="name">Career Center Access</field>
            <field name="code">JOB_BOARD</field>
            <field name="sequence">72</field>
            <field name="category">networking</field>
            <field name="feature_type">boolean</field>
            <field name="description">Post resume and access job listings</field>
            <field name="enables_job_board">True</field>
        </record>

        <record id="feature_networking_events" model="membership.feature">
            <field name="name">Exclusive Networking Events</field>
            <field name="code">NET_EVENTS</field>
            <field name="sequence">73</field>
            <field name="category">networking</field>
            <field name="feature_type">boolean</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Invitation to members-only networking events</field>
            <field name="networking_event_access">True</field>
        </record>

        <!-- EDUCATION & TRAINING -->

        <record id="feature_webinar_access" model="membership.feature">
            <field name="name">On-Demand Webinar Library</field>
            <field name="code">WEBINAR_LIB</field>
            <field name="sequence">80</field>
            <field name="category">education</field>
            <field name="feature_type">unlimited</field>
            <field name="description">Unlimited access to recorded webinar library</field>
        </record>

        <record id="feature_training_discount" model="membership.feature">
            <field name="name">Training Course Discount</field>
            <field name="code">TRAINING_DISC</field>
            <field name="sequence">81</field>
            <field name="category">education</field>
            <field name="feature_type">percentage</field>
            <field name="description">15% discount on all training courses</field>
            <field name="discount_percentage">15.0</field>
        </record>

        <!-- DISCOUNT FEATURES -->

        <record id="feature_product_discount" model="membership.feature">
            <field name="name">Product Purchase Discount</field>
            <field name="code">PROD_DISC_10</field>
            <field name="sequence">90</field>
            <field name="category">discount</field>
            <field name="feature_type">percentage</field>
            <field name="description">10% discount on association products and merchandise</field>
            <field name="discount_type">percentage</field>
            <field name="applies_to">products</field>
            <field name="discount_percentage">10.0</field>
        </record>

        <!-- ACCESS RIGHTS -->

        <record id="feature_chapter_access" model="membership.feature">
            <field name="name">Chapter Membership Eligibility</field>
            <field name="code">CHAPTER_ACCESS</field>
            <field name="sequence">100</field>
            <field name="category">access</field>
            <field name="feature_type">boolean</field>
            <field name="description">Eligible to join local chapters</field>
        </record>

        <record id="feature_committee_access" model="membership.feature">
            <field name="name">Committee Participation</field>
            <field name="code">COMMITTEE_ACCESS</field>
            <field name="sequence">101</field>
            <field name="category">access</field>
            <field name="feature_type">boolean</field>
            <field name="description">Eligible to join and participate in committees</field>
        </record>

        <record id="feature_voting_rights" model="membership.feature">
            <field name="name">Voting Rights</field>
            <field name="code">VOTING</field>
            <field name="sequence">102</field>
            <field name="category">access</field>
            <field name="feature_type">boolean</field>
            <field name="description">Vote in association elections and governance matters</field>
        </record>

        <!-- BUSINESS SERVICES -->

        <record id="feature_legal_hotline" model="membership.feature">
            <field name="name">Legal Resource Hotline</field>
            <field name="code">LEGAL_HOTLINE</field>
            <field name="sequence">110</field>
            <field name="category">business</field>
            <field name="feature_type">quantity</field>
            <field name="is_premium_feature">True</field>
            <field name="description">Up to 3 consultations per year with legal experts</field>
            <field name="has_usage_limit">True</field>
            <field name="usage_limit">3</field>
            <field name="usage_period">calendar_year</field>
            <field name="redemption_method">contact_staff</field>
        </record>

        <record id="feature_practice_resources" model="membership.feature">
            <field name="name">Practice Management Resources</field>
            <field name="code">PRACTICE_RESOURCES</field>
            <field name="sequence">111</field>
            <field name="category">business</field>
            <field name="feature_type">boolean</field>
            <field name="description">Access to templates, guides, and business tools</field>
        </record>

        <!-- RECOGNITION -->

        <record id="feature_member_badge" model="membership.feature">
            <field name="name">Digital Member Badge</field>
            <field name="code">DIGITAL_BADGE</field>
            <field name="sequence">120</field>
            <field name="category">recognition</field>
            <field name="feature_type">boolean</field>
            <field name="description">Digital badge for email signature and website</field>
        </record>

        <record id="feature_certificate" model="membership.feature">
            <field name="name">Membership Certificate</field>
            <field name="code">CERTIFICATE</field>
            <field name="sequence">121</field>
            <field name="category">recognition</field>
            <field name="feature_type">boolean</field>
            <field name="description">Personalized membership certificate</field>
        </record>

    </data>
</odoo>