<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences -->
        <record id="seq_membership_membership" model="ir.sequence">
            <field name="name">Membership</field>
            <field name="code">membership.membership</field>
            <field name="prefix">MEM</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Default Membership Types -->
        <record id="membership_type_basic" model="membership.type">
            <field name="name">Basic Membership</field>
            <field name="description">Basic membership with standard benefits</field>
            <field name="price">100.00</field>
            <field name="duration_type">yearly</field>
            <field name="sequence">10</field>
        </record>

        <record id="membership_type_premium" model="membership.type">
            <field name="name">Premium Membership</field>
            <field name="description">Premium membership with additional benefits</field>
            <field name="price">200.00</field>
            <field name="duration_type">yearly</field>
            <field name="sequence">20</field>
        </record>

        <record id="membership_type_lifetime" model="membership.type">
            <field name="name">Lifetime Membership</field>
            <field name="description">One-time payment for lifetime access</field>
            <field name="price">1000.00</field>
            <field name="duration_type">unlimited</field>
            <field name="sequence">30</field>
        </record>

        <!-- Cron Jobs -->
        <record id="cron_membership_update_states" model="ir.cron">
            <field name="name">Update Membership States</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_membership_states()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>