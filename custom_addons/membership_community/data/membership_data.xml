<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default Membership Types (from original membership_community) -->
        <record id="membership_type_basic" model="membership.type">
            <field name="name">Basic Membership</field>
            <field name="description">Basic membership with standard benefits</field>
            <field name="price">100.00</field>
            <field name="duration_type">yearly</field>
            <field name="sequence">10</field>
        </record>

        <record id="membership_type_premium" model="membership.type">
            <field name="name">Premium Membership</field>
            <field name="description">Premium membership with additional benefits</field>
            <field name="price">200.00</field>
            <field name="duration_type">yearly</field>
            <field name="sequence">20</field>
        </record>

        <record id="membership_type_lifetime" model="membership.type">
            <field name="name">Lifetime Membership</field>
            <field name="description">One-time payment for lifetime access</field>
            <field name="price">1000.00</field>
            <field name="duration_type">unlimited</field>
            <field name="sequence">30</field>
        </record>

    </data>
</odoo>