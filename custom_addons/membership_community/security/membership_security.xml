<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categories -->
        <record id="module_category_membership" model="ir.module.category">
            <field name="name">Membership Management</field>
            <field name="description">Comprehensive membership and association management</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        <record id="group_membership_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Basic member access - can view their own membership data</field>
        </record>

        <record id="group_membership_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_user'))]"/>
            <field name="comment">Full membership management access including configuration</field>
        </record>

        <!-- Record Rules -->
        <record id="membership_user_rule" model="ir.rule">
            <field name="name">Membership: User Access</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">['|', ('partner_id.user_ids', 'in', [user.id]), ('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="membership_manager_rule" model="ir.rule">
            <field name="name">Membership: Manager Access</field>
            <field name="model_id" ref="model_membership_membership"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
        </record>

        <!-- Partner Record Rules -->
        <record id="rule_partner_member_own_data" model="ir.rule">
            <field name="name">Members: Own Data Only</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_partner_manager_all_data" model="ir.rule">
            <field name="name">Managers: All Member Data</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>