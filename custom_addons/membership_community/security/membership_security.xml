<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ========================================== -->
        <!-- MEMBERSHIP SECURITY GROUPS -->
        <!-- ========================================== -->

        <!-- Membership Category: Membership -->
        <record id="module_category_membership" model="ir.module.category">
            <field name="name">Membership</field>
            <field name="description">Access rights for membership management</field>
            <field name="sequence">10</field>
        </record>

        <!-- Membership User Group -->
        <record id="group_membership_user" model="res.groups">
            <field name="name">Membership User</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view memberships and basic member information</field>
        </record>

        <!-- Membership Manager Group -->
        <record id="group_membership_manager" model="res.groups">
            <field name="name">Membership Manager</field>
            <field name="category_id" ref="module_category_membership"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_user'))]"/>
            <field name="comment">Can manage all membership operations including approvals and verifications</field>
        </record>

        <!-- ========================================== -->
        <!-- RECORD RULES -->
        <!-- ========================================== -->

        <!-- Membership Category Rules -->
        <record id="membership_category_rule_user" model="ir.rule">
            <field name="name">Membership Category: User - All Records</field>
            <field name="model_id" ref="model_membership_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="membership_category_rule_manager" model="ir.rule">
            <field name="name">Membership Category: Manager - Full Access</field>
            <field name="model_id" ref="model_membership_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Membership Benefit Rules -->
        <record id="membership_benefit_rule_user" model="ir.rule">
            <field name="name">Membership Benefit: User - All Records</field>
            <field name="model_id" ref="model_membership_benefit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="membership_benefit_rule_manager" model="ir.rule">
            <field name="name">Membership Benefit: Manager - Full Access</field>
            <field name="model_id" ref="model_membership_benefit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Membership Feature Rules -->
        <record id="membership_feature_rule_user" model="ir.rule">
            <field name="name">Membership Feature: User - All Records</field>
            <field name="model_id" ref="model_membership_feature"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="membership_feature_rule_manager" model="ir.rule">
            <field name="name">Membership Feature: Manager - Full Access</field>
            <field name="model_id" ref="model_membership_feature"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Subscription (Membership) Rules - Extend subscription_management security -->
        <record id="subscription_rule_membership_user" model="ir.rule">
            <field name="name">Subscription: Membership User - Read Own Company</field>
            <field name="model_id" ref="subscription_management.model_subscription_subscription"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="subscription_rule_membership_manager" model="ir.rule">
            <field name="name">Subscription: Membership Manager - Full Access Own Company</field>
            <field name="model_id" ref="subscription_management.model_subscription_subscription"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Partner (Member) Rules - Additional access for membership users -->
        <record id="partner_rule_membership_user" model="ir.rule">
            <field name="name">Partner: Membership User - Read All</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="partner_rule_membership_manager" model="ir.rule">
            <field name="name">Partner: Membership Manager - Full Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>