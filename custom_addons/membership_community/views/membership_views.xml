<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_membership_membership_list" model="ir.ui.view">
            <field name="name">membership.membership.list</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <list string="Memberships" 
                      decoration-success="state=='active'" 
                      decoration-danger="state=='expired'" 
                      decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="membership_type_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" widget="badge" 
                           decoration-success="state=='active'" 
                           decoration-danger="state=='expired'"
                           decoration-warning="state=='draft'"
                           decoration-muted="state=='cancelled'"/>
                    <field name="payment_state" widget="badge"
                           decoration-success="payment_state=='paid'"
                           decoration-warning="payment_state=='partial'"
                           decoration-danger="payment_state=='not_paid'"/>
                    <field name="amount_due" widget="monetary"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_membership_membership_form" model="ir.ui.view">
            <field name="name">membership.membership.form</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <form string="Membership">
                    <header>
                        <button name="action_activate" type="object" string="Activate" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_renew" type="object" string="Renew" 
                                invisible="state not in ['active', 'expired']"/>
                        <button name="action_create_invoice" type="object" string="Create Invoice"
                                invisible="payment_state == 'paid'"/>
                        <button name="action_suspend" type="object" string="Suspend" 
                                invisible="state != 'active'"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                                invisible="state in ['cancelled', 'expired']"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group name="member_info">
                                <field name="partner_id"/>
                                <field name="membership_type_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group name="dates">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="renewal_date"/>
                            </group>
                        </group>
                        <group string="Payment Information">
                            <group>
                                <field name="amount_total" widget="monetary"/>
                                <field name="amount_paid" widget="monetary"/>
                                <field name="amount_due" widget="monetary"/>
                            </group>
                            <group>
                                <field name="payment_state" widget="badge"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payments" name="payments">
                                <field name="payment_ids" context="{'default_membership_id': id}">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="payment_date"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="payment_method"/>
                                        <field name="state" widget="badge"/>
                                        <button name="action_confirm" type="object" string="Confirm" 
                                                icon="fa-check" invisible="state != 'draft'"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Invoices" name="invoices">
                                <field name="invoice_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="invoice_date"/>
                                        <field name="amount_total" widget="monetary"/>
                                        <field name="payment_state" widget="badge"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional notes about this membership..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_membership_membership_search" model="ir.ui.view">
            <field name="name">membership.membership.search</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <search string="Search Memberships">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="membership_type_id"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="expired" string="Expired" domain="[('state', '=', 'expired')]"/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <separator/>
                    <filter name="paid" string="Paid" domain="[('payment_state', '=', 'paid')]"/>
                    <filter name="not_paid" string="Not Paid" domain="[('payment_state', '=', 'not_paid')]"/>
                    <separator/>
                    <filter name="expiring_soon" string="Expiring Soon" 
                            domain="[('end_date', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d')), ('state', '=', 'active')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_partner" string="Member" context="{'group_by': 'partner_id'}"/>
                        <filter name="group_type" string="Membership Type" context="{'group_by': 'membership_type_id'}"/>
                        <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_payment_state" string="Payment Status" context="{'group_by': 'payment_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_membership_membership" model="ir.actions.act_window">
            <field name="name">Memberships</field>
            <field name="res_model">membership.membership</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership!
                </p>
                <p>
                    Register new members and manage their membership status.
                </p>
            </field>
        </record>
    </data>
</odoo>