<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Settings Form -->
    <record id="res_config_settings_view_form_inherit_membership" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.membership</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Membership" name="membership_community" groups="membership_community.group_membership_manager">
                    
                    <block title="Membership Lifecycle Management" name="membership_lifecycle">
                        
                        <setting id="membership_grace_period" string="Grace Period">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="membership_grace_period_days" class="col-lg-3 o_light_label"/>
                                    <field name="membership_grace_period_days"/>
                                </div>
                                <div class="text-muted">
                                    Number of days after expiry before suspension. Member retains full access during grace period.
                                </div>
                                <div class="mt16">
                                    <field name="membership_grace_send_email" class="o_light_label"/>
                                    <label for="membership_grace_send_email"/>
                                </div>
                                <div class="mt8" invisible="not membership_grace_send_email">
                                    <label for="membership_grace_email_frequency" class="o_light_label"/>
                                    <field name="membership_grace_email_frequency"/>
                                </div>
                            </div>
                        </setting>
                        
                        <setting id="membership_suspend_period" string="Suspension Period">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="membership_suspend_period_days" class="col-lg-3 o_light_label"/>
                                    <field name="membership_suspend_period_days"/>
                                </div>
                                <div class="text-muted">
                                    Number of days in suspension before termination. Member has limited access during suspension.
                                </div>
                                <div class="mt16">
                                    <field name="membership_suspend_restrict_portal" class="o_light_label"/>
                                    <label for="membership_suspend_restrict_portal"/>
                                </div>
                                <div class="mt8">
                                    <field name="membership_suspend_send_email" class="o_light_label"/>
                                    <label for="membership_suspend_send_email"/>
                                </div>
                            </div>
                        </setting>
                        
                        <setting id="membership_terminate_period" string="Termination Period">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="membership_terminate_period_days" class="col-lg-3 o_light_label"/>
                                    <field name="membership_terminate_period_days"/>
                                </div>
                                <div class="text-muted">
                                    Total days before final termination. After this period, membership is permanently terminated.
                                </div>
                                <div class="alert alert-info mt16" role="alert">
                                    <strong>Timeline:</strong> After expiry, members go through:
                                    <ul class="mb-0 mt-2">
                                        <li>Grace Period (full access with warnings)</li>
                                        <li>Suspension (limited access)</li>
                                        <li>Termination (no access, archived)</li>
                                    </ul>
                                </div>
                            </div>
                        </setting>
                        
                    </block>
                </app>
            </xpath>
        </field>
    </record>

</odoo>