<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Settings Form -->
    <record id="res_config_settings_view_form_inherit_membership" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.membership</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Membership" 
                     string="Membership" data-key="membership_community">
                    
                    <h2>Membership Lifecycle Management</h2>
                    
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="membership_grace_period_days"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="membership_grace_period_days"/>
                                <div class="text-muted">
                                    Number of days after expiry before suspension
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="membership_grace_send_email" class="o_light_label"/>
                                        <label for="membership_grace_send_email"/>
                                    </div>
                                    <div class="mt8" invisible="not membership_grace_send_email">
                                        <label for="membership_grace_email_frequency" class="o_light_label"/>
                                        <field name="membership_grace_email_frequency"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="membership_suspend_period_days"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="membership_suspend_period_days"/>
                                <div class="text-muted">
                                    Number of days in suspension before termination
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="membership_suspend_restrict_portal" class="o_light_label"/>
                                        <label for="membership_suspend_restrict_portal"/>
                                    </div>
                                    <div class="mt8">
                                        <field name="membership_suspend_send_email" class="o_light_label"/>
                                        <label for="membership_suspend_send_email"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="membership_terminate_period_days"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="membership_terminate_period_days"/>
                                <div class="text-muted">
                                    Total days before final termination
                                </div>
                                <div class="alert alert-info mt8" role="alert">
                                    <strong>Timeline:</strong> After expiry, members go through:
                                    <ul class="mb-0 mt-2">
                                        <li>Grace Period (full access with warnings)</li>
                                        <li>Suspension (limited access)</li>
                                        <li>Termination (no access, archived)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>