<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- MAIN MENU STRUCTURE (SIMPLIFIED) -->
        <!-- ========================================== -->

        <!-- Root Menu: Membership -->
        <menuitem id="menu_membership_root"
                  name="Membership"
                  sequence="50"
                  groups="membership_community.group_membership_user"/>

        <!-- ========================================== -->
        <!-- QUICK SETUP - TOP PRIORITY -->
        <!-- ========================================== -->
        
        <menuitem id="menu_membership_quick_setup_top"
                  name="ðŸš€ Quick Setup"
                  parent="menu_membership_root"
                  action="action_membership_quick_setup"
                  sequence="5"/>

        <!-- ========================================== -->
        <!-- MEMBERSHIPS SECTION -->
        <!-- ========================================== -->

        <menuitem id="menu_membership_management"
                  name="Memberships"
                  parent="menu_membership_root"
                  sequence="10"/>

        <menuitem id="menu_membership_subscription_all"
                  name="All Memberships"
                  parent="menu_membership_management"
                  action="membership_community.action_membership_subscription_all"
                  sequence="10"/>

        <menuitem id="menu_membership_subscription_active"
                  name="Active Memberships"
                  parent="menu_membership_management"
                  action="membership_community.action_membership_subscription_active"
                  sequence="20"/>

        <menuitem id="menu_membership_subscription_pending"
                  name="Pending Verification"
                  parent="menu_membership_management"
                  action="membership_community.action_membership_subscription_pending"
                  sequence="30"/>

        <menuitem id="menu_membership_subscription_renewal"
                  name="Due for Renewal"
                  parent="menu_membership_management"
                  action="membership_community.action_membership_subscription_renewal"
                  sequence="40"/>

        <!-- ========================================== -->
        <!-- MEMBERS SECTION -->
        <!-- ========================================== -->

        <menuitem id="menu_members"
                  name="Members"
                  parent="menu_membership_root"
                  sequence="20"/>

        <menuitem id="menu_member_directory"
                  name="Member Directory"
                  parent="menu_members"
                  action="membership_community.action_member_directory"
                  sequence="10"/>

        <menuitem id="menu_partners_all"
                  name="All Contacts"
                  parent="menu_members"
                  action="base.action_partner_form"
                  sequence="20"/>

        <!-- ========================================== -->
        <!-- PRODUCTS SECTION -->
        <!-- ========================================== -->

        <menuitem id="menu_membership_products"
                  name="Products"
                  parent="menu_membership_root"
                  sequence="30"/>

        <menuitem id="menu_product_membership"
                  name="Membership Products"
                  parent="menu_membership_products"
                  action="membership_community.action_membership_products"
                  sequence="10"/>

        <menuitem id="menu_subscription_plans"
                  name="Subscription Plans"
                  parent="menu_membership_products"
                  action="subscription_management.action_subscription_plan"
                  sequence="20"/>

        <!-- ========================================== -->
        <!-- CONFIGURATION SECTION -->
        <!-- ========================================== -->

        <menuitem id="menu_membership_configuration"
                  name="Configuration"
                  parent="menu_membership_root"
                  sequence="90"
                  groups="membership_community.group_membership_manager"/>

        <!-- Quick Setup in Configuration too -->
        <menuitem id="menu_membership_quick_setup_config"
                  name="ðŸš€ Quick Setup"
                  parent="menu_membership_configuration"
                  action="action_membership_quick_setup"
                  sequence="1"/>

        <!-- Categories Submenu -->
        <menuitem id="menu_membership_categories_config"
                  name="Member Categories"
                  parent="menu_membership_configuration"
                  sequence="10"/>

        <menuitem id="menu_membership_category"
                  name="Categories"
                  parent="menu_membership_categories_config"
                  action="membership_community.action_membership_category"
                  sequence="10"/>

        <!-- Features & Benefits Submenu -->
        <menuitem id="menu_membership_features_benefits"
                  name="Features &amp; Benefits"
                  parent="menu_membership_configuration"
                  sequence="20"/>

        <menuitem id="menu_membership_feature"
                  name="Features"
                  parent="menu_membership_features_benefits"
                  action="membership_community.action_membership_feature"
                  sequence="10"/>

        <menuitem id="menu_membership_benefit"
                  name="Benefits"
                  parent="menu_membership_features_benefits"
                  action="membership_community.action_membership_benefit"
                  sequence="20"/>

        <!-- Settings - Link to Subscription Management Settings -->
        <menuitem id="menu_membership_settings"
                  name="Settings"
                  parent="menu_membership_configuration"
                  action="subscription_management.action_subscription_settings"
                  sequence="90"
                  groups="membership_community.group_membership_manager"/>

        <!-- ========================================== -->
        <!-- REPORTING SECTION -->
        <!-- ========================================== -->

        <menuitem id="menu_membership_reporting"
                  name="Reporting"
                  parent="menu_membership_root"
                  sequence="80"
                  groups="membership_community.group_membership_user"/>

        <menuitem id="menu_membership_analysis"
                  name="Membership Analysis"
                  parent="menu_membership_reporting"
                  action="membership_community.action_membership_subscription_all"
                  sequence="10"/>

        <!-- ========================================== -->
        <!-- MEMBERSHIP PRODUCTS ACTION -->
        <!-- ========================================== -->

        <!-- Membership Products Action -->
        <record id="action_membership_products" model="ir.actions.act_window">
            <field name="name">Membership Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('is_membership_product', '=', True)]</field>
            <field name="context">{
                'default_is_membership_product': True,
                'default_type': 'service',
                'search_default_membership_products': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership product
                </p>
                <p>
                    Use the <strong>ðŸš€ Quick Setup</strong> wizard for easy configuration, or create 
                    membership products manually here.
                </p>
                <p>
                    Membership products define the different types of memberships you offer.
                    They are linked to subscription plans for billing and categories for member classification.
                </p>
            </field>
        </record>

    </data>
</odoo>