<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_membership_type_list" model="ir.ui.view">
            <field name="name">membership.type.list</field>
            <field name="model">membership.type</field>
            <field name="arch" type="xml">
                <list string="Membership Types">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="price" widget="monetary"/>
                    <field name="duration_type"/>
                    <field name="member_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_membership_type_form" model="ir.ui.view">
            <field name="name">membership.type.form</field>
            <field name="model">membership.type</field>
            <field name="arch" type="xml">
                <form string="Membership Type">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                                invisible="active"/>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Membership Type Name"/></h1>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="description"/>
                            </group>
                            <group name="pricing">
                                <field name="price"/>
                                <field name="currency_id"/>
                                <field name="product_id"/>
                            </group>
                        </group>
                        <group string="Duration Settings">
                            <group>
                                <field name="duration_type"/>
                                <field name="duration_months" invisible="duration_type != 'fixed'"/>
                            </group>
                            <group>
                                <field name="auto_renew"/>
                                <field name="grace_period_days"/>
                            </group>
                        </group>
                        <group string="Statistics" name="statistics">
                            <field name="member_count"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_membership_type" model="ir.actions.act_window">
            <field name="name">Membership Types</field>
            <field name="res_model">membership.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership type!
                </p>
                <p>
                    Define different types of memberships with varying prices, durations, and benefits.
                </p>
            </field>
        </record>
    </data>
</odoo>