<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- MEMBERSHIP BENEFIT VIEWS -->
        <!-- ========================================== -->

        <!-- Tree View -->
        <record id="view_membership_benefit_tree" model="ir.ui.view">
            <field name="name">membership.benefit.tree</field>
            <field name="model">membership.benefit</field>
            <field name="arch" type="xml">
                <tree string="Membership Benefits">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="benefit_type"/>
                    <field name="is_premium_benefit"/>
                    <field name="is_highlighted"/>
                    <field name="monetary_value" optional="show" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="product_count"/>
                    <field name="display_on_website"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_membership_benefit_form" model="ir.ui.view">
            <field name="name">membership.benefit.form</field>
            <field name="model">membership.benefit</field>
            <field name="arch" type="xml">
                <form string="Membership Benefit">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cube">
                                <field name="product_count" widget="statinfo" string="Products"/>
                            </button>
                            <button name="action_view_usage" type="object" class="oe_stat_button" icon="fa-chart-line" attrs="{'invisible': [('track_usage', '=', False)]}">
                                <field name="usage_count" widget="statinfo" string="Usage"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <widget name="web_ribbon" title="Premium" bg_color="bg-success" attrs="{'invisible': [('is_premium_benefit', '=', False)]}"/>
                        <widget name="web_ribbon" title="Highlighted" bg_color="bg-info" attrs="{'invisible': [('is_highlighted', '=', False)]}"/>

                        <field name="color" widget="color_picker" class="float-right"/>
                        <field name="image" widget="image" class="oe_avatar"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. 20% Event Registration Discount"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="category"/>
                                <field name="benefit_type"/>
                                <field name="active"/>
                            </group>
                            <group name="classification" string="Classification">
                                <field name="is_premium_benefit"/>
                                <field name="is_highlighted"/>
                                <field name="icon"/>
                            </group>
                        </group>

                        <group>
                            <field name="short_description" placeholder="Brief one-line description..."/>
                            <field name="description" placeholder="Detailed description of this benefit..."/>
                        </group>

                        <notebook>
                            <page name="value" string="Value &amp; Quantification">
                                <group>
                                    <group name="monetary" string="Monetary Value">
                                        <field name="has_monetary_value"/>
                                        <field name="monetary_value" widget="monetary" attrs="{'invisible': [('has_monetary_value', '=', False)]}"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="value_frequency" attrs="{'invisible': [('has_monetary_value', '=', False)]}"/>
                                    </group>
                                    <group name="quantity" string="Quantification">
                                        <field name="quantifiable_value"/>
                                    </group>
                                </group>
                            </page>

                            <page name="discounts" string="Discount Configuration" attrs="{'invisible': [('category', '!=', 'discount')]}">
                                <group>
                                    <group name="discount_settings" string="Discount Settings">
                                        <field name="discount_type"/>
                                        <field name="discount_applies_to"/>
                                    </group>
                                    <group name="discount_values" string="Discount Values">
                                        <field name="discount_percentage" attrs="{'invisible': [('discount_type', '!=', 'percentage')]}"/>
                                        <field name="discount_amount" widget="monetary" attrs="{'invisible': [('discount_type', '!=', 'fixed')]}"/>
                                    </group>
                                </group>
                            </page>

                            <page name="access" string="Access &amp; Eligibility">
                                <group>
                                    <group name="activation" string="Activation">
                                        <field name="requires_activation"/>
                                        <field name="auto_activate" attrs="{'invisible': [('requires_activation', '=', False)]}"/>
                                        <field name="requires_opt_in"/>
                                    </group>
                                    <group name="usage" string="Usage Limits">
                                        <field name="has_usage_limit"/>
                                        <field name="usage_limit" attrs="{'invisible': [('has_usage_limit', '=', False)]}"/>
                                        <field name="usage_period" attrs="{'invisible': [('has_usage_limit', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>

                            <page name="publications" string="Publication Configuration" attrs="{'invisible': [('category', '!=', 'publication')]}">
                                <group>
                                    <group name="pub_access" string="Access Type">
                                        <field name="publication_access_type"/>
                                        <field name="download_limit"/>
                                        <field name="archive_access_years"/>
                                    </group>
                                </group>
                                <separator string="Included Publications"/>
                                <field name="publication_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="subscription_product_type"/>
                                        <field name="list_price"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="events" string="Event Configuration" attrs="{'invisible': [('category', '!=', 'event')]}">
                                <group>
                                    <group name="event_benefits" string="Event Benefits">
                                        <field name="event_registration_benefit"/>
                                        <field name="free_event_count" attrs="{'invisible': [('event_registration_benefit', '!=', 'free')]}"/>
                                        <field name="event_discount_percentage" attrs="{'invisible': [('event_registration_benefit', '!=', 'discount')]}"/>
                                        <field name="early_registration_days" attrs="{'invisible': [('event_registration_benefit', '!=', 'priority')]}"/>
                                    </group>
                                </group>
                            </page>

                            <page name="redemption" string="Redemption">
                                <group>
                                    <group name="method" string="Redemption Method">
                                        <field name="redemption_method"/>
                                        <field name="redemption_url" attrs="{'invisible': [('redemption_method', 'not in', ['portal', 'code'])]}"/>
                                    </group>
                                    <group name="contact" string="Contact Information">
                                        <field name="contact_email"/>
                                        <field name="contact_phone"/>
                                    </group>
                                </group>
                                <separator string="Redemption Instructions"/>
                                <field name="redemption_instructions"/>
                            </page>

                            <page name="partner" string="Partner Organization" attrs="{'invisible': [('is_partner_benefit', '=', False)]}">
                                <group>
                                    <group name="partner_info" string="Partner Information">
                                        <field name="is_partner_benefit"/>
                                        <field name="partner_organization"/>
                                        <field name="partner_url"/>
                                    </group>
                                </group>
                                <field name="partner_logo" widget="image"/>
                            </page>

                            <page name="terms" string="Terms &amp; Conditions">
                                <group>
                                    <group name="terms_settings" string="Terms Settings">
                                        <field name="has_terms"/>
                                        <field name="requires_acceptance" attrs="{'invisible': [('has_terms', '=', False)]}"/>
                                    </group>
                                </group>
                                <separator string="Eligibility Requirements"/>
                                <field name="eligibility_requirements" placeholder="Who is eligible for this benefit..."/>
                                <separator string="Exclusions"/>
                                <field name="exclusions" placeholder="What is excluded from this benefit..."/>
                                <separator string="Terms &amp; Conditions" attrs="{'invisible': [('has_terms', '=', False)]}"/>
                                <field name="terms_and_conditions" attrs="{'invisible': [('has_terms', '=', False)]}"/>
                            </page>

                            <page name="validity" string="Validity Period">
                                <group>
                                    <group name="dates" string="Validity Dates">
                                        <field name="has_validity_period"/>
                                        <field name="valid_from" attrs="{'invisible': [('has_validity_period', '=', False)]}"/>
                                        <field name="valid_until" attrs="{'invisible': [('has_validity_period', '=', False)]}"/>
                                        <field name="is_currently_valid" readonly="1"/>
                                    </group>
                                    <group name="seasonal" string="Seasonal Availability">
                                        <field name="seasonal"/>
                                        <field name="available_months" attrs="{'invisible': [('seasonal', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>

                            <page name="marketing" string="Marketing &amp; Display">
                                <group>
                                    <group name="display" string="Display Settings">
                                        <field name="display_on_website"/>
                                        <field name="display_order"/>
                                    </group>
                                    <group name="marketing_text" string="Marketing">
                                        <field name="marketing_tagline"/>
                                        <field name="call_to_action"/>
                                    </group>
                                </group>
                            </page>

                            <page name="tracking" string="Usage Tracking">
                                <group>
                                    <group name="tracking_settings" string="Tracking">
                                        <field name="track_usage"/>
                                        <field name="usage_count" readonly="1" attrs="{'invisible': [('track_usage', '=', False)]}"/>
                                        <field name="active_users" readonly="1" attrs="{'invisible': [('track_usage', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>

                            <page name="linked" string="Linked Items">
                                <group>
                                    <group name="feature" string="Linked Feature">
                                        <field name="feature_id"/>
                                    </group>
                                </group>
                                <separator string="Associated Products"/>
                                <field name="product_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="subscription_product_type"/>
                                        <field name="list_price"/>
                                    </tree>
                                </field>
                                <separator string="Associated Categories"/>
                                <field name="category_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="category_type"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="internal" string="Internal">
                                <group>
                                    <group name="costs" string="Costs">
                                        <field name="cost_to_association" widget="monetary"/>
                                    </group>
                                </group>
                                <separator string="Internal Notes"/>
                                <field name="internal_notes" placeholder="Internal notes (not visible to members)..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_membership_benefit_search" model="ir.ui.view">
            <field name="name">membership.benefit.search</field>
            <field name="model">membership.benefit</field>
            <field name="arch" type="xml">
                <search string="Membership Benefits">
                    <field name="name" string="Benefit Name"/>
                    <field name="code" string="Code"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Premium Benefits" name="premium" domain="[('is_premium_benefit', '=', True)]"/>
                    <filter string="Highlighted" name="highlighted" domain="[('is_highlighted', '=', True)]"/>
                    <filter string="Display on Website" name="on_website" domain="[('display_on_website', '=', True)]"/>
                    <filter string="Currently Valid" name="valid" domain="[('is_currently_valid', '=', True)]"/>
                    
                    <separator/>
                    <filter string="Discounts" name="discounts" domain="[('category', '=', 'discount')]"/>
                    <filter string="Access &amp; Resources" name="access" domain="[('category', '=', 'access')]"/>
                    <filter string="Publications" name="publications" domain="[('category', '=', 'publication')]"/>
                    <filter string="Events" name="events" domain="[('category', '=', 'event')]"/>
                    <filter string="Education" name="education" domain="[('category', '=', 'education')]"/>
                    <filter string="Professional Development" name="professional" domain="[('category', '=', 'professional')]"/>
                    <filter string="Networking" name="networking" domain="[('category', '=', 'networking')]"/>
                    <filter string="Recognition" name="recognition" domain="[('category', '=', 'recognition')]"/>
                    
                    <separator/>
                    <filter string="Has Monetary Value" name="has_value" domain="[('has_monetary_value', '=', True)]"/>
                    <filter string="Partner Benefits" name="partner" domain="[('is_partner_benefit', '=', True)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Benefit Type" name="group_type" context="{'group_by': 'benefit_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_membership_benefit_kanban" model="ir.ui.view">
            <field name="name">membership.benefit.kanban</field>
            <field name="model">membership.benefit</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="benefit_type"/>
                    <field name="is_premium_benefit"/>
                    <field name="is_highlighted"/>
                    <field name="icon"/>
                    <field name="color"/>
                    <field name="monetary_value"/>
                    <field name="currency_id"/>
                    <field name="marketing_tagline"/>
                    <field name="product_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i t-if="record.icon.raw_value" t-attf-class="fa #{record.icon.raw_value}"/> 
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                    <span class="float-right">
                                        <span t-if="record.is_premium_benefit.raw_value" class="badge badge-success">Premium</span>
                                        <span t-if="record.is_highlighted.raw_value" class="badge badge-info">Featured</span>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category" widget="badge"/>
                                    <br/>
                                    <span t-if="record.marketing_tagline.raw_value" class="text-muted">
                                        <i><field name="marketing_tagline"/></i>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.monetary_value.raw_value">
                                            <i class="fa fa-dollar-sign"/> <field name="monetary_value" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span><i class="fa fa-cube"/> <field name="product_count"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_membership_benefit" model="ir.actions.act_window">
            <field name="name">Membership Benefits</field>
            <field name="res_model">membership.benefit</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_membership_benefit_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership benefit
                </p>
                <p>
                    Define benefits that members receive with their membership
                    (discounts, publication access, event privileges, etc.)
                </p>
            </field>
        </record>

    </data>
</odoo>