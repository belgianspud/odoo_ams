<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Member Type List View -->
        <record id="view_ams_member_type_list" model="ir.ui.view">
            <field name="name">ams.member.type.list</field>
            <field name="model">ams.member.type</field>
            <field name="arch" type="xml">
                <list string="Member Types" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_class"/>
                    <field name="recurrence_period"/>
                    <field name="base_annual_fee" widget="monetary"/>
                    <field name="requires_approval"/>
                    <field name="auto_renewal"/>
                    <field name="voting_rights"/>
                    <field name="member_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Member Type Form View -->
        <record id="view_ams_member_type_form" model="ir.ui.view">
            <field name="name">ams.member.type.form</field>
            <field name="model">ams.member.type</field>
            <field name="arch" type="xml">
                <form string="Member Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_members" type="object" 
                                    class="oe_stat_button" icon="fa-users">
                                <field name="member_count" widget="statinfo" string="Members"/>
                            </button>
                            <button name="action_create_default_product" type="object" 
                                    class="oe_stat_button" icon="fa-plus-circle"
                                    string="Create Product"
                                    invisible="default_product_id or not auto_create_product"
                                    groups="membership_community.group_membership_manager"/>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                                invisible="active"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Member Type Name"/>
                            </h1>
                            <div class="o_row">
                                <field name="code" placeholder="Code"/>
                            </div>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="description"/>
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="product_class"/>
                            </group>
                            <group string="Pricing &amp; Duration">
                                <field name="base_annual_fee" widget="monetary"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="recurrence_period"/>
                                <field name="membership_duration"/>
                            </group>
                        </group>

                        <group>
                            <group string="Membership Period Configuration">
                                <field name="membership_period_type"/>
                                <field name="grace_period_override"/>
                                <field name="grace_period_days" 
                                       invisible="not grace_period_override"/>
                            </group>
                            <group string="Membership Features">
                                <field name="requires_approval"/>
                                <field name="auto_renewal"/>
                                <field name="voting_rights"/>
                                <field name="directory_access"/>
                                <field name="event_discounts"/>
                            </group>
                        </group>

                        <group>
                            <group string="Multiple Membership Rules">
                                <field name="allow_multiple_active"/>
                                <field name="max_active_per_member"
                                       invisible="not allow_multiple_active"/>
                            </group>
                            <group string="Upgrade/Downgrade Rules">
                                <field name="allow_upgrades"/>
                                <field name="allow_downgrades"/>
                            </group>
                        </group>

                        <group>
                            <group string="Pro-rating Configuration">
                                <field name="enable_prorating"/>
                                <field name="prorate_on_upgrade"
                                       invisible="not enable_prorating"/>
                                <field name="prorate_on_downgrade"
                                       invisible="not enable_prorating"/>
                            </group>
                            <group string="Product Integration">
                                <field name="default_product_id"/>
                                <field name="auto_create_product"/>
                            </group>
                        </group>

                        <group>
                            <group string="Eligibility Requirements">
                                <field name="requires_license"/>
                                <field name="min_experience_years"/>
                                <field name="education_requirements"/>
                                <field name="age_restrictions"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Eligibility Criteria" name="eligibility">
                                <field name="eligibility_criteria" 
                                       placeholder="Describe the eligibility requirements for this member type..."/>
                            </page>
                            
                            <page string="Benefits" name="benefits">
                                <field name="benefits_description" 
                                       placeholder="List the benefits and privileges for this member type..."/>
                            </page>

                            <page string="Upgrade Options" name="upgrades" 
                                  invisible="not allow_upgrades">
                                <group>
                                    <group string="Available Upgrades">
                                        <field name="upgrade_member_type_ids" widget="many2many_tags"/>
                                    </group>
                                    <group string="Upgrade Information">
                                        <div class="alert alert-info" role="alert">
                                            <p><strong>Upgrade Rules:</strong></p>
                                            <ul>
                                                <li>Members can upgrade to any of the selected member types</li>
                                                <li>Pro-rating will be applied based on the configuration above</li>
                                                <li>The billing method is configured in AMS Settings</li>
                                            </ul>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Applications" name="applications" 
                                  invisible="not requires_approval">
                                <group>
                                    <group string="Application Process">
                                        <field name="application_fee"/>
                                        <field name="application_form_required"/>
                                        <field name="reference_letters_required"/>
                                        <field name="interview_required"/>
                                    </group>
                                    <group string="Approval Workflow">
                                        <field name="approval_committee_id"/>
                                        <field name="approval_voting_required"/>
                                        <field name="approval_threshold"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Restrictions" name="restrictions">
                                <group>
                                    <group string="Geographic Restrictions">
                                        <field name="geographic_restrictions"/>
                                        <field name="allowed_countries" widget="many2many_tags"
                                               invisible="not geographic_restrictions"/>
                                        <field name="allowed_states" widget="many2many_tags"
                                               invisible="not geographic_restrictions"/>
                                    </group>
                                    <group string="Quantity Restrictions">
                                        <field name="max_members"/>
                                        <field name="waiting_list_enabled" 
                                               invisible="not max_members"/>
                                        <field name="renewal_restrictions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Member Type Kanban View -->
        <record id="view_ams_member_type_kanban" model="ir.ui.view">
            <field name="name">ams.member.type.kanban</field>
            <field name="model">ams.member.type</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="product_class">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_class"/>
                    <field name="recurrence_period"/>
                    <field name="base_annual_fee"/>
                    <field name="member_count"/>
                    <field name="active"/>
                    <field name="allow_multiple_active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong><span><t t-esc="record.name.value"/></span></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-pill badge-info">
                                            <t t-esc="record.code.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <span class="badge badge-secondary">
                                            <t t-esc="record.product_class.value"/>
                                        </span>
                                    </div>
                                    <div class="col-4 text-right">
                                        <span class="badge badge-light">
                                            <t t-esc="record.recurrence_period.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span>Annual Fee: $<t t-esc="record.base_annual_fee.value"/></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <span><t t-esc="record.member_count.value"/> members</span>
                                    </div>
                                    <div class="col-4 text-right">
                                        <t t-if="record.allow_multiple_active.raw_value">
                                            <span class="badge badge-success">Multi</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="row" t-if="!record.active.raw_value">
                                    <div class="col-12">
                                        <span class="badge badge-danger">Archived</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Member Type Search View -->
        <record id="view_ams_member_type_search" model="ir.ui.view">
            <field name="name">ams.member.type.search</field>
            <field name="model">ams.member.type</field>
            <field name="arch" type="xml">
                <search string="Member Types">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="product_class"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Membership Products" name="membership_products" 
                            domain="[('product_class', '=', 'membership')]"/>
                    <filter string="Chapter Memberships" name="chapter_memberships" 
                            domain="[('product_class', '=', 'chapter')]"/>
                    <filter string="Subscriptions" name="subscriptions" 
                            domain="[('product_class', '=', 'subscription')]"/>
                    <filter string="Courses" name="courses" 
                            domain="[('product_class', '=', 'courses')]"/>
                    <separator/>
                    <filter string="Requires Approval" name="requires_approval" 
                            domain="[('requires_approval', '=', True)]"/>
                    <filter string="Auto Renewal" name="auto_renewal" 
                            domain="[('auto_renewal', '=', True)]"/>
                    <filter string="Voting Rights" name="voting_rights" 
                            domain="[('voting_rights', '=', True)]"/>
                    <filter string="Requires License" name="requires_license" 
                            domain="[('requires_license', '=', True)]"/>
                    <separator/>
                    <filter string="Multiple Active Allowed" name="multiple_active" 
                            domain="[('allow_multiple_active', '=', True)]"/>
                    <filter string="Upgrades Allowed" name="upgrades_allowed" 
                            domain="[('allow_upgrades', '=', True)]"/>
                    <filter string="Pro-rating Enabled" name="prorating_enabled" 
                            domain="[('enable_prorating', '=', True)]"/>
                    <separator/>
                    <filter string="Free Membership" name="free" 
                            domain="[('base_annual_fee', '=', 0)]"/>
                    <filter string="Paid Membership" name="paid" 
                            domain="[('base_annual_fee', '>', 0)]"/>
                    <separator/>
                    <filter string="Annual Recurrence" name="annual" 
                            domain="[('recurrence_period', '=', 'annual')]"/>
                    <filter string="Monthly Recurrence" name="monthly" 
                            domain="[('recurrence_period', '=', 'monthly')]"/>
                    <filter string="Quarterly Recurrence" name="quarterly" 
                            domain="[('recurrence_period', '=', 'quarterly')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Product Class" name="group_product_class" 
                                domain="[]" context="{'group_by': 'product_class'}"/>
                        <filter string="Recurrence Period" name="group_recurrence" 
                                domain="[]" context="{'group_by': 'recurrence_period'}"/>
                        <filter string="Requires Approval" name="group_approval" 
                                domain="[]" context="{'group_by': 'requires_approval'}"/>
                        <filter string="Voting Rights" name="group_voting" 
                                domain="[]" context="{'group_by': 'voting_rights'}"/>
                        <filter string="Auto Renewal" name="group_renewal" 
                                domain="[]" context="{'group_by': 'auto_renewal'}"/>
                        <filter string="Membership Period Type" name="group_period_type" 
                                domain="[]" context="{'group_by': 'membership_period_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Member Type Action -->
        <record id="action_ams_member_type" model="ir.actions.act_window">
            <field name="name">Member Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.member.type</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first member type
                </p>
                <p>
                    Member types define different categories of membership with 
                    varying benefits, fees, requirements, and product classes. Configure
                    membership periods, pro-rating, upgrade options, and more.
                </p>
            </field>
        </record>

    </data>
</odoo>