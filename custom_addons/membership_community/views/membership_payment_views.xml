<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_membership_payment_list" model="ir.ui.view">
            <field name="name">membership.payment.list</field>
            <field name="model">membership.payment</field>
            <field name="arch" type="xml">
                <list string="Membership Payments">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="membership_id"/>
                    <field name="payment_date"/>
                    <field name="amount" widget="monetary"/>
                    <field name="payment_method"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_membership_payment_form" model="ir.ui.view">
            <field name="name">membership.payment.form</field>
            <field name="model">membership.payment</field>
            <field name="arch" type="xml">
                <form string="Membership Payment">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                                invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="membership_id"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="amount" widget="monetary"/>
                                <field name="currency_id"/>
                                <field name="payment_date"/>
                                <field name="payment_method"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_membership_payment" model="ir.actions.act_window">
            <field name="name">Membership Payments</field>
            <field name="res_model">membership.payment</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>