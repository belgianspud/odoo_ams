<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- MEMBERSHIP CATEGORY VIEWS (BASE - SIMPLIFIED) -->
        <!-- ========================================== -->

        <!-- List View -->
        <record id="view_membership_category_tree" model="ir.ui.view">
            <field name="name">membership.category.list</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <list string="Member Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="member_tier"/>
                    <field name="is_voting_member"/>
                    <field name="member_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View (BASE FIELDS ONLY) -->
        <record id="view_membership_category_form" model="ir.ui.view">
            <field name="name">membership.category.form</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <form string="Member Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_members" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="member_count" widget="statinfo" string="Members"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <field name="color" widget="color_picker" class="float-end"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Individual Member"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="category_type"/>
                                <field name="member_tier"/>
                                <field name="active"/>
                            </group>
                            <group name="classification" string="Classification">
                                <field name="is_voting_member"/>
                                <field name="is_full_member"/>
                            </group>
                        </group>

                        <group>
                            <field name="description" placeholder="Description of this member category..."/>
                        </group>

                        <notebook>
                            <page name="access" string="Access">
                                <group>
                                    <group name="portal" string="Portal Access">
                                        <field name="default_portal_access"/>
                                    </group>
                                    <group name="verification" string="Verification">
                                        <field name="requires_verification"/>
                                    </group>
                                </group>
                            </page>

                            <page name="products" string="Products">
                                <group>
                                    <group name="product_mapping" string="Product Mapping">
                                        <field name="default_product_id" options="{'no_create': True}" domain="[('is_membership_product', '=', True)]"/>
                                    </group>
                                </group>
                            </page>

                            <page name="statistics" string="Statistics">
                                <group>
                                    <group name="counts" string="Member Counts">
                                        <field name="member_count"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_membership_category_search" model="ir.ui.view">
            <field name="name">membership.category.search</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <search string="Member Categories">
                    <field name="name" string="Category Name"/>
                    <field name="code" string="Code"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Individual" name="individual" domain="[('category_type', '=', 'individual')]"/>
                    <filter string="Organizational" name="organizational" domain="[('category_type', '=', 'organizational')]"/>
                    <filter string="Chapter" name="chapter" domain="[('category_type', '=', 'chapter')]"/>
                    
                    <separator/>
                    <filter string="Voting Members" name="voting" domain="[('is_voting_member', '=', True)]"/>
                    <filter string="Full Members" name="full_member" domain="[('is_full_member', '=', True)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Category Type" name="group_type" context="{'group_by': 'category_type'}"/>
                        <filter string="Member Tier" name="group_tier" context="{'group_by': 'member_tier'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_membership_category_kanban" model="ir.ui.view">
            <field name="name">membership.category.kanban</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="member_tier"/>
                    <field name="member_count"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category_type" widget="badge"/>
                                    <br/>
                                    <field name="member_tier" widget="badge"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><i class="fa fa-users"/> <field name="member_count"/> members</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_membership_category" model="ir.actions.act_window">
            <field name="name">Member Categories</field>
            <field name="res_model">membership.category</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_membership_category_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first member category
                </p>
                <p>
                    Define categories for different types of members with specific eligibility 
                    requirements and benefits.
                </p>
                <p class="text-muted">
                    <small>
                        Note: Install specialized modules (membership_individual, membership_organizational, 
                        membership_chapter) for advanced category features.
                    </small>
                </p>
            </field>
        </record>

    </data>
</odoo>