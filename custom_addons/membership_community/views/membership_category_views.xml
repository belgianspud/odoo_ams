<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- MEMBERSHIP CATEGORY VIEWS (SIMPLIFIED) -->
        <!-- ========================================== -->

        <!-- List View -->
        <record id="view_membership_category_tree" model="ir.ui.view">
            <field name="name">membership.category.list</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <list string="Member Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="default_product_id"/>
                    <field name="is_voting_member"/>
                    <field name="is_lifetime_category" optional="hide"/>
                    <field name="is_emeritus_category" optional="hide"/>
                    <field name="is_honorary_category" optional="hide"/>
                    <field name="member_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View (SIMPLIFIED + ENHANCED) -->
        <record id="view_membership_category_form" model="ir.ui.view">
            <field name="name">membership.category.form</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <form string="Member Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_members" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="member_count" widget="statinfo" string="Members"/>
                            </button>
                            <button name="action_view_eligible_members" type="object" 
                                    class="oe_stat_button" icon="fa-user-plus"
                                    invisible="not is_emeritus_category and not is_honorary_category">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Eligible</span>
                                    <span class="o_stat_text">Members</span>
                                </div>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <widget name="web_ribbon" title="Lifetime" bg_color="text-bg-success" invisible="not is_lifetime_category"/>
                        <widget name="web_ribbon" title="Emeritus" bg_color="text-bg-info" invisible="not is_emeritus_category"/>
                        <widget name="web_ribbon" title="Honorary" bg_color="text-bg-warning" invisible="not is_honorary_category"/>

                        <field name="color" widget="color_picker" class="float-end"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g., Individual Member"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="category_type"/>
                                <field name="active"/>
                            </group>
                            <group name="classification" string="Classification">
                                <field name="is_voting_member"/>
                                <field name="is_full_member"/>
                            </group>
                        </group>

                        <group>
                            <field name="description" placeholder="Description of this member category..."/>
                        </group>

                        <group name="lifetime_emeritus" string="Lifetime &amp; Emeritus Configuration"
                               invisible="not is_lifetime_category and not is_emeritus_category and not is_honorary_category">
                            <group name="category_flags">
                                <field name="is_lifetime_category"/>
                                <field name="is_emeritus_category"/>
                                <field name="is_honorary_category"/>
                            </group>
                            <group name="auto_qualify" invisible="not is_emeritus_category">
                                <field name="auto_qualify_age"/>
                                <field name="auto_qualify_years"/>
                                <field name="requires_board_approval"/>
                            </group>
                        </group>

                        <group name="dues_configuration" string="Dues Configuration"
                               invisible="not has_reduced_dues and not is_complimentary">
                            <group>
                                <field name="has_reduced_dues"/>
                                <field name="dues_percentage" invisible="not has_reduced_dues" widget="percentage"/>
                                <field name="is_complimentary"/>
                            </group>
                            <group>
                                <div class="alert alert-info" role="alert" invisible="not is_complimentary">
                                    <p class="mb-0">
                                        <i class="fa fa-gift"/> 
                                        <strong>Complimentary Membership:</strong> Members in this category receive free membership with no dues.
                                    </p>
                                </div>
                                <div class="alert alert-info" role="alert" invisible="not has_reduced_dues or is_complimentary">
                                    <p class="mb-0">
                                        <i class="fa fa-percent"/> 
                                        <strong>Reduced Dues:</strong> Members pay <field name="dues_percentage" readonly="1" nolabel="1" class="oe_inline"/>% of standard dues.
                                    </p>
                                </div>
                            </group>
                        </group>

                        <group name="product_link" string="ðŸ”— Product Link">
                            <group>
                                <field name="default_product_id" 
                                       options="{'no_create': True}" 
                                       domain="[('is_membership_product', '=', True)]"/>
                            </group>
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <p class="mb-0">
                                        <i class="fa fa-info-circle"/> 
                                        <strong>Tip:</strong> The linked product defines pricing, billing, features, and benefits. 
                                        Use <strong>ðŸš€ Quick Setup</strong> to create category + product together!
                                    </p>
                                </div>
                            </group>
                        </group>

                        <group name="statistics" string="Statistics">
                            <group>
                                <field name="member_count" readonly="1"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_membership_category_search" model="ir.ui.view">
            <field name="name">membership.category.search</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <search string="Member Categories">
                    <field name="name" string="Category Name"/>
                    <field name="code" string="Code"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Individual" name="individual" domain="[('category_type', '=', 'individual')]"/>
                    <filter string="Organizational" name="organizational" domain="[('category_type', '=', 'organizational')]"/>
                    <filter string="Chapter" name="chapter" domain="[('category_type', '=', 'chapter')]"/>
                    <filter string="Seat" name="seat" domain="[('category_type', '=', 'seat')]"/>
                    <filter string="Emeritus" name="emeritus" domain="[('category_type', '=', 'emeritus')]"/>
                    <filter string="Honorary" name="honorary" domain="[('category_type', '=', 'honorary')]"/>
                    <filter string="Lifetime" name="lifetime" domain="[('category_type', '=', 'lifetime')]"/>
                    
                    <separator/>
                    <filter string="Voting Members" name="voting" domain="[('is_voting_member', '=', True)]"/>
                    <filter string="Full Members" name="full_member" domain="[('is_full_member', '=', True)]"/>
                    <filter string="Lifetime Categories" name="lifetime_cat" domain="[('is_lifetime_category', '=', True)]"/>
                    <filter string="Emeritus Categories" name="emeritus_cat" domain="[('is_emeritus_category', '=', True)]"/>
                    <filter string="Honorary Categories" name="honorary_cat" domain="[('is_honorary_category', '=', True)]"/>
                    <filter string="Complimentary" name="complimentary" domain="[('is_complimentary', '=', True)]"/>
                    <filter string="Has Product Link" name="has_product" domain="[('default_product_id', '!=', False)]"/>
                    <filter string="Missing Product Link" name="no_product" domain="[('default_product_id', '=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Category Type" name="group_type" context="{'group_by': 'category_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_membership_category_kanban" model="ir.ui.view">
            <field name="name">membership.category.kanban</field>
            <field name="model">membership.category</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="member_count"/>
                    <field name="default_product_id"/>
                    <field name="is_lifetime_category"/>
                    <field name="is_emeritus_category"/>
                    <field name="is_honorary_category"/>
                    <field name="is_complimentary"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                    <span class="float-end">
                                        <span t-if="record.is_lifetime_category.raw_value" class="badge text-bg-success">Lifetime</span>
                                        <span t-if="record.is_emeritus_category.raw_value" class="badge text-bg-info">Emeritus</span>
                                        <span t-if="record.is_honorary_category.raw_value" class="badge text-bg-warning">Honorary</span>
                                        <span t-if="record.is_complimentary.raw_value" class="badge text-bg-primary">Free</span>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category_type" widget="badge"/>
                                    <br/>
                                    <div t-if="record.default_product_id.value">
                                        <i class="fa fa-link text-success"/> <field name="default_product_id"/>
                                    </div>
                                    <div t-else="">
                                        <i class="fa fa-unlink text-warning"/> No product linked
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><i class="fa fa-users"/> <field name="member_count"/> members</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_membership_category" model="ir.actions.act_window">
            <field name="name">Member Categories</field>
            <field name="res_model">membership.category</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_membership_category_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first member category
                </p>
                <p>
                    <strong>ðŸš€ Recommended:</strong> Use the <strong>Quick Setup Wizard</strong> to create 
                    category + product + plan in one step!
                </p>
                <p>
                    Or create categories manually here. Categories classify different types of members 
                    and link to membership products that define pricing and benefits.
                </p>
            </field>
        </record>

    </data>
</odoo>