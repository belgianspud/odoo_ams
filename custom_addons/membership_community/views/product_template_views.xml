<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- PRODUCT TEMPLATE VIEWS (ENHANCED FOR SEATS) -->
        <!-- ========================================== -->

        <!-- Inherit Product Form View -->
        <record id="view_product_template_membership_form" model="ir.ui.view">
            <field name="name">product.template.membership.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                
                <!-- Add Membership checkbox after Can be Sold -->
                <xpath expr="//label[@for='is_subscription']" position="after">
                    <field name="is_membership_product"/>
                    <label for="is_membership_product" string="Membership"/>
                </xpath>

                <!-- Add Membership Page in Notebook -->
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="membership" string="Membership" invisible="not is_membership_product">
                        
                        <group name="membership_basic" string="Membership Type">
                            <group>
                                <field name="subscription_product_type"/>
                            </group>
                            <group>
                                <field name="default_member_category_id" options="{'no_create': True}"/>
                            </group>
                        </group>

                        <!-- SEAT PRODUCT CONFIGURATION (NEW) -->
                        <group name="seat_product_config" string="ðŸª‘ Seat Product Configuration" 
                               invisible="not provides_seats and not is_seat_addon">
                            <group name="seat_basic">
                                <field name="provides_seats"/>
                                <field name="seat_quantity" invisible="not provides_seats"/>
                                <field name="is_seat_addon" readonly="1"/>
                                <field name="price_per_seat" widget="monetary" readonly="1" 
                                       invisible="not provides_seats or seat_quantity == 0"/>
                            </group>
                            <group name="seat_parent">
                                <field name="parent_membership_product_id"
                                       invisible="not is_seat_addon"
                                       options="{'no_create': True}"
                                       domain="[('subscription_product_type', '=', 'organizational_membership')]"/>
                                <div class="alert alert-info" role="alert" 
                                     invisible="not provides_seats or seat_quantity &lt;= 1">
                                    <p class="mb-0">
                                        <i class="fa fa-info-circle"/> 
                                        <strong>Seat Pack:</strong> Each purchase provides 
                                        <field name="seat_quantity" readonly="1" nolabel="1" class="oe_inline"/> seats 
                                        at <field name="price_per_seat" readonly="1" nolabel="1" widget="monetary" class="oe_inline"/> per seat.
                                    </p>
                                </div>
                            </group>
                        </group>

                        <!-- ORGANIZATIONAL MEMBERSHIP SETTINGS (NEW) -->
                        <group name="organizational_settings" string="ðŸ¢ Organizational Membership Settings" 
                               invisible="subscription_product_type != 'organizational_membership'">
                            <group name="org_requirements" string="Requirements">
                                <field name="requires_organization_info"/>
                                <field name="requires_primary_contact"/>
                                <field name="require_org_tax_id"/>
                                <field name="require_org_address"/>
                                <field name="max_org_size"/>
                            </group>
                            <group name="org_management" string="Management">
                                <field name="allow_multiple_admins"/>
                                <field name="seat_allocation_type" widget="radio"/>
                                <field name="seat_approval_required"/>
                            </group>
                        </group>

                        <group name="membership_features" string="Features &amp; Benefits">
                            <group name="features_left">
                                <label for="feature_ids"/>
                                <field name="feature_ids" nolabel="1" widget="many2many_tags"/>
                            </group>
                            <group name="benefits_right">
                                <label for="benefit_ids"/>
                                <field name="benefit_ids" nolabel="1" widget="many2many_tags"/>
                            </group>
                        </group>

                        <group name="portal_config" string="Portal Access">
                            <group>
                                <field name="portal_access_level"/>
                            </group>
                        </group>

                        <group name="statistics" string="Statistics">
                            <group>
                                <field name="current_member_count" readonly="1"/>
                            </group>
                        </group>

                        <div class="alert alert-info mt-3" role="alert">
                            <p class="mb-0">
                                <i class="fa fa-info-circle"/> 
                                <strong>Note:</strong> This product will be linked to subscription plans for billing and renewals.
                            </p>
                        </div>

                    </page>
                </xpath>
                
            </field>
        </record>

        <!-- Extend Product List View -->
        <record id="view_product_template_membership_tree" model="ir.ui.view">
            <field name="name">product.template.membership.list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_membership_product" optional="show"/>
                    <field name="subscription_product_type" optional="show"/>
                    <field name="provides_seats" optional="hide"/>
                    <field name="seat_quantity" optional="hide"/>
                    <field name="is_seat_addon" optional="hide"/>
                    <field name="current_member_count" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Extend Product Search View -->
        <record id="view_product_template_membership_search" model="ir.ui.view">
            <field name="name">product.template.membership.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='filter_to_sell']" position="after">
                    <separator/>
                    <filter string="Membership Products" name="membership_products" domain="[('is_membership_product', '=', True)]"/>
                    <separator/>
                    <filter string="Individual Membership" name="individual_membership" domain="[('subscription_product_type', '=', 'membership')]"/>
                    <filter string="Organizational Membership" name="org_membership" domain="[('subscription_product_type', '=', 'organizational_membership')]"/>
                    <filter string="Chapter Membership" name="chapter_membership" domain="[('subscription_product_type', '=', 'chapter')]"/>
                    <separator/>
                    <filter string="Seat Products" name="seat_products" domain="[('provides_seats', '=', True)]"/>
                    <filter string="Seat Add-ons" name="seat_addons" domain="[('is_seat_addon', '=', True)]"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Subscription Type" name="group_subscription_type" context="{'group_by': 'subscription_product_type'}"/>
                    <filter string="Provides Seats" name="group_provides_seats" context="{'group_by': 'provides_seats'}"/>
                </xpath>
            </field>
        </record>

        <!-- Add Smart Buttons to Product Form -->
        <record id="view_product_template_membership_button" model="ir.ui.view">
            <field name="name">product.template.membership.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_members" type="object" class="oe_stat_button" icon="fa-users" 
                            invisible="not is_membership_product">
                        <field name="current_member_count" widget="statinfo" string="Members"/>
                    </button>
                    <button name="action_view_active_subscriptions" type="object" class="oe_stat_button" icon="fa-refresh" 
                            invisible="not is_membership_product">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Active</span>
                            <span class="o_stat_text">Subscriptions</span>
                        </div>
                    </button>
                    <button name="action_view_seat_addons" type="object" class="oe_stat_button" icon="fa-users"
                            invisible="subscription_product_type != 'organizational_membership'">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Seat</span>
                            <span class="o_stat_text">Add-ons</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- MEMBERSHIP PRODUCTS ACTION -->
        <!-- ========================================== -->

        <!-- Membership Products Action -->
        <record id="action_membership_products" model="ir.actions.act_window">
            <field name="name">Membership Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('is_membership_product', '=', True)]</field>
            <field name="context">{
                'default_is_membership_product': True,
                'default_type': 'service',
                'search_default_membership_products': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership product
                </p>
                <p>
                    <strong>ðŸš€ Recommended:</strong> Use the <strong>Quick Setup Wizard</strong> to create 
                    category + product + plan + seat add-ons in one step!
                </p>
                <p>
                    Or create membership products manually here. Membership products define the different 
                    types of memberships you offer with pricing, features, benefits, and seat configurations.
                </p>
            </field>
        </record>

    </data>
</odoo>