<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- MEMBERSHIP FEATURE VIEWS (BASE - SIMPLIFIED) -->
        <!-- ========================================== -->

        <!-- List View -->
        <record id="view_membership_feature_tree" model="ir.ui.view">
            <field name="name">membership.feature.list</field>
            <field name="model">membership.feature</field>
            <field name="arch" type="xml">
                <list string="Membership Features">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="feature_type"/>
                    <field name="is_premium_feature"/>
                    <field name="product_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View (BASE FIELDS ONLY) -->
        <record id="view_membership_feature_form" model="ir.ui.view">
            <field name="name">membership.feature.form</field>
            <field name="model">membership.feature</field>
            <field name="arch" type="xml">
                <form string="Membership Feature">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cube">
                                <field name="product_count" widget="statinfo" string="Products"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <widget name="web_ribbon" title="Premium" bg_color="text-bg-success" invisible="not is_premium_feature"/>

                        <field name="color" widget="color_picker" class="float-end"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Portal Access"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic" string="Basic Information">
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="category"/>
                                <field name="feature_type"/>
                                <field name="active"/>
                            </group>
                            <group name="classification" string="Classification">
                                <field name="is_premium_feature"/>
                                <field name="icon"/>
                            </group>
                        </group>

                        <group>
                            <field name="description" placeholder="Description of this feature..."/>
                        </group>

                        <notebook>
                            <page name="value_config" string="Configuration">
                                <group>
                                    <group name="default_value" string="Default Value">
                                        <field name="default_value" placeholder="Enter default value for this feature"/>
                                    </group>
                                </group>
                                <separator string="Notes"/>
                                <div class="alert alert-info" role="alert">
                                    <p class="mb-0">
                                        <i class="fa fa-info-circle"/> 
                                        <strong>Extensibility:</strong> This is the base feature model. 
                                        Install specialized modules (membership_individual, membership_organizational, etc.) 
                                        to add advanced feature configurations like usage limits, seasonal availability, 
                                        and module integrations.
                                    </p>
                                </div>
                            </page>

                            <page name="products" string="Associated Products">
                                <field name="product_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="is_membership_product"/>
                                        <field name="subscription_product_type" optional="show"/>
                                        <field name="list_price"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_membership_feature_search" model="ir.ui.view">
            <field name="name">membership.feature.search</field>
            <field name="model">membership.feature</field>
            <field name="arch" type="xml">
                <search string="Membership Features">
                    <field name="name" string="Feature Name"/>
                    <field name="code" string="Code"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Premium Features" name="premium" domain="[('is_premium_feature', '=', True)]"/>
                    
                    <separator/>
                    <filter string="Access" name="access" domain="[('category', '=', 'access')]"/>
                    <filter string="Portal" name="portal" domain="[('category', '=', 'portal')]"/>
                    <filter string="Directory" name="directory" domain="[('category', '=', 'directory')]"/>
                    <filter string="Events" name="events" domain="[('category', '=', 'event')]"/>
                    <filter string="Professional" name="professional" domain="[('category', '=', 'professional')]"/>
                    <filter string="Networking" name="networking" domain="[('category', '=', 'networking')]"/>
                    <filter string="Education" name="education" domain="[('category', '=', 'education')]"/>
                    <filter string="Certification" name="certification" domain="[('category', '=', 'certification')]"/>
                    <filter string="Publications" name="publications" domain="[('category', '=', 'publication')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Feature Type" name="group_type" context="{'group_by': 'feature_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_membership_feature_kanban" model="ir.ui.view">
            <field name="name">membership.feature.kanban</field>
            <field name="model">membership.feature</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="feature_type"/>
                    <field name="is_premium_feature"/>
                    <field name="icon"/>
                    <field name="color"/>
                    <field name="product_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i t-if="record.icon.raw_value" t-attf-class="fa #{record.icon.raw_value}"/> 
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                    <span class="float-end" t-if="record.is_premium_feature.raw_value">
                                        <span class="badge text-bg-success">Premium</span>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category" widget="badge"/>
                                    <br/>
                                    <field name="feature_type" widget="badge"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><i class="fa fa-cube"/> <field name="product_count"/> products</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_membership_feature" model="ir.actions.act_window">
            <field name="name">Membership Features</field>
            <field name="res_model">membership.feature</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_membership_feature_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership feature
                </p>
                <p>
                    Define technical features that provide specific capabilities to members
                    (portal access, directory listing, event registration, etc.)
                </p>
                <p class="text-muted">
                    <small>
                        Note: This is the base feature model. Install specialized modules 
                        (membership_individual, membership_organizational) for advanced configurations.
                    </small>
                </p>
            </field>
        </record>

    </data>
</odoo>