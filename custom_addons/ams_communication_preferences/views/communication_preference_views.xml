<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Communication Preference Form View -->
    <record id="view_communication_preference_form" model="ir.ui.view">
        <field name="name">ams.communication.preference.form</field>
        <field name="model">ams.communication.preference</field>
        <field name="arch" type="xml">
            <form string="Communication Preference">
                <header>
                    <button name="action_opt_in" string="Opt In" type="object" 
                            class="btn-primary" invisible="opted_in"/>
                    <button name="action_opt_out" string="Opt Out" type="object" 
                            class="btn-secondary" invisible="not opted_in"/>
                    <button name="action_confirm_gdpr_consent" string="Confirm GDPR Consent" 
                            type="object" class="btn-success" invisible="gdpr_consent"/>
                    <button name="action_confirm_double_opt_in" string="Confirm Double Opt-in" 
                            type="object" class="btn-info" invisible="double_opt_in"/>
                    <field name="compliance_status" widget="statusbar"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="communication_type"/>
                            <field name="category"/>
                            <field name="opted_in"/>
                        </group>
                        <group string="Status">
                            <field name="status_display" readonly="1"/>
                            <field name="compliance_status" readonly="1"/>
                            <field name="preference_summary" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Consent Tracking">
                            <group>
                                <group string="Opt-in/Opt-out Tracking">
                                    <field name="original_opt_in_date" readonly="1"/>
                                    <field name="opt_out_date" readonly="1"/>
                                    <field name="date_updated" readonly="1"/>
                                    <field name="updated_by" readonly="1"/>
                                </group>
                                <group string="Consent Source">
                                    <field name="consent_source"/>
                                    <field name="ip_address"/>
                                </group>
                            </group>
                        </page>

                        <page string="Compliance">
                            <group>
                                <group string="GDPR Compliance">
                                    <field name="gdpr_consent"/>
                                    <field name="gdpr_consent_date" readonly="1"/>
                                </group>
                                <group string="Double Opt-in">
                                    <field name="double_opt_in"/>
                                    <field name="double_opt_in_date" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Other Compliance">
                                    <field name="can_spam_compliant"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Communication Preference List View -->
    <record id="view_communication_preference_tree" model="ir.ui.view">
        <field name="name">ams.communication.preference.list</field>
        <field name="model">ams.communication.preference</field>
        <field name="arch" type="xml">
            <list string="Communication Preferences" decoration-success="opted_in" decoration-muted="not opted_in">
                <field name="partner_id"/>
                <field name="communication_type"/>
                <field name="category"/>
                <field name="opted_in" widget="boolean_toggle"/>
                <field name="compliance_status" decoration-success="compliance_status == 'compliant'" 
                       decoration-warning="compliance_status == 'needs_confirmation'" 
                       decoration-danger="compliance_status == 'non_compliant'"/>
                <field name="gdpr_consent" widget="boolean_toggle"/>
                <field name="double_opt_in" widget="boolean_toggle"/>
                <field name="date_updated"/>
                <field name="active" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Communication Preference Search View -->
    <record id="view_communication_preference_search" model="ir.ui.view">
        <field name="name">ams.communication.preference.search</field>
        <field name="model">ams.communication.preference</field>
        <field name="arch" type="xml">
            <search string="Search Communication Preferences">
                <field name="partner_id" string="Member" 
                       filter_domain="[('partner_id.display_name', 'ilike', self)]"/>
                <field name="communication_type"/>
                <field name="category"/>
                <field name="consent_source"/>
                
                <filter string="Opted In" name="opted_in" domain="[('opted_in', '=', True)]"/>
                <filter string="Opted Out" name="opted_out" domain="[('opted_in', '=', False)]"/>
                
                <separator/>
                <filter string="Email" name="email" domain="[('communication_type', '=', 'email')]"/>
                <filter string="SMS" name="sms" domain="[('communication_type', '=', 'sms')]"/>
                <filter string="Mail" name="mail" domain="[('communication_type', '=', 'mail')]"/>
                <filter string="Phone" name="phone" domain="[('communication_type', '=', 'phone')]"/>
                
                <separator/>
                <filter string="Marketing" name="marketing" domain="[('category', '=', 'marketing')]"/>
                <filter string="Membership" name="membership" domain="[('category', '=', 'membership')]"/>
                <filter string="Events" name="events" domain="[('category', '=', 'events')]"/>
                <filter string="Education" name="education" domain="[('category', '=', 'education')]"/>
                <filter string="Fundraising" name="fundraising" domain="[('category', '=', 'fundraising')]"/>
                <filter string="Governance" name="governance" domain="[('category', '=', 'governance')]"/>
                
                <separator/>
                <filter string="GDPR Consent" name="gdpr_consent" domain="[('gdpr_consent', '=', True)]"/>
                <filter string="Double Opt-in" name="double_opt_in" domain="[('double_opt_in', '=', True)]"/>
                <filter string="Compliant" name="compliant" domain="[('compliance_status', '=', 'compliant')]"/>
                <filter string="Needs Attention" name="needs_attention" domain="[('compliance_status', '!=', 'compliant')]"/>
                
                <separator/>
                <filter string="Recent Updates" name="recent" 
                        domain="[('date_updated', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Member" name="group_member" context="{'group_by': 'partner_id'}"/>
                    <filter string="Communication Type" name="group_comm_type" context="{'group_by': 'communication_type'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Compliance Status" name="group_compliance" context="{'group_by': 'compliance_status'}"/>
                    <filter string="Opted In/Out" name="group_opted" context="{'group_by': 'opted_in'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Communication Preference Kanban View -->
    <record id="view_communication_preference_kanban" model="ir.ui.view">
        <field name="name">ams.communication.preference.kanban</field>
        <field name="model">ams.communication.preference</field>
        <field name="arch" type="xml">
            <kanban string="Communication Preferences">
                <field name="partner_id"/>
                <field name="communication_type"/>
                <field name="category"/>
                <field name="opted_in"/>
                <field name="compliance_status"/>
                <field name="gdpr_consent"/>
                <field name="double_opt_in"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="partner_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-envelope" t-if="record.communication_type.raw_value === 'email'"/>
                                        <i class="fa fa-mobile" t-if="record.communication_type.raw_value === 'sms'"/>
                                        <i class="fa fa-envelope-o" t-if="record.communication_type.raw_value === 'mail'"/>
                                        <i class="fa fa-phone" t-if="record.communication_type.raw_value === 'phone'"/>
                                        <field name="communication_type"/> - <field name="category"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span class="badge badge-success" t-if="record.opted_in.raw_value">Opted In</span>
                                    <span class="badge badge-secondary" t-if="!record.opted_in.raw_value">Opted Out</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-primary" t-if="record.gdpr_consent.raw_value">GDPR</span>
                                        <span class="badge badge-info" t-if="record.double_opt_in.raw_value">Double Opt-in</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-success" t-if="record.compliance_status.raw_value === 'compliant'">✓</span>
                                        <span class="badge badge-warning" t-if="record.compliance_status.raw_value === 'needs_confirmation'">⚠</span>
                                        <span class="badge badge-danger" t-if="record.compliance_status.raw_value === 'non_compliant'">✗</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Extend Partner Form with Communication Preferences -->
    <record id="view_partner_form_communication" model="ir.ui.view">
        <field name="name">res.partner.form.communication</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Communication tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Communication Preferences" name="communication_preferences">
                    <group>
                        <group string="Global Settings">
                            <field name="communication_opt_out"/>
                            <field name="preferred_communication_method"/>
                            <field name="communication_frequency"/>
                            <field name="preferred_language"/>
                        </group>
                        <group string="Do Not Contact">
                            <field name="do_not_email"/>
                            <field name="do_not_sms"/>
                            <field name="do_not_mail"/>
                            <field name="do_not_call"/>
                        </group>
                    </group>

                    <group>
                        <group string="Compliance Status">
                            <field name="gdpr_consent_given"/>
                            <field name="gdpr_consent_date" readonly="1"/>
                            <field name="privacy_policy_accepted"/>
                            <field name="privacy_policy_date" readonly="1"/>
                            <field name="communication_compliance_status" readonly="1"/>
                        </group>
                        <group string="Email Tracking">
                            <field name="email_bounce_count" readonly="1"/>
                            <field name="last_email_bounce_date" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Statistics">
                            <field name="email_opt_in_count" readonly="1"/>
                            <field name="sms_opt_in_count" readonly="1"/>
                            <field name="total_opt_ins" readonly="1"/>
                        </group>
                        <group string="Permissions">
                            <field name="can_email" readonly="1"/>
                            <field name="can_sms" readonly="1"/>
                            <field name="can_mail" readonly="1"/>
                            <field name="can_call" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Detailed Preferences"/>
                    <field name="communication_preference_ids" mode="list">
                        <list editable="bottom">
                            <field name="communication_type"/>
                            <field name="category"/>
                            <field name="opted_in" widget="boolean_toggle"/>
                            <field name="compliance_status" decoration-success="compliance_status == 'compliant'" 
                                   decoration-warning="compliance_status == 'needs_confirmation'" 
                                   decoration-danger="compliance_status == 'non_compliant'"/>
                            <field name="gdpr_consent" widget="boolean_toggle"/>
                            <field name="double_opt_in" widget="boolean_toggle"/>
                            <field name="date_updated"/>
                        </list>
                    </field>

                    <div class="oe_button_box" style="margin-top: 10px;">
                        <button name="create_communication_preferences" string="Create Default Preferences" 
                                type="object" class="btn-primary" invisible="communication_preference_ids"/>
                        <button name="action_global_opt_out" string="Global Opt-out" 
                                type="object" class="btn-secondary" confirm="Are you sure you want to opt this member out of ALL communications?"/>
                        <button name="action_global_opt_in" string="Global Opt-in" 
                                type="object" class="btn-primary" invisible="not communication_opt_out"/>
                        <button name="action_gdpr_consent" string="Record GDPR Consent" 
                                type="object" class="btn-success" invisible="gdpr_consent_given"/>
                        <button name="action_accept_privacy_policy" string="Accept Privacy Policy" 
                                type="object" class="btn-info" invisible="privacy_policy_accepted"/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Communication Preference Action -->
    <record id="action_communication_preference" model="ir.actions.act_window">
        <field name="name">Communication Preferences</field>
        <field name="res_model">ams.communication.preference</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_communication_preference_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_communication_preference_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_communication_preference_form')})]"/>
        <field name="search_view_id" ref="view_communication_preference_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first communication preference!
            </p>
            <p>
                Communication preferences allow you to manage how and when your members want to be contacted.
                This includes email marketing, membership renewals, event notifications, and more.
            </p>
        </field>
    </record>

    <!-- Member Communication Summary Action -->
    <record id="action_member_communication_summary" model="ir.actions.act_window">
        <field name="name">Member Communication Summary</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('member_id', '!=', False)]</field>
        <field name="context">{
            'search_default_has_preferences': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View member communication preferences summary!
            </p>
            <p>
                This view shows all members and their communication preference status,
                including compliance information and opt-in/opt-out statistics.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_communication_preferences" 
              name="Communication Preferences" 
              parent="ams_member_data.menu_ams_members" 
              action="action_communication_preference" 
              sequence="40"/>

    <menuitem id="menu_communication_summary" 
              name="Member Communication Summary" 
              parent="ams_member_data.menu_ams_members" 
              action="action_member_communication_summary" 
              sequence="50"/>

</odoo>