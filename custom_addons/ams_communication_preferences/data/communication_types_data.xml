<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Simple Demo Data for Communication Preferences -->
        <!-- Rely entirely on auto-creation of preferences -->

        <!-- Demo Member 1: Standard member with auto-created preferences -->
        <record id="demo_member_comm_prefs" model="res.partner">
            <field name="name">Demo Communications User</field>
            <field name="email">demo.communications@example.com</field>
            <field name="phone">555-0123</field>
            <field name="is_company">False</field>
            <field name="is_member">True</field>
            <field name="membership_status">active</field>
            <field name="preferred_communication_method">email</field>
            <field name="communication_frequency">weekly</field>
            <field name="gdpr_consent_given">True</field>
            <field name="privacy_policy_accepted">True</field>
        </record>

        <!-- Demo Member 2: Organization member -->
        <record id="demo_org_comm_prefs" model="res.partner">
            <field name="name">Demo Communications Corp</field>
            <field name="email">contact@democomm.com</field>
            <field name="phone">555-0456</field>
            <field name="is_company">True</field>
            <field name="is_member">True</field>
            <field name="membership_status">active</field>
            <field name="preferred_communication_method">email</field>
            <field name="communication_frequency">monthly</field>
            <field name="gdpr_consent_given">True</field>
            <field name="privacy_policy_accepted">True</field>
        </record>

        <!-- Demo Member 3: Member with communication restrictions -->
        <record id="demo_member_restricted" model="res.partner">
            <field name="name">Restricted Communication User</field>
            <field name="email">restricted@example.com</field>
            <field name="phone">555-0789</field>
            <field name="is_company">False</field>
            <field name="is_member">True</field>
            <field name="membership_status">active</field>
            <field name="do_not_sms">True</field>
            <field name="do_not_call">True</field>
            <field name="preferred_communication_method">email</field>
            <field name="communication_frequency">monthly</field>
            <field name="gdpr_consent_given">True</field>
        </record>

        <!-- Demo Member 4: Non-member prospect (no auto-preferences created) -->
        <record id="demo_prospect_user" model="res.partner">
            <field name="name">Demo Prospect User</field>
            <field name="email">prospect@example.com</field>
            <field name="phone">555-0999</field>
            <field name="is_company">False</field>
            <field name="is_member">False</field>
            <field name="membership_status">prospect</field>
            <field name="preferred_communication_method">email</field>
        </record>

        <!-- Demo Member 5: Member with global opt-out -->
        <record id="demo_member_opted_out" model="res.partner">
            <field name="name">Globally Opted Out User</field>
            <field name="email">optedout@example.com</field>
            <field name="phone">555-0000</field>
            <field name="is_company">False</field>
            <field name="is_member">True</field>
            <field name="membership_status">active</field>
            <field name="communication_opt_out">True</field>
            <field name="do_not_email">True</field>
            <field name="do_not_sms">True</field>
            <field name="do_not_mail">True</field>
            <field name="do_not_call">True</field>
            <field name="preferred_communication_method">email</field>
        </record>

        <!-- Note: All communication preferences will be auto-created by the 
             res.partner create method. This avoids unique constraint conflicts
             while still providing diverse demo data to test with. -->

    </data>
</odoo>