<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Create AMS Module Category if it doesn't exist -->
        <record id="module_category_association_management" model="ir.module.category">
            <field name="name">Association Management</field>
            <field name="description">Association Management System modules and features</field>
            <field name="sequence">50</field>
        </record>
        
        <!-- Billing Security Groups -->
        <record id="group_ams_billing_user" model="res.groups">
            <field name="name">AMS Billing User</field>
            <field name="category_id" ref="module_category_association_management"/>
            <field name="comment">Basic access to AMS billing functionality - can view billing schedules and events</field>
        </record>

        <record id="group_ams_billing_manager" model="res.groups">
            <field name="name">AMS Billing Manager</field>
            <field name="category_id" ref="module_category_association_management"/>
            <field name="implied_ids" eval="[(4, ref('group_ams_billing_user'))]"/>
            <field name="comment">Full access to AMS billing functionality - can create, modify and delete billing records</field>
        </record>

        <!-- Inherit from accounting groups for invoice access -->
        <record id="group_ams_billing_user_inherit" model="res.groups">
            <field name="name">AMS Billing User</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_ams_billing_manager_inherit" model="res.groups">
            <field name="name">AMS Billing Manager</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <!-- Record Rules for Billing Schedule -->
        <record id="ams_billing_schedule_user_rule" model="ir.rule">
            <field name="name">AMS Billing Schedule: User Access</field>
            <field name="model_id" ref="model_ams_billing_schedule"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="ams_billing_schedule_manager_rule" model="ir.rule">
            <field name="name">AMS Billing Schedule: Manager Access</field>
            <field name="model_id" ref="model_ams_billing_schedule"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Record Rules for Billing Event -->
        <record id="ams_billing_event_user_rule" model="ir.rule">
            <field name="name">AMS Billing Event: User Access</field>
            <field name="model_id" ref="model_ams_billing_event"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="ams_billing_event_manager_rule" model="ir.rule">
            <field name="name">AMS Billing Event: Manager Access</field>
            <field name="model_id" ref="model_ams_billing_event"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Subscription rules - without company_id since ams.subscription doesn't have it -->
        <record id="ams_subscription_billing_rule" model="ir.rule">
            <field name="name">AMS Subscription: Billing Access</field>
            <field name="model_id" ref="ams_subscriptions.model_ams_subscription"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="ams_subscription_billing_manager_rule" model="ir.rule">
            <field name="name">AMS Subscription: Billing Manager Access</field>
            <field name="model_id" ref="ams_subscriptions.model_ams_subscription"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Invoice access rules for billing - using existing company rules -->
        <record id="account_move_billing_rule" model="ir.rule">
            <field name="name">Account Move: Billing Access</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[
                '|',
                ('subscription_id', '=', False),
                '&amp;',
                ('subscription_id', '!=', False),
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Manager can modify billing-related invoices -->
        <record id="account_move_billing_manager_rule" model="ir.rule">
            <field name="name">Account Move: Billing Manager Access</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[
                '|',
                ('subscription_id', '=', False),
                '&amp;',
                ('subscription_id', '!=', False),
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="groups" eval="[(4, ref('group_ams_billing_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>