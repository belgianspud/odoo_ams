<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Billing Event List View -->
        <record id="view_ams_billing_event_list" model="ir.ui.view">
            <field name="name">ams.billing.event.list</field>
            <field name="model">ams.billing.event</field>
            <field name="arch" type="xml">
                <list string="Billing Events">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="subscription_id"/>
                    <field name="event_date"/>
                    <field name="event_type"/>
                    <field name="billing_period_start"/>
                    <field name="billing_period_end"/>
                    <field name="invoice_amount" widget="monetary"/>
                    <field name="invoice_sent" widget="boolean_toggle"/>
                    <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-warning="state in ['pending','processing']" decoration-danger="state == 'failed'" decoration-muted="state == 'cancelled'"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Billing Event Form View -->
        <record id="view_ams_billing_event_form" model="ir.ui.view">
            <field name="name">ams.billing.event.form</field>
            <field name="model">ams.billing.event</field>
            <field name="arch" type="xml">
                <form string="Billing Event">
                    <header>
                        <button name="action_process" type="object" string="Process" class="btn-primary" 
                                invisible="state != 'pending'"/>
                        <button name="action_mark_completed" type="object" string="Mark Completed" 
                                invisible="state not in ['pending', 'failed']"/>
                        <button name="action_cancel" type="object" string="Cancel" 
                                invisible="state in ['completed', 'cancelled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,processing,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-file-text-o"
                                    invisible="not invoice_id">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Failed" bg_color="text-bg-danger" invisible="state != 'failed'"/>
                        <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-secondary" invisible="state != 'cancelled'"/>
                        
                        <div class="oe_title">
                            <h1><field name="display_name" readonly="1"/></h1>
                        </div>
                        
                        <group>
                            <group name="event_info" string="Event Information">
                                <field name="subscription_id" options="{'no_create': True}"/>
                                <field name="billing_schedule_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="event_date"/>
                                <field name="event_type"/>
                            </group>
                            <group name="billing_period" string="Billing Period">
                                <field name="billing_period_start"/>
                                <field name="billing_period_end"/>
                                <field name="auto_invoice" readonly="1"/>
                                <field name="auto_send_invoice" readonly="1"/>
                            </group>
                        </group>
                        
                        <group name="processing_info" string="Processing Information" invisible="state == 'pending'">
                            <group>
                                <field name="processed_date" readonly="1"/>
                                <field name="processed_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="invoice_sent" readonly="1"/>
                                <field name="invoice_sent_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group name="invoice_info" string="Invoice Information" invisible="not invoice_id">
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="invoice_amount" readonly="1" widget="monetary"/>
                                <field name="currency_id" column_invisible="1"/>
                            </group>
                        </group>
                        
                        <group name="error_info" string="Error Information" invisible="not error_message">
                            <field name="error_message" readonly="1" nolabel="1"/>
                        </group>
                        
                        <separator string="Description"/>
                        <field name="description" placeholder="Description of this billing event..."/>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Billing Event Search View -->
        <record id="view_ams_billing_event_search" model="ir.ui.view">
            <field name="name">ams.billing.event.search</field>
            <field name="model">ams.billing.event</field>
            <field name="arch" type="xml">
                <search string="Search Billing Events">
                    <field name="name" string="Event Name"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="subscription_id" string="Subscription"/>
                    <field name="billing_schedule_id" string="Billing Schedule"/>
                    
                    <filter name="pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                    <filter name="processing" string="Processing" domain="[('state', '=', 'processing')]"/>
                    <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                    <filter name="failed" string="Failed" domain="[('state', '=', 'failed')]"/>
                    
                    <separator/>
                    <filter name="today" string="Today" domain="[('event_date', '=', context_today())]"/>
                    <filter name="this_week" string="This Week" 
                            domain="[('event_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                     ('event_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_month" string="This Month" domain="[('event_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                    
                    <separator/>
                    <filter name="regular_billing" string="Regular Billing" domain="[('event_type', '=', 'regular_billing')]"/>
                    <filter name="manual_billing" string="Manual Billing" domain="[('event_type', '=', 'manual_billing')]"/>
                    <filter name="adjustment_billing" string="Adjustments" domain="[('event_type', '=', 'adjustment_billing')]"/>
                    
                    <separator/>
                    <filter name="has_invoice" string="Has Invoice" domain="[('invoice_id', '!=', False)]"/>
                    <filter name="invoice_sent" string="Invoice Sent" domain="[('invoice_sent', '=', True)]"/>
                    <filter name="has_error" string="Has Error" domain="[('error_message', '!=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Event Type" name="group_type" context="{'group_by': 'event_type'}"/>
                        <filter string="Event Date" name="group_date" context="{'group_by': 'event_date:month'}"/>
                        <filter string="Billing Schedule" name="group_schedule" context="{'group_by': 'billing_schedule_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Billing Event Kanban View -->
        <record id="view_ams_billing_event_kanban" model="ir.ui.view">
            <field name="name">ams.billing.event.kanban</field>
            <field name="model">ams.billing.event</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="subscription_id"/>
                    <field name="event_date"/>
                    <field name="event_type"/>
                    <field name="invoice_amount"/>
                    <field name="invoice_sent"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="fa fa-calendar" title="Event Date"/>
                                            <t t-esc="record.event_date.value"/>
                                        </div>
                                        <div class="col-6 text-end">
                                            <span class="fa fa-tag" title="Event Type"/>
                                            <t t-esc="record.event_type.value.replace('_', ' ').title()"/>
                                        </div>
                                    </div>
                                    <div class="row mt-1" t-if="record.invoice_amount.raw_value">
                                        <div class="col-8">
                                            <span class="fa fa-money" title="Invoice Amount"/>
                                            <field name="invoice_amount" widget="monetary"/>
                                        </div>
                                        <div class="col-4 text-end" t-if="record.invoice_sent.raw_value">
                                            <span class="fa fa-envelope text-success" title="Invoice Sent"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section o_kanban_manage_view">
                                    <a type="edit" class="btn btn-primary btn-sm">Edit</a>
                                    <a name="action_process" type="object" class="btn btn-success btn-sm" t-if="record.state.raw_value == 'pending'">Process</a>
                                    <a name="action_view_invoice" type="object" class="btn btn-secondary btn-sm" t-if="record.invoice_id.raw_value">Invoice</a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Billing Event Pivot View -->
        <record id="view_ams_billing_event_pivot" model="ir.ui.view">
            <field name="name">ams.billing.event.pivot</field>
            <field name="model">ams.billing.event</field>
            <field name="arch" type="xml">
                <pivot string="Billing Events Analysis">
                    <field name="event_date" type="row" interval="month"/>
                    <field name="state" type="col"/>
                    <field name="invoice_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Billing Event Action -->
        <record id="action_ams_billing_event" model="ir.actions.act_window">
            <field name="name">Billing Events</field>
            <field name="res_model">ams.billing.event</field>
            <field name="view_mode">kanban,list,form,pivot</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No billing events found!
                </p>
                <p>
                    Billing events are created automatically when billing schedules are processed,
                    or they can be created manually for special billing situations.
                </p>
            </field>
        </record>

        <!-- Failed Billing Events Action -->
        <record id="action_ams_billing_event_failed" model="ir.actions.act_window">
            <field name="name">Failed Billing Events</field>
            <field name="res_model">ams.billing.event</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', '=', 'failed')]</field>
            <field name="context">{'search_default_failed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No failed billing events!
                </p>
                <p>
                    This view shows billing events that have failed processing and may need manual attention.
                </p>
            </field>
        </record>

    </data>
</odoo>