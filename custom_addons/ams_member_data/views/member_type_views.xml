<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to view members by type -->
    <record id="action_view_members_by_type" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('member_type_id', '!=', False)]</field>
    </record>

    <!-- Member Type List View -->
    <record id="view_ams_member_type_tree" model="ir.ui.view">
        <field name="name">ams.member.type.list</field>
        <field name="model">ams.member.type</field>
        <field name="arch" type="xml">
            <list string="Member Types" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="is_individual"/>
                <field name="is_organization"/>
                <field name="member_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Member Type Form View -->
    <record id="view_ams_member_type_form" model="ir.ui.view">
        <field name="name">ams.member.type.form</field>
        <field name="model">ams.member.type</field>
        <field name="arch" type="xml">
            <form string="Member Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_view_members_by_type)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-users"
                                context="{'search_default_member_type_id': id}">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                    </div>

                    <!-- Replaced attrs with modifiers -->
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active == True"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Member Type Name..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="is_individual"/>
                            <field name="is_organization"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Detailed description of this member type..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Member Type Search View -->
    <record id="view_ams_member_type_search" model="ir.ui.view">
        <field name="name">ams.member.type.search</field>
        <field name="model">ams.member.type</field>
        <field name="arch" type="xml">
            <search string="Search Member Types">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                
                <filter string="Individual Types" name="individual" 
                        domain="[('is_individual', '=', True)]"/>
                <filter string="Organization Types" name="organization" 
                        domain="[('is_organization', '=', True)]"/>
                <separator/>
                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_by_type" 
                            context="{'group_by': 'is_individual'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Type Action -->
    <record id="action_ams_member_type" model="ir.actions.act_window">
        <field name="name">Member Types</field>
        <field name="res_model">ams.member.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first member type
            </p>
            <p>
                Member types classify your members into categories like Individual, 
                Organization, Student, Retired, etc. Each type determines what 
                fields and features are available.
            </p>
        </field>
    </record>
    
    <!-- Member Types menu under Configuration (provided by ams_system_config) -->
    <menuitem id="menu_ams_member_type" 
              name="Member Types" 
              parent="ams_system_config.menu_ams_configuration"
              action="action_ams_member_type" 
              sequence="10"/>
</odoo>