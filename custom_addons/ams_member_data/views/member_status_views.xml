<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to view members by status -->
    <record id="action_view_members_by_status" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('member_status_id', '!=', False)]</field>
    </record>

    <!-- Member Status List View -->
    <record id="view_ams_member_status_list" model="ir.ui.view">
        <field name="name">ams.member.status.list</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <list string="Member Statuses" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="is_active"/>
                <field name="member_count"/>
                <field name="color" widget="color"/>
            </list>
        </field>
    </record>

    <!-- Member Status Form View -->
    <record id="view_ams_member_status_form" model="ir.ui.view">
        <field name="name">ams.member.status.form</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <form string="Member Status">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_view_members_by_status)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-users"
                                context="{'search_default_member_status_id': id}">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Status Name..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Detailed description of this member status..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Member Status Kanban View -->
    <record id="view_ams_member_status_kanban" model="ir.ui.view">
        <field name="name">ams.member.status.kanban</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence" class="o_kanban_small_column">
                <field name="color"/>
                <field name="member_count"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="code"/>
                                    <t t-if="record.is_active.raw_value">
                                        <span class="badge badge-success">Active Status</span>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="oe_kanban_text_red">
                                            <t t-esc="record.member_count.value"/> Members
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Member Status Search View -->
    <record id="view_ams_member_status_search" model="ir.ui.view">
        <field name="name">ams.member.status.search</field>
        <field name="model">ams.member.status</field>
        <field name="arch" type="xml">
            <search string="Search Member Statuses">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                
                <filter string="Active Member Status" name="is_active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive Member Status" name="is_inactive" domain="[('is_active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Active Status" name="group_by_is_active" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Status Action -->
    <record id="action_ams_member_status" model="ir.actions.act_window">
        <field name="name">Member Status</field>
        <field name="res_model">ams.member.status</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first member status
            </p>
            <p>
                Member statuses track the lifecycle of your members from prospect 
                to active to lapsed. Each status can have different colors and 
                permissions.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ams_member_status" 
              name="Member Status" 
              parent="menu_ams_configuration"
              action="action_ams_member_status" 
              sequence="20"/>
</odoo>
