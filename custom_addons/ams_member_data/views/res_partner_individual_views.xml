<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Individual Member Form View Extension -->
    <record id="view_partner_individual_form" model="ir.ui.view">
        <field name="name">res.partner.individual.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add member info at top -->
            <xpath expr="//sheet/div[@class='oe_button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_participations"
                        attrs="{'invisible': [('member_id', '=', False)]}" icon="fa-id-card">
                    <field name="is_member" widget="boolean"/>
                    <span attrs="{'invisible': [('is_member', '=', False)]}">Active Member</span>
                    <span attrs="{'invisible': [('is_member', '=', True)]}">Inactive Member</span>
                </button>
            </xpath>

            <!-- Replace name field with name components for individuals -->
            <xpath expr="//field[@name='name']" position="replace">
                <div class="o_row" attrs="{'invisible': [('member_type_id', '=', False)]}">
                    <field name="first_name" placeholder="First Name" 
                           attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                    <field name="middle_name" placeholder="Middle" 
                           attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                    <field name="last_name" placeholder="Last Name" 
                           attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                    <field name="suffix" placeholder="Jr/Sr" 
                           attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                </div>
                <field name="name" placeholder="Name" 
                       attrs="{'invisible': [('member_type_id', '!=', False)]}"/>
            </xpath>

            <!-- Add member fields after name -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="member_id" attrs="{'invisible': [('member_id', '=', False)]}"/>
                <field name="nickname" placeholder="Preferred Name" 
                       attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
            </xpath>

            <!-- Add member type and status -->
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="member_type_id"/>
                <field name="member_status_id" attrs="{'invisible': [('member_type_id', '=', False)]}"/>
            </xpath>

            <!-- Extend contact information -->
            <xpath expr="//field[@name='mobile']" position="after">
                <field name="business_phone" 
                       attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                <field name="mobile_phone" 
                       attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
                <field name="secondary_email" 
                       attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}"/>
            </xpath>

            <!-- Add membership notebook page -->
            <xpath expr="//notebook" position="inside">
                <page string="Membership" attrs="{'invisible': [('member_type_id', '=', False)]}">
                    <group>
                        <group string="Membership Information">
                            <field name="original_join_date"/>
                            <field name="paid_through_date"/>
                            <field name="current_status"/>
                            <field name="primary_membership_id"/>
                        </group>
                        <group string="Demographics" attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}">
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                        </group>
                    </group>
                    <group string="Legacy Information" attrs="{'invisible': [('legacy_contact_id', '=', False)]}">
                        <field name="legacy_contact_id"/>
                    </group>
                </page>
            </xpath>

            <!-- Add addresses notebook page -->
            <xpath expr="//notebook" position="inside">
                <page string="Addresses" attrs="{'invisible': ['|', ('member_type_id', '=', False), ('member_type_id.is_individual', '=', False)]}">
                    <group>
                        <group string="Primary Address">
                            <field name="primary_address_type"/>
                            <field name="street" nolabel="1"/>
                            <field name="street2" nolabel="1"/>
                            <div class="o_address_format">
                                <field name="city" placeholder="City" style="width: 40%"/>
                                <field name="state_id" class="o_address_state" placeholder="State" style="width: 24%" options='{"no_open": True}' context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" style="width: 24%"/>
                            </div>
                            <field name="country_id" placeholder="Country" options='{"no_open": True, "no_create": True}'/>
                        </group>
                        <group string="Secondary Address">
                            <field name="secondary_address_type"/>
                            <field name="secondary_address_line1" placeholder="Address Line 1"/>
                            <field name="secondary_address_line2" placeholder="Address Line 2"/>
                            <div class="o_address_format">
                                <field name="secondary_address_city" placeholder="City" style="width: 40%"/>
                                <field name="secondary_address_state_id" class="o_address_state" placeholder="State" style="width: 24%" options='{"no_open": True}' context="{'country_id': secondary_address_country_id}"/>
                                <field name="secondary_address_zip" placeholder="ZIP" style="width: 24%"/>
                            </div>
                            <field name="secondary_address_country_id" placeholder="Country" options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                </page>
            </xpath>

            <!-- Add portal information page -->
            <xpath expr="//notebook" position="inside">
                <page string="Portal Access" attrs="{'invisible': [('member_type_id', '=', False)]}" groups="base.group_system">
                    <group>
                        <field name="portal_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Individual Member Tree View -->
    <record id="view_partner_individual_tree" model="ir.ui.view">
        <field name="name">res.partner.individual.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Individual Members">
                <field name="member_id"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="member_type_id"/>
                <field name="member_status_id"/>
                <field name="is_member"/>
                <field name="paid_through_date"/>
                <field name="city"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <!-- Individual Member Kanban View -->
    <record id="view_partner_individual_kanban" model="ir.ui.view">
        <field name="name">res.partner.individual.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban default_group_by="member_status_id">
                <field name="member_id"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="member_type_id"/>
                <field name="member_status_id"/>
                <field name="is_member"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                        <small t-if="record.member_id.raw_value">
                                            <t t-esc="record.member_id.value"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <t t-if="record.email.raw_value">
                                        <div><i class="fa fa-envelope"/> <t t-esc="record.email.value"/></div>
                                    </t>
                                    <t t-if="record.phone.raw_value">
                                        <div><i class="fa fa-phone"/> <t t-esc="record.phone.value"/></div>
                                    </t>
                                    <t t-if="record.member_type_id.raw_value">
                                        <div><span class="badge badge-info"><t t-esc="record.member_type_id.value"/></span></div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Individual Member Search View -->
    <record id="view_partner_individual_search" model="ir.ui.view">
        <field name="name">res.partner.individual.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Individual Members">
                <field name="display_name"/>
                <field name="member_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="member_type_id"/>
                <field name="member_status_id"/>
                <field name="city"/>

                <filter string="Active Members" name="active_members" 
                        domain="[('is_member', '=', True)]"/>
                <filter string="Inactive Members" name="inactive_members" 
                        domain="[('is_member', '=', False), ('member_id', '!=', False)]"/>
                <filter string="Never Members" name="never_members" 
                        domain="[('member_id', '=', False)]"/>
                <separator/>
                <filter string="Recent Additions" name="recent" 
                        domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=30)))]"/>

                <group expand="0" string="Group By">
                    <filter string="Member Type" name="group_member_type" 
                            context="{'group_by': 'member_type_id'}"/>
                    <filter string="Member Status" name="group_member_status" 
                            context="{'group_by': 'member_status_id'}"/>
                    <filter string="Country" name="group_country" 
                            context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="group_state" 
                            context="{'group_by': 'state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Individual Members -->
    <record id="action_partner_individual_members" model="ir.actions.act_window">
        <field name="name">Individual Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('member_type_id.is_individual', '=', True)]</field>
        <field name="context">{
            'search_default_active_members': 1,
            'default_is_company': False,
            'default_supplier_rank': 0,
            'default_customer_rank': 1
        }</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_partner_individual_kanban')}),
                                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_partner_individual_tree')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('base.view_partner_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first individual member
            </p>
            <p>
                Individual members are people who belong to your association.
                Track their membership status, contact information, and participation.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ams_members" 
              name="Members" 
              parent="menu_ams_root" 
              sequence="10"/>

    <menuitem id="menu_ams_individual_members" 
              name="Individual Members" 
              parent="menu_ams_members"
              action="action_partner_individual_members" 
              sequence="10"/>
</odoo>