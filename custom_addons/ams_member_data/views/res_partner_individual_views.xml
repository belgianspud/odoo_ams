<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Individual Member Form View -->
    <record id="view_partner_individual_form" model="ir.ui.view">
        <field name="name">res.partner.individual.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Member ID after name -->
            <field name="name" position="after">
                <field name="member_id" readonly="1" attrs="{'invisible': [('is_company', '=', True)]}"/>
            </field>

            <!-- Replace name field with name components for individuals -->
            <field name="name" position="attributes">
                <attribute name="attrs">{'invisible': [('is_company', '=', False)]}</attribute>
            </field>
            
            <field name="name" position="before">
                <group string="Name" attrs="{'invisible': [('is_company', '=', True)]}">
                    <group>
                        <field name="first_name" attrs="{'required': [('is_company', '=', False)]}"/>
                        <field name="last_name" attrs="{'required': [('is_company', '=', False)]}"/>
                    </group>
                    <group>
                        <field name="middle_name"/>
                        <field name="suffix"/>
                        <field name="nickname"/>
                    </group>
                </group>
            </field>

            <!-- Add demographics section -->
            <field name="category_id" position="after">
                <group string="Demographics" attrs="{'invisible': [('is_company', '=', True)]}">
                    <group>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                    </group>
                </group>
            </field>

            <!-- Enhanced contact information -->
            <field name="phone" position="after">
                <field name="business_phone" attrs="{'invisible': [('is_company', '=', True)]}"/>
                <field name="mobile_phone" attrs="{'invisible': [('is_company', '=', True)]}"/>
            </field>

            <field name="email" position="after">
                <field name="secondary_email" attrs="{'invisible': [('is_company', '=', True)]}"/>
            </field>

            <!-- Address type for primary address -->
            <field name="street" position="before">
                <field name="primary_address_type" attrs="{'invisible': [('is_company', '=', True)]}"/>
            </field>

            <!-- Secondary address section -->
            <xpath expr="//page[@name='contact_addresses']" position="after">
                <page string="Secondary Address" attrs="{'invisible': [('is_company', '=', True)]}">
                    <group>
                        <group string="Secondary Address Details">
                            <field name="secondary_address_type"/>
                            <field name="secondary_address_line1"/>
                            <field name="secondary_address_line2"/>
                            <field name="secondary_address_city"/>
                            <field name="secondary_address_state_id"/>
                            <field name="secondary_address_zip"/>
                            <field name="secondary_address_country_id"/>
                        </group>
                        <group string="Formatted Address">
                            <field name="formatted_secondary_address" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <!-- System information tab -->
            <xpath expr="//notebook" position="inside">
                <page string="System Information" groups="base.group_system">
                    <group>
                        <group string="Integration">
                            <field name="legacy_contact_id"/>
                            <field name="portal_id"/>
                            <field name="original_join_date"/>
                        </group>
                        <group string="Computed Information">
                            <field name="display_name"/>
                            <field name="formatted_address"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Individual Members Tree View -->
    <record id="view_partner_individual_tree" model="ir.ui.view">
        <field name="name">res.partner.individual.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Individual Members">
                <field name="member_id"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile_phone"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <!-- Individual Members Kanban View -->
    <record id="view_partner_individual_kanban" model="ir.ui.view">
        <field name="name">res.partner.individual.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban string="Individual Members">
                <field name="member_id"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)" alt="Contact"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="display_name"/>
                                </strong>
                                <div t-if="record.member_id.value">
                                    <i class="fa fa-id-card" title="Member ID"/>
                                    <field name="member_id"/>
                                </div>
                                <div t-if="record.email.value">
                                    <i class="fa fa-envelope" title="Email"/>
                                    <field name="email"/>
                                </div>
                                <div t-if="record.phone.value">
                                    <i class="fa fa-phone" title="Phone"/>
                                    <field name="phone"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Individual Members Search View -->
    <record id="view_partner_individual_search" model="ir.ui.view">
        <field name="name">res.partner.individual.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Individual Members">
                <field name="display_name" string="Name" 
                       filter_domain="['|', '|', '|', ('display_name', 'ilike', self), ('first_name', 'ilike', self), ('last_name', 'ilike', self), ('nickname', 'ilike', self)]"/>
                <field name="member_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile_phone"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                
                <filter string="Has Member ID" name="has_member_id" domain="[('member_id', '!=', False)]"/>
                <filter string="Missing Member ID" name="no_member_id" domain="[('member_id', '=', False)]"/>
                <filter string="Has Email" name="has_email" domain="[('email', '!=', False)]"/>
                <filter string="Has Phone" name="has_phone" domain="['|', ('phone', '!=', False), ('mobile_phone', '!=', False)]"/>
                
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                
                <separator/>
                <filter string="Individuals Only" name="individuals_only" domain="[('is_company', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Individual Members Action -->
    <record id="action_partner_individual" model="ir.actions.act_window">
        <field name="name">Individual Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_company', '=', False)]</field>
        <field name="context">{
            'default_is_company': False,
            'default_customer_rank': 1,
        }</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_partner_individual_kanban')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_partner_individual_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_partner_individual_form')})]"/>
        <field name="search_view_id" ref="view_partner_individual_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first individual member!
            </p>
            <p>
                Individual members are people who have personal memberships with your association.
                This includes professionals, students, retirees, and other individual participants.
            </p>
        </field>
    </record>

</odoo>