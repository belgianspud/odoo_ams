<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Member Statuses -->
        
        <record id="member_status_prospect" model="ams.member.status">
            <field name="name">Prospect</field>
            <field name="code">prospect</field>
            <field name="is_active">False</field>
            <field name="sequence">10</field>
            <field name="color">7</field>
            <field name="description">Potential members who have shown interest but haven't joined yet</field>
        </record>

        <record id="member_status_active" model="ams.member.status">
            <field name="name">Active</field>
            <field name="code">active</field>
            <field name="is_active">True</field>
            <field name="sequence">20</field>
            <field name="color">10</field>
            <field name="description">Current members in good standing with full benefits</field>
        </record>

        <record id="member_status_grace" model="ams.member.status">
            <field name="name">Grace</field>
            <field name="code">grace</field>
            <field name="is_active">True</field>
            <field name="sequence">30</field>
            <field name="color">3</field>
            <field name="description">Recently expired members still receiving limited benefits during grace period</field>
        </record>

        <record id="member_status_lapsed" model="ams.member.status">
            <field name="name">Lapsed</field>
            <field name="code">lapsed</field>
            <field name="is_active">False</field>
            <field name="sequence">40</field>
            <field name="color">1</field>
            <field name="description">Former members who haven't renewed and are no longer active</field>
        </record>

        <record id="member_status_suspended" model="ams.member.status">
            <field name="name">Suspended</field>
            <field name="code">suspended</field>
            <field name="is_active">False</field>
            <field name="sequence">50</field>
            <field name="color">2</field>
            <field name="description">Members temporarily suspended due to disciplinary action or non-payment</field>
        </record>

        <record id="member_status_terminated" model="ams.member.status">
            <field name="name">Terminated</field>
            <field name="code">terminated</field>
            <field name="is_active">False</field>
            <field name="sequence">60</field>
            <field name="color">9</field>
            <field name="description">Members permanently removed from the association</field>
        </record>

        <record id="member_status_deceased" model="ams.member.status">
            <field name="name">Deceased</field>
            <field name="code">deceased</field>
            <field name="is_active">False</field>
            <field name="sequence">70</field>
            <field name="color">8</field>
            <field name="description">Memorial status for deceased members</field>
        </record>
    </data>
</odoo>