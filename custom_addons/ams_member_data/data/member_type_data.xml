<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Member Types -->
        
        <!-- Individual Member Types -->
        <record id="member_type_individual" model="ams.member.type">
            <field name="name">Individual</field>
            <field name="code">IND</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">10</field>
            <field name="description">Regular individual membership for professionals</field>
        </record>

        <record id="member_type_student" model="ams.member.type">
            <field name="name">Student</field>
            <field name="code">STU</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">20</field>
            <field name="description">Student membership with discounted rates</field>
        </record>

        <record id="member_type_retired" model="ams.member.type">
            <field name="name">Retired</field>
            <field name="code">RET</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">30</field>
            <field name="description">Retired professional membership with special benefits</field>
        </record>

        <record id="member_type_honorary" model="ams.member.type">
            <field name="name">Honorary</field>
            <field name="code">HON</field>
            <field name="is_individual">True</field>
            <field name="is_organization">False</field>
            <field name="sequence">40</field>
            <field name="description">Honorary membership for distinguished service</field>
        </record>

        <!-- Organization Member Types -->
        <record id="member_type_organization" model="ams.member.type">
            <field name="name">Organization</field>
            <field name="code">ORG</field>
            <field name="is_individual">False</field>
            <field name="is_organization">True</field>
            <field name="sequence">50</field>
            <field name="description">Corporate or institutional membership</field>
        </record>

        <record id="member_type_corporate" model="ams.member.type">
            <field name="name">Corporate</field>
            <field name="code">CORP</field>
            <field name="is_individual">False</field>
            <field name="is_organization">True</field>
            <field name="sequence">60</field>
            <field name="description">Corporate membership for private companies</field>
        </record>

        <record id="member_type_institutional" model="ams.member.type">
            <field name="name">Institutional</field>
            <field name="code">INST</field>
            <field name="is_individual">False</field>
            <field name="is_organization">True</field>
            <field name="sequence">70</field>
            <field name="description">Institutional membership for universities, government agencies, etc.</field>
        </record>

        <record id="member_type_nonprofit" model="ams.member.type">
            <field name="name">Non-Profit</field>
            <field name="code">NPO</field>
            <field name="is_individual">False</field>
            <field name="is_organization">True</field>
            <field name="sequence">80</field>
            <field name="description">Non-profit organization membership</field>
        </record>
    </data>
</odoo>