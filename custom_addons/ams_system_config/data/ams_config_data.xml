            <field name="key">ams.data_retention_years</field>
            <field name="value">7</field>
        </record>

        <record id="config_batch_processing_size" model="ir.config_parameter">
            <field name="key">ams.batch_processing_size</field>
            <field name="value">100</field>
        </record>

