<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default AMS Configuration Parameters -->
        <record id="config_auto_member_id" model="ir.config_parameter">
            <field name="key">ams.auto_member_id</field>
            <field name="value">True</field>
        </record>

        <record id="config_member_id_prefix" model="ir.config_parameter">
            <field name="key">ams.member_id_prefix</field>
            <field name="value">M</field>
        </record>

        <record id="config_member_id_padding" model="ir.config_parameter">
            <field name="key">ams.member_id_padding</field>
