            <field name="key">ams.default_chapter_percentage</field>
            <field name="value">30.0</field>
        </record>

        <record id="config_enterprise_subscriptions_enabled" model="ir.config_parameter">
            <field name="key">ams.enterprise_subscriptions_enabled</field>
            <field name="value">True</field>
        </record>

