<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root Menu -->
    <menuitem id="menu_subscription_root" 
              name="Subscriptions" 
              sequence="20" />
    
    <!-- Plans Menu -->
    <menuitem id="menu_subscription_plans" 
              name="Plans" 
              parent="menu_subscription_root" 
              action="action_subscription_plan" 
              sequence="10"/>
    
    <!-- Subscriptions Menu -->
    <menuitem id="menu_subscription_subscriptions" 
              name="Subscriptions" 
              parent="menu_subscription_root" 
              action="action_subscription_subscription" 
              sequence="20"/>
    
    <!-- Usage Menu -->
    <menuitem id="menu_subscription_usage" 
              name="Usage" 
              parent="menu_subscription_root" 
              action="action_subscription_usage" 
              sequence="30"/>
    
    <!-- Reports Menu -->
    <menuitem id="menu_subscription_reports" 
              name="Reports" 
              parent="menu_subscription_root" 
              sequence="80"/>
    
    <!-- Configuration Menu -->
    <menuitem id="menu_subscription_config" 
              name="Configuration" 
              parent="menu_subscription_root" 
              sequence="90"/>
    
    <!-- Settings Action -->
    <record id="action_subscription_settings" model="ir.actions.act_window">
        <field name="name">Subscription Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'subscription_management'}</field>
    </record>
    
    <!-- Settings Menu Item -->
    <menuitem id="menu_subscription_settings"
              name="Settings"
              parent="menu_subscription_config"
              action="action_subscription_settings"
              groups="subscription_management.group_subscription_manager"
              sequence="1"/>

</odoo>