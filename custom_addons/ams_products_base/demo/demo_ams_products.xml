        <!-- ========================================================================== -->
        <!-- DEMO EMAIL TEMPLATES FOR BEHAVIOR-SPECIFIC COMMUNICATIONS -->
        <!-- ========================================================================== -->

        <!-- Donation Receipt Template -->
        <record id="demo_donation_receipt_template" model="mail.template">
            <field name="name">Tax Deductible Donation Receipt</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Thank You - Tax Deductible Donation Receipt #${object.name}</field>
            <field name="email_from">${(object.company_id.email or user.email)|safe}</field>
            <field name="email_to">${object.partner_id.email|safe}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                    <h2 style="color: #2e7d32;">Thank You for Your Generous Donation!</h2>
                    
                    <p>Dear ${object.partner_id.name},</p>
                    
                    <p>Thank you for your generous donation to ${object.company_id.name}. Your support helps us continue our mission and serve our professional community.</p>
                    
                    <div style="background-color: #f5f5f5; padding: 15px; margin: 20px 0; border-left: 4px solid #2e7d32;">
                        <h3>Donation Receipt Details</h3>
                        <p><strong>Receipt Number:</strong> ${object.name}</p>
                        <p><strong>Date:</strong> ${object.invoice_date}</p>
                        <p><strong>Amount:</strong> $${object.amount_total}</p>
                        <p><strong>Payment Method:</strong> ${object.payment_reference or 'N/A'}</p>
                    </div>
                    
                    <p><strong>Tax Information:</strong> This donation is tax deductible to the fullest extent allowed by law. Please consult your tax advisor regarding the deductibility of this contribution.</p>
                    
                    <p>No goods or services were provided in exchange for this donation.</p>
                    
                    <p>With gratitude,<br/>
                    The ${object.company_id.name} Team</p>
                </div>
            </field>
        </record>

        <!-- Update donation products to use the template -->
        <record id="demo_donation_general" model="product.template">
            <field name="donation_receipt_template_id" ref="demo_donation_receipt_template"/>
        </record>
        
        <record id="demo_donation_scholarship" model="product.template">
            <field name="donation_receipt_template_id" ref="demo_donation_receipt_template"/>
        </record>
        
        <record id="demo_donation_memorial" model="product.template">
            <field name="donation_receipt_template_id" ref="demo_donation_receipt_template"/>
        </record>

    </data>
