<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Member Pricelist -->
        <record id="pricelist_ams_members" model="product.pricelist">
            <field name="name">AMS Member Pricing</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Standard/Non-Member Pricelist -->
        <record id="pricelist_ams_standard" model="product.pricelist">
            <field name="name">AMS Standard Pricing</field>
            <field name="currency_id" ref="base.USD"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Example: 20% member discount on educational products -->
        <record id="pricelist_members_education_discount" model="product.pricelist.item">
            <field name="pricelist_id" ref="pricelist_ams_members"/>
            <field name="applied_on">2_product_category</field>
            <field name="categ_id" ref="categ_educational_products"/>
            <field name="percent_price">80</field>  <!-- 20% discount -->
            <field name="name">Member Discount - Educational Products</field>
        </record>
        
    </data>
</odoo>