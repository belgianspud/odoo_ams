<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Audit Log Tree View -->
        <record id="view_ams_audit_log_tree" model="ir.ui.view">
            <field name="name">ams.audit.log.tree</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <tree string="Audit Log" default_order="timestamp desc" create="false" edit="false">
                    <field name="timestamp"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="activity_type"/>
                    <field name="description"/>
                    <field name="model_name"/>
                    <field name="record_id"/>
                    <field name="risk_level" decoration-danger="risk_level == 'critical'" decoration-warning="risk_level == 'high'"/>
                    <field name="age_days"/>
                </tree>
            </field>
        </record>

        <!-- Audit Log Form View -->
        <record id="view_ams_audit_log_form" model="ir.ui.view">
            <field name="name">ams.audit.log.form</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <form string="Audit Log Entry" create="false" edit="false">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_related_activities" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-list"
                                    attrs="{'invisible': [('partner_id', '=', False)]}"
                                    groups="ams_core.group_ams_manager">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">View Related</span>
                                    <span class="o_stat_text">Activities</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Activity Information">
                                <field name="timestamp"/>
                                <field name="user_id"/>
                                <field name="partner_id"/>
                                <field name="activity_type"/>
                                <field name="risk_level"/>
                                <field name="age_days"/>
                            </group>
                            <group string="Technical Details">
                                <field name="model_name"/>
                                <field name="record_id"/>
                                <field name="field_name"/>
                                <field name="session_id"/>
                            </group>
                        </group>
                        
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                        
                        <group string="Value Changes" attrs="{'invisible': ['|', ('old_value', '=', False), ('new_value', '=', False)]}">
                            <group>
                                <label for="old_value" string="Old Value"/>
                                <field name="old_value" nolabel="1"/>
                            </group>
                            <group>
                                <label for="new_value" string="New Value"/>
                                <field name="new_value" nolabel="1"/>
                            </group>
                        </group>
                        
                        <group string="Session Information">
                            <group>
                                <field name="ip_address"/>
                                <field name="user_agent"/>
                            </group>
                        </group>
                        
                        <group string="Additional Context" attrs="{'invisible': [('context_data', '=', False)]}">
                            <field name="context_data" nolabel="1" widget="ace" options="{'mode': 'json'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Audit Log Search View -->
        <record id="view_ams_audit_log_search" model="ir.ui.view">
            <field name="name">ams.audit.log.search</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <search string="Search Audit Log">
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="activity_type"/>
                    <field name="description"/>
                    <field name="model_name"/>
                    <field name="ip_address"/>
                    
                    <filter string="Today" name="today" domain="[('timestamp', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('timestamp', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                    <filter string="Yesterday" name="yesterday" domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')), ('timestamp', '&lt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59'))]"/>
                    <filter string="Last 7 Days" name="last_week" domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last 30 Days" name="last_month" domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Low Risk" name="risk_low" domain="[('risk_level', '=', 'low')]"/>
                    <filter string="Medium Risk" name="risk_medium" domain="[('risk_level', '=', 'medium')]"/>
                    <filter string="High Risk" name="risk_high" domain="[('risk_level', '=', 'high')]"/>
                    <filter string="Critical Risk" name="risk_critical" domain="[('risk_level', '=', 'critical')]"/>
                    <separator/>
                    <filter string="Member Activities" name="member_activities" domain="[('partner_id', '!=', False)]"/>
                    <filter string="Security Events" name="security_events" domain="[('activity_type', '=', 'security_event')]"/>
                    <filter string="System Events" name="system_events" domain="[('activity_type', '=', 'system_event')]"/>
                    <filter string="Data Changes" name="data_changes" domain="[('activity_type', 'in', ['created', 'updated', 'deleted'])]"/>
                    <filter string="Login/Logout" name="login_logout" domain="[('activity_type', 'in', ['login', 'logout'])]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Activity Type" name="group_activity_type" context="{'group_by': 'activity_type'}"/>
                        <filter string="Risk Level" name="group_risk_level" context="{'group_by': 'risk_level'}"/>
                        <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'timestamp:day'}"/>
                        <filter string="Month" name="group_month" context="{'group_by': 'timestamp:month'}"/>
                        <filter string="IP Address" name="group_ip" context="{'group_by': 'ip_address'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Audit Log Calendar View -->
        <record id="view_ams_audit_log_calendar" model="ir.ui.view">
            <field name="name">ams.audit.log.calendar</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <calendar string="Audit Activities" 
                          date_start="timestamp"
                          color="activity_type"
                          mode="month">
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="activity_type"/>
                    <field name="description"/>
                    <field name="risk_level"/>
                </calendar>
            </field>
        </record>

        <!-- Audit Log Graph View -->
        <record id="view_ams_audit_log_graph" model="ir.ui.view">
            <field name="name">ams.audit.log.graph</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <graph string="Audit Activity Analysis" type="bar">
                    <field name="timestamp" interval="day"/>
                    <field name="activity_type" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Audit Log Pivot View -->
        <record id="view_ams_audit_log_pivot" model="ir.ui.view">
            <field name="name">ams.audit.log.pivot</field>
            <field name="model">ams.audit.log</field>
            <field name="arch" type="xml">
                <pivot string="Audit Log Analysis">
                    <field name="timestamp" interval="month" type="row"/>
                    <field name="activity_type" type="col"/>
                    <field name="user_id" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Actions -->
        
        <!-- Main Audit Log Action -->
        <record id="action_ams_audit_log" model="ir.actions.act_window">
            <field name="name">Audit Log</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form,calendar,graph,pivot</field>
            <field name="context">{'search_default_last_week': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No audit entries yet!
                </p>
                <p>
                    The audit log automatically tracks all significant activities
                    in the AMS system for security and compliance purposes.
                </p>
            </field>
        </record>

        <!-- Recent Activities Action -->
        <record id="action_ams_recent_activities" model="ir.actions.act_window">
            <field name="name">Recent Activities</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="limit">100</field>
        </record>

        <!-- Security Events Action -->
        <record id="action_ams_security_events" model="ir.actions.act_window">
            <field name="name">Security Events</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('activity_type', '=', 'security_event')]</field>
            <field name="context">{'search_default_last_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No security events recorded!
                </p>
                <p>
                    Security events are automatically logged when unusual or
                    potentially suspicious activities are detected.
                </p>
            </field>
        </record>

        <!-- High Risk Activities Action -->
        <record id="action_ams_high_risk_activities" model="ir.actions.act_window">
            <field name="name">High Risk Activities</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('risk_level', 'in', ['high', 'critical'])]</field>
            <field name="context">{'search_default_last_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No high risk activities!
                </p>
                <p>
                    High risk activities require special attention for security
                    and compliance monitoring.
                </p>
            </field>
        </record>

        <!-- Member Activities Action -->
        <record id="action_ams_member_activities" model="ir.actions.act_window">
            <field name="name">Member Activities</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_id', '!=', False)]</field>
            <field name="context">{'search_default_last_week': 1}</field>
        </record>

        <!-- Data Export Activities Action -->
        <record id="action_ams_export_activities" model="ir.actions.act_window">
            <field name="name">Data Export Activities</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('activity_type', '=', 'export')]</field>
            <field name="context">{'search_default_last_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data exports recorded!
                </p>
                <p>
                    All data exports are logged here for compliance and
                    security monitoring purposes.
                </p>
            </field>
        </record>

        <!-- System Events Action -->
        <record id="action_ams_system_events" model="ir.actions.act_window">
            <field name="name">System Events</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('activity_type', '=', 'system_event')]</field>
            <field name="context">{'search_default_last_month': 1}</field>
        </record>

        <!-- User Activity Report Action -->
        <record id="action_ams_user_activity_report" model="ir.actions.act_window">
            <field name="name">User Activity Report</field>
            <field name="res_model">ams.audit.log</field>
            <field name="view_mode">pivot,graph,tree</field>
            <field name="context">{'search_default_last_month': 1, 'search_default_group_user': 1}</field>
        </record>

        <!-- Audit Dashboard Action (Server Action) -->
        <record id="action_ams_audit_dashboard" model="ir.actions.server">
            <field name="name">Audit Dashboard</field>
            <field name="model_id" ref="model_ams_audit_log"/>
            <field name="state">code</field>
            <field name="code">
stats = model.get_audit_statistics(days=30)
message = f"""
=== 30-Day Audit Statistics ===

Total Activities: {stats.get('total_activities', 0)}
Unique Partners: {stats.get('unique_partners', 0)}
Security Events: {stats.get('security_events', 0)}

Activity Types:
""" + '\n'.join([f"  {k}: {v}" for k, v in stats.get('by_type', {}).items()]) + f"""

Risk Levels:
""" + '\n'.join([f"  {k}: {v}" for k, v in stats.get('by_risk_level', {}).items()]) + f"""

Top Users:
""" + '\n'.join([f"  {k}: {v}" for k, v in list(stats.get('by_user', {}).items())[:5]])

action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Audit Dashboard - Last 30 Days',
        'message': message,
        'type': 'info',
        'sticky': True
    }
}
            </field>
        </record>

    </data>
</odoo>