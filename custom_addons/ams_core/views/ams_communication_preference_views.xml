<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Communication Preference Type Tree View -->
        <record id="view_ams_communication_preference_type_tree" model="ir.ui.view">
            <field name="name">ams.communication.preference.type.tree</field>
            <field name="model">ams.communication.preference.type</field>
            <field name="arch" type="xml">
                <tree string="Communication Preference Types" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="applies_to_email" string="Email"/>
                    <field name="applies_to_phone" string="Phone"/>
                    <field name="applies_to_mail" string="Mail"/>
                    <field name="applies_to_sms" string="SMS"/>
                    <field name="default_opt_in"/>
                    <field name="required_preference"/>
                    <field name="preference_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Communication Preference Type Form View -->
        <record id="view_ams_communication_preference_type_form" model="ir.ui.view">
            <field name="name">ams.communication.preference.type.form</field>
            <field name="model">ams.communication.preference.type</field>
            <field name="arch" type="xml">
                <form string="Communication Preference Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_preferences" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-users">
                                <field name="preference_count" widget="statinfo" string="Member Preferences"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Preference Name..."/>
                            </h1>
                            <label for="code" class="oe_edit_only"/>
                            <h2>
                                <field name="code" placeholder="PREFERENCE_CODE"/>
                            </h2>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="description"/>
                            </group>
                            <group string="Default Settings">
                                <field name="default_opt_in"/>
                                <field name="required_preference"/>
                            </group>
                        </group>
                        
                        <group string="Communication Channels">
                            <group string="Applies To">
                                <field name="applies_to_email"/>
                                <field name="applies_to_phone"/>
                                <field name="applies_to_mail"/>
                                <field name="applies_to_sms"/>
                            </group>
                        </group>
                        
                        <group string="Legal and Compliance">
                            <group>
                                <field name="requires_explicit_consent"/>
                                <field name="legal_basis"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Member Preferences" name="preferences">
                                <field name="preference_ids" nolabel="1">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="email_opt_in"/>
                                        <field name="phone_opt_in"/>
                                        <field name="mail_opt_in"/>
                                        <field name="sms_opt_in"/>
                                        <field name="consent_date"/>
                                        <field name="consent_method"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Communication Preference Type Search View -->
        <record id="view_ams_communication_preference_type_search" model="ir.ui.view">
            <field name="name">ams.communication.preference.type.search</field>
            <field name="model">ams.communication.preference.type</field>
            <field name="arch" type="xml">
                <search string="Search Preference Types">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Default Opt-In" name="default_opt_in" domain="[('default_opt_in', '=', True)]"/>
                    <filter string="Required" name="required" domain="[('required_preference', '=', True)]"/>
                    <filter string="Explicit Consent" name="explicit_consent" domain="[('requires_explicit_consent', '=', True)]"/>
                    <separator/>
                    <filter string="Email" name="email" domain="[('applies_to_email', '=', True)]"/>
                    <filter string="Phone" name="phone" domain="[('applies_to_phone', '=', True)]"/>
                    <filter string="Mail" name="mail" domain="[('applies_to_mail', '=', True)]"/>
                    <filter string="SMS" name="sms" domain="[('applies_to_sms', '=', True)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Legal Basis" name="group_legal_basis" context="{'group_by': 'legal_basis'}"/>
                        <filter string="Default Opt-In" name="group_default" context="{'group_by': 'default_opt_in'}"/>
                        <filter string="Required" name="group_required" context="{'group_by': 'required_preference'}"/>
                        <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Communication Preference Tree View -->
        <record id="view_ams_communication_preference_tree" model="ir.ui.view">
            <field name="name">ams.communication.preference.tree</field>
            <field name="model">ams.communication.preference</field>
            <field name="arch" type="xml">
                <tree string="Communication Preferences" default_order="partner_id, preference_type_id">
                    <field name="partner_id"/>
                    <field name="preference_type_id"/>
                    <field name="email_opt_in" string="Email"/>
                    <field name="phone_opt_in" string="Phone"/>
                    <field name="mail_opt_in" string="Mail"/>
                    <field name="sms_opt_in" string="SMS"/>
                    <field name="any_opt_in" string="Any"/>
                    <field name="consent_date"/>
                    <field name="consent_method"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Communication Preference Form View -->
        <record id="view_ams_communication_preference_form" model="ir.ui.view">
            <field name="name">ams.communication.preference.form</field>
            <field name="model">ams.communication.preference</field>
            <field name="arch" type="xml">
                <form string="Communication Preference">
                    <header>
                        <button name="action_opt_in_all" 
                                string="Opt In All" 
                                type="object" 
                                class="btn-primary"
                                groups="ams_core.group_ams_user"/>
                        <button name="action_opt_out_all" 
                                string="Opt Out All" 
                                type="object" 
                                class="btn-secondary"
                                groups="ams_core.group_ams_user"/>
                        <field name="active" widget="boolean_button" options="{'terminology': 'active'}"/>
                    </header>
                    
                    <sheet>
                        <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Preference Details">
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="preference_type_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Status">
                                <field name="any_opt_in"/>
                                <field name="last_updated"/>
                                <field name="updated_by"/>
                            </group>
                        </group>
                        
                        <group string="Communication Channels">
                            <group string="Opt-In Status">
                                <field name="email_opt_in" attrs="{'invisible': [('preference_type_id.applies_to_email', '=', False)]}"/>
                                <field name="phone_opt_in" attrs="{'invisible': [('preference_type_id.applies_to_phone', '=', False)]}"/>
                                <field name="mail_opt_in" attrs="{'invisible': [('preference_type_id.applies_to_mail', '=', False)]}"/>
                                <field name="sms_opt_in" attrs="{'invisible': [('preference_type_id.applies_to_sms', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <group string="Consent Tracking">
                            <group>
                                <field name="consent_date"/>
                                <field name="consent_method"/>
                            </group>
                            <group>
                                <field name="consent_ip_address"/>
                                <field name="consent_user_agent"/>
                            </group>
                        </group>
                        
                        <group string="Additional Notes">
                            <field name="consent_notes" nolabel="1" placeholder="Additional notes about consent..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Communication Preference Search View -->
        <record id="view_ams_communication_preference_search" model="ir.ui.view">
            <field name="name">ams.communication.preference.search</field>
            <field name="model">ams.communication.preference</field>
            <field name="arch" type="xml">
                <search string="Search Communication Preferences">
                    <field name="partner_id"/>
                    <field name="preference_type_id"/>
                    <field name="display_name"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Any Opt-In" name="any_opt_in" domain="[('any_opt_in', '=', True)]"/>
                    <filter string="All Opt-Out" name="all_opt_out" domain="[('any_opt_in', '=', False)]"/>
                    <separator/>
                    <filter string="Email Opt-In" name="email_opt_in" domain="[('email_opt_in', '=', True)]"/>
                    <filter string="Phone Opt-In" name="phone_opt_in" domain="[('phone_opt_in', '=', True)]"/>
                    <filter string="Mail Opt-In" name="mail_opt_in" domain="[('mail_opt_in', '=', True)]"/>
                    <filter string="SMS Opt-In" name="sms_opt_in" domain="[('sms_opt_in', '=', True)]"/>
                    <separator/>
                    <filter string="Consent This Year" name="consent_this_year" domain="[('consent_date', '&gt;=', datetime.datetime.now().strftime('%Y-01-01'))]"/>
                    <filter string="Consent Last 30 Days" name="consent_30_days" domain="[('consent_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Preference Type" name="group_preference_type" context="{'group_by': 'preference_type_id'}"/>
                        <filter string="Consent Method" name="group_consent_method" context="{'group_by': 'consent_method'}"/>
                        <filter string="Consent Date" name="group_consent_date" context="{'group_by': 'consent_date:month'}"/>
                        <filter string="Any Opt-In" name="group_any_opt_in" context="{'group_by': 'any_opt_in'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Communication Preference Pivot View -->
        <record id="view_ams_communication_preference_pivot" model="ir.ui.view">
            <field name="name">ams.communication.preference.pivot</field>
            <field name="model">ams.communication.preference</field>
            <field name="arch" type="xml">
                <pivot string="Communication Preferences Analysis">
                    <field name="preference_type_id" type="row"/>
                    <field name="email_opt_in" type="col"/>
                    <field name="partner_id" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Actions -->
        
        <!-- Communication Preference Types Action -->
        <record id="action_ams_communication_preference_types" model="ir.actions.act_window">
            <field name="name">Communication Preference Types</field>
            <field name="res_model">ams.communication.preference.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first communication preference type!
                </p>
                <p>
                    Communication preference types define the different categories of
                    communications your members can opt in or out of. Examples include
                    newsletters, event notifications, marketing, etc.
                </p>
            </field>
        </record>

        <!-- Member Communication Preferences Action -->
        <record id="action_ams_communication_preferences" model="ir.actions.act_window">
            <field name="name">Member Communication Preferences</field>
            <field name="res_model">ams.communication.preference</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No communication preferences set yet!
                </p>
                <p>
                    Communication preferences track each member's opt-in/opt-out choices
                    for different types of communications across various channels.
                </p>
            </field>
        </record>

        <!-- Opted In Preferences Action -->
        <record id="action_ams_opted_in_preferences" model="ir.actions.act_window">
            <field name="name">Opted In Preferences</field>
            <field name="res_model">ams.communication.preference</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('any_opt_in', '=', True), ('active', '=', True)]</field>
            <field name="context">{}</field>
        </record>

        <!-- Opted Out Preferences Action -->
        <record id="action_ams_opted_out_preferences" model="ir.actions.act_window">
            <field name="name">Opted Out Preferences</field>
            <field name="res_model">ams.communication.preference</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('any_opt_in', '=', False), ('active', '=', True)]</field>
            <field name="context">{}</field>
        </record>

        <!-- Email Preferences Action -->
        <record id="action_ams_email_preferences" model="ir.actions.act_window">
            <field name="name">Email Preferences</field>
            <field name="res_model">ams.communication.preference</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('email_opt_in', '=', True), ('active', '=', True)]</field>
            <field name="context">{}</field>
        </record>

        <!-- Marketing Opt-Ins Action -->
        <record id="action_ams_marketing_opt_ins" model="ir.actions.act_window">
            <field name="name">Marketing Opt-Ins</field>
            <field name="res_model">ams.communication.preference</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('preference_type_id.code', '=', 'MARKETING'), ('any_opt_in', '=', True), ('active', '=', True)]</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>