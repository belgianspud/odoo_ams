            <field name="name">Marketing Contact</field>
            <field name="code">MARKETING</field>
            <field name="description">Contact for marketing communications, promotional materials, and event announcements.</field>
            <field name="sequence">70</field>
            <field name="is_primary" eval="False"/>
            <field name="allow_multiple" eval="True"/>
            <field name="for_individuals" eval="True"/>
            <field name="for_organizations" eval="True"/>
