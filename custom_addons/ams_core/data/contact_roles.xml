<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Contact Roles -->
        
        <!-- Primary Contact Role -->
        <record id="contact_role_primary" model="ams.contact.role">
            <field name="name">Primary Contact</field>
            <field name="code">PRIMARY</field>
            <field name="description">Main point of contact for the organization. Receives all general communications and has authority to make decisions.</field>
            <field name="sequence">10</field>
            <field name="is_primary" eval="True"/>
            <field name="allow_multiple" eval="False"/>
            <field name="for_individuals" eval="True"/>
            <field name="for_organizations" eval="True"/>
        </record>

        <!-- Billing Contact Role -->
        <record id="contact_role_billing" model="ams.contact.role">
            <field name="name">Billing Contact</field>
            <field name="code">BILLING</field>
            <field name="description">Contact responsible for billing, invoicing, and payment matters. Receives all financial communications.</field>
            <field name="sequence">20</field>
            <field name="is_primary" eval="False"/>
            <field name="allow_multiple" eval="False"/>
            <field name="for_individuals" eval="True"/>
            <field name="for_organizations" eval="True"/>
        </record>

        <!-- Technical Contact Role -->
        <record id="contact_role_technical" model="ams.contact.role">
            <field name="name">Technical Contact</field>
            <field name="code">TECHNICAL</field>
            <field name="description">Contact for technical matters, system access, and IT-related communications.</field>
            <field name="sequence">30</field>
            <field name="is_primary" eval="False"/>
            <field name="allow_multiple" eval="True"/>
            <field name="for_individuals" eval="True"/>
            <field name="for_organizations" eval="True"/>
        </record>

        <!-- Emergency Contact Role -->
        <record id="contact_role_emergency" model="ams.contact.role">
            <field name="name">Emergency Contact</field>
            <field name="code">EMERGENCY</field>
            <field name="description">Contact to reach in case of emergencies. Usually a family member or close colleague.</field>
            <field name="sequence">40</field>
            <field name="is_primary" eval="False"/>
            <field name="allow_multiple" eval="True"/>
            <field name="for_individuals" eval="True"/>
            <field name="for_organizations" eval="False"/>
        </record>

