<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- AMS Security Groups -->
        <record id="group_ams_user" model="res.groups">
            <field name="name">AMS User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Basic AMS access - can view and edit member records</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_ams_manager" model="res.groups">
            <field name="name">AMS Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">AMS management access - can manage roles, preferences, and advanced features</field>
            <field name="implied_ids" eval="[(4, ref('group_ams_user'))]"/>
        </record>

        <record id="group_ams_admin" model="res.groups">
            <field name="name">AMS Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Full AMS administration - can access all features including security and audit logs</field>
            <field name="implied_ids" eval="[(4, ref('group_ams_manager'))]"/>
        </record>

        <!-- Record Rules for Partner Access -->
        <record id="rule_partner_ams_user" model="ir.rule">
            <field name="name">AMS User: Partner Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_partner_ams_manager" model="ir.rule">
            <field name="name">AMS Manager: Full Partner Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Contact Roles -->
        <record id="rule_contact_role_assignment_user" model="ir.rule">
            <field name="name">AMS User: Contact Role Assignment Access</field>
            <field name="model_id" ref="model_ams_contact_role_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_contact_role_assignment_manager" model="ir.rule">
            <field name="name">AMS Manager: Full Contact Role Assignment Access</field>
            <field name="model_id" ref="model_ams_contact_role_assignment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Communication Preferences -->
        <record id="rule_communication_preference_user" model="ir.rule">
            <field name="name">AMS User: Communication Preference Access</field>
            <field name="model_id" ref="model_ams_communication_preference"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_communication_preference_manager" model="ir.rule">
            <field name="name">AMS Manager: Full Communication Preference Access</field>
            <field name="model_id" ref="model_ams_communication_preference"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Audit Logs -->
        <record id="rule_audit_log_user" model="ir.rule">
            <field name="name">AMS User: Limited Audit Log Access</field>
            <field name="model_id" ref="model_ams_audit_log"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_audit_log_manager" model="ir.rule">
            <field name="name">AMS Manager: Read Audit Log Access</field>
            <field name="model_id" ref="model_ams_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_audit_log_admin" model="ir.rule">
            <field name="name">AMS Admin: Full Audit Log Access</field>
            <field name="model_id" ref="model_ams_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Field-level Security Rules -->
        <record id="rule_partner_sensitive_fields" model="ir.rule">
            <field name="name">Restrict sensitive partner fields to managers</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Configuration Security -->
        <record id="rule_contact_role_config_manager" model="ir.rule">
            <field name="name">AMS Manager: Contact Role Configuration</field>
            <field name="model_id" ref="model_ams_contact_role"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_communication_preference_type_manager" model="ir.rule">
            <field name="name">AMS Manager: Communication Preference Type Configuration</field>
            <field name="model_id" ref="model_ams_communication_preference_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Read-only access for basic users to configuration -->
        <record id="rule_contact_role_config_user" model="ir.rule">
            <field name="name">AMS User: Contact Role Configuration (Read Only)</field>
            <field name="model_id" ref="model_ams_contact_role"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_communication_preference_type_user" model="ir.rule">
            <field name="name">AMS User: Communication Preference Type Configuration (Read Only)</field>
            <field name="model_id" ref="model_ams_communication_preference_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ams_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>