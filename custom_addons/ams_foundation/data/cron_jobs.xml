
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Automated Member Status Transition Cron Job -->
        <record id="cron_member_status_transitions" model="ir.cron">
            <field name="name">AMS: Process Member Status Transitions</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.process_member_status_transitions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>

        <!-- Engagement Score Recalculation Cron Job -->
        <record id="cron_engagement_score_calculation" model="ir.cron">
            <field name="name">AMS: Recalculate Member Engagement Scores</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.recalculate_engagement_scores()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>

        <!-- Portal User Creation Cron Job for New Members -->
        <record id="cron_create_portal_users" model="ir.cron">
            <field name="name">AMS: Create Portal Users for New Members</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.create_missing_portal_users()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">15</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>

        <!-- Member Number Assignment Cron Job -->
        <record id="cron_assign_member_numbers" model="ir.cron">
            <field name="name">AMS: Assign Member Numbers to New Members</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.assign_missing_member_numbers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>

        <!-- Cleanup Old Engagement Rules Cron Job -->
        <record id="cron_cleanup_engagement_data" model="ir.cron">
            <field name="name">AMS: Cleanup Old Engagement Data</field>
            <field name="model_id" ref="model_ams_engagement_rule"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_engagement_data()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">20</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">False</field>
        </record>

    </data>
</odoo>