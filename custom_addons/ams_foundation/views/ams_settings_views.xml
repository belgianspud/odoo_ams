<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- AMS Settings List View -->
        <record id="view_ams_settings_list" model="ir.ui.view">
            <field name="name">ams.settings.list</field>
            <field name="model">ams.settings</field>
            <field name="arch" type="xml">
                <list string="AMS Settings" create="false" delete="false">
                    <field name="name"/>
                    <field name="member_number_prefix"/>
                    <field name="grace_period_days"/>
                    <field name="suspend_period_days"/>
                    <field name="terminate_period_days"/>
                    <field name="auto_create_portal_users"/>
                    <field name="auto_status_transitions"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- AMS Settings Form View -->
        <record id="view_ams_settings_form" model="ir.ui.view">
            <field name="name">ams.settings.form</field>
            <field name="model">ams.settings</field>
            <field name="arch" type="xml">
                <form string="AMS Settings">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_update_member_sequence" type="object" 
                                    class="oe_stat_button" icon="fa-refresh"
                                    string="Update Sequence"
                                    groups="ams_foundation.group_ams_admin"/>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Settings Name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Member Numbering">
                                <field name="member_number_prefix"/>
                                <field name="member_number_padding"/>
                                <field name="member_number_next" readonly="True"/>
                            </group>
                            <group string="Status Management">
                                <field name="auto_status_transitions"/>
                                <field name="grace_period_days"/>
                                <field name="suspend_period_days"/>
                                <field name="terminate_period_days"/>
                            </group>
                        </group>

                        <group>
                            <group string="Portal Settings">
                                <field name="auto_create_portal_users"/>
                                <field name="welcome_email_enabled"/>
                                <field name="default_communication_preference"/>
                                <field name="default_newsletter_subscription"/>
                                <field name="default_directory_listing"/>
                            </group>
                            <group string="Engagement Scoring">
                                <field name="engagement_scoring_enabled"/>
                                <field name="default_engagement_score" 
                                       invisible="not engagement_scoring_enabled"/>
                                <field name="engagement_recalc_frequency"
                                       invisible="not engagement_scoring_enabled"/>
                            </group>
                        </group>

                        <group>
                            <group string="Communication Settings">
                                <field name="renewal_reminder_enabled"/>
                                <field name="renewal_reminder_days"
                                       invisible="not renewal_reminder_enabled"/>
                                <field name="expiration_warning_days"/>
                            </group>
                            <group string="System Settings">
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Configuration notes and documentation..."/>
                            </page>
                            <page string="Advanced Settings" name="advanced" groups="ams_foundation.group_ams_admin">
                                <group>
                                    <group string="Data Management">
                                        <field name="data_retention_years"/>
                                        <field name="auto_cleanup_enabled"/>
                                    </group>
                                    <group string="Integration">
                                        <field name="api_enabled"/>
                                        <field name="webhook_enabled"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- AMS Settings Search View -->
        <record id="view_ams_settings_search" model="ir.ui.view">
            <field name="name">ams.settings.search</field>
            <field name="model">ams.settings</field>
            <field name="arch" type="xml">
                <search string="AMS Settings">
                    <field name="name"/>
                    <field name="member_number_prefix"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Auto Portal Users" name="auto_portal" 
                            domain="[('auto_create_portal_users', '=', True)]"/>
                    <filter string="Auto Status Transitions" name="auto_status" 
                            domain="[('auto_status_transitions', '=', True)]"/>
                    <filter string="Engagement Scoring Enabled" name="engagement_enabled" 
                            domain="[('engagement_scoring_enabled', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}"/>
                        <filter string="Active Status" name="active_status" domain="[]" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AMS Settings Action -->
        <record id="action_ams_settings" model="ir.actions.act_window">
            <field name="name">AMS Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.settings</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure your Association Management System settings
                </p>
                <p>
                    Set up member numbering, status transitions, portal access, 
                    and other system-wide configurations for your AMS.
                </p>
            </field>
        </record>

    </data>
</odoo>