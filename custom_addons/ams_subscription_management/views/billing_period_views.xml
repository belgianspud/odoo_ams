<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AMS Billing Period List View -->
    <record id="view_ams_billing_period_list" model="ir.ui.view">
        <field name="name">ams.billing.period.list</field>
        <field name="model">ams.billing.period</field>
        <field name="arch" type="xml">
            <list string="Billing Periods" default_order="sequence,period_value">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="period_display"/>
                <field name="total_days"/>
                <field name="grace_days"/>
                <field name="renewal_notice_days"/>
                <field name="early_renewal_days"/>
                <field name="subscription_count"/>
                <field name="is_short_term"/>
                <field name="is_long_term"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- AMS Billing Period Form View -->
    <record id="view_ams_billing_period_form" model="ir.ui.view">
        <field name="name">ams.billing.period.form</field>
        <field name="model">ams.billing.period</field>
        <field name="arch" type="xml">
            <form string="Billing Period">
                <header>
                    <button name="action_view_matching_subscriptions" string="View Subscriptions" 
                            type="object" class="oe_highlight" 
                            invisible="subscription_count == 0"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_matching_subscriptions" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-cube"
                                invisible="subscription_count == 0">
                            <field name="subscription_count" widget="statinfo" string="Subscriptions"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active == True"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Billing Period Name..."/>
                        </h1>
                        <div class="o_row">
                            <field name="code" placeholder="Unique Code"/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Period Definition">
                            <label for="period_value" string="Period Length"/>
                            <div class="o_row">
                                <field name="period_value"/>
                                <field name="period_unit"/>
                            </div>
                            <field name="period_display" readonly="1"/>
                            <field name="total_days" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Status &amp; Classification">
                            <field name="active"/>
                            <field name="is_short_term" readonly="1"/>
                            <field name="is_long_term" readonly="1"/>
                        </group>
                    </group>

                    <group string="Billing Configuration">
                        <group string="Grace &amp; Notice Periods">
                            <field name="grace_days"/>
                            <field name="renewal_notice_days"/>
                            <field name="early_renewal_days"/>
                        </group>
                        <group string="Usage Statistics">
                            <field name="subscription_count" readonly="1"/>
                            <field name="renewal_rate" widget="percentage" readonly="1"/>
                            <field name="churn_rate" widget="percentage" readonly="1"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" 
                               placeholder="Detailed description of this billing period and its intended use..."/>
                    </group>

                    <div class="alert alert-info mt16" role="alert">
                        <h6><i class="fa fa-info-circle"/> Billing Period Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Period Length:</strong> <field name="period_display" readonly="1"/></p>
                                <p><strong>Approximate Days:</strong> <field name="total_days" readonly="1"/></p>
                                <p><strong>Grace Period:</strong> <field name="grace_days" readonly="1"/> days</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Renewal Notice:</strong> <field name="renewal_notice_days" readonly="1"/> days</p>
                                <p><strong>Early Renewal:</strong> <field name="early_renewal_days" readonly="1"/> days</p>
                                <p><strong>Used by Subscriptions:</strong> <field name="subscription_count" readonly="1"/></p>
                            </div>
                        </div>
                        <div class="row mt8" invisible="not is_short_term and not is_long_term">
                            <div class="col-12">
                                <div invisible="not is_short_term" class="text-info">
                                    <i class="fa fa-clock-o"/> This is classified as a <strong>short-term</strong> billing period (3 months or less)
                                </div>
                                <div invisible="not is_long_term" class="text-success">
                                    <i class="fa fa-calendar"/> This is classified as a <strong>long-term</strong> billing period (12 months or more)
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AMS Billing Period Kanban View -->
    <record id="view_ams_billing_period_kanban" model="ir.ui.view">
        <field name="name">ams.billing.period.kanban</field>
        <field name="model">ams.billing.period</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence,period_value" class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="period_display"/>
                <field name="total_days"/>
                <field name="grace_days"/>
                <field name="renewal_notice_days"/>
                <field name="subscription_count"/>
                <field name="is_short_term"/>
                <field name="is_long_term"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="object" name="action_view_matching_subscriptions" class="dropdown-item" 
                                       t-if="record.subscription_count.raw_value > 0">View Subscriptions</a>
                                    <div class="dropdown-divider"/>
                                    <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </div>
                            </div>
                            
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_period">
                                        <strong class="text-primary">
                                            <t t-esc="record.period_display.value"/>
                                        </strong>
                                        <span class="text-muted">
                                            (~<t t-esc="record.total_days.value"/> days)
                                        </span>
                                    </div>
                                    
                                    <div class="o_kanban_tags_section mt8">
                                        <t t-if="record.is_short_term.raw_value">
                                            <span class="badge badge-info">Short-term</span>
                                        </t>
                                        <t t-if="record.is_long_term.raw_value">
                                            <span class="badge badge-success">Long-term</span>
                                        </t>
                                        <t t-if="!record.is_short_term.raw_value and !record.is_long_term.raw_value">
                                            <span class="badge badge-secondary">Medium-term</span>
                                        </t>
                                        <t t-if="record.subscription_count.raw_value > 0">
                                            <span class="badge badge-primary">
                                                <t t-esc="record.subscription_count.value"/> subscriptions
                                            </span>
                                        </t>
                                    </div>
                                    
                                    <div class="o_kanban_record_details mt8">
                                        <div class="text-muted small">
                                            Grace: <t t-esc="record.grace_days.value"/> days |
                                            Notice: <t t-esc="record.renewal_notice_days.value"/> days
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="!record.active.raw_value">
                                            <span class="badge badge-danger">Archived</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- AMS Billing Period Search View -->
    <record id="view_ams_billing_period_search" model="ir.ui.view">
        <field name="name">ams.billing.period.search</field>
        <field name="model">ams.billing.period</field>
        <field name="arch" type="xml">
            <search string="Search Billing Periods">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>

                <!-- Filter by period classification -->
                <filter string="Short-term (≤3 months)" name="short_term" 
                        domain="[('is_short_term', '=', True)]"/>
                <filter string="Long-term (≥12 months)" name="long_term" 
                        domain="[('is_long_term', '=', True)]"/>
                <filter string="Medium-term" name="medium_term" 
                        domain="[('is_short_term', '=', False), ('is_long_term', '=', False)]"/>
                
                <separator/>
                
                <!-- Filter by period unit -->
                <filter string="Daily" name="daily" 
                        domain="[('period_unit', '=', 'days')]"/>
                <filter string="Weekly" name="weekly" 
                        domain="[('period_unit', '=', 'weeks')]"/>
                <filter string="Monthly" name="monthly" 
                        domain="[('period_unit', '=', 'months')]"/>
                <filter string="Yearly" name="yearly" 
                        domain="[('period_unit', '=', 'years')]"/>
                
                <separator/>
                
                <!-- Filter by usage -->
                <filter string="In Use" name="in_use" 
                        domain="[('subscription_count', '>', 0)]"/>
                <filter string="Unused" name="unused" 
                        domain="[('subscription_count', '=', 0)]"/>
                
                <separator/>
                
                <!-- Standard filters -->
                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>

                <!-- Group by options -->
                <group expand="0" string="Group By">
                    <filter string="Period Unit" name="group_by_unit" 
                            context="{'group_by': 'period_unit'}"/>
                    <filter string="Classification" name="group_by_classification" 
                            context="{'group_by': 'is_short_term'}"/>
                    <filter string="Usage Status" name="group_by_usage" 
                            context="{'group_by': 'subscription_count'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Billing Period Actions -->
    <record id="action_ams_billing_period" model="ir.actions.act_window">
        <field name="name">Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first billing period
            </p>
            <p>
                Billing periods define the standard duration and configuration 
                for subscription billing cycles. Set up periods like Monthly, 
                Quarterly, Annual, or custom durations.
            </p>
            <p>
                Configure grace periods, renewal notices, and early renewal 
                windows for each billing period.
            </p>
        </field>
    </record>

    <!-- Active Billing Periods Action -->
    <record id="action_active_billing_periods" model="ir.actions.act_window">
        <field name="name">Active Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('active', '=', True)]</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Standard Billing Periods Action -->
    <record id="action_standard_billing_periods" model="ir.actions.act_window">
        <field name="name">Standard Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('code', 'in', ['monthly', 'quarterly', 'annual', 'biennial'])]</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Short-term Billing Periods Action -->
    <record id="action_short_term_billing_periods" model="ir.actions.act_window">
        <field name="name">Short-term Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_short_term', '=', True)]</field>
        <field name="context">{'search_default_short_term': 1}</field>
    </record>

    <!-- Long-term Billing Periods Action -->
    <record id="action_long_term_billing_periods" model="ir.actions.act_window">
        <field name="name">Long-term Billing Periods</field>
        <field name="res_model">ams.billing.period</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_long_term', '=', True)]</field>
        <field name="context">{'search_default_long_term': 1}</field>
    </record>

    <!-- Menu items for Billing Periods -->
    <menuitem id="menu_billing_periods_main" 
              name="Billing Periods" 
              parent="ams_subscription_management.menu_subscription_product_management"
              action="action_ams_billing_period" 
              sequence="50"/>

    <menuitem id="menu_active_billing_periods" 
              name="Active Periods" 
              parent="menu_billing_periods_main"
              action="action_active_billing_periods" 
              sequence="10"/>

    <menuitem id="menu_standard_billing_periods" 
              name="Standard Periods" 
              parent="menu_billing_periods_main"
              action="action_standard_billing_periods" 
              sequence="20"/>

    <menuitem id="menu_short_term_billing_periods" 
              name="Short-term" 
              parent="menu_billing_periods_main"
              action="action_short_term_billing_periods" 
              sequence="30"/>

    <menuitem id="menu_long_term_billing_periods" 
              name="Long-term" 
              parent="menu_billing_periods_main"
              action="action_long_term_billing_periods" 
              sequence="40"/>

</odoo>