<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subscription Product List View -->
    <record id="view_subscription_product_list" model="ir.ui.view">
        <field name="name">ams.subscription.product.list</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <list string="Subscription Products" default_order="subscription_scope,product_type,name">
                <field name="name"/>
                <field name="code"/>
                <field name="subscription_scope"/>
                <field name="product_type"/>
                <field name="duration_display"/>
                <field name="default_price" widget="monetary"/>
                <field name="pricing_tier_count"/>
                <field name="has_member_pricing" widget="boolean_toggle"/>
                <field name="is_renewable" widget="boolean_toggle"/>
                <field name="requires_approval" widget="boolean_toggle"/>
                <field name="member_only" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Subscription Product Form View -->
    <record id="view_subscription_product_form" model="ir.ui.view">
        <field name="name">ams.subscription.product.form</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <form string="Subscription Product">
                <header>
                    <button name="action_create_pricing_tier" string="Add Pricing Tier" 
                            type="object" class="oe_highlight"
                            invisible="not id"/>
                    <button name="action_duplicate_subscription" string="Duplicate" 
                            type="object" class="btn-secondary"
                            invisible="not id"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_pricing_tiers"
                                icon="fa-tags" invisible="not id">
                            <field name="pricing_tier_count" widget="statinfo" string="Pricing Tiers"/>
                        </button>
                        
                        <!-- Removed the problematic button reference to ams_products_base action -->
                        <button class="oe_stat_button" type="object" name="action_view_product"
                                icon="fa-cube" invisible="not product_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Base Product</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Individual" bg_color="bg-primary"
                            invisible="subscription_scope != 'individual'"/>
                    <widget name="web_ribbon" title="Enterprise" bg_color="bg-success"
                            invisible="subscription_scope != 'enterprise'"/>
                    <widget name="web_ribbon" title="Members Only" bg_color="bg-warning"
                            invisible="member_only == False"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active == True"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Subscription Product Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="code" placeholder="Unique subscription code"/>
                        </div>
                    </div>

                    <group>
                        <group string="Basic Configuration">
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="subscription_scope"/>
                            <field name="product_type"/>
                            <field name="active"/>
                        </group>
                        <group string="Duration &amp; Pricing">
                            <label for="default_duration"/>
                            <div class="o_row">
                                <field name="default_duration" class="oe_inline"/>
                                <field name="duration_unit" class="oe_inline"/>
                            </div>
                            <field name="default_price" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="lowest_price" widget="monetary" readonly="1" 
                                   invisible="not has_member_pricing"/>
                            <field name="highest_discount_percentage" widget="percentage" readonly="1"
                                   invisible="not has_member_pricing"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Pricing Tiers" name="pricing">
                            <div class="o_row">
                                <button name="action_create_pricing_tier" string="Add Pricing Tier" 
                                        type="object" class="btn-primary"
                                        icon="fa-plus"/>
                                <!-- Removed bulk pricing button to avoid loading order issues -->
                            </div>
                            
                            <field name="pricing_tier_ids" nolabel="1">
                                <list editable="bottom">
                                    <!-- Simplified member type field without complex domain -->
                                    <field name="member_type_id"/>
                                    <field name="price" widget="monetary"/>
                                    <field name="discount_percentage" widget="percentage" readonly="1"/>
                                    <field name="valid_from"/>
                                    <field name="valid_to"/>
                                    <field name="is_current" widget="boolean_toggle" readonly="1"/>
                                    <field name="requires_verification" widget="boolean_toggle"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                            
                            <div class="alert alert-info" role="alert" invisible="has_member_pricing">
                                <strong>No Member Pricing:</strong> This subscription uses standard pricing for all members. 
                                Add pricing tiers above to offer special pricing for different member types.
                            </div>
                        </page>

                        <page string="Enterprise Settings" name="enterprise" 
                              invisible="subscription_scope != 'enterprise'">
                            <group>
                                <group string="Seat Configuration">
                                    <field name="default_seat_count"/>
                                    <field name="allow_seat_purchase"/>
                                    <field name="max_additional_seats" 
                                           invisible="not allow_seat_purchase"/>
                                    <field name="seat_product_id" 
                                           invisible="not allow_seat_purchase"
                                           options="{'no_create': True}"/>
                                </group>
                                <group string="Enterprise Features">
                                    <!-- Placeholder for future enterprise features -->
                                    <div class="alert alert-info">
                                        Enterprise-specific features will be available when 
                                        ams_enterprise_seats module is installed.
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Access Control" name="access">
                            <group>
                                <group string="Membership Requirements">
                                    <field name="member_only"/>
                                    <field name="eligible_member_types" widget="many2many_tags"
                                           invisible="not member_only"/>
                                </group>
                                <group string="Approval Process">
                                    <field name="requires_approval"/>
                                    <div class="text-muted" invisible="not requires_approval">
                                        Staff approval will be required for all subscription purchases
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Renewal Settings" name="renewal">
                            <group>
                                <group string="Renewal Configuration">
                                    <field name="is_renewable"/>
                                    <field name="renewal_window_days" 
                                           invisible="not is_renewable"/>
                                    <field name="auto_renewal_enabled"
                                           invisible="not is_renewable"/>
                                </group>
                                <group string="Renewal Information">
                                    <div class="text-muted" invisible="not is_renewable">
                                        <p><strong>Renewal Window:</strong> Members can renew their subscription 
                                        <field name="renewal_window_days" readonly="1"/> days before expiration.</p>
                                        
                                        <p invisible="not auto_renewal_enabled">
                                        <strong>Auto-Renewal:</strong> Subscriptions can be set to renew automatically.</p>
                                    </div>
                                    <div class="alert alert-warning" invisible="is_renewable">
                                        <strong>Non-Renewable:</strong> This subscription cannot be renewed. 
                                        Members will need to purchase a new subscription after expiration.
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Content &amp; Benefits" name="content">
                            <group>
                                <field name="description" nolabel="1" 
                                       placeholder="Detailed description of what this subscription includes..."/>
                            </group>
                            
                            <group string="Member Benefits">
                                <field name="benefits_description" nolabel="1" 
                                       placeholder="Describe the benefits members receive with this subscription..."/>
                            </group>
                            
                            <group string="Terms &amp; Conditions">
                                <field name="terms_and_conditions" nolabel="1"
                                       placeholder="Subscription-specific terms and conditions..."/>
                            </group>
                        </page>

                        <page string="Summary &amp; Analytics" name="summary" invisible="not id">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Subscription Summary</h4>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Scope:</th>
                                            <td><field name="subscription_scope" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Type:</th>
                                            <td><field name="product_type" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Duration:</th>
                                            <td><field name="duration_display" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Base Price:</th>
                                            <td><field name="default_price" widget="monetary" readonly="1"/></td>
                                        </tr>
                                        <tr invisible="not has_member_pricing">
                                            <th>Lowest Price:</th>
                                            <td><field name="lowest_price" widget="monetary" readonly="1"/></td>
                                        </tr>
                                        <tr invisible="not has_member_pricing">
                                            <th>Max Discount:</th>
                                            <td><field name="highest_discount_percentage" widget="percentage" readonly="1"/></td>
                                        </tr>
                                    </table>
                                </div>
                                
                                <div class="col-md-6">
                                    <h4>Configuration Status</h4>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Member Pricing:</th>
                                            <td><field name="has_member_pricing" widget="boolean" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Pricing Tiers:</th>
                                            <td><field name="pricing_tier_count" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Renewable:</th>
                                            <td><field name="is_renewable" widget="boolean" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Auto-Renewal:</th>
                                            <td><field name="auto_renewal_enabled" widget="boolean" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Members Only:</th>
                                            <td><field name="member_only" widget="boolean" readonly="1"/></td>
                                        </tr>
                                        <tr>
                                            <th>Requires Approval:</th>
                                            <td><field name="requires_approval" widget="boolean" readonly="1"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Placeholder for analytics when ams_analytics module available -->
                            <div class="alert alert-info mt-3">
                                <strong>Analytics:</strong> Subscription analytics will be available when 
                                the ams_analytics module is installed.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Add the missing action_view_product method -->
    <record id="action_view_base_product" model="ir.actions.act_window">
        <field name="name">Base Product</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Subscription Product Kanban View -->
    <record id="view_subscription_product_kanban" model="ir.ui.view">
        <field name="name">ams.subscription.product.kanban</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <kanban default_order="subscription_scope,product_type">
                <field name="name"/>
                <field name="subscription_scope"/>
                <field name="product_type"/>
                <field name="default_price"/>
                <field name="currency_id"/>
                <field name="has_member_pricing"/>
                <field name="pricing_tier_count"/>
                <field name="member_only"/>
                <field name="requires_approval"/>
                <field name="is_renewable"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    <div class="dropdown-divider"/>
                                    <a role="menuitem" type="object" name="action_view_pricing_tiers" class="dropdown-item">Pricing Tiers</a>
                                    <a role="menuitem" type="object" name="action_duplicate_subscription" class="dropdown-item">Duplicate</a>
                                </div>
                            </div>
                            
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <t t-esc="record.subscription_scope.value"/> â€¢ <t t-esc="record.product_type.value"/>
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_pricing mb-2">
                                        <div class="text-primary">
                                            <strong>
                                                <field name="default_price" widget="monetary"/>
                                            </strong>
                                        </div>
                                        <t t-if="record.has_member_pricing.raw_value">
                                            <small class="text-muted">
                                                <t t-esc="record.pricing_tier_count.value"/> pricing tiers
                                            </small>
                                        </t>
                                    </div>
                                    
                                    <div class="o_kanban_tags_section">
                                        <t t-if="record.subscription_scope.raw_value == 'enterprise'">
                                            <span class="badge badge-success">Enterprise</span>
                                        </t>
                                        <t t-if="record.member_only.raw_value">
                                            <span class="badge badge-warning">Members Only</span>
                                        </t>
                                        <t t-if="record.requires_approval.raw_value">
                                            <span class="badge badge-info">Approval Required</span>
                                        </t>
                                        <t t-if="record.has_member_pricing.raw_value">
                                            <span class="badge badge-secondary">Member Pricing</span>
                                        </t>
                                        <t t-if="!record.is_renewable.raw_value">
                                            <span class="badge badge-light">Non-Renewable</span>
                                        </t>
                                        <t t-if="!record.active.raw_value">
                                            <span class="badge badge-danger">Archived</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Subscription Product Search View -->
    <record id="view_subscription_product_search" model="ir.ui.view">
        <field name="name">ams.subscription.product.search</field>
        <field name="model">ams.subscription.product</field>
        <field name="arch" type="xml">
            <search string="Search Subscription Products">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="product_id"/>

                <filter string="Individual Subscriptions" name="individual" 
                        domain="[('subscription_scope', '=', 'individual')]"/>
                <filter string="Enterprise Subscriptions" name="enterprise" 
                        domain="[('subscription_scope', '=', 'enterprise')]"/>
                
                <separator/>
                
                <filter string="Membership" name="membership" 
                        domain="[('product_type', '=', 'membership')]"/>
                <filter string="Chapter" name="chapter" 
                        domain="[('product_type', '=', 'chapter')]"/>
                <filter string="Committee" name="committee" 
                        domain="[('product_type', '=', 'committee')]"/>
                <filter string="Publication" name="publication" 
                        domain="[('product_type', '=', 'publication')]"/>
                
                <separator/>
                
                <filter string="Member Pricing" name="member_pricing" 
                        domain="[('has_member_pricing', '=', True)]"/>
                <filter string="Members Only" name="members_only" 
                        domain="[('member_only', '=', True)]"/>
                <filter string="Requires Approval" name="requires_approval" 
                        domain="[('requires_approval', '=', True)]"/>
                
                <separator/>
                
                <filter string="Renewable" name="renewable" 
                        domain="[('is_renewable', '=', True)]"/>
                <filter string="Auto-Renewal Available" name="auto_renewable" 
                        domain="[('auto_renewal_enabled', '=', True)]"/>
                
                <separator/>
                
                <filter string="Active" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Subscription Scope" name="group_by_scope" 
                            context="{'group_by': 'subscription_scope'}"/>
                    <filter string="Product Type" name="group_by_type" 
                            context="{'group_by': 'product_type'}"/>
                    <filter string="Member Pricing" name="group_by_member_pricing" 
                            context="{'group_by': 'has_member_pricing'}"/>
                    <filter string="Access Level" name="group_by_access" 
                            context="{'group_by': 'member_only'}"/>
                    <filter string="Renewal Settings" name="group_by_renewal" 
                            context="{'group_by': 'is_renewable'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Subscription Product Actions -->
    <record id="action_subscription_product" model="ir.actions.act_window">
        <field name="name">Subscription Products</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription product
            </p>
            <p>
                Subscription products define the terms, pricing, and configuration for 
                recurring membership offerings. Use the subscription toggle on any product 
                to transform it into a sophisticated subscription offering with member 
                pricing, enterprise features, and renewal management.
            </p>
            <p>
                <strong>Getting Started:</strong>
            </p>
            <ul>
                <li>Enable subscription features on an existing product</li>
                <li>Configure pricing tiers for different member types</li>
                <li>Set up enterprise seat management if needed</li>
                <li>Define renewal and approval policies</li>
            </ul>
        </field>
    </record>

    <!-- Individual Subscriptions Action -->
    <record id="action_individual_subscriptions" model="ir.actions.act_window">
        <field name="name">Individual Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('subscription_scope', '=', 'individual')]</field>
        <field name="context">{'search_default_active': 1, 'default_subscription_scope': 'individual'}</field>
    </record>

    <!-- Enterprise Subscriptions Action -->
    <record id="action_enterprise_subscriptions" model="ir.actions.act_window">
        <field name="name">Enterprise Subscriptions</field>
        <field name="res_model">ams.subscription.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('subscription_scope', '=', 'enterprise')]</field>
        <field name="context">{'search_default_active': 1, 'default_subscription_scope': 'enterprise'}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_subscription_products_main" 
              name="Subscription Products" 
              parent="ams_products_base.menu_ams_products_main"
              action="action_subscription_product" 
              sequence="10"/>

    <!-- Product type submenus -->
    <menuitem id="menu_individual_subscriptions" 
              name="Individual Subscriptions" 
              parent="menu_subscription_products_main"
              action="action_individual_subscriptions" 
              sequence="10"/>

    <menuitem id="menu_enterprise_subscriptions" 
              name="Enterprise Subscriptions" 
              parent="menu_subscription_products_main"
              action="action_enterprise_subscriptions" 
              sequence="20"/>

</odoo>