<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job for Subscription Renewals -->
        <record id="ir_cron_subscription_renewal" model="ir.cron">
            <field name="name">Process Subscription Renewals</field>
            <field name="model_id" ref="model_subscription_subscription"/>
            <field name="state">code</field>
            <field name="code">model.process_renewals()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>