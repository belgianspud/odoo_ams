<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Subscription Change Views -->
    <record id="view_subscription_change_tree" model="ir.ui.view">
        <field name="name">subscription.change.tree</field>
        <field name="model">subscription.change</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='processed'" decoration-warning="state=='approved'" decoration-info="state=='submitted'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="change_type"/>
                <field name="change_date"/>
                <field name="old_plan_id"/>
                <field name="new_plan_id"/>
                <field name="net_adjustment"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_subscription_change_form" model="ir.ui.view">
        <field name="name">subscription.change.form</field>
        <field name="model">subscription.change</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object" 
                            attrs="{'invisible': [('state', '!=', 'submitted')]}" 
                            class="oe_highlight"/>
                    <button name="action_process" string="Process Change" type="object" 
                            attrs="{'invisible': [('state', '!=', 'approved')]}" 
                            class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" 
                            attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            attrs="{'invisible': [('state', 'in', ['processed', 'rejected', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,processed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="subscription_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="change_type"/>
                            <field name="change_date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="reason">
                            <field name="reason"/>
                        </group>
                    </group>
                    
                    <!-- Plan Change Fields -->
                    <group name="plan_change" string="Plan Change" attrs="{'invisible': [('change_type', '!=', 'plan_change')]}">
                        <group>
                            <field name="old_plan_id"/>
                            <field name="old_plan_price"/>
                        </group>
                        <group>
                            <field name="new_plan_id"/>
                            <field name="new_plan_price"/>
                            <field name="price_difference"/>
                        </group>
                    </group>
                    
                    <!-- Payment Plan Change Fields -->
                    <group name="payment_plan_change" string="Payment Plan Change" attrs="{'invisible': [('change_type', '!=', 'payment_plan_change')]}">
                        <group>
                            <field name="old_payment_plan_id"/>
                        </group>
                        <group>
                            <field name="new_payment_plan_id"/>
                        </group>
                    </group>
                    
                    <!-- Pause Fields -->
                    <group name="pause_fields" string="Pause Details" attrs="{'invisible': [('change_type', 'not in', ['pause', 'resume'])]}">
                        <field name="pause_start_date"/>
                        <field name="pause_end_date"/>
                        <field name="pause_reason"/>
                    </group>
                    
                    <!-- Financial Impact -->
                    <group name="financial_impact" string="Financial Impact" attrs="{'invisible': [('change_type', '!=', 'plan_change')]}">
                        <group>
                            <field name="days_remaining"/>
                            <field name="proration_credit"/>
                            <field name="proration_charge"/>
                        </group>
                        <group>
                            <field name="net_adjustment"/>
                            <field name="adjustment_invoice_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Processing Info -->
                    <group name="processing_info" string="Processing Information" attrs="{'invisible': [('state', 'in', ['draft', 'submitted'])]}">
                        <field name="processed_date"/>
                        <field name="processed_by"/>
                    </group>
                    
                    <notebook>
                        <page string="Reason Details">
                            <field name="reason_notes" nolabel="1" placeholder="Additional details about the reason for this change..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_subscription_change_search" model="ir.ui.view">
        <field name="name">subscription.change.search</field>
        <field name="model">subscription.change</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="change_type"/>
                <field name="old_plan_id"/>
                <field name="new_plan_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Plan Changes" name="plan_changes" domain="[('change_type', '=', 'plan_change')]"/>
                <filter string="Payment Plan Changes" name="payment_plan_changes" domain="[('change_type', '=', 'payment_plan_change')]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('change_date', '&gt;=', (datetime.datetime.now().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Change Type" name="group_type" context="{'group_by': 'change_type'}"/>
                    <filter string="Reason" name="group_reason" context="{'group_by': 'reason'}"/>
                    <filter string="Change Date" name="group_date" context="{'group_by': 'change_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Subscription Change Wizard -->
    <record id="view_subscription_change_wizard" model="ir.ui.view">
        <field name="name">subscription.change.wizard.form</field>
        <field name="model">subscription.change.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Change Subscription</h1>
                    </div>
                    <group>
                        <group>
                            <field name="subscription_id" readonly="1"/>
                            <field name="change_type"/>
                            <field name="change_date"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="new_plan_id" attrs="{'invisible': [('change_type', '!=', 'plan_change')], 'required': [('change_type', '=', 'plan_change')]}"/>
                            <field name="new_payment_plan_id" attrs="{'invisible': [('change_type', '!=', 'payment_plan_change')], 'required': [('change_type', '=', 'payment_plan_change')]}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group name="preview" string="Financial Preview" attrs="{'invisible': [('change_type', '!=', 'plan_change')]}">
                        <field name="net_adjustment" readonly="1"/>
                    </group>
                    <field name="reason_notes" placeholder="Additional notes about this change..."/>
                </sheet>
                <footer>
                    <button string="Create Request" name="action_create_change_request" type="object" class="btn-primary"/>
                    <button string="Process Immediately" name="action_process_immediately" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Enhanced Subscription Form with Change Features -->
    <record id="view_subscription_form_changes" model="ir.ui.view">
        <field name="name">subscription.subscription.form.changes</field>
        <field name="model">subscription.subscription</field>
        <field name="inherit_id" ref="ams_subscription_base.view_subscription_form_payment_plans"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_changes" icon="fa-exchange">
                    <field string="Changes" name="change_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_change_subscription" string="Change Subscription" type="object"/>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_subscription_change" model="ir.actions.act_window">
        <field name="name">Subscription Changes</field>
        <field name="res_model">subscription.change</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_subscription_change_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No subscription changes found!
            </p>
            <p>
                Subscription changes allow you to modify existing subscriptions with proper proration.
            </p>
        </field>
    </record>

    <record id="action_subscription_change_wizard" model="ir.actions.act_window">
        <field name="name">Change Subscription</field>
        <field name="res_model">subscription.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>