<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Subscription Plan Views -->
    <record id="view_subscription_plan_tree" model="ir.ui.view">
        <field name="name">subscription.plan.tree</field>
        <field name="model">subscription.plan</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="duration_months"/>
                <field name="price"/>
                <field name="subscription_count"/>
                <field name="auto_renew"/>
                <field name="active"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_subscription_plan_form" model="ir.ui.view">
        <field name="name">subscription.plan.form</field>
        <field name="model">subscription.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_subscriptions" string="View Subscriptions" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_subscriptions" icon="fa-refresh">
                            <field string="Subscriptions" name="subscription_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Plan Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group name="pricing">
                            <field name="product_id"/>
                            <field name="duration_months"/>
                            <field name="price"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group name="renewal_settings" string="Renewal Settings">
                        <field name="auto_renew"/>
                        <field name="renewal_notice_days"/>
                        <field name="grace_period_days"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" placeholder="Description of this subscription plan..."/>
                        </page>
                        <page string="Statistics">
                            <group>
                                <group>
                                    <field name="subscription_count"/>
                                    <field name="total_revenue"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_subscription_plan" model="ir.actions.act_window">
        <field name="name">Subscription Plans</field>
        <field name="res_model">subscription.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Subscription Views -->
    <record id="view_subscription_tree" model="ir.ui.view">
        <field name="name">subscription.subscription.tree</field>
        <field name="model">subscription.subscription</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='active'" decoration-warning="state=='grace'" decoration-danger="state=='lapsed'" decoration-muted="state in ['cancelled','draft']">
                <field name="partner_id"/>
                <field name="plan_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_until_expiry"/>
                <field name="state"/>
                <field name="auto_renew"/>
                <field name="balance_due"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_subscription_form" model="ir.ui.view">
        <field name="name">subscription.subscription.form</field>
        <field name="model">subscription.subscription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}" 
                            class="oe_highlight"/>
                    <button name="action_renew" string="Renew" type="object" 
                            attrs="{'invisible': [('is_renewable', '=', False)]}"
                            class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'draft'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,grace,lapsed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="subscriber_info">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="plan_id" options="{'no_create': True}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="next_renewal_date"/>
                            <field name="days_until_expiry"/>
                            <field name="is_renewable"/>
                        </group>
                    </group>
                    <group>
                        <group name="settings">
                            <field name="auto_renew"/>
                        </group>
                        <group name="financial" string="Financial Summary">
                            <field name="total_invoiced"/>
                            <field name="total_paid"/>
                            <field name="balance_due"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoices">
                            <field name="invoice_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="amount_residual"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_subscription_search" model="ir.ui.view">
        <field name="name">subscription.subscription.search</field>
        <field name="model">subscription.subscription</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="plan_id"/>
                <field name="state"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Grace Period" name="grace" domain="[('state', '=', 'grace')]"/>
                <filter string="Lapsed" name="lapsed" domain="[('state', '=', 'lapsed')]"/>
                <filter string="Auto Renew" name="auto_renew" domain="[('auto_renew', '=', True)]"/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('days_until_expiry', '&lt;=', 30), ('days_until_expiry', '&gt;=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Plan" name="group_plan" context="{'group_by': 'plan_id'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">subscription.subscription</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_subscription_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription!
            </p>
            <p>
                Track recurring subscriptions with automatic renewal and invoicing.
            </p>
        </field>
    </record>

    <!-- Partner Form View Inherit -->
    <record id="view_partner_form_subscription" model="ir.ui.view">
        <field name="name">res.partner.form.subscription</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" icon="fa-refresh"
                        attrs="{'invisible': [('has_active_subscription', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">Active</span>
                        <span class="o_stat_text">Subscription</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Subscriptions" name="subscriptions">
                    <group>
                        <field name="has_active_subscription"/>
                        <field name="current_subscription_id"/>
                    </group>
                    <field name="subscription_ids">
                        <tree>
                            <field name="plan_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                            <field name="auto_renew"/>
                            <field name="balance_due"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_subscription_main" name="Subscriptions" 
              parent="ams_membership_base.menu_membership_root" sequence="15"/>
    <menuitem id="menu_subscription_plans" name="Subscription Plans" 
              parent="menu_subscription_main" 
              action="action_subscription_plan" sequence="10"/>
    <menuitem id="menu_subscriptions" name="All Subscriptions" 
              parent="menu_subscription_main" 
              action="action_subscription" sequence="20"/>

</odoo>