<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Benefit List View -->
    <record id="view_ams_membership_benefit_tree" model="ir.ui.view">
        <field name="name">ams.membership.benefit.tree</field>
        <field name="model">ams.membership.benefit</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="benefit_type"/>
                <field name="discount_percentage" invisible="benefit_type not in ['discount_event', 'discount_product']"/>
                <field name="eligible_member_count"/>
                <field name="usage_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Benefit Form View -->
    <record id="view_ams_membership_benefit_form" model="ir.ui.view">
        <field name="name">ams.membership.benefit.form</field>
        <field name="model">ams.membership.benefit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_eligible_members" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <field name="eligible_member_count" widget="statinfo" string="Eligible Members"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="benefit_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    
                    <group string="Benefit Configuration" invisible="benefit_type not in ['discount_event', 'discount_product', 'certification_credit']">
                        <field name="discount_percentage" invisible="benefit_type not in ['discount_event', 'discount_product']"/>
                        <field name="discount_amount" invisible="benefit_type not in ['discount_event', 'discount_product']"/>
                        <field name="credit_hours" invisible="benefit_type != 'certification_credit'"/>
                    </group>
                    
                    <group string="Availability">
                        <field name="tier_ids" widget="many2many_tags"/>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Usage Instructions">
                            <field name="instructions"/>
                        </page>
                        <page string="Integration">
                            <group>
                                <field name="external_code"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ams_membership_benefit" model="ir.actions.act_window">
        <field name="name">Membership Benefits</field>
        <field name="res_model">ams.membership.benefit</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>