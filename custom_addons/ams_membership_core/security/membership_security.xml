<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Define Security Groups (Minimal Version) -->
        <record id="group_membership_user" model="res.groups">
            <field name="name">Membership: User</field>
            <field name="comment">Basic membership management access - can view and edit memberships</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_membership_manager" model="res.groups">
            <field name="name">Membership: Manager</field>
            <field name="comment">Full membership management access - can create/edit/delete memberships and configure system</field>
            <field name="implied_ids" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="group_membership_portal" model="res.groups">
            <field name="name">Membership: Portal User</field>
            <field name="comment">Portal access for members to view their own membership information</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Record Rules for Membership Security -->
        
        <!-- Membership Rules -->
        <record id="membership_rule_user_own" model="ir.rule">
            <field name="name">Membership: Users see all</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="membership_rule_manager_all" model="ir.rule">
            <field name="name">Membership: Managers see all</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ENHANCED: Portal access rule with better domain -->
        <record id="membership_rule_portal_own" model="ir.rule">
            <field name="name">Membership: Portal users see own</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ENHANCED: Additional portal rule for base.group_portal users -->
        <record id="membership_rule_base_portal_own" model="ir.rule">
            <field name="name">Membership: Base Portal users see own</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Subscription Rules -->
        <record id="subscription_rule_user_all" model="ir.rule">
            <field name="name">Subscription: Users see all</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <!-- ENHANCED: Portal subscription access -->
        <record id="subscription_rule_portal_own" model="ir.rule">
            <field name="name">Subscription: Portal users see own</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="subscription_rule_base_portal_own" model="ir.rule">
            <field name="name">Subscription: Base Portal users see own</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Benefit Rules - Portal users can see all benefits (global) -->
        <record id="benefit_rule_user_all" model="ir.rule">
            <field name="name">Benefit: Users see all</field>
            <field name="model_id" ref="model_ams_benefit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="benefit_rule_portal_all" model="ir.rule">
            <field name="name">Benefit: Portal users see all active benefits</field>
            <field name="model_id" ref="model_ams_benefit"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
