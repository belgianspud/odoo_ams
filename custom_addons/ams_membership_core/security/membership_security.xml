            <field name="name">Chapter Committee: Users see all</field>
            <field name="model_id" ref="model_chapter_committee"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="chapter_committee_rule_portal_all" model="ir.rule">
            <field name="name">Chapter Committee: Portal users see all active</field>
            <field name="model_id" ref="model_chapter_committee"/>
            <field name="domain_force">[('active', '=', True)]</field>
