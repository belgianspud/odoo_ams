        <!-- NEW: Partner access rules for portal (needed for portal profile) -->
        <record id="partner_rule_portal_own" model="ir.rule">
            <field name="name">Partner: Portal users see own</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('id', '=', user.partner_id.id), ('id', 'child_of', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal'))]"/>
