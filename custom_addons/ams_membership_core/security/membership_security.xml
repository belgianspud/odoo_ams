<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Inherit from foundation groups rather than duplicating -->
        <record id="group_membership_user" model="res.groups">
            <field name="name">Membership User</field>
            <field name="category_id" ref="ams_foundation.module_category_ams"/>
            <field name="implied_ids" eval="[(4, ref('ams_foundation.group_ams_staff'))]"/>
            <field name="comment">Can view and manage memberships and subscriptions</field>
        </record>

        <record id="group_membership_manager" model="res.groups">
            <field name="name">Membership Manager</field>
            <field name="category_id" ref="ams_foundation.module_category_ams"/>
            <field name="implied_ids" eval="[(4, ref('group_membership_user')), (4, ref('ams_foundation.group_ams_manager'))]"/>
            <field name="comment">Can configure membership products, benefits, and perform advanced operations</field>
        </record>

        <!-- Member Portal Group - extends foundation member group -->
        <record id="group_membership_portal" model="res.groups">
            <field name="name">Membership Portal Access</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('ams_foundation.group_ams_member')), (4, ref('portal.group_portal'))]"/>
            <field name="comment">Portal access for members with subscription management</field>
        </record>

        <!-- Record Rules -->
        <record id="membership_personal_rule" model="ir.rule">
            <field name="name">Personal Memberships</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="subscription_personal_rule" model="ir.rule">
            <field name="name">Personal Subscriptions</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_membership_portal'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Staff can see all -->
        <record id="membership_staff_rule" model="ir.rule">
            <field name="name">Staff Membership Access</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="subscription_staff_rule" model="ir.rule">
            <field name="name">Staff Subscription Access</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

    </data>
</odoo>