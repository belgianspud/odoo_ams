            <field name="model_id" ref="model_ams_benefit_usage"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_membership_user'))]"/>
        </record>

        <record id="benefit_usage_rule_portal_own" model="ir.rule">
            <field name="name">Benefit Usage: Portal users see own</field>
            <field name="model_id" ref="model_ams_benefit_usage"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
