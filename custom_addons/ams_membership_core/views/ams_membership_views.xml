<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- AMS Membership List View -->
        <record id="view_ams_membership_list" model="ir.ui.view">
            <field name="name">ams.membership.list</field>
            <field name="model">ams.membership</field>
            <field name="arch" type="xml">
                <list string="Memberships" default_order="start_date desc">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="member_type_id" optional="show"/>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" decoration-success="state=='active'" 
                           decoration-warning="state=='grace'" 
                           decoration-danger="state=='terminated'"/>
                    <field name="membership_fee" widget="monetary" optional="show"/>
                    <field name="payment_status" optional="hide"/>
                    <field name="auto_renew" optional="hide"/>
                    <field name="renewal_interval" optional="hide"/>
                    <field name="days_until_expiry" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- AMS Membership Form View -->
        <record id="view_ams_membership_form" model="ir.ui.view">
            <field name="name">ams.membership.form</field>
            <field name="model">ams.membership</field>
            <field name="arch" type="xml">
                <form string="Membership">
                    <header>
                        <button name="action_activate" type="object" string="Activate" 
                                class="oe_highlight" invisible="state != 'draft'"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_renew" type="object" string="Renew" 
                                class="btn-primary" invisible="state not in ['active', 'grace']"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_suspend" type="object" string="Suspend" 
                                invisible="state not in ['active', 'grace']"
                                groups="ams_membership_core.group_membership_manager"
                                confirm="Are you sure you want to suspend this membership?"/>
                        <button name="action_terminate" type="object" string="Terminate" 
                                invisible="state == 'terminated'"
                                groups="ams_membership_core.group_membership_manager"
                                confirm="Are you sure you want to terminate this membership?"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,active,grace,suspended,terminated"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" type="object" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    invisible="not invoice_id"
                                    groups="account.group_account_invoice">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">View</span>
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="True"/>
                            </h1>
                            <div class="o_row">
                                <field name="name" readonly="True"/>
                            </div>
                        </div>

                        <group>
                            <group string="Member Information">
                                <field name="partner_id" required="True" 
                                       domain="[('is_member', '=', True)]"/>
                                <field name="member_type_id" readonly="True"/>
                                <field name="product_id" required="True"
                                       domain="[('is_subscription_product', '=', True), 
                                               ('subscription_product_type', '=', 'membership')]"/>
                            </group>
                            <group string="Membership Period">
                                <field name="start_date" required="True"/>
                                <field name="end_date" required="True"/>
                                <field name="last_renewal_date"/>
                                <field name="membership_duration" readonly="True"/>
                            </group>
                        </group>

                        <group>
                            <group string="Renewal Settings">
                                <field name="auto_renew"/>
                                <field name="renewal_interval"/>
                                <field name="next_renewal_date" readonly="True"/>
                            </group>
                            <group string="Financial">
                                <field name="membership_fee" widget="monetary"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="payment_status"/>
                            </group>
                        </group>

                        <group>
                            <group string="Status Information">
                                <field name="is_expired" readonly="True"/>
                                <field name="days_until_expiry" readonly="True"/>
                                <field name="grace_end_date" readonly="True" 
                                       invisible="state != 'grace'"/>
                                <field name="suspension_end_date" readonly="True" 
                                       invisible="state != 'suspended'"/>
                            </group>
                            <group string="Portal &amp; Access">
                                <field name="has_portal_access" readonly="True"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Benefits" name="benefits">
                                <field name="benefit_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="benefit_type"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Renewals" name="renewals">
                                <field name="renewal_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="renewal_date"/>
                                        <field name="new_end_date"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Sales &amp; Invoice" name="sales" 
                                  groups="sales_team.group_sale_salesman">
                                <group>
                                    <group>
                                        <field name="sale_order_id" readonly="True"/>
                                        <field name="sale_order_line_id" readonly="True"/>
                                    </group>
                                    <group>
                                        <field name="invoice_id" readonly="True"/>
                                        <field name="invoice_line_id" readonly="True"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Internal notes about this membership..."/>
                                <field name="tags" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- AMS Membership Kanban View -->
        <record id="view_ams_membership_kanban" model="ir.ui.view">
            <field name="name">ams.membership.kanban</field>
            <field name="model">ams.membership</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="membership_fee"/>
                    <field name="days_until_expiry"/>
                    <field name="auto_renew"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-8">
                                        <strong><t t-esc="record.partner_id.value"/></strong>
                                    </div>
                                    <div class="col-4 text-right">
                                        <span t-attf-class="badge badge-pill badge-#{record.state.raw_value === 'active' ? 'success' : record.state.raw_value === 'grace' ? 'warning' : record.state.raw_value === 'terminated' ? 'danger' : 'secondary'}">
                                            <t t-esc="record.state.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <t t-esc="record.product_id.value"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <small>Start: <t t-esc="record.start_date.value"/></small>
                                    </div>
                                    <div class="col-6">
                                        <small>End: <t t-esc="record.end_date.value"/></small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <small>$<t t-esc="record.membership_fee.value"/></small>
                                    </div>
                                    <div class="col-6 text-right" t-if="record.days_until_expiry.raw_value != 0">
                                        <small t-attf-class="text-#{record.days_until_expiry.raw_value &lt; 30 ? 'danger' : 'muted'}">
                                            <t t-esc="record.days_until_expiry.value"/> days
                                        </small>
                                    </div>
                                </div>
                                <div class="row" t-if="record.auto_renew.raw_value">
                                    <div class="col-12">
                                        <span class="badge badge-info">Auto Renew</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- AMS Membership Search View -->
        <record id="view_ams_membership_search" model="ir.ui.view">
            <field name="name">ams.membership.search</field>
            <field name="model">ams.membership</field>
            <field name="arch" type="xml">
                <search string="Memberships">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="member_type_id"/>
                    <separator/>
                    <filter string="Active" name="active" 
                            domain="[('state', '=', 'active')]"/>
                    <filter string="Grace Period" name="grace" 
                            domain="[('state', '=', 'grace')]"/>
                    <filter string="Draft" name="draft" 
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Suspended" name="suspended" 
                            domain="[('state', '=', 'suspended')]"/>
                    <filter string="Terminated" name="terminated" 
                            domain="[('state', '=', 'terminated')]"/>
                    <separator/>
                    <filter string="Auto Renew" name="auto_renew" 
                            domain="[('auto_renew', '=', True)]"/>
                    <filter string="Manual Renew" name="manual_renew" 
                            domain="[('auto_renew', '=', False)]"/>
                    <separator/>
                    <filter string="Expiring Soon" name="expiring_soon" 
                            domain="[('end_date', '&gt;=', (context_today()).strftime('%Y-%m-%d')), 
                            ('end_date', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Expired" name="expired" 
                            domain="[('end_date', '&lt;', (context_today()).strftime('%Y-%m-%d'))]"/>
                    <filter string="Paid" name="paid" 
                            domain="[('payment_status', '=', 'paid')]"/>
                    <filter string="Pending Payment" name="pending_payment" 
                            domain="[('payment_status', '=', 'pending')]"/>
                    <separator/>
                    <filter string="This Year" name="this_year" 
                            domain="[('start_date', '&gt;=', (context_today() - datetime.timedelta(days=365)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" 
                                domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Member Type" name="group_member_type" 
                                domain="[]" context="{'group_by': 'member_type_id'}"/>
                        <filter string="Product" name="group_product" 
                                domain="[]" context="{'group_by': 'product_id'}"/>
                        <filter string="Start Date" name="group_start_date" 
                                domain="[]" context="{'group_by': 'start_date:month'}"/>
                        <filter string="Payment Status" name="group_payment" 
                                domain="[]" context="{'group_by': 'payment_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AMS Membership Action -->
        <record id="action_ams_membership" model="ir.actions.act_window">
            <field name="name">Memberships</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.membership</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership
                </p>
                <p>
                    Memberships are individual membership records that track a member's
                    subscription to the organization. Each member can only have one 
                    active membership at a time.
                </p>
            </field>
        </record>

        <!-- Active Memberships Action -->
        <record id="action_ams_membership_active" model="ir.actions.act_window">
            <field name="name">Active Memberships</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.membership</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="domain">[('state', '=', 'active')]</field>
            <field name="context">{}</field>
        </record>

        <!-- Expiring Memberships Action -->
        <record id="action_ams_membership_expiring" model="ir.actions.act_window">
            <field name="name">Expiring Memberships</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.membership</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('days_until_expiry', '&lt;=', 60), ('days_until_expiry', '&gt;', 0), ('state', '=', 'active')]</field>
            <field name="context">{'search_default_expiring_soon': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No memberships expiring soon
                </p>
                <p>
                    This list shows memberships that expire within the next 60 days
                    and may need renewal reminders.
                </p>
            </field>
        </record>

    </data>
</odoo>