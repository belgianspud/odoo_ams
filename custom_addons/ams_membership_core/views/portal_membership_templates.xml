<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add Membership section to portal home -->
        <template id="portal_my_home_membership" name="Portal My Home: Membership" inherit_id="portal.portal_my_home" priority="30">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
                <t t-set="membership_count" t-value="len(request.env.user.partner_id.membership_ids) if request.env.user.partner_id.is_member else 0"/>
                <t t-set="subscription_count" t-value="len(request.env.user.partner_id.subscription_ids)"/>
                
                <div class="col-lg-6 col-xl-4 col-xxl-3 o_portal_docs" t-if="membership_count or subscription_count">
                    <div class="row">
                        <div class="col-12 mb16" t-if="membership_count">
                            <a href="/my/memberships" class="btn btn-outline-primary btn-block">
                                <span class="fa fa-id-card fa-fw me-1" aria-label="Memberships" role="img" title="Memberships"/>
                                <span class="fw-bold">Memberships</span>
                                <t t-if="membership_count" t-esc="membership_count" class="badge rounded-pill text-bg-secondary ms-2"/>
                            </a>
                        </div>
                        <div class="col-12 mb16" t-if="subscription_count">
                            <a href="/my/subscriptions" class="btn btn-outline-primary btn-block">
                                <span class="fa fa-refresh fa-fw me-1" aria-label="Subscriptions" role="img" title="Subscriptions"/>
                                <span class="fw-bold">Subscriptions</span>
                                <t t-if="subscription_count" t-esc="subscription_count" class="badge rounded-pill text-bg-secondary ms-2"/>
                            </a>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <!-- Portal Layout Menu Extension -->
        <template id="portal_layout_membership" name="Portal Layout: Membership Menu" inherit_id="portal.portal_layout" priority="50">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'membership'" t-attf-class="breadcrumb-item #{'active ' if not membership else ''}">
                    <a t-if="membership" href="/my/memberships">Memberships</a>
                    <t t-else="">Memberships</t>
                </li>
                <li t-if="membership" class="breadcrumb-item active">
                    <t t-esc="membership.display_name"/>
                </li>
                <li t-if="page_name == 'subscription'" t-attf-class="breadcrumb-item #{'active ' if not subscription else ''}">
                    <a t-if="subscription" href="/my/subscriptions">Subscriptions</a>
                    <t t-else="">Subscriptions</t>
                </li>
                <li t-if="subscription" class="breadcrumb-item active">
                    <t t-esc="subscription.display_name"/>
                </li>
            </xpath>
        </template>

        <!-- My Memberships List -->
        <template id="portal_my_memberships" name="My Memberships">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">My Memberships</t>
                </t>
                
                <div class="o_portal_wrap">
                    <div class="o_portal_my_doc_table">
                        <t t-if="not memberships">
                            <div class="alert alert-info mt-3" role="alert">
                                <p><strong>No memberships found.</strong></p>
                                <p>You don't have any memberships yet. Contact us to learn about membership options.</p>
                            </div>
                        </t>
                        
                        <t t-if="memberships">
                            <div class="table-responsive">
                                <table class="table table-hover o_portal_my_doc_table">
                                    <thead>
                                        <tr class="active">
                                            <th class="text-start">Membership</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Start Date</th>
                                            <th class="text-center">End Date</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="memberships" t-as="membership">
                                            <tr>
                                                <td class="text-start">
                                                    <a t-attf-href="/my/memberships/#{membership.id}" class="fw-bold">
                                                        <t t-esc="membership.product_id.name"/>
                                                    </a>
                                                    <br/>
                                                    <small class="text-muted">
                                                        <t t-esc="membership.name"/>
                                                    </small>
                                                </td>
                                                <td class="text-center">
                                                    <span t-attf-class="badge rounded-pill text-bg-#{membership.state == 'active' and 'success' or membership.state == 'grace' and 'warning' or 'secondary'}">
                                                        <t t-esc="membership.state.title()"/>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="membership.start_date" t-options="{'widget': 'date'}"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="membership.end_date" t-options="{'widget': 'date'}"/>
                                                    <t t-if="membership.days_until_expiry &lt; 30 and membership.days_until_expiry &gt; 0">
                                                        <br/><small class="text-warning">
                                                            Expires in <t t-esc="membership.days_until_expiry"/> days
                                                        </small>
                                                    </t>
                                                </td>
                                                <td class="text-end">
                                                    <a t-attf-href="/my/memberships/#{membership.id}" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye"/> View
                                                    </a>
                                                    <t t-if="membership.state == 'active' and not membership.auto_renew">
                                                        <a t-attf-href="/my/memberships/#{membership.id}/renew" 
                                                           class="btn btn-sm btn-primary ms-1">
                                                            <i class="fa fa-refresh"/> Renew
                                                        </a>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <!-- Membership Detail -->
        <template id="portal_membership_detail" name="Membership Details">
            <t t-call="portal.portal_layout">
                <t t-set="o_portal_fullwidth_alert" groups="ams_membership_core.group_membership_user">
                    <t t-call="portal.portal_back_in_edit_mode">
                        <t t-set="backend_url" t-value="'/web#model=ams.membership&amp;id=%s&amp;view_type=form' % (membership.id)"/>
                    </t>
                </t>

                <t t-call="portal.portal_record_layout">
                    <t t-set="card_header">
                        <div class="row g-0">
                            <div class="col-12">
                                <h5 class="d-flex mb-1 mb-md-0">
                                    <span t-field="membership.product_id.name"/>
                                    <span t-attf-class="badge rounded-pill ms-2 text-bg-#{membership.state == 'active' and 'success' or membership.state == 'grace' and 'warning' or 'secondary'}">
                                        <t t-esc="membership.state.title()"/>
                                    </span>
                                </h5>
                                <div class="d-flex flex-column flex-sm-row">
                                    <small class="text-muted">
                                        Membership ID: <t t-esc="membership.name"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                    
                    <t t-set="card_body">
                        <div class="row mb-4">
                            <div class="col-12 col-md-6">
                                <strong>Membership Period</strong>
                                <div class="row">
                                    <div class="col-sm-5"><strong>Start Date:</strong></div>
                                    <div class="col-sm-7" t-field="membership.start_date" t-options="{'widget': 'date'}"/>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5"><strong>End Date:</strong></div>
                                    <div class="col-sm-7" t-field="membership.end_date" t-options="{'widget': 'date'}"/>
                                </div>
                                <div class="row" t-if="membership.last_renewal_date">
                                    <div class="col-sm-5"><strong>Last Renewed:</strong></div>
                                    <div class="col-sm-7" t-field="membership.last_renewal_date" t-options="{'widget': 'date'}"/>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-6">
                                <strong>Membership Details</strong>
                                <div class="row" t-if="membership.member_type_id">
                                    <div class="col-sm-5"><strong>Member Type:</strong></div>
                                    <div class="col-sm-7" t-field="membership.member_type_id.name"/>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5"><strong>Auto Renew:</strong></div>
                                    <div class="col-sm-7">
                                        <span t-if="membership.auto_renew" class="text-success">
                                            <i class="fa fa-check"/> Enabled
                                        </span>
                                        <span t-else="" class="text-muted">
                                            <i class="fa fa-times"/> Disabled
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5"><strong>Payment Status:</strong></div>
                                    <div class="col-sm-7">
                                        <span t-attf-class="badge rounded-pill text-bg-#{membership.payment_status == 'paid' and 'success' or membership.payment_status == 'pending' and 'warning' or 'secondary'}">
                                            <t t-esc="membership.payment_status.title()"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Benefits Section -->
                        <t t-if="membership.benefit_ids">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <strong>Your Benefits</strong>
                                    <div class="row mt-2">
                                        <t t-foreach="membership.benefit_ids" t-as="benefit">
                                            <div class="col-12 col-md-6 mb-2">
                                                <div class="card">
                                                    <div class="card-body p-3">
                                                        <h6 class="card-title mb-1">
                                                            <t t-esc="benefit.name"/>
                                                        </h6>
                                                        <div class="text-muted small" t-field="benefit.description"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                        
                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <t t-if="membership.state == 'active' and not membership.auto_renew">
                                    <a t-attf-href="/my/memberships/#{membership.id}/renew" 
                                       class="btn btn-primary">
                                        <i class="fa fa-refresh"/> Renew Membership
                                    </a>
                                </t>
                                
                                <a href="/my/memberships" class="btn btn-outline-secondary ms-2">
                                    <i class="fa fa-arrow-left"/> Back to Memberships
                                </a>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- My Subscriptions List -->
        <template id="portal_my_subscriptions" name="My Subscriptions">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">My Subscriptions</t>
                </t>
                
                <div class="o_portal_wrap">
                    <div class="o_portal_my_doc_table">
                        <t t-if="not subscriptions">
                            <div class="alert alert-info mt-3" role="alert">
                                <p><strong>No subscriptions found.</strong></p>
                                <p>You don't have any subscriptions yet. Browse our publications and services to get started.</p>
                            </div>
                        </t>
                        
                        <t t-if="subscriptions">
                            <div class="table-responsive">
                                <table class="table table-hover o_portal_my_doc_table">
                                    <thead>
                                        <tr class="active">
                                            <th class="text-start">Subscription</th>
                                            <th class="text-center">Type</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Start Date</th>
                                            <th class="text-center">End Date</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="subscriptions" t-as="subscription">
                                            <tr>
                                                <td class="text-start">
                                                    <a t-attf-href="/my/subscriptions/#{subscription.id}" class="fw-bold">
                                                        <t t-esc="subscription.product_id.name"/>
                                                    </a>
                                                    <br/>
                                                    <small class="text-muted">
                                                        <t t-esc="subscription.name"/>
                                                    </small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge rounded-pill text-bg-info">
                                                        <t t-esc="subscription.subscription_type.title()"/>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span t-attf-class="badge rounded-pill text-bg-#{subscription.state == 'active' and 'success' or subscription.state == 'paused' and 'info' or subscription.state == 'suspended' and 'warning' or 'secondary'}">
                                                        <t t-esc="subscription.state.title()"/>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="subscription.start_date" t-options="{'widget': 'date'}"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="subscription.end_date" t-options="{'widget': 'date'}"/>
                                                    <t t-if="subscription.days_until_expiry &lt; 30 and subscription.days_until_expiry &gt; 0">
                                                        <br/><small class="text-warning">
                                                            Expires in <t t-esc="subscription.days_until_expiry"/> days
                                                        </small>
                                                    </t>
                                                </td>
                                                <td class="text-end">
                                                    <a t-attf-href="/my/subscriptions/#{subscription.id}" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye"/> View
                                                    </a>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>