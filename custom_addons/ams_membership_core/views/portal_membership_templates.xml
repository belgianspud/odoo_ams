<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Very safe portal home extension - just append content -->
        <template id="portal_my_home_membership" name="Portal My Home: Membership" inherit_id="portal.portal_my_home" priority="30">
            <!-- Use the most generic possible selector -->
            <xpath expr="//div" position="after">
                <t t-set="membership_count" t-value="0"/>
                <t t-set="subscription_count" t-value="0"/>
                
                <!-- Try to safely get counts -->
                <t t-try="">
                    <t t-set="membership_count" t-value="len(request.env.user.partner_id.membership_ids) if hasattr(request.env.user.partner_id, 'membership_ids') else 0"/>
                    <t t-set="subscription_count" t-value="len(request.env.user.partner_id.subscription_ids) if hasattr(request.env.user.partner_id, 'subscription_ids') else 0"/>
                </t>
                
                <!-- Simple membership section -->
                <div class="col-lg-6 col-xl-4 col-12 mb-3" t-if="membership_count or True">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">
                                <i class="fa fa-users"/> Membership
                            </h5>
                            <div class="d-grid gap-2">
                                <a href="/my/memberships" class="btn btn-primary">
                                    <i class="fa fa-id-card"/> My Memberships
                                    <span class="badge bg-light text-dark ms-1" t-if="membership_count" t-esc="membership_count"/>
                                </a>
                                <a href="/my/subscriptions" class="btn btn-outline-primary">
                                    <i class="fa fa-refresh"/> My Subscriptions
                                    <span class="badge bg-secondary ms-1" t-if="subscription_count" t-esc="subscription_count"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <!-- Alternative minimal portal home extension -->
        <template id="portal_my_home_membership_minimal" name="Portal My Home: Membership (Minimal)" inherit_id="portal.portal_my_home" priority="31" active="False">
            <!-- Even safer - just add to the end of the template -->
            <xpath expr="//*" position="after">
                <div class="container-fluid mt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h5><i class="fa fa-users"/> Membership Portal</h5>
                                <p>Access your membership and subscription information:</p>
                                <a href="/my/memberships" class="btn btn-primary me-2">
                                    <i class="fa fa-id-card"/> Memberships
                                </a>
                                <a href="/my/subscriptions" class="btn btn-outline-primary">
                                    <i class="fa fa-refresh"/> Subscriptions
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <!-- My Memberships List - Community 18 safe version -->
        <template id="portal_my_memberships" name="My Memberships">
            <t t-call="portal.portal_layout">
                <t t-set="page_name" t-value="'membership'"/>
                
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2><i class="fa fa-id-card"/> My Memberships</h2>
                            </div>
                            
                            <t t-if="not memberships">
                                <div class="alert alert-info">
                                    <h4>No memberships found</h4>
                                    <p>You don't have any memberships yet. Contact us to learn about membership options.</p>
                                    <a href="/contactus" class="btn btn-primary">Contact Us</a>
                                </div>
                            </t>
                            
                            <t t-if="memberships">
                                <div class="row">
                                    <t t-foreach="memberships" t-as="membership">
                                        <div class="col-lg-6 col-12 mb-4">
                                            <div class="card h-100">
                                                <div class="card-header d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0" t-esc="membership.product_id.name"/>
                                                    <span t-attf-class="badge bg-#{membership.state == 'active' and 'success' or membership.state == 'grace' and 'warning' or 'secondary'}" t-esc="membership.state.title()"/>
                                                </div>
                                                <div class="card-body">
                                                    <p class="text-muted mb-2">
                                                        ID: <span t-esc="membership.name"/>
                                                    </p>
                                                    <div class="row text-sm">
                                                        <div class="col-6">
                                                            <strong>Start:</strong><br/>
                                                            <span t-field="membership.start_date"/>
                                                        </div>
                                                        <div class="col-6">
                                                            <strong>End:</strong><br/>
                                                            <span t-field="membership.end_date"/>
                                                        </div>
                                                    </div>
                                                    <t t-if="membership.days_until_expiry &lt; 30 and membership.days_until_expiry &gt; 0">
                                                        <div class="alert alert-warning mt-2 py-1">
                                                            <i class="fa fa-clock-o"/> Expires in <strong t-esc="membership.days_until_expiry"/> days
                                                        </div>
                                                    </t>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="d-flex gap-2">
                                                        <a t-attf-href="/my/memberships/#{membership.id}" class="btn btn-sm btn-outline-primary">
                                                            <i class="fa fa-eye"/> View Details
                                                        </a>
                                                        <t t-if="membership.state == 'active' and not membership.auto_renew">
                                                            <a t-attf-href="/my/memberships/#{membership.id}/renew" class="btn btn-sm btn-success">
                                                                <i class="fa fa-refresh"/> Renew
                                                            </a>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Membership Detail - Community 18 safe version -->
        <template id="portal_membership_detail" name="Membership Details">
            <t t-call="portal.portal_layout">
                <t t-set="page_name" t-value="'membership'"/>
                
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="/my">My Account</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="/my/memberships">Memberships</a>
                                    </li>
                                    <li class="breadcrumb-item active" t-esc="membership.product_id.name"/>
                                </ol>
                            </nav>

                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="mb-0">
                                            <i class="fa fa-id-card"/> <span t-field="membership.product_id.name"/>
                                        </h3>
                                        <span t-attf-class="badge bg-#{membership.state == 'active' and 'success' or membership.state == 'grace' and 'warning' or 'secondary'} fs-6" t-esc="membership.state.title()"/>
                                    </div>
                                    <span class="text-muted">Membership ID: <span t-esc="membership.name"/></span>
                                </div>
                                
                                <div class="card-body">
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <h5>Membership Period</h5>
                                            <table class="table table-borderless table-sm">
                                                <tr>
                                                    <td width="40%"><strong>Start Date:</strong></td>
                                                    <td t-field="membership.start_date"/>
                                                </tr>
                                                <tr>
                                                    <td><strong>End Date:</strong></td>
                                                    <td t-field="membership.end_date"/>
                                                </tr>
                                                <tr t-if="membership.last_renewal_date">
                                                    <td><strong>Last Renewed:</strong></td>
                                                    <td t-field="membership.last_renewal_date"/>
                                                </tr>
                                            </table>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <h5>Details</h5>
                                            <table class="table table-borderless table-sm">
                                                <tr t-if="membership.member_type_id">
                                                    <td width="40%"><strong>Member Type:</strong></td>
                                                    <td t-field="membership.member_type_id.name"/>
                                                </tr>
                                                <tr>
                                                    <td><strong>Auto Renew:</strong></td>
                                                    <td>
                                                        <span t-if="membership.auto_renew" class="text-success">
                                                            <i class="fa fa-check"/> Enabled
                                                        </span>
                                                        <span t-else="" class="text-muted">
                                                            <i class="fa fa-times"/> Disabled
                                                        </span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Payment:</strong></td>
                                                    <td>
                                                        <span t-attf-class="badge bg-#{membership.payment_status == 'paid' and 'success' or membership.payment_status == 'pending' and 'warning' or 'secondary'}" t-esc="membership.payment_status.title()"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    
                                    <!-- Benefits Section -->
                                    <t t-if="membership.benefit_ids">
                                        <h5>Your Benefits</h5>
                                        <div class="row mb-4">
                                            <t t-foreach="membership.benefit_ids" t-as="benefit">
                                                <div class="col-md-6 mb-3">
                                                    <div class="card border-primary border-opacity-25">
                                                        <div class="card-body">
                                                            <h6 class="card-title">
                                                                <i class="fa fa-gift text-primary"/> <span t-esc="benefit.name"/>
                                                            </h6>
                                                            <p class="card-text text-muted" t-field="benefit.description"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </t>
                                    
                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-2 justify-content-end">
                                        <t t-if="membership.state == 'active' and not membership.auto_renew">
                                            <a t-attf-href="/my/memberships/#{membership.id}/renew" class="btn btn-success">
                                                <i class="fa fa-refresh"/> Renew Membership
                                            </a>
                                        </t>
                                        
                                        <a href="/my/memberships" class="btn btn-outline-secondary">
                                            <i class="fa fa-arrow-left"/> Back to Memberships
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- My Subscriptions List -->
        <template id="portal_my_subscriptions" name="My Subscriptions">
            <t t-call="portal.portal_layout">
                <t t-set="page_name" t-value="'subscription'"/>
                
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2><i class="fa fa-refresh"/> My Subscriptions</h2>
                            </div>
                            
                            <t t-if="not subscriptions">
                                <div class="alert alert-info">
                                    <h4>No subscriptions found</h4>
                                    <p>You don't have any subscriptions yet. Browse our publications and services to get started.</p>
                                </div>
                            </t>
                            
                            <t t-if="subscriptions">
                                <div class="row">
                                    <t t-foreach="subscriptions" t-as="subscription">
                                        <div class="col-lg-6 col-12 mb-4">
                                            <div class="card h-100">
                                                <div class="card-header d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0" t-esc="subscription.product_id.name"/>
                                                    <div>
                                                        <span class="badge bg-info me-1" t-esc="subscription.subscription_type.title()"/>
                                                        <span t-attf-class="badge bg-#{subscription.state == 'active' and 'success' or subscription.state == 'paused' and 'info' or subscription.state == 'suspended' and 'warning' or 'secondary'}" t-esc="subscription.state.title()"/>
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <p class="text-muted mb-2">
                                                        ID: <span t-esc="subscription.name"/>
                                                    </p>
                                                    <div class="row text-sm">
                                                        <div class="col-6">
                                                            <strong>Start:</strong><br/>
                                                            <span t-field="subscription.start_date"/>
                                                        </div>
                                                        <div class="col-6">
                                                            <strong>End:</strong><br/>
                                                            <span t-field="subscription.end_date"/>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Publication specific info -->
                                                    <t t-if="subscription.subscription_type == 'publication'">
                                                        <div class="mt-2">
                                                            <span t-if="subscription.digital_access" class="badge bg-light text-dark me-1">
                                                                <i class="fa fa-desktop"/> Digital
                                                            </span>
                                                            <span t-if="subscription.print_delivery" class="badge bg-light text-dark">
                                                                <i class="fa fa-print"/> Print
                                                            </span>
                                                        </div>
                                                    </t>
                                                </div>
                                                <div class="card-footer">
                                                    <a t-attf-href="/my/subscriptions/#{subscription.id}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye"/> View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Subscription Detail -->
        <template id="portal_subscription_detail" name="Subscription Details">
            <t t-call="portal.portal_layout">
                <t t-set="page_name" t-value="'subscription'"/>
                
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="/my">My Account</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="/my/subscriptions">Subscriptions</a>
                                    </li>
                                    <li class="breadcrumb-item active" t-esc="subscription.product_id.name"/>
                                </ol>
                            </nav>

                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="mb-0">
                                            <i class="fa fa-refresh"/> <span t-field="subscription.product_id.name"/>
                                        </h3>
                                        <div>
                                            <span class="badge bg-info me-1" t-esc="subscription.subscription_type.title()"/>
                                            <span t-attf-class="badge bg-#{subscription.state == 'active' and 'success' or subscription.state == 'paused' and 'info' or subscription.state == 'suspended' and 'warning' or 'secondary'} fs-6" t-esc="subscription.state.title()"/>
                                        </div>
                                    </div>
                                    <span class="text-muted">Subscription ID: <span t-esc="subscription.name"/></span>
                                </div>
                                
                                <div class="card-body">
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <h5>Subscription Period</h5>
                                            <table class="table table-borderless table-sm">
                                                <tr>
                                                    <td width="40%"><strong>Start Date:</strong></td>
                                                    <td t-field="subscription.start_date"/>
                                                </tr>
                                                <tr>
                                                    <td><strong>End Date:</strong></td>
                                                    <td t-field="subscription.end_date"/>
                                                </tr>
                                                <tr t-if="subscription.last_renewal_date">
                                                    <td><strong>Last Renewed:</strong></td>
                                                    <td t-field="subscription.last_renewal_date"/>
                                                </tr>
                                            </table>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <h5>Details</h5>
                                            <table class="table table-borderless table-sm">
                                                <tr>
                                                    <td width="40%"><strong>Type:</strong></td>
                                                    <td t-esc="subscription.subscription_type.title()"/>
                                                </tr>
                                                <tr>
                                                    <td><strong>Auto Renew:</strong></td>
                                                    <td>
                                                        <span t-if="subscription.auto_renew" class="text-success">
                                                            <i class="fa fa-check"/> Enabled
                                                        </span>
                                                        <span t-else="" class="text-muted">
                                                            <i class="fa fa-times"/> Disabled
                                                        </span>
                                                    </td>
                                                </tr>
                                                
                                                <!-- Publication-specific details -->
                                                <t t-if="subscription.subscription_type == 'publication'">
                                                    <tr>
                                                        <td><strong>Digital Access:</strong></td>
                                                        <td>
                                                            <span t-if="subscription.digital_access" class="text-success">
                                                                <i class="fa fa-check"/> Yes
                                                            </span>
                                                            <span t-else="" class="text-muted">
                                                                <i class="fa fa-times"/> No
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>Print Delivery:</strong></td>
                                                        <td>
                                                            <span t-if="subscription.print_delivery" class="text-success">
                                                                <i class="fa fa-check"/> Yes
                                                            </span>
                                                            <span t-else="" class="text-muted">
                                                                <i class="fa fa-times"/> No
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                    
                                    <!-- Benefits Section -->
                                    <t t-if="subscription.benefit_ids">
                                        <h5>Subscription Benefits</h5>
                                        <div class="row mb-4">
                                            <t t-foreach="subscription.benefit_ids" t-as="benefit">
                                                <div class="col-md-6 mb-3">
                                                    <div class="card border-info border-opacity-25">
                                                        <div class="card-body">
                                                            <h6 class="card-title">
                                                                <i class="fa fa-gift text-info"/> <span t-esc="benefit.name"/>
                                                            </h6>
                                                            <p class="card-text text-muted" t-field="benefit.description"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </t>
                                    
                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-2 justify-content-end">
                                        <t t-if="subscription.state == 'active'">
                                            <form method="post" t-attf-action="/my/subscriptions/#{subscription.id}/pause" style="display:inline;">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <button type="submit" class="btn btn-warning btn-sm">
                                                    <i class="fa fa-pause"/> Pause
                                                </button>
                                            </form>
                                        </t>
                                        
                                        <t t-if="subscription.state == 'paused'">
                                            <form method="post" t-attf-action="/my/subscriptions/#{subscription.id}/resume" style="display:inline;">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fa fa-play"/> Resume
                                                </button>
                                            </form>
                                        </t>
                                        
                                        <a href="/my/subscriptions" class="btn btn-outline-secondary">
                                            <i class="fa fa-arrow-left"/> Back to Subscriptions
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>