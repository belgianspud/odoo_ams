<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- AMS Subscription List View -->
        <record id="view_ams_subscription_list" model="ir.ui.view">
            <field name="name">ams.subscription.list</field>
            <field name="model">ams.subscription</field>
            <field name="arch" type="xml">
                <list string="Subscriptions" default_order="start_date desc">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="subscription_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" decoration-success="state=='active'" 
                           decoration-info="state=='paused'"
                           decoration-warning="state=='suspended'" 
                           decoration-danger="state=='terminated'"/>
                    <field name="subscription_fee" widget="monetary" optional="show"/>
                    <field name="payment_status" optional="hide"/>
                    <field name="auto_renew" optional="hide"/>
                    <field name="renewal_interval" optional="hide"/>
                    <field name="days_until_expiry" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- AMS Subscription Form View -->
        <record id="view_ams_subscription_form" model="ir.ui.view">
            <field name="name">ams.subscription.form</field>
            <field name="model">ams.subscription</field>
            <field name="arch" type="xml">
                <form string="Subscription">
                    <header>
                        <button name="action_activate" type="object" string="Activate" 
                                class="oe_highlight" invisible="state != 'draft'"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_pause" type="object" string="Pause" 
                                invisible="state != 'active'"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_resume" type="object" string="Resume" 
                                class="btn-primary" invisible="state != 'paused'"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_renew" type="object" string="Renew" 
                                class="btn-primary" invisible="state not in ['active', 'paused', 'suspended']"
                                groups="ams_membership_core.group_membership_user"/>
                        <button name="action_suspend" type="object" string="Suspend" 
                                invisible="state not in ['active', 'paused']"
                                groups="ams_membership_core.group_membership_manager"
                                confirm="Are you sure you want to suspend this subscription?"/>
                        <button name="action_terminate" type="object" string="Terminate" 
                                invisible="state == 'terminated'"
                                groups="ams_membership_core.group_membership_manager"
                                confirm="Are you sure you want to terminate this subscription?"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,active,paused,suspended,terminated"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" type="object" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    invisible="not invoice_id"
                                    groups="account.group_account_invoice">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">View</span>
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="True"/>
                            </h1>
                            <div class="o_row">
                                <field name="name" readonly="True"/>
                            </div>
                        </div>

                        <group>
                            <group string="Subscriber Information">
                                <field name="partner_id" required="True"/>
                                <field name="account_id" 
                                       help="Main account for organizational subscriptions"/>
                                <field name="product_id" required="True"
                                       domain="[('is_subscription_product', '=', True), 
                                               ('subscription_product_type', '!=', 'membership')]"/>
                                <field name="subscription_type" readonly="True"/>
                            </group>
                            <group string="Subscription Period">
                                <field name="start_date" required="True"/>
                                <field name="end_date" required="True"/>
                                <field name="last_renewal_date"/>
                                <field name="subscription_duration" readonly="True"/>
                            </group>
                        </group>

                        <group>
                            <group string="Renewal Settings">
                                <field name="auto_renew"/>
                                <field name="renewal_interval"/>
                                <field name="next_renewal_date" readonly="True"/>
                            </group>
                            <group string="Financial">
                                <field name="subscription_fee" widget="monetary"/>
                                <field name="currency_id" invisible="True"/>
                                <field name="payment_status"/>
                            </group>
                        </group>

                        <group>
                            <group string="Status Information">
                                <field name="is_expired" readonly="True"/>
                                <field name="days_until_expiry" readonly="True"/>
                            </group>
                            <group string="Access Settings">
                                <field name="digital_access" 
                                       invisible="subscription_type != 'publication'"/>
                                <field name="print_delivery" 
                                       invisible="subscription_type != 'publication'"/>
                                <field name="delivery_address_id" 
                                       invisible="not print_delivery or subscription_type != 'publication'"/>
                            </group>
                        </group>

                        <!-- Type-specific sections -->
                        <group string="Publication Settings" 
                               invisible="subscription_type != 'publication'">
                            <group>
                                <field name="digital_access"/>
                                <field name="print_delivery"/>
                                <field name="delivery_address_id" 
                                       invisible="not print_delivery"/>
                            </group>
                        </group>

                        <group string="Chapter Settings" 
                               invisible="subscription_type != 'chapter'">
                            <group>
                                <field name="chapter_role"/>
                            </group>
                        </group>

                        <group string="Event Access Settings" 
                               invisible="subscription_type != 'event'">
                            <group>
                                <field name="event_access_level"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Benefits" name="benefits">
                                <field name="benefit_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="benefit_type"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Renewals" name="renewals">
                                <field name="renewal_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="renewal_date"/>
                                        <field name="new_end_date"/>
                                        <field name="amount" widget="monetary"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Sales &amp; Invoice" name="sales" 
                                  groups="sales_team.group_sale_salesman">
                                <group>
                                    <group>
                                        <field name="sale_order_id" readonly="True"/>
                                        <field name="sale_order_line_id" readonly="True"/>
                                    </group>
                                    <group>
                                        <field name="invoice_id" readonly="True"/>
                                        <field name="invoice_line_id" readonly="True"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Internal notes about this subscription..."/>
                                <field name="tags" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- AMS Subscription Kanban View -->
        <record id="view_ams_subscription_kanban" model="ir.ui.view">
            <field name="name">ams.subscription.kanban</field>
            <field name="model">ams.subscription</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="subscription_type">
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="subscription_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="subscription_fee"/>
                    <field name="days_until_expiry"/>
                    <field name="auto_renew"/>
                    <field name="digital_access"/>
                    <field name="print_delivery"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-8">
                                        <strong><t t-esc="record.partner_id.value"/></strong>
                                    </div>
                                    <div class="col-4 text-right">
                                        <span t-attf-class="badge badge-pill badge-#{record.state.raw_value === 'active' ? 'success' : record.state.raw_value === 'paused' ? 'info' : record.state.raw_value === 'suspended' ? 'warning' : record.state.raw_value === 'terminated' ? 'danger' : 'secondary'}">
                                            <t t-esc="record.state.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <t t-esc="record.product_id.value"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <small>Start: <t t-esc="record.start_date.value"/></small>
                                    </div>
                                    <div class="col-6">
                                        <small>End: <t t-esc="record.end_date.value"/></small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <small>$<t t-esc="record.subscription_fee.value"/></small>
                                    </div>
                                    <div class="col-6 text-right" t-if="record.days_until_expiry.raw_value != 0">
                                        <small t-attf-class="text-#{record.days_until_expiry.raw_value &lt; 30 ? 'danger' : 'muted'}">
                                            <t t-esc="record.days_until_expiry.value"/> days
                                        </small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <t t-if="record.auto_renew.raw_value">
                                            <span class="badge badge-info">Auto Renew</span>
                                        </t>
                                        <t t-if="record.digital_access.raw_value and record.subscription_type.raw_value === 'publication'">
                                            <span class="badge badge-primary">Digital</span>
                                        </t>
                                        <t t-if="record.print_delivery.raw_value and record.subscription_type.raw_value === 'publication'">
                                            <span class="badge badge-success">Print</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- AMS Subscription Search View -->
        <record id="view_ams_subscription_search" model="ir.ui.view">
            <field name="name">ams.subscription.search</field>
            <field name="model">ams.subscription</field>
            <field name="arch" type="xml">
                <search string="Subscriptions">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="subscription_type"/>
                    <separator/>
                    <filter string="Active" name="active" 
                            domain="[('state', '=', 'active')]"/>
                    <filter string="Paused" name="paused" 
                            domain="[('state', '=', 'paused')]"/>
                    <filter string="Draft" name="draft" 
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Suspended" name="suspended" 
                            domain="[('state', '=', 'suspended')]"/>
                    <filter string="Terminated" name="terminated" 
                            domain="[('state', '=', 'terminated')]"/>
                    <separator/>
                    <filter string="Publications" name="publications" 
                            domain="[('subscription_type', '=', 'publication')]"/>
                    <filter string="Chapters" name="chapters" 
                            domain="[('subscription_type', '=', 'chapter')]"/>
                    <filter string="General Subscriptions" name="general" 
                            domain="[('subscription_type', '=', 'subscription')]"/>
                    <separator/>
                    <filter string="Auto Renew" name="auto_renew" 
                            domain="[('auto_renew', '=', True)]"/>
                    <filter string="Manual Renew" name="manual_renew" 
                            domain="[('auto_renew', '=', False)]"/>
                    <separator/>
                    <filter string="Digital Access" name="digital_access" 
                            domain="[('digital_access', '=', True)]"/>
                    <filter string="Print Delivery" name="print_delivery" 
                            domain="[('print_delivery', '=', True)]"/>
                    <separator/>
                    <filter string="Expiring Soon" name="expiring_soon" 
                            domain="[('days_until_expiry', '&lt;=', 30), ('days_until_expiry', '&gt;', 0)]"/>
                    <filter string="Expired" name="expired" 
                            domain="[('is_expired', '=', True)]"/>
                    <filter string="Paid" name="paid" 
                            domain="[('payment_status', '=', 'paid')]"/>
                    <filter string="Pending Payment" name="pending_payment" 
                            domain="[('payment_status', '=', 'pending')]"/>
                    <separator/>
                    <filter string="This Year" name="this_year" 
                            domain="[('start_date', '&gt;=', (context_today() - datetime.timedelta(days=365)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" 
                                domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Subscription Type" name="group_type" 
                                domain="[]" context="{'group_by': 'subscription_type'}"/>
                        <filter string="Product" name="group_product" 
                                domain="[]" context="{'group_by': 'product_id'}"/>
                        <filter string="Start Date" name="group_start_date" 
                                domain="[]" context="{'group_by': 'start_date:month'}"/>
                        <filter string="Payment Status" name="group_payment" 
                                domain="[]" context="{'group_by': 'payment_status'}"/>
                        <filter string="Renewal Interval" name="group_renewal" 
                                domain="[]" context="{'group_by': 'renewal_interval'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AMS Subscription Action -->
        <record id="action_ams_subscription" model="ir.actions.act_window">
            <field name="name">Subscriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.subscription</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first subscription
                </p>
                <p>
                    Subscriptions are recurring service records for publications,
                    chapters, events, or other non-membership services.
                    Members can have multiple active subscriptions.
                </p>
            </field>
        </record>

        <!-- Active Subscriptions Action -->
        <record id="action_ams_subscription_active" model="ir.actions.act_window">
            <field name="name">Active Subscriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.subscription</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="domain">[('state', '=', 'active')]</field>
            <field name="context">{}</field>
        </record>

        <!-- Publication Subscriptions Action -->
        <record id="action_ams_subscription_publications" model="ir.actions.act_window">
            <field name="name">Publication Subscriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.subscription</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('subscription_type', '=', 'publication')]</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No publication subscriptions found
                </p>
                <p>
                    Publication subscriptions provide access to journals,
                    magazines, and other recurring publications.
                </p>
            </field>
        </record>

        <!-- Chapter Subscriptions Action -->
        <record id="action_ams_subscription_chapters" model="ir.actions.act_window">
            <field name="name">Chapter Subscriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ams.subscription</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('subscription_type', '=', 'chapter')]</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No chapter subscriptions found
                </p>
                <p>
                    Chapter subscriptions provide access to local or regional
                    chapter activities and events.
                </p>
            </field>
        </record>

    </data>
</odoo>