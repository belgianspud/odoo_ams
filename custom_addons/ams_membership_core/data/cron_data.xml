<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Membership Lifecycle Processing -->
        <record id="cron_membership_lifecycle" model="ir.cron">
            <field name="name">Membership: Process Lifecycle Transitions</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="state">code</field>
            <field name="code">model.process_membership_lifecycle()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Subscription Lifecycle Processing -->
        <record id="cron_subscription_lifecycle" model="ir.cron">
            <field name="name">Subscription: Process Lifecycle Transitions</field>
            <field name="model_id" ref="model_ams_subscription"/>
            <field name="state">code</field>
            <field name="code">model.process_subscription_lifecycle()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Renewal Reminder Generation -->
        <record id="cron_renewal_reminders" model="ir.cron">
            <field name="name">Renewal: Generate Renewal Reminders</field>
            <field name="model_id" ref="model_ams_renewal"/>
            <field name="state">code</field>
            <field name="code">model.generate_renewal_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Process Automatic Renewals -->
        <record id="cron_automatic_renewals" model="ir.cron">
            <field name="name">Renewal: Process Automatic Renewals</field>
            <field name="model_id" ref="model_ams_renewal"/>
            <field name="state">code</field>
            <field name="code">model.process_automatic_renewals()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Send Membership Renewal Reminders -->
        <record id="cron_membership_renewal_reminders" model="ir.cron">
            <field name="name">Membership: Send Renewal Reminders</field>
            <field name="model_id" ref="model_ams_membership"/>
            <field name="state">code</field>
            <field name="code">model.send_renewal_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Engagement Data Cleanup (from foundation) -->
        <record id="cron_engagement_cleanup" model="ir.cron">
            <field name="name">Engagement: Cleanup Old Data</field>
            <field name="model_id" ref="ams_foundation.model_ams_engagement_rule"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_engagement_data()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <!-- Sync Foundation Member Status -->
        <record id="cron_sync_member_status" model="ir.cron">
            <field name="name">Members: Sync Foundation Status</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">
# Sync membership core status with foundation status
partners = model.search([('is_member', '=', True)])
for partner in partners:
    partner._compute_current_membership()
            </field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>