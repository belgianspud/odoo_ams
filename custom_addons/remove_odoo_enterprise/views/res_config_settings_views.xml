<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.remove.enterprise</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <!--
                    Enterprise removal is handled dynamically in Python models.
                    This view inheritance exists to satisfy the manifest requirement.

                    Enterprise modules hidden: mrp_workorder, accountant, knowledge,
                    timesheet_grid, sign, sale_subscription, quality_control, mrp_plm,
                    social, hr_appraisal, marketing_automation, web_mobile,
                    stock_barcode, voip, sale_amazon
                    -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
