<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Professional Designation Tree View -->
    <record id="view_professional_designation_tree" model="ir.ui.view">
        <field name="name">ams.professional.designation.tree</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <tree string="Professional Designations" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="designation_type"/>
                <field name="issuing_body"/>
                <field name="has_expiration" widget="boolean_toggle"/>
                <field name="requires_continuing_education" widget="boolean_toggle"/>
                <field name="member_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Professional Designation Form View -->
    <record id="view_professional_designation_form" model="ir.ui.view">
        <field name="name">ams.professional.designation.form</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <form string="Professional Designation">
                <header>
                    <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_member_designation_by_designation)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-users"
                                context="{'default_designation_id': active_id}">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g., Certified Public Accountant"/></h1>
                        <label for="code"/>
                        <h2><field name="code" placeholder="e.g., CPA"/></h2>
                    </div>

                    <group>
                        <group name="basic_info">
                            <field name="designation_type"/>
                            <field name="specialty_area"/>
                            <field name="sequence"/>
                        </group>
                        <group name="issuing_info">
                            <field name="issuing_body"/>
                            <field name="issuing_body_website" widget="url"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Requirements" name="requirements">
                            <group>
                                <group name="basic_requirements">
                                    <field name="requires_exam"/>
                                    <field name="requires_experience"/>
                                    <field name="experience_years_required" 
                                           attrs="{'invisible': [('requires_experience', '=', False)], 'required': [('requires_experience', '=', True)]}"/>
                                    <field name="requires_education"/>
                                </group>
                                <group name="education_requirements">
                                    <field name="education_requirements" 
                                           attrs="{'invisible': [('requires_education', '=', False)]}"
                                           nolabel="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Renewal &amp; CE" name="renewal">
                            <group>
                                <group name="renewal_info">
                                    <field name="has_expiration"/>
                                    <field name="renewal_period_months" 
                                           attrs="{'invisible': [('has_expiration', '=', False)], 'required': [('has_expiration', '=', True)]}"/>
                                </group>
                                <group name="ce_info">
                                    <field name="requires_continuing_education"/>
                                    <field name="ce_hours_required" 
                                           attrs="{'invisible': [('requires_continuing_education', '=', False)], 'required': [('requires_continuing_education', '=', True)]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Description &amp; Notes" name="description">
                            <group>
                                <field name="description" nolabel="1" placeholder="Detailed description of this designation and its requirements..."/>
                            </group>
                            <separator string="Internal Notes"/>
                            <group>
                                <field name="notes" nolabel="1" placeholder="Internal notes about this designation..."/>
                            </group>
                        </page>

                        <page string="Members" name="members">
                            <field name="member_designation_ids" readonly="1">
                                <tree>
                                    <field name="partner_id"/>
                                    <field name="license_number"/>
                                    <field name="earned_date"/>
                                    <field name="expiration_date"/>
                                    <field name="status"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Professional Designation Search View -->
    <record id="view_professional_designation_search" model="ir.ui.view">
        <field name="name">ams.professional.designation.search</field>
        <field name="model">ams.professional.designation</field>
        <field name="arch" type="xml">
            <search string="Professional Designations">
                <field name="name" string="Designation" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="designation_type"/>
                <field name="specialty_area"/>
                <field name="issuing_body"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Licenses" name="licenses" domain="[('designation_type', '=', 'license')]"/>
                <filter string="Certifications" name="certifications" domain="[('designation_type', '=', 'certification')]"/>
                <filter string="Degrees" name="degrees" domain="[('designation_type', '=', 'degree')]"/>
                <separator/>
                <filter string="Has Expiration" name="has_expiration" domain="[('has_expiration', '=', True)]"/>
                <filter string="Requires CE" name="requires_ce" domain="[('requires_continuing_education', '=', True)]"/>
                <filter string="Requires Exam" name="requires_exam" domain="[('requires_exam', '=', True)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" domain="[]" context="{'group_by': 'designation_type'}"/>
                    <filter string="Specialty Area" name="group_specialty" domain="[]" context="{'group_by': 'specialty_area'}"/>
                    <filter string="Issuing Body" name="group_issuing_body" domain="[]" context="{'group_by': 'issuing_body'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Designation Tree View -->
    <record id="view_member_designation_tree" model="ir.ui.view">
        <field name="name">ams.member.designation.tree</field>
        <field name="model">ams.member.designation</field>
        <field name="arch" type="xml">
            <tree string="Member Designations" default_order="partner_id,earned_date desc">
                <field name="partner_id"/>
                <field name="designation_id"/>
                <field name="license_number"/>
                <field name="earned_date"/>
                <field name="expiration_date"/>
                <field name="issuing_jurisdiction"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-warning="status == 'expired'" decoration-danger="status in ('suspended', 'revoked')"/>
                <field name="is_expired" invisible="1"/>
                <field name="days_until_expiration" decoration-warning="days_until_expiration &lt; 90 and days_until_expiration &gt; 0" decoration-danger="days_until_expiration &lt; 30 and days_until_expiration &gt; 0"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Member Designation Form View -->
    <record id="view_member_designation_form" model="ir.ui.view">
        <field name="name">ams.member.designation.form</field>
        <field name="model">ams.member.designation</field>
        <field name="arch" type="xml">
            <form string="Member Professional Designation">
                <header>
                    <button name="action_renew_designation" 
                            string="Renew Designation" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('status', '!=', 'expired')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="active,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add smart buttons here if needed -->
                    </div>

                    <group>
                        <group name="basic_info">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="designation_id" options="{'no_create': True}"/>
                            <field name="license_number"/>
                            <field name="issuing_jurisdiction"/>
                        </group>
                        <group name="dates">
                            <field name="earned_date"/>
                            <field name="expiration_date"/>
                            <field name="is_expired" widget="boolean" readonly="1"/>
                            <field name="days_until_expiration" readonly="1" 
                                   attrs="{'invisible': [('expiration_date', '=', False)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes about this designation..."/>
                        </page>
                    </notebook>

                    <field name="active" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Member Designation Search View -->
    <record id="view_member_designation_search" model="ir.ui.view">
        <field name="name">ams.member.designation.search</field>
        <field name="model">ams.member.designation</field>
        <field name="arch" type="xml">
            <search string="Member Professional Designations">
                <field name="partner_id" string="Member"/>
                <field name="designation_id" string="Designation"/>
                <field name="license_number"/>
                <field name="issuing_jurisdiction"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Active Status" name="active_status" domain="[('status', '=', 'active')]"/>
                <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                <filter string="Revoked" name="revoked" domain="[('status', '=', 'revoked')]"/>
                <separator/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('days_until_expiration', '&lt;', 90), ('days_until_expiration', '&gt;', 0)]"/>
                <filter string="Expiring This Month" name="expiring_month" domain="[('days_until_expiration', '&lt;', 30), ('days_until_expiration', '&gt;', 0)]"/>
                <filter string="Already Expired" name="already_expired" domain="[('is_expired', '=', True)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Member" name="group_member" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Designation" name="group_designation" domain="[]" context="{'group_by': 'designation_id'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Issuing Jurisdiction" name="group_jurisdiction" domain="[]" context="{'group_by': 'issuing_jurisdiction'}"/>
                    <filter string="Earned Year" name="group_earned_year" domain="[]" context="{'group_by': 'earned_date:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_professional_designation" model="ir.actions.act_window">
        <field name="name">Professional Designations</field>
        <field name="res_model">ams.professional.designation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first professional designation!
            </p>
            <p>
                Professional designations include licenses, certifications, degrees, and other credentials
                that members can hold. Define the requirements, renewal periods, and continuing education
                needs for each designation.
            </p>
        </field>
    </record>

    <record id="action_member_designation" model="ir.actions.act_window">
        <field name="name">Member Professional Designations</field>
        <field name="res_model">ams.member.designation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No member designations found!
            </p>
            <p>
                Track professional designations, licenses, and certifications held by your members.
                Monitor expiration dates and renewal requirements.
            </p>
        </field>
    </record>

    <record id="action_member_designation_by_designation" model="ir.actions.act_window">
        <field name="name">Members with this Designation</field>
        <field name="res_model">ams.member.designation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('designation_id', '=', active_id)]</field>
        <field name="context">{'default_designation_id': active_id, 'search_default_active': 1}</field>
    </record>

</odoo>