<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="landing_page_template" name="App Landing Page">
            <t t-call="web.frontend_layout">
                <t t-set="title">App Dashboard</t>
                
                <div class="container-fluid landing-page-container">
                    <div class="row">
                        <div class="col-12">
                            <div class="text-center mb-5">
                                <h1 class="display-4 text-primary mb-3">Welcome to Your Odoo Dashboard</h1>
                                <p class="lead text-muted">Click on any app below to get started</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <div class="col-12 col-xl-10">
                            <div class="app-grid">
                                <t t-foreach="apps" t-as="app">
                                    <div class="app-tile" t-att-data-url="app['url']">
                                        <div class="app-tile-content">
                                            <div class="app-icon">
                                                <i t-att-class="'fa ' + app['icon'] + ' fa-3x'"></i>
                                            </div>
                                            <h5 class="app-name" t-esc="app['name']"></h5>
                                            <p class="app-summary" t-esc="app['summary']"></p>
                                        </div>
                                        <div class="app-tile-hover">
                                            <div class="hover-content">
                                                <i class="fa fa-arrow-right fa-2x"></i>
                                                <p>Click to open</p>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        
        <!-- Alternative template for backend integration -->
        <template id="landing_page_backend_template" name="Backend Landing Page">
            <div class="o_action_manager">
                <div class="landing-page-backend">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 text-center mb-4">
                                <h2 class="text-primary">Your Applications</h2>
                                <p class="text-muted">Select an application to continue</p>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="app-grid-backend">
                                    <t t-foreach="apps" t-as="app">
                                        <div class="app-card" t-att-data-menu-id="app['menu_id']">
                                            <div class="card h-100">
                                                <div class="card-body text-center">
                                                    <div class="app-icon-large mb-3">
                                                        <i t-att-class="'fa ' + app['icon'] + ' fa-4x text-primary'"></i>
                                                    </div>
                                                    <h5 class="card-title" t-esc="app['name']"></h5>
                                                    <p class="card-text text-muted" t-esc="app['summary']"></p>
                                                    <div class="mt-auto">
                                                        <button class="btn btn-primary btn-sm app-launch-btn">
                                                            <i class="fa fa-play mr-1"></i> Open
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>